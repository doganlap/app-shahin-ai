# GRC Application Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# Database Connection (PostgreSQL)
DATABASE_CONNECTION_STRING=Host=your-db-host;Port=5432;Database=grc;Username=postgres;Password=your-password;SSL Mode=Require;Trust Server Certificate=true

# Redis Connection
REDIS_CONNECTION_STRING=your-redis-host:6379,password=your-redis-password,ssl=true,abortConnect=false

# S3/Object Storage
S3_ENDPOINT=https://your-s3-endpoint
S3_BUCKET_NAME=your-bucket-name
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key

# Authentication
AUTH_CLIENT_SECRET=your-client-secret

# String Encryption
STRING_ENCRYPTION_PASSPHRASE=your-16-char-passphrase
