@page "{id?}"
@{
    ViewData["Title"] = "Edit Risk";
    var id = (string?)RouteData.Values["id"] ?? "";
}

<div class="container-fluid">
    <h3 class="mb-3">Edit Risk</h3>

    <div class="card">
        <div class="card-body">
            <form id="RiskEditForm" autocomplete="off">
                <input type="hidden" id="Id" value="@id" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Title</label>
                        <input class="form-control" id="Title" required />
                    </div>

                    <div class="col-md-3 mb-3">
                        <label class="form-label">Likelihood (1-5)</label>
                        <input type="number" class="form-control" id="Likelihood" min="1" max="5" />
                    </div>

                    <div class="col-md-3 mb-3">
                        <label class="form-label">Impact (1-5)</label>
                        <input type="number" class="form-control" id="Impact" min="1" max="5" />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Category</label>
                        <select class="form-select" id="Category">
                            <option value="Cyber">Cyber</option>
                            <option value="Operational">Operational</option>
                            <option value="Compliance">Compliance</option>
                            <option value="Financial">Financial</option>
                            <option value="Vendor">Vendor</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Due Date</label>
                        <input type="date" class="form-control" id="DueDate" />
                    </div>

                    <div class="col-12 mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" id="Description" rows="4"></textarea>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label class="form-label">Status</label>
                        <select class="form-select" id="Status">
                            <option value="Open">Open</option>
                            <option value="Mitigating">Mitigating</option>
                            <option value="Accepted">Accepted</option>
                            <option value="Closed">Closed</option>
                        </select>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a class="btn btn-outline-secondary" href="/Risks">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts {
    <script src="/Pages/Risks/Edit.js"></script>
}
