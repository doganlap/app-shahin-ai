@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Grc.Localization
@model Grc.Web.Pages.MySettings.IndexModel
@inject IHtmlLocalizer<GrcResource> L
@{
    ViewBag.Title = "My Settings";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="page-header">
                <i class="fas fa-cog"></i> My Settings
            </h1>
            <p class="text-muted">Manage your account settings and preferences</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5>Profile Settings</h5>
                    <form>
                        <div class="mb-3">
                            <label class="form-label">Name</label>
                            <input type="text" class="form-control" value="@User.Identity?.Name" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control" value="admin@grc.com" readonly />
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>Save
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
