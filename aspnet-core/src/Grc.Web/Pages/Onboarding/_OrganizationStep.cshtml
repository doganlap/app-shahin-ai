@model Grc.Web.Pages.Onboarding.IndexModel

<div class="text-center mb-4">
    <i class="fas fa-building text-primary" style="font-size: 60px;"></i>
    <h2 class="mt-3">Organization Assignment | تعيين المؤسسة</h2>
    <p class="text-muted">Select or create your organization | اختر أو أنشئ مؤسستك</p>
</div>

<div class="row g-4">
    <!-- Select Existing Organization -->
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-list"></i> Select Organization | اختر مؤسسة</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label">Available Organizations | المؤسسات المتاحة</label>
                    <select class="form-select" id="organizationSelect">
                        <option value="">-- Select Organization --</option>
                        <option value="default">Default Organization | المؤسسة الافتراضية</option>
                    </select>
                </div>
                <p class="text-muted small">
                    If your organization already exists, select it from the list above.
                    <br>
                    إذا كانت مؤسستك موجودة بالفعل، اخترها من القائمة أعلاه.
                </p>
            </div>
        </div>
    </div>

    <!-- Create New Organization -->
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="fas fa-plus"></i> Create New | إنشاء جديد</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label">Organization Name (English)</label>
                    <input type="text" class="form-control" id="orgNameEn" placeholder="Enter organization name">
                </div>
                <div class="mb-3">
                    <label class="form-label">اسم المؤسسة (عربي)</label>
                    <input type="text" class="form-control" id="orgNameAr" dir="rtl" placeholder="أدخل اسم المؤسسة">
                </div>
                <div class="mb-3">
                    <label class="form-label">Industry | القطاع</label>
                    <select class="form-select" id="orgIndustry">
                        <option value="government">Government | حكومي</option>
                        <option value="finance">Finance | مالي</option>
                        <option value="healthcare">Healthcare | صحي</option>
                        <option value="technology">Technology | تقني</option>
                        <option value="energy">Energy | طاقة</option>
                        <option value="other">Other | أخرى</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="alert alert-info mt-4">
    <i class="fas fa-info-circle"></i>
    <strong>Note | ملاحظة:</strong>
    This step is optional. You can skip it and configure your organization later.
    <br>
    هذه الخطوة اختيارية. يمكنك تخطيها وتكوين مؤسستك لاحقًا.
</div>
