@model Grc.Web.Pages.Onboarding.IndexModel

<div class="text-center">
    <!-- Logo or Hero Image -->
    <div class="mb-4">
        <i class="fas fa-shield-alt text-primary" style="font-size: 80px;"></i>
    </div>
    
    <!-- English Welcome -->
    <h1 class="display-4 mb-3">Welcome to Saudi GRC Platform</h1>
    <p class="lead text-muted mb-4">
        Your comprehensive governance, risk, and compliance management solution
    </p>
    
    <!-- Arabic Welcome -->
    <h1 class="display-4 mb-3" dir="rtl">مرحباً بك في منصة الحوكمة السعودية</h1>
    <p class="lead text-muted mb-4" dir="rtl">
        حلك الشامل لإدارة الحوكمة والمخاطر والامتثال
    </p>
    
    <hr class="my-5">
    
    <!-- Benefits -->
    <div class="row g-4 text-start">
        <div class="col-md-6">
            <div class="card h-100 border-primary">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-check-circle text-success"></i> Framework Management
                    </h5>
                    <p class="card-text">
                        Access 39+ regulatory frameworks including NCA ECC, SAMA CSF, PDPL, and ISO 27001
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card h-100 border-primary">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-check-circle text-success"></i> Risk Management
                    </h5>
                    <p class="card-text">
                        Identify, assess, and mitigate risks with comprehensive tracking and reporting
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-6" dir="rtl">
            <div class="card h-100 border-primary">
                <div class="card-body text-end">
                    <h5 class="card-title">
                        <i class="fas fa-check-circle text-success"></i> إدارة الأطر التنظيمية
                    </h5>
                    <p class="card-text">
                        الوصول إلى أكثر من 39 إطارًا تنظيميًا بما في ذلك NCA ECC و SAMA CSF و PDPL و ISO 27001
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-6" dir="rtl">
            <div class="card h-100 border-primary">
                <div class="card-body text-end">
                    <h5 class="card-title">
                        <i class="fas fa-check-circle text-success"></i> إدارة المخاطر
                    </h5>
                    <p class="card-text">
                        تحديد وتقييم وتخفيف المخاطر مع التتبع والتقارير الشاملة
                    </p>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Getting Started Message -->
    <div class="alert alert-info mt-5" role="alert">
        <h5 class="alert-heading">
            <i class="fas fa-rocket"></i> Let's Get Started
        </h5>
        <p class="mb-0">
            This quick setup will help you configure your profile, select your role, 
            and customize your experience. It will only take a few minutes!
        </p>
    </div>
</div>
