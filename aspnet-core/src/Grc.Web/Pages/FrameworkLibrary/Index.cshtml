@page
@using Microsoft.Extensions.Localization
@using Grc.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model Grc.Web.Pages.FrameworkLibrary.IndexModel
@inject IStringLocalizer<GrcResource> L
@section styles {
    <abp-style-bundle>
        <abp-style src="/Pages/FrameworkLibrary/Index.css" />
    </abp-style-bundle>
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_8">
                <h2>
                    <i class="fas fa-book text-primary"></i>
                    @L["Menu:FrameworkLibrary"]
                </h2>
                <p class="text-muted">@L["FrameworkLibrary:Description"]</p>
            </abp-column>
            <abp-column size-md="_4" class="text-end">
                <abp-button button-type="Primary" icon="fas fa-sync-alt" id="RefreshButton" text="@L["Refresh"]" />
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <!-- Statistics Cards -->
        <abp-row class="mb-4">
            <abp-column size-md="_3">
                <div class="card border-primary">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-1">@L["Total:Regulators"]</h6>
                                <h3 class="mb-0 text-primary" id="TotalRegulators">@Model.TotalRegulators</h3>
                            </div>
                            <div class="text-primary">
                                <i class="fas fa-landmark fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </abp-column>
            <abp-column size-md="_3">
                <div class="card border-warning">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-1">@L["Total:Controls"]</h6>
                                <h3 class="mb-0 text-warning" id="TotalControls">@Model.TotalControls</h3>
                            </div>
                            <div class="text-warning">
                                <i class="fas fa-shield-alt fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </abp-column>
            <abp-column size-md="_3">
                <div class="card border-success">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-1">@L["Active:Frameworks"]</h6>
                                <h3 class="mb-0 text-success" id="ActiveFrameworks">@Model.ActiveFrameworks</h3>
                            </div>
                            <div class="text-success">
                                <i class="fas fa-check-circle fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </abp-column>
            <abp-column size-md="_3">
                <div class="card border-info">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-1">@L["Total:Frameworks"]</h6>
                                <h3 class="mb-0 text-info" id="TotalFrameworks">@Model.TotalCount</h3>
                            </div>
                            <div class="text-info">
                                <i class="fas fa-book fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </abp-column>
        </abp-row>

        <!-- Tabs Navigation -->
        <ul class="nav nav-tabs mb-3" id="frameworkTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="list-tab" data-bs-toggle="tab" data-bs-target="#list-view" type="button" role="tab">
                    <i class="fas fa-list"></i> @L["ListView"]
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="charts-tab" data-bs-toggle="tab" data-bs-target="#charts-view" type="button" role="tab">
                    <i class="fas fa-chart-pie"></i> @L["Analytics"]
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="cards-tab" data-bs-toggle="tab" data-bs-target="#cards-view" type="button" role="tab">
                    <i class="fas fa-th"></i> @L["CardView"]
                </button>
            </li>
        </ul>

        <!-- Tab Content -->
        <div class="tab-content" id="frameworkTabsContent">
            <!-- List View Tab -->
            <div class="tab-pane fade show active" id="list-view" role="tabpanel">
                <!-- Filters Row -->
        <abp-row class="mb-3">
            <abp-column size-md="_3">
                <div class="mb-3">
                    <label class="form-label">@L["Regulator"]</label>
                    <select id="RegulatorFilter" class="form-select">
                        <option value="">@L["All"]</option>
                    </select>
                </div>
            </abp-column>
            <abp-column size-md="_3">
                <div class="mb-3">
                    <label class="form-label">@L["Category"]</label>
                    <select id="CategoryFilter" class="form-select">
                        <option value="">@L["All"]</option>
                        <option value="Cybersecurity">@L["Category:Cybersecurity"]</option>
                        <option value="DataPrivacy">@L["Category:DataPrivacy"]</option>
                        <option value="Financial">@L["Category:Financial"]</option>
                        <option value="Healthcare">@L["Category:Healthcare"]</option>
                        <option value="Quality">@L["Category:Quality"]</option>
                    </select>
                </div>
            </abp-column>
            <abp-column size-md="_3">
                <div class="mb-3">
                    <label class="form-label">@L["Status"]</label>
                    <select id="StatusFilter" class="form-select">
                        <option value="">@L["All"]</option>
                        <option value="Active" selected>@L["Status:Active"]</option>
                        <option value="Draft">@L["Status:Draft"]</option>
                        <option value="Deprecated">@L["Status:Deprecated"]</option>
                    </select>
                </div>
            </abp-column>
            <abp-column size-md="_3">
                <div class="mb-3">
                    <label class="form-label">@L["Mandatory"]</label>
                    <select id="MandatoryFilter" class="form-select">
                        <option value="">@L["All"]</option>
                        <option value="true">@L["Yes"]</option>
                        <option value="false">@L["No"]</option>
                    </select>
                </div>
            </abp-column>
        </abp-row>

                <!-- DataTable -->
                <abp-table striped-rows="true" id="FrameworksTable" class="nowrap">
                    <thead>
                        <tr>
                            <th>@L["Code"]</th>
                            <th>@L["Title"]</th>
                            <th>@L["Regulator"]</th>
                            <th>@L["Category"]</th>
                            <th>@L["Controls"]</th>
                            <th>@L["Mandatory"]</th>
                            <th>@L["EffectiveDate"]</th>
                            <th>@L["Status"]</th>
                            <th>@L["Actions"]</th>
                        </tr>
                    </thead>
                </abp-table>
            </div>

            <!-- Charts View Tab -->
            <div class="tab-pane fade" id="charts-view" role="tabpanel">
                <abp-row>
                    <abp-column size-md="_6">
                        <div class="card">
                            <div class="card-header">
                                <h5><i class="fas fa-chart-pie"></i> @L["FrameworksByCategory"]</h5>
                            </div>
                            <div class="card-body">
                                <canvas id="categoryChart" height="250"></canvas>
                            </div>
                        </div>
                    </abp-column>
                    <abp-column size-md="_6">
                        <div class="card">
                            <div class="card-header">
                                <h5><i class="fas fa-chart-bar"></i> @L["FrameworksByRegulator"]</h5>
                            </div>
                            <div class="card-body">
                                <canvas id="regulatorChart" height="250"></canvas>
                            </div>
                        </div>
                    </abp-column>
                </abp-row>
                <abp-row class="mt-3">
                    <abp-column size-md="_6">
                        <div class="card">
                            <div class="card-header">
                                <h5><i class="fas fa-chart-line"></i> @L["FrameworksByStatus"]</h5>
                            </div>
                            <div class="card-body">
                                <canvas id="statusChart" height="250"></canvas>
                            </div>
                        </div>
                    </abp-column>
                    <abp-column size-md="_6">
                        <div class="card">
                            <div class="card-header">
                                <h5><i class="fas fa-chart-area"></i> @L["ControlsDistribution"]</h5>
                            </div>
                            <div class="card-body">
                                <canvas id="controlsChart" height="250"></canvas>
                            </div>
                        </div>
                    </abp-column>
                </abp-row>
            </div>

            <!-- Cards View Tab -->
            <div class="tab-pane fade" id="cards-view" role="tabpanel">
                <div id="frameworkCards" class="row"></div>
            </div>
        </div>
    </abp-card-body>
</abp-card>

@section scripts {
    <abp-script-bundle>
        <abp-script src="/Pages/FrameworkLibrary/Index.js" />
        <abp-script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js" />
    </abp-script-bundle>
}

