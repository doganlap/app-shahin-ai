@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Grc.Localization
@model Grc.Web.Pages.Documentation.IndexModel
@inject IHtmlLocalizer<GrcResource> L
@{
    ViewBag.Title = L["Menu:Documentation"].Value;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="page-header">
                <i class="fas fa-book-open"></i> @L["Menu:Documentation"]
            </h1>
            <p class="text-muted">@L["Documentation:Description"]</p>
        </div>
    </div>

    <div class="row">
        <!-- Sidebar -->
        <div class="col-lg-3 mb-4">
            <div class="card shadow position-sticky" style="top: 20px;">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-list me-2"></i>@L["TableOfContents"]</h6>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        @foreach (var docSection in Model.Sections)
                        {
                            <a href="#doc-section-@docSection.Title.Replace(" ", "-").ToLower()" class="list-group-item list-group-item-action">
                                <i class="@docSection.Icon me-2"></i>@docSection.Title
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Content -->
        <div class="col-lg-9">
            @foreach (var docSection in Model.Sections)
            {
                <div class="card shadow mb-4" id="doc-section-@docSection.Title.Replace(" ", "-").ToLower()">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="@docSection.Icon me-2"></i>@docSection.Title
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="text-muted">@docSection.Description</p>
                        <div class="list-group">
                            @foreach (var article in docSection.Articles)
                            {
                                <a href="@article.Url" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                    <span><i class="fas fa-file-alt me-2"></i>@article.Title</span>
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Quick Links -->
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-external-link-alt me-2"></i>@L["QuickLinks"]</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <a href="/swagger" target="_blank" class="btn btn-outline-primary w-100">
                                <i class="fas fa-code me-1"></i>Swagger API
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a href="~/Help" class="btn btn-outline-info w-100">
                                <i class="fas fa-question-circle me-1"></i>@L["HelpCenter"]
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a href="~/Support" class="btn btn-outline-success w-100">
                                <i class="fas fa-headset me-1"></i>@L["Support"]
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
