@model GrcMvc.Models.DTOs.TenantAdminCredentialsDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>GRC Platform Admin Credentials</title>
    <style>
        body { font-family: Arial, sans-serif; line-height: 1.6; color: #333; }
        .container { max-width: 600px; margin: 0 auto; padding: 20px; }
        .header { background-color: #2c3e50; color: white; padding: 20px; text-align: center; }
        .content { background-color: #f8f9fa; padding: 20px; border-radius: 5px; margin: 20px 0; }
        .credentials-box { background-color: white; padding: 15px; border: 2px solid #007bff; border-radius: 5px; margin: 20px 0; }
        .warning-box { background-color: #fff3cd; padding: 15px; border-left: 4px solid #ffc107; margin: 20px 0; }
        .footer { text-align: center; color: #666; font-size: 12px; margin-top: 20px; }
        .code { font-family: monospace; background-color: #e9ecef; padding: 2px 6px; border-radius: 3px; }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h2>GRC Platform Admin Credentials</h2>
        </div>

        <div class="content">
            <p>Dear Administrator,</p>
            <p>Your admin account has been created for <strong>@Model.OrganizationName</strong>.</p>

            <div class="credentials-box">
                <h3 style="margin-top: 0;">Login Information</h3>
                <p><strong>Tenant ID:</strong> <span class="code">@Model.TenantId</span></p>
                <p><strong>Username:</strong> <span class="code">@Model.Username</span></p>
                <p><strong>Password:</strong> <span class="code">@Model.Password</span></p>
                <p><strong>Login URL:</strong> <a href="@Model.LoginUrl">@Model.LoginUrl</a></p>
                <p><strong>Credentials Expire:</strong> @Model.ExpiresAt.ToString("yyyy-MM-dd HH:mm:ss UTC")</p>
            </div>

            <div class="warning-box">
                <h4 style="margin-top: 0; color: #856404;">⚠️ Important Security Instructions</h4>
                <ul>
                    <li>These credentials are temporary and will expire on @Model.ExpiresAt.ToString("yyyy-MM-dd")</li>
                    @if (Model.MustChangePasswordOnFirstLogin)
                    {
                        <li><strong>You must change your password on first login</strong></li>
                    }
                    <li>Do not share these credentials with anyone</li>
                    <li>Use a secure connection (HTTPS) when logging in</li>
                    <li>If you did not request these credentials, please contact support immediately</li>
                </ul>
            </div>

            <p>Best regards,<br>GRC Platform Team</p>
        </div>

        <div class="footer">
            <p>This is an automated message. Please do not reply to this email.</p>
        </div>
    </div>
</body>
</html>
