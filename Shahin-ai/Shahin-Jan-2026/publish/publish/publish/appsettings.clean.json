{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=grc_system;Username=postgres;Password=your_password"
  },
  "SmtpSettings": {
    "Host": "smtp.gmail.com",
    "Port": 587,
    "EnableSsl": true,
    "FromEmail": "noreply@grcsystem.com",
    "FromName": "GRC System",
    "Username": "your-email@gmail.com",
    "Password": "your-app-specific-password"
  },
  "WorkflowSettings": {
    "EnableBackgroundJobs": true,
    "EscalationIntervalHours": 1,
    "NotificationDeliveryIntervalMinutes": 5,
    "SlaMonitorIntervalMinutes": 30,
    "MaxRetryAttempts": 3,
    "CacheExpiryMinutes": 5
  },
  "AllowedOrigins": [
    "https://localhost:5001",
    "https://localhost:7001",
    "https://portal.shahin-ai.com"
  ],
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Hangfire": "Information",
      "GrcMvc.BackgroundJobs": "Debug"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Hangfire": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/grc-system-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "AllowedHosts": "localhost;127.0.0.1;portal.shahin-ai.com;157.180.105.48"
}