@using GrcMvc.Services
@inject IAppInfoService AppInfo
@{
    ViewData["Title"] = "قريباً - Coming Soon";
    Layout = "_LandingLayout";
}

<section class="coming-soon-section py-5">
    <div class="container text-center">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="coming-soon-content">
                    <div class="icon-wrapper mb-4">
                        <i class="bi bi-hourglass-split display-1 text-primary"></i>
                    </div>
                    <h1 class="display-4 mb-4">قريباً</h1>
                    <p class="lead mb-4">هذا المحتوى قيد التطوير وسيكون متاحاً قريباً.</p>
                    <p class="text-muted mb-5">نعمل على إعداد محتوى شامل ومفيد لك. ترقب التحديثات!</p>
                    
                    <div class="d-flex gap-3 justify-content-center">
                        <a href="/" class="btn btn-primary btn-lg">
                            <i class="bi bi-house-door"></i> الصفحة الرئيسية
                        </a>
                        <a href="/help/contact" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-envelope"></i> تواصل معنا
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
.coming-soon-section {
    min-height: 60vh;
    display: flex;
    align-items: center;
}
.icon-wrapper {
    animation: pulse 2s infinite;
}
@@keyframes pulse {
    0%, 100% { transform: scale(1); opacity: 1; }
    50% { transform: scale(1.1); opacity: 0.8; }
}
</style>
