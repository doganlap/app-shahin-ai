@{
    ViewData["Title"] = "Getting Started";
    var currentCulture = Context.Request.Cookies["GrcMvc.Culture"] ?? "ar";
    var isRtl = currentCulture == "ar";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Help" asp-action="Index">@(isRtl ? "مركز المساعدة" : "Help Center")</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@(isRtl ? "ابدأ الآن" : "Getting Started")</li>
                </ol>
            </nav>

            <h1 class="mb-4">
                <i class="bi bi-rocket text-primary me-2"></i>
                @(isRtl ? "دليل البدء السريع" : "Getting Started Guide")
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Step 1 -->
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <span class="badge bg-light text-primary me-2">1</span>
                        @(isRtl ? "إنشاء حساب" : "Create Your Account")
                    </h5>
                </div>
                <div class="card-body">
                    <p>@(isRtl ? "ابدأ بإنشاء حساب جديد للمنظمة الخاصة بك:" : "Start by creating a new account for your organization:")</p>
                    <ol>
                        <li>@(isRtl ? "انتقل إلى صفحة التسجيل" : "Navigate to the signup page")</li>
                        <li>@(isRtl ? "أدخل اسم المنظمة والبريد الإلكتروني" : "Enter your organization name and email")</li>
                        <li>@(isRtl ? "اختر معرف فريد للمنظمة (slug)" : "Choose a unique organization identifier (slug)")</li>
                        <li>@(isRtl ? "تحقق من بريدك الإلكتروني لتفعيل الحساب" : "Check your email to activate your account")</li>
                    </ol>
                    <a asp-controller="Onboarding" asp-action="Signup" class="btn btn-primary">
                        @(isRtl ? "ابدأ التسجيل" : "Start Signup") <i class="bi bi-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>

            <!-- Step 2 -->
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <span class="badge bg-light text-success me-2">2</span>
                        @(isRtl ? "معالج الإعداد (12 خطوة)" : "Onboarding Wizard (12 Steps)")
                    </h5>
                </div>
                <div class="card-body">
                    <p>@(isRtl ? "بعد تفعيل حسابك، ستبدأ معالج الإعداد المكون من 12 خطوة:" : "After activating your account, you'll begin the 12-step onboarding wizard:")</p>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <h6>@(isRtl ? "الخطوات الأساسية:" : "Core Steps:")</h6>
                            <ul>
                                <li><strong>Step A:</strong> @(isRtl ? "هوية المنظمة" : "Organization Identity")</li>
                                <li><strong>Step B:</strong> @(isRtl ? "الملف التنظيمي" : "Organization Profile")</li>
                                <li><strong>Step C:</strong> @(isRtl ? "الأطر التنظيمية" : "Regulatory Frameworks")</li>
                                <li><strong>Step D:</strong> @(isRtl ? "نطاق الامتثال" : "Compliance Scope")</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6>@(isRtl ? "خطوات متقدمة:" : "Advanced Steps:")</h6>
                            <ul>
                                <li><strong>Steps E-L:</strong> @(isRtl ? "التفاصيل الإضافية" : "Additional Details")</li>
                                <li>@(isRtl ? "الأصول والأنظمة" : "Assets & Systems")</li>
                                <li>@(isRtl ? "الفرق والأدوار" : "Teams & Roles")</li>
                                <li>@(isRtl ? "خطة الامتثال" : "Compliance Plan")</li>
                            </ul>
                        </div>
                    </div>

                    <div class="alert alert-info mt-3">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>@(isRtl ? "نصيحة:" : "Tip:")</strong>
                        @(isRtl ? "يمكنك حفظ التقدم والعودة لاحقاً. المعالج يستغرق حوالي 15-20 دقيقة لإكماله." : "You can save your progress and return later. The wizard takes approximately 15-20 minutes to complete.")
                    </div>

                    <a asp-controller="OnboardingWizard" asp-action="Index" class="btn btn-success">
                        @(isRtl ? "ابدأ المعالج" : "Start Wizard") <i class="bi bi-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>

            <!-- Step 3 -->
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <span class="badge bg-light text-info me-2">3</span>
                        @(isRtl ? "اختيار الأطر التنظيمية" : "Select Regulatory Frameworks")
                    </h5>
                </div>
                <div class="card-body">
                    <p>@(isRtl ? "النظام سيساعدك في تحديد الأطر التنظيمية المناسبة بناءً على:" : "The system will help you identify appropriate regulatory frameworks based on:")</p>
                    <ul>
                        <li>@(isRtl ? "قطاع عملك" : "Your business sector")</li>
                        <li>@(isRtl ? "حجم المنظمة" : "Organization size")</li>
                        <li>@(isRtl ? "الموقع الجغرافي" : "Geographic location")</li>
                    </ul>

                    <h6 class="mt-3">@(isRtl ? "الأطر الشائعة في السعودية:" : "Common Frameworks in Saudi Arabia:")</h6>
                    <div class="row">
                        <div class="col-md-6">
                            <ul>
                                <li><strong>NCA ECC</strong> - @(isRtl ? "ضوابط الأمن السيبراني الأساسية" : "Essential Cybersecurity Controls")</li>
                                <li><strong>SAMA CSF</strong> - @(isRtl ? "إطار الأمن السيبراني للمؤسسات المالية" : "Cybersecurity Framework for Financial Institutions")</li>
                                <li><strong>PDPL</strong> - @(isRtl ? "قانون حماية البيانات الشخصية" : "Personal Data Protection Law")</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul>
                                <li><strong>ISO 27001</strong> - @(isRtl ? "نظام إدارة أمن المعلومات" : "Information Security Management")</li>
                                <li><strong>NIST CSF</strong> - @(isRtl ? "إطار الأمن السيبراني" : "Cybersecurity Framework")</li>
                            </ul>
                        </div>
                    </div>

                    <a asp-controller="Help" asp-action="Glossary" class="btn btn-info text-white">
                        @(isRtl ? "تعرف على المصطلحات" : "Learn About Terms") <i class="bi bi-book ms-1"></i>
                    </a>
                </div>
            </div>

            <!-- Step 4 -->
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <span class="badge bg-dark text-warning me-2">4</span>
                        @(isRtl ? "إنشاء خطة الامتثال" : "Create Compliance Plan")
                    </h5>
                </div>
                <div class="card-body">
                    <p>@(isRtl ? "بعد تحديد الأطر التنظيمية، سينشئ النظام تلقائياً:" : "After identifying regulatory frameworks, the system will automatically create:")</p>
                    <ul>
                        <li>@(isRtl ? "خطة الامتثال الأولية" : "Initial compliance plan")</li>
                        <li>@(isRtl ? "قائمة الضوابط المطلوبة" : "List of required controls")</li>
                        <li>@(isRtl ? "جدول التقييمات" : "Assessment schedule")</li>
                        <li>@(isRtl ? "مهام العمل الأولية" : "Initial action items")</li>
                    </ul>

                    <div class="alert alert-warning mt-3">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <strong>@(isRtl ? "مهم:" : "Important:")</strong>
                        @(isRtl ? "يمكنك تخصيص الخطة لاحقاً حسب احتياجاتك المحددة." : "You can customize the plan later based on your specific needs.")
                    </div>
                </div>
            </div>

            <!-- Step 5 -->
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <span class="badge bg-light text-danger me-2">5</span>
                        @(isRtl ? "بدء العمل" : "Start Working")
                    </h5>
                </div>
                <div class="card-body">
                    <p>@(isRtl ? "الآن أنت جاهز لاستخدام النظام! يمكنك:" : "Now you're ready to use the system! You can:")</p>
                    <ul>
                        <li>@(isRtl ? "عرض لوحة التحكم" : "View your dashboard")</li>
                        <li>@(isRtl ? "إدارة المخاطر" : "Manage risks")</li>
                        <li>@(isRtl ? "إنشاء التقييمات" : "Create assessments")</li>
                        <li>@(isRtl ? "تتبع الأدلة" : "Track evidence")</li>
                        <li>@(isRtl ? "إدارة السياسات" : "Manage policies")</li>
                    </ul>

                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-danger">
                        @(isRtl ? "انتقل إلى لوحة التحكم" : "Go to Dashboard") <i class="bi bi-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-lightbulb me-2"></i>
                        @(isRtl ? "نصائح سريعة" : "Quick Tips")
                    </h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-3">
                            <i class="bi bi-check-circle text-success me-2"></i>
                            <strong>@(isRtl ? "احفظ تقدمك" : "Save Progress")</strong><br>
                            <small class="text-muted">@(isRtl ? "يمكنك حفظ والعودة في أي وقت" : "You can save and return anytime")</small>
                        </li>
                        <li class="mb-3">
                            <i class="bi bi-question-circle text-info me-2"></i>
                            <strong>@(isRtl ? "استخدم المساعدة" : "Use Help")</strong><br>
                            <small class="text-muted">@(isRtl ? "انقر على (?) للحصول على تلميحات" : "Click (?) icons for hints")</small>
                        </li>
                        <li class="mb-3">
                            <i class="bi bi-book text-primary me-2"></i>
                            <strong>@(isRtl ? "راجع المسرد" : "Check Glossary")</strong><br>
                            <small class="text-muted">@(isRtl ? "تعرف على مصطلحات GRC" : "Learn GRC terminology")</small>
                        </li>
                        <li>
                            <i class="bi bi-headset text-warning me-2"></i>
                            <strong>@(isRtl ? "اتصل بالدعم" : "Contact Support")</strong><br>
                            <small class="text-muted">@(isRtl ? "استخدم زر الدردشة للحصول على المساعدة" : "Use chat button for help")</small>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="card shadow-sm mt-3">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-link-45deg me-2"></i>
                        @(isRtl ? "روابط مفيدة" : "Useful Links")
                    </h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li><a asp-action="FAQ"><i class="bi bi-question-circle me-2"></i>@(isRtl ? "الأسئلة الشائعة" : "FAQ")</a></li>
                        <li><a asp-action="Glossary"><i class="bi bi-book me-2"></i>@(isRtl ? "المسرد" : "Glossary")</a></li>
                        <li><a asp-action="Contact"><i class="bi bi-envelope me-2"></i>@(isRtl ? "اتصل بالدعم" : "Contact Support")</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
