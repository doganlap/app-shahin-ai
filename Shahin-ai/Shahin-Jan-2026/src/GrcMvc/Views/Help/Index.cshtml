@{
    ViewData["Title"] = "Help Center";
    var currentCulture = Context.Request.Cookies["GrcMvc.Culture"] ?? "ar";
    var isRtl = currentCulture == "ar";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">
                <i class="bi bi-question-circle text-primary me-2"></i>
                @(isRtl ? "مركز المساعدة" : "Help Center")
            </h1>
        </div>
    </div>

    <div class="row g-4">
        <!-- Getting Started Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-rocket text-primary" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title">@(isRtl ? "ابدأ الآن" : "Getting Started")</h5>
                    <p class="card-text text-muted">
                        @(isRtl ? "دليل خطوة بخطوة لبدء استخدام النظام" : "Step-by-step guide to get started with the system")
                    </p>
                    <a asp-action="GettingStarted" class="btn btn-primary">
                        @(isRtl ? "ابدأ" : "Get Started") <i class="bi bi-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- FAQ Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-question-circle text-success" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title">@(isRtl ? "الأسئلة الشائعة" : "Frequently Asked Questions")</h5>
                    <p class="card-text text-muted">
                        @(isRtl ? "إجابات على الأسئلة الأكثر شيوعاً" : "Answers to the most common questions")
                    </p>
                    <a asp-action="FAQ" class="btn btn-success">
                        @(isRtl ? "عرض الأسئلة" : "View FAQ") <i class="bi bi-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Glossary Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-book text-info" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title">@(isRtl ? "المسرد" : "Glossary")</h5>
                    <p class="card-text text-muted">
                        @(isRtl ? "تعريفات مصطلحات الحوكمة والمخاطر والامتثال" : "Definitions of GRC terms and concepts")
                    </p>
                    <a asp-action="Glossary" class="btn btn-info text-white">
                        @(isRtl ? "عرض المسرد" : "View Glossary") <i class="bi bi-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Contact Support Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-envelope text-warning" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title">@(isRtl ? "اتصل بالدعم" : "Contact Support")</h5>
                    <p class="card-text text-muted">
                        @(isRtl ? "تواصل مع فريق الدعم للحصول على المساعدة" : "Get in touch with our support team")
                    </p>
                    <a asp-action="Contact" class="btn btn-warning">
                        @(isRtl ? "اتصل بنا" : "Contact Us") <i class="bi bi-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Video Tutorials Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-play-circle text-danger" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title">@(isRtl ? "دروس الفيديو" : "Video Tutorials")</h5>
                    <p class="card-text text-muted">
                        @(isRtl ? "شروحات مرئية للميزات الرئيسية" : "Visual guides for key features")
                    </p>
                    <button class="btn btn-danger" disabled>
                        @(isRtl ? "قريباً" : "Coming Soon") <i class="bi bi-clock ms-1"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Knowledge Base Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-search text-secondary" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title">@(isRtl ? "قاعدة المعرفة" : "Knowledge Base")</h5>
                    <p class="card-text text-muted">
                        @(isRtl ? "مقالات ومستندات تفصيلية" : "Detailed articles and documentation")
                    </p>
                    <button class="btn btn-secondary" disabled>
                        @(isRtl ? "قريباً" : "Coming Soon") <i class="bi bi-clock ms-1"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Help Section -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-lightbulb text-warning me-2"></i>
                        @(isRtl ? "مساعدة سريعة" : "Quick Help")
                    </h5>
                    <div class="row">
                        <div class="col-md-6">
                            <h6>@(isRtl ? "المواضيع الشائعة:" : "Popular Topics:")</h6>
                            <ul>
                                <li><a href="@Url.Action("GettingStarted")">@(isRtl ? "كيف أبدأ؟" : "How do I get started?")</a></li>
                                <li><a href="@Url.Action("FAQ", new { search = "onboarding" })">@(isRtl ? "أسئلة حول الإعداد" : "Onboarding questions")</a></li>
                                <li><a href="@Url.Action("Glossary")">@(isRtl ? "مصطلحات GRC" : "GRC terminology")</a></li>
                                <li><a href="@Url.Action("FAQ", new { search = "framework" })">@(isRtl ? "الأطر التنظيمية" : "Regulatory frameworks")</a></li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6>@(isRtl ? "تحتاج مساعدة فورية؟" : "Need immediate help?")</h6>
                            <p>@(isRtl ? "استخدم زر الدردشة في الزاوية السفلية اليمنى للتواصل مع فريق الدعم." : "Use the chat button in the bottom-right corner to contact our support team.")</p>
                            <p class="mb-0">
                                <i class="bi bi-envelope me-2"></i>
                                <a href="mailto:support@grc-system.sa">support@grc-system.sa</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
