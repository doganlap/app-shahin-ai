@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> L
@model GrcMvc.Models.DTOs.CreateEvidenceDto
@{
    ViewData["Title"] = L["Evidence_Create_Title"].Value;
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="bi bi-plus-circle"></i> @L["Evidence_Create_Title"]</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> @L["BackToList"]
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label fw-bold">@L["Evidence_Name"]</label>
                            <input asp-for="Name" class="form-control" placeholder="@L["Evidence_NamePlaceholder"]" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label asp-for="EvidenceType" class="control-label fw-bold">@L["Type"]</label>
                            <select asp-for="EvidenceType" class="form-select">
                                <option value="">@L["Evidence_SelectType"]</option>
                                <option value="Document">@L["Evidence_Type_Document"]</option>
                                <option value="Screenshot">@L["Evidence_Type_Screenshot"]</option>
                                <option value="Log">@L["Evidence_Type_Log"]</option>
                                <option value="Report">@L["Evidence_Type_Report"]</option>
                                <option value="Email">@L["Evidence_Type_Email"]</option>
                                <option value="Other">@L["Evidence_Type_Other"]</option>
                            </select>
                            <span asp-validation-for="EvidenceType" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label asp-for="Status" class="control-label fw-bold">@L["Status"]</label>
                            <select asp-for="Status" class="form-select">
                                <option value="Active">@L["Evidence_Status_Active"]</option>
                                <option value="Pending">@L["Evidence_Status_Pending"]</option>
                                <option value="Draft">@L["Evidence_Status_Draft"]</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label fw-bold">@L["Description"]</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="DataClassification" class="control-label fw-bold">@L["Evidence_Classification"]</label>
                            <select asp-for="DataClassification" class="form-select">
                                <option value="Public">@L["Evidence_Classification_Public"]</option>
                                <option value="Internal">@L["Evidence_Classification_Internal"]</option>
                                <option value="Confidential">@L["Evidence_Classification_Confidential"]</option>
                                <option value="Restricted">@L["Evidence_Classification_Restricted"]</option>
                            </select>
                            <span asp-validation-for="DataClassification" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="Source" class="control-label fw-bold">@L["Evidence_Source"]</label>
                            <input asp-for="Source" class="form-control" placeholder="@L["Evidence_SourcePlaceholder"]" />
                            <span asp-validation-for="Source" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="Owner" class="control-label fw-bold">@L["Owner"]</label>
                            <input asp-for="Owner" class="form-control" />
                            <span asp-validation-for="Owner" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="CollectionDate" class="control-label fw-bold">@L["Evidence_CollectionDate"]</label>
                            <input asp-for="CollectionDate" class="form-control" type="date" />
                            <span asp-validation-for="CollectionDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="ExpirationDate" class="control-label fw-bold">@L["Evidence_ExpirationDate"]</label>
                            <input asp-for="ExpirationDate" class="form-control" type="date" />
                            <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Location" class="control-label fw-bold">@L["Evidence_Location"]</label>
                    <input asp-for="Location" class="form-control" placeholder="https://..." />
                    <span asp-validation-for="Location" class="text-danger"></span>
                    <small class="text-muted">@L["Evidence_OrUploadFile"]</small>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Tags" class="control-label fw-bold">@L["Evidence_Tags"]</label>
                    <input asp-for="Tags" class="form-control" placeholder="@L["Evidence_TagsPlaceholder"]" />
                    <span asp-validation-for="Tags" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Notes" class="control-label fw-bold">@L["Evidence_Notes"]</label>
                    <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> @L["Evidence_CreateEvidence"]
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">@L["Cancel"]</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
