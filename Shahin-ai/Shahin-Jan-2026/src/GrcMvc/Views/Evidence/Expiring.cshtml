@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> L
@model IEnumerable<GrcMvc.Models.DTOs.EvidenceDto>
@{
    ViewData["Title"] = L["Evidence_Expiring_Title"].Value;
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="bi bi-clock-history"></i> @L["Evidence_Expiring_Title"]</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> @L["BackToList"]
            </a>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-check-circle display-1 text-muted"></i>
                    <h4 class="mt-3 text-muted">@L["Evidence_NoEvidenceExpiringSoon"]</h4>
                    <p>@L["Evidence_AllEvidenceUpToDate"]</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover" id="expiringTable">
                        <thead>
                            <tr>
                                <th>@L["Evidence_ExpirationDate"]</th>
                                <th>@L["Name"]</th>
                                <th>@L["Owner"]</th>
                                <th>@L["Status"]</th>
                                <th>@L["Evidence_DaysLeft"]</th>
                                <th>@L["Actions"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                var daysLeft = (item.ExpirationDate.GetValueOrDefault() - DateTime.UtcNow).Days;
                                var urgencyClass = daysLeft < 7 ? "text-danger fw-bold" : "text-warning";

                                <tr>
                                    <td>@item.ExpirationDate?.ToShortDateString()</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id">@item.Name</a>
                                    </td>
                                    <td>@item.Owner</td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(item.Status)">
                                            @item.Status
                                        </span>
                                    </td>
                                    <td class="@urgencyClass">
                                        @if (daysLeft < 0)
                                        {
                                            <span>@L["Evidence_Expired"]</span>
                                        }
                                        else
                                        {
                                            <span>@daysLeft @L["Evidence_Days"]</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i> @L["Evidence_RenewUpdate"]
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    private string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "active" or "valid" => "bg-success",
            "expired" => "bg-danger",
            "pending" => "bg-warning",
            "archived" => "bg-secondary",
            _ => "bg-info"
        };
    }
}
