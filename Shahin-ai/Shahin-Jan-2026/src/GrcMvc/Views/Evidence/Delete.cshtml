@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> L
@model GrcMvc.Models.DTOs.EvidenceDto
@{
    ViewData["Title"] = L["Evidence_Delete_Title"].Value;
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> @L["Evidence_DeleteConfirmation"]</h4>
                </div>
                <div class="card-body">
                    <h5 class="card-title text-danger">@L["Evidence_DeleteWarning"]</h5>
                    <p class="card-text">@L["Evidence_DeleteWarningMessage"] <strong>@Model.Name</strong> @L["Evidence_DeletePermanent"]</p>

                    <dl class="row mt-4">
                        <dt class="col-sm-4">@L["Name"]</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">@L["Type"]</dt>
                        <dd class="col-sm-8">@Model.EvidenceType</dd>

                        <dt class="col-sm-4">@L["Evidence_Classification"]</dt>
                        <dd class="col-sm-8">@Model.DataClassification</dd>

                        <dt class="col-sm-4">@L["Owner"]</dt>
                        <dd class="col-sm-8">@Model.Owner</dd>

                        <dt class="col-sm-4">@L["Evidence_Collected"]</dt>
                        <dd class="col-sm-8">@Model.CollectionDate.ToShortDateString()</dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">@L["Cancel"]</a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> @L["Evidence_DeleteEvidence"]
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
