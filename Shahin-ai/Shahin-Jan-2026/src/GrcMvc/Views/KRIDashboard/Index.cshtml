@{
    ViewData["Title"] = "KRI/KPI Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var indicators = ViewBag.Indicators as List<GrcMvc.Models.Entities.RiskIndicator> ?? new List<GrcMvc.Models.Entities.RiskIndicator>();
    var alerts = ViewBag.Alerts as List<GrcMvc.Models.Entities.RiskIndicatorAlert> ?? new List<GrcMvc.Models.Entities.RiskIndicatorAlert>();
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1"><i class="fas fa-chart-line text-danger me-2"></i>KRI/KPI Dashboard</h1>
            <p class="text-muted">Real-time risk indicator monitoring and alerts</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center bg-danger text-white">
                <div class="card-body">
                    <div class="h2 mb-0">@ViewBag.CriticalCount</div>
                    <small>Critical Alerts</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center bg-warning text-dark">
                <div class="card-body">
                    <div class="h2 mb-0">@ViewBag.HighCount</div>
                    <small>High Alerts</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center bg-info text-white">
                <div class="card-body">
                    <div class="h2 mb-0">@ViewBag.MediumCount</div>
                    <small>Medium Alerts</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center bg-primary text-white">
                <div class="card-body">
                    <div class="h2 mb-0">@indicators.Count</div>
                    <small>Active Indicators</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-danger text-white">
                    <i class="fas fa-bell me-2"></i>Open Alerts
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr><th>Indicator</th><th>Severity</th><th>Triggered</th><th>Action</th></tr>
                            </thead>
                            <tbody>
                                @foreach (var alert in alerts)
                                {
                                    <tr>
                                        <td>@alert.Indicator?.Name</td>
                                        <td>
                                            @switch (alert.Severity)
                                            {
                                                case "Critical":
                                                    <span class="badge bg-danger">Critical</span>
                                                    break;
                                                case "High":
                                                    <span class="badge bg-warning text-dark">High</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-info">@alert.Severity</span>
                                                    break;
                                            }
                                        </td>
                                        <td>@alert.TriggeredAt.ToString("MMM dd HH:mm")</td>
                                        <td>
                                            <form asp-action="AcknowledgeAlert" asp-route-alertId="@alert.Id" method="post" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-outline-success">
                                                    <i class="fas fa-check"></i> Ack
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                                @if (!alerts.Any())
                                {
                                    <tr><td colspan="4" class="text-center text-muted py-4">
                                        <i class="fas fa-check-circle fa-2x text-success mb-2 d-block"></i>
                                        No open alerts
                                    </td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <i class="fas fa-tachometer-alt me-2"></i>Indicators
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var ind in indicators.Take(10))
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @ind.Name
                            <span class="badge bg-primary rounded-pill">Active</span>
                        </li>
                    }
                    @if (!indicators.Any())
                    {
                        <li class="list-group-item text-center text-muted">No indicators configured</li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
