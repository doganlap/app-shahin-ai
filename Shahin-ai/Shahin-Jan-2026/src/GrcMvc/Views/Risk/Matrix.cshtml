@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> L
@model IEnumerable<GrcMvc.Models.DTOs.RiskDto>
@{
    ViewData["Title"] = L["Risk_Matrix_Title"].Value;
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="bi bi-grid-3x3"></i> @L["Risk_Matrix_Title"]</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> @L["BackToList"]
            </a>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> @L["Risk_NewRisk"]
            </a>
        </div>
    </div>

    <!-- Risk Heatmap -->
    <div class="row justify-content-center mb-5">
        <div class="col-md-10">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0 text-center">@L["Risk_HeatMap"]</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered text-center risk-matrix" style="height: 400px;">
                            <thead>
                                <tr>
                                    <th rowspan="6" class="align-middle" style="width: 50px; writing-mode: vertical-rl; transform: rotate(180deg);">@L["Risk_Probability"]</th>
                                    <th class="border-0"></th>
                                    <th colspan="5">@L["Risk_Impact"]</th>
                                </tr>
                                <tr>
                                    <th class="border-0"></th>
                                    <th class="bg-light">@L["Risk_Impact_1_Negligible"]</th>
                                    <th class="bg-light">@L["Risk_Impact_2_Minor"]</th>
                                    <th class="bg-light">@L["Risk_Impact_3_Moderate"]</th>
                                    <th class="bg-light">@L["Risk_Impact_4_Major"]</th>
                                    <th class="bg-light">@L["Risk_Impact_5_Critical"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int p = 5; p >= 1; p--)
                                {
                                    <tr>
                                        <th class="bg-light align-middle">@GetProbabilityLabel(p)</th>
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            var count = Model.Count(r => r.Probability == p && r.Impact == i);
                                            var cellClass = GetRiskCellClass(p * i);
                                            <td class="@cellClass align-middle position-relative p-0">
                                                @if (count > 0)
                                                {
                                                    <a href="#" class="d-block w-100 h-100 text-decoration-none text-dark p-3 fw-bold"
                                                       data-bs-toggle="modal" data-bs-target="#riskModal-@p-@i">
                                                        @count
                                                    </a>

                                                    <!-- Modal for cell details -->
                                                    <div class="modal fade" id="riskModal-@p-@i" tabindex="-1">
                                                        <div class="modal-dialog modal-lg">
                                                            <div class="modal-content text-start">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title">@L["Risk_Risks"]: @L["Risk_Probability"] @p, @L["Risk_Impact"] @i</h5>
                                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <div class="table-responsive">
                                                                        <table class="table table-sm table-hover">
                                                                            <thead>
                                                                                <tr>
                                                                                    <th>@L["Name"]</th>
                                                                                    <th>@L["Category"]</th>
                                                                                    <th>@L["RiskScore"]</th>
                                                                                    <th>@L["Owner"]</th>
                                                                                    <th>@L["Actions"]</th>
                                                                                </tr>
                                                                            </thead>
                                                                            <tbody>
                                                                                @foreach (var risk in Model.Where(r => r.Probability == p && r.Impact == i))
                                                                                {
                                                                                    <tr>
                                                                                        <td>@risk.Name</td>
                                                                                        <td>@risk.Category</td>
                                                                                        <td>
                                                                                            <span class="badge @GetRiskBadgeClass(risk.InherentRisk)">@risk.InherentRisk</span>
                                                                                        </td>
                                                                                        <td>@risk.Owner</td>
                                                                                        <td>
                                                                                            <a asp-action="Details" asp-route-id="@risk.Id" class="btn btn-sm btn-outline-primary">@L["View"]</a>
                                                                                        </td>
                                                                                    </tr>
                                                                                }
                                                                            </tbody>
                                                                        </table>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted opacity-25">-</span>
                                                }
                                            </td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0">@L["Risk_RiskLevels"]</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>@L["Risk_Level_High"]</span>
                        <span class="badge bg-danger rounded-pill">@Model.Count(r => r.InherentRisk >= 15)</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>@L["Risk_Level_Medium"]</span>
                        <span class="badge bg-warning rounded-pill">@Model.Count(r => r.InherentRisk >= 8 && r.InherentRisk < 15)</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <span>@L["Risk_Level_Low"]</span>
                        <span class="badge bg-success rounded-pill">@Model.Count(r => r.InherentRisk < 8)</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0">@L["Risk_TopCategories"]</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        @foreach (var group in Model.GroupBy(r => r.Category).OrderByDescending(g => g.Count()).Take(5))
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @group.Key
                                <span class="badge bg-primary rounded-pill">@group.Count()</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0">@L["Risk_TopRisksByScore"]</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        @foreach (var risk in Model.OrderByDescending(r => r.InherentRisk).Take(5))
                        {
                            <a asp-action="Details" asp-route-id="@risk.Id" class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1 text-truncate" style="max-width: 200px;">@risk.Name</h6>
                                    <span class="badge @GetRiskBadgeClass(risk.InherentRisk)">@risk.InherentRisk</span>
                                </div>
                                <small class="text-muted">@risk.Category</small>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetProbabilityLabel(int p)
    {
        return p switch
        {
            5 => L["Risk_Probability_5_Frequent"].Value,
            4 => L["Risk_Probability_4_Likely"].Value,
            3 => L["Risk_Probability_3_Possible"].Value,
            2 => L["Risk_Probability_2_Unlikely"].Value,
            1 => L["Risk_Probability_1_Rare"].Value,
            _ => p.ToString()
        };
    }

    private string GetRiskCellClass(int score)
    {
        return score switch
        {
            >= 15 => "bg-danger bg-opacity-25",
            >= 8 => "bg-warning bg-opacity-25",
            _ => "bg-success bg-opacity-25"
        };
    }

    private string GetRiskBadgeClass(int score)
    {
        return score switch
        {
            >= 15 => "bg-danger",
            >= 8 => "bg-warning",
            _ => "bg-success"
        };
    }
}
