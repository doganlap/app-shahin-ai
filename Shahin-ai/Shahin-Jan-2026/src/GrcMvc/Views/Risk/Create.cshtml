@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> L
@model GrcMvc.Models.DTOs.CreateRiskDto
@{
    ViewData["Title"] = L["Risk_Create"].Value;
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4><i class="bi bi-plus-circle"></i> @L["Risk_CreateNew"]</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Category" class="form-label"></label>
                                <select asp-for="Category" class="form-select">
                                    <option value="">@L["Risk_SelectCategory"]</option>
                                    <option value="Financial">@L["Risk_Category_Financial"]</option>
                                    <option value="Operational">@L["Risk_Category_Operational"]</option>
                                    <option value="Strategic">@L["Risk_Category_Strategic"]</option>
                                    <option value="Compliance">@L["Risk_Category_Compliance"]</option>
                                    <option value="Reputational">@L["Risk_Category_Reputational"]</option>
                                    <option value="Technology">@L["Risk_Category_Technology"]</option>
                                    <option value="Security">@L["Risk_Category_Security"]</option>
                                </select>
                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Status" class="form-label"></label>
                                <select asp-for="Status" class="form-select">
                                    <option value="Active">Active</option>
                                    <option value="Monitoring">Monitoring</option>
                                    <option value="Mitigated">Mitigated</option>
                                    <option value="Closed">Closed</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Probability" class="form-label"></label>
                                <select asp-for="Probability" class="form-select" id="probabilitySelect">
                                    <option value="1">@L["Risk_Probability_VeryLow"]</option>
                                    <option value="2">@L["Risk_Probability_Low"]</option>
                                    <option value="3">@L["Risk_Probability_Medium"]</option>
                                    <option value="4">@L["Risk_Probability_High"]</option>
                                    <option value="5">@L["Risk_Probability_VeryHigh"]</option>
                                </select>
                                <span asp-validation-for="Probability" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Impact" class="form-label"></label>
                                <select asp-for="Impact" class="form-select" id="impactSelect">
                                    <option value="1">@L["Risk_Impact_Negligible"]</option>
                                    <option value="2">@L["Risk_Impact_Minor"]</option>
                                    <option value="3">@L["Risk_Impact_Moderate"]</option>
                                    <option value="4">@L["Risk_Impact_Major"]</option>
                                    <option value="5">@L["Risk_Impact_Catastrophic"]</option>
                                </select>
                                <span asp-validation-for="Impact" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label">@L["RiskScore"]</label>
                                <div class="form-control-plaintext">
                                    <span id="riskScore" class="badge bg-secondary fs-6">3</span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MitigationStrategy" class="form-label">@L["Risk_MitigationStrategy"]</label>
                            <textarea asp-for="MitigationStrategy" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="MitigationStrategy" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Owner" class="form-label"></label>
                                <input asp-for="Owner" class="form-control" />
                                <span asp-validation-for="Owner" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="DueDate" class="form-label"></label>
                                <input asp-for="DueDate" type="date" class="form-control" />
                                <span asp-validation-for="DueDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> @L["Risk_Create"]
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> @L["Risk_BackToList"]
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            function calculateRiskScore() {
                var probability = parseInt($('#probabilitySelect').val());
                var impact = parseInt($('#impactSelect').val());
                var score = probability * impact;

                var badge = $('#riskScore');
                badge.text(score);

                // Update badge color based on score
                badge.removeClass('bg-success bg-warning bg-danger bg-secondary');
                if (score >= 15) {
                    badge.addClass('bg-danger');
                } else if (score >= 8) {
                    badge.addClass('bg-warning');
                } else if (score > 0) {
                    badge.addClass('bg-success');
                } else {
                    badge.addClass('bg-secondary');
                }

                // Set hidden fields
                $('<input>').attr({
                    type: 'hidden',
                    name: 'InherentRisk',
                    value: score
                }).appendTo('form');

                $('<input>').attr({
                    type: 'hidden',
                    name: 'ResidualRisk',
                    value: score
                }).appendTo('form');
            }

            $('#probabilitySelect, #impactSelect').change(calculateRiskScore);
            calculateRiskScore(); // Calculate initial score
        });
    </script>
}