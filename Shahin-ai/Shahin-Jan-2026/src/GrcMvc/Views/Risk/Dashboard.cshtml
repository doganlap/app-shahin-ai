@using Microsoft.AspNetCore.Mvc.Localization
@using GrcMvc.Configuration
@inject IHtmlLocalizer<SharedResource> L
@model GrcMvc.Models.ViewModels.RiskDashboardViewModel
@{
    ViewData["Title"] = "Risk Management Dashboard";
    Layout = "_Layout";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-speedometer2"></i> @L["Risk_Dashboard"]</h2>
            <p class="text-muted">@L["Risk_DashboardSubtitle"]</p>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create Risk
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-list"></i> All Risks
            </a>
            <a asp-action="Matrix" class="btn btn-outline-info">
                <i class="bi bi-grid-3x3"></i> Risk Matrix
            </a>
        </div>
    </div>

    <!-- Key Metrics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 opacity-75">Total Risks</h6>
                            <h2 class="card-title mb-0">@(Model.RiskPosture?.TotalRisks ?? 0)</h2>
                        </div>
                        <i class="bi bi-exclamation-triangle display-4 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 opacity-75">Critical Risks</h6>
                            <h2 class="card-title mb-0">@(Model.RiskPosture?.CriticalRisks ?? 0)</h2>
                        </div>
                        <i class="bi bi-exclamation-octagon display-4 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2">High Risks</h6>
                            <h2 class="card-title mb-0">@(Model.RiskPosture?.HighRisks ?? 0)</h2>
                        </div>
                        <i class="bi bi-exclamation-circle display-4 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 opacity-75">Mitigated Risks</h6>
                            <h2 class="card-title mb-0">@(Model.RiskPosture?.MitigatedRisks ?? 0)</h2>
                        </div>
                        <i class="bi bi-check-circle display-4 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Risk Heatmap & Risk Levels -->
    <div class="row mb-4">
        <div class="col-md-8">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-grid-3x3"></i> Risk Heat Map</h5>
                </div>
                <div class="card-body">
                    @if (Model.HeatMap != null && Model.HeatMap.Cells.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered text-center risk-matrix">
                                <thead>
                                    <tr>
                                        <th rowspan="2" class="align-middle bg-light" style="width: 100px;">
                                            <div style="writing-mode: vertical-rl; transform: rotate(180deg);">Likelihood</div>
                                        </th>
                                        <th colspan="5" class="bg-light">Impact</th>
                                    </tr>
                                    <tr>
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <th class="bg-light">@i</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int likelihood = 5; likelihood >= 1; likelihood--)
                                    {
                                        <tr>
                                            <th class="bg-light">@likelihood</th>
                                            @for (int impact = 1; impact <= 5; impact++)
                                            {
                                                var cell = Model.HeatMap.Cells.FirstOrDefault(c => c.Likelihood == likelihood && c.Impact == impact);
                                                var count = cell?.RiskCount ?? 0;
                                                var score = likelihood * impact;
                                                var cellClass = GetRiskCellClass(score);

                                                <td class="@cellClass align-middle" style="height: 60px; width: 80px; cursor: pointer;"
                                                    @(count > 0 ? $"data-bs-toggle='tooltip' title='{string.Join(", ", cell?.RiskNames ?? new List<string>())}'" : "")>
                                                    @if (count > 0)
                                                    {
                                                        <strong style="font-size: 1.2rem;">@count</strong>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted opacity-25">-</span>
                                                    }
                                                </td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="d-flex justify-content-center gap-3 mt-3">
                            <span><span class="badge bg-success">Low</span> 1-5</span>
                            <span><span class="badge bg-warning">Medium</span> 6-11</span>
                            <span><span class="badge bg-danger">High</span> 12-19</span>
                            <span><span class="badge bg-dark">Critical</span> 20-25</span>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-grid-3x3 display-1 text-muted opacity-25"></i>
                            <p class="text-muted mt-3">No risks to display in heat map</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-pie-chart"></i> Risk Distribution</h5>
                </div>
                <div class="card-body">
                    @if (Model.RiskPosture != null)
                    {
                        <div class="mb-4">
                            <h6 class="text-muted">By Risk Level</h6>
                            <div class="progress mb-2" style="height: 30px;">
                                @{
                                    var total = Model.RiskPosture.TotalRisks > 0 ? Model.RiskPosture.TotalRisks : 1;
                                    var criticalPct = (Model.RiskPosture.CriticalRisks * 100.0 / total);
                                    var highPct = (Model.RiskPosture.HighRisks * 100.0 / total);
                                    var mediumPct = (Model.RiskPosture.MediumRisks * 100.0 / total);
                                    var lowPct = (Model.RiskPosture.LowRisks * 100.0 / total);
                                }
                                @if (Model.RiskPosture.CriticalRisks > 0)
                                {
                                    <div class="progress-bar bg-dark" style="width: @criticalPct%"
                                         data-bs-toggle="tooltip" title="Critical: @Model.RiskPosture.CriticalRisks">
                                        @Model.RiskPosture.CriticalRisks
                                    </div>
                                }
                                @if (Model.RiskPosture.HighRisks > 0)
                                {
                                    <div class="progress-bar bg-danger" style="width: @highPct%"
                                         data-bs-toggle="tooltip" title="High: @Model.RiskPosture.HighRisks">
                                        @Model.RiskPosture.HighRisks
                                    </div>
                                }
                                @if (Model.RiskPosture.MediumRisks > 0)
                                {
                                    <div class="progress-bar bg-warning" style="width: @mediumPct%"
                                         data-bs-toggle="tooltip" title="Medium: @Model.RiskPosture.MediumRisks">
                                        @Model.RiskPosture.MediumRisks
                                    </div>
                                }
                                @if (Model.RiskPosture.LowRisks > 0)
                                {
                                    <div class="progress-bar bg-success" style="width: @lowPct%"
                                         data-bs-toggle="tooltip" title="Low: @Model.RiskPosture.LowRisks">
                                        @Model.RiskPosture.LowRisks
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="list-group list-group-flush">
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <span><i class="bi bi-circle-fill text-dark"></i> Critical</span>
                                <span class="badge bg-dark rounded-pill">@Model.RiskPosture.CriticalRisks</span>
                            </div>
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <span><i class="bi bi-circle-fill text-danger"></i> High</span>
                                <span class="badge bg-danger rounded-pill">@Model.RiskPosture.HighRisks</span>
                            </div>
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <span><i class="bi bi-circle-fill text-warning"></i> Medium</span>
                                <span class="badge bg-warning rounded-pill">@Model.RiskPosture.MediumRisks</span>
                            </div>
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <span><i class="bi bi-circle-fill text-success"></i> Low</span>
                                <span class="badge bg-success rounded-pill">@Model.RiskPosture.LowRisks</span>
                            </div>
                        </div>

                        <div class="mt-4">
                            <h6 class="text-muted">By Status</h6>
                            <div class="list-group list-group-flush">
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <span><i class="bi bi-hourglass-split"></i> Open</span>
                                    <span class="badge bg-primary rounded-pill">@Model.RiskPosture.OpenRisks</span>
                                </div>
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <span><i class="bi bi-check-circle"></i> Mitigated</span>
                                    <span class="badge bg-success rounded-pill">@Model.RiskPosture.MitigatedRisks</span>
                                </div>
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <span><i class="bi bi-hand-thumbs-up"></i> Accepted</span>
                                    <span class="badge bg-info rounded-pill">@Model.RiskPosture.AcceptedRisks</span>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4 text-center">
                            <small class="text-muted">
                                <i class="bi bi-graph-up"></i> Average Control Effectiveness:
                                <strong>@Model.RiskPosture.AverageControlEffectiveness.ToString("P0")</strong>
                            </small>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-pie-chart display-1 text-muted opacity-25"></i>
                            <p class="text-muted mt-3">No risk data available</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Top 10 Risks & Recent Activities -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Top 10 Risks by Score</h5>
                    <a asp-action="Index" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                <div class="card-body p-0">
                    @if (Model.TopRisks.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var risk in Model.TopRisks)
                            {
                                <a asp-action="Details" asp-route-id="@risk.Id" class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between align-items-center">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">@risk.Name</h6>
                                            <small class="text-muted">@risk.Category</small>
                                        </div>
                                        <div class="text-end ms-3">
                                            <span class="badge @GetRiskBadgeClass(risk.InherentRisk) mb-1">
                                                Score: @risk.InherentRisk
                                            </span>
                                            <div>
                                                <small class="text-muted">@risk.Status</small>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox display-1 text-muted opacity-25"></i>
                            <p class="text-muted mt-3">No risks found</p>
                            <a asp-action="Create" class="btn btn-primary">Create First Risk</a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> Recent Activities</h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.RecentRisks.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var risk in Model.RecentRisks)
                            {
                                <a asp-action="Details" asp-route-id="@risk.Id" class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between align-items-start">
                                        <div>
                                            <h6 class="mb-1">@risk.Name</h6>
                                            <small class="text-muted">
                                                <i class="bi bi-calendar3"></i> Created: @risk.CreatedDate.ToShortDateString()
                                            </small>
                                        </div>
                                        <span class="badge @GetRiskBadgeClass(risk.InherentRisk)">@risk.InherentRisk</span>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-clock-history display-1 text-muted opacity-25"></i>
                            <p class="text-muted mt-3">No recent activities</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Upcoming Reviews -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-calendar-check"></i> Upcoming Risk Reviews (Next 30 Days)</h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.UpcomingReviews.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Risk Name</th>
                                        <th>Category</th>
                                        <th>Risk Score</th>
                                        <th>Owner</th>
                                        <th>Review Date</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var risk in Model.UpcomingReviews)
                                    {
                                        var daysUntilReview = (risk.ReviewDate!.Value - DateTime.UtcNow).Days;
                                        var urgencyClass = daysUntilReview <= 7 ? "table-danger" : (daysUntilReview <= 14 ? "table-warning" : "");

                                        <tr class="@urgencyClass">
                                            <td>
                                                <strong>@risk.Name</strong>
                                            </td>
                                            <td>@risk.Category</td>
                                            <td>
                                                <span class="badge @GetRiskBadgeClass(risk.InherentRisk)">@risk.InherentRisk</span>
                                            </td>
                                            <td>@risk.Owner</td>
                                            <td>
                                                <i class="bi bi-calendar3"></i> @risk.ReviewDate.Value.ToShortDateString()
                                                <small class="text-muted d-block">(@daysUntilReview days)</small>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@risk.Status</span>
                                            </td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@risk.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i> View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-calendar-check display-1 text-muted opacity-25"></i>
                            <p class="text-muted mt-3">No upcoming risk reviews in the next 30 days</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Footer Info -->
    <div class="row">
        <div class="col-12">
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i>
                <strong>Dashboard Info:</strong>
                Last updated: @Model.LoadedAt.ToString("g") |
                Total Risks: @(Model.RiskPosture?.TotalRisks ?? 0) |
                Overall Risk Score: @(Model.RiskPosture?.OverallRiskScore.ToString("F1") ?? "N/A")
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetRiskCellClass(int score)
    {
        return RiskScoringConfiguration.GetRiskLevel(score) switch
        {
            "Critical" => "bg-dark text-white",
            "High" => "bg-danger text-white",
            "Medium" => "bg-warning text-dark",
            "Low" => "bg-success text-white",
            _ => "bg-light"
        };
    }

    private string GetRiskBadgeClass(int score)
    {
        return RiskScoringConfiguration.GetRiskLevel(score) switch
        {
            "Critical" => "bg-dark",
            "High" => "bg-danger",
            "Medium" => "bg-warning text-dark",
            "Low" => "bg-success",
            _ => "bg-secondary"
        };
    }
}

@section Scripts {
    <script>
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });

        // Auto-refresh dashboard every 5 minutes
        setTimeout(function() {
            location.reload();
        }, 300000);
    </script>
}

@section Styles {
    <style>
        .risk-matrix td, .risk-matrix th {
            vertical-align: middle;
        }

        .risk-matrix td {
            transition: all 0.2s ease;
        }

        .risk-matrix td:hover {
            opacity: 0.8;
            transform: scale(1.05);
        }
    </style>
}
