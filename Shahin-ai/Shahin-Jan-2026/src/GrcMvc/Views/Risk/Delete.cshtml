@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> L
@model GrcMvc.Models.DTOs.RiskDto
@{
    ViewData["Title"] = L["Risk_Delete"].Value;
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4><i class="bi bi-exclamation-triangle"></i> @L["Risk_Delete"]</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        <i class="bi bi-exclamation-circle"></i> <strong>@L["Warning"]!</strong>
                        @L["Risk_DeleteWarning"]
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">@L["Risk_RiskName"]</dt>
                        <dd class="col-sm-8"><strong>@Model.Name</strong></dd>

                        <dt class="col-sm-4">@L["Category"]:</dt>
                        <dd class="col-sm-8">@Model.Category</dd>

                        <dt class="col-sm-4">@L["Status"]:</dt>
                        <dd class="col-sm-8">
                            <span class="badge @GetStatusBadgeClass(Model.Status)">@Model.Status</span>
                        </dd>

                        <dt class="col-sm-4">@L["RiskScore"]:</dt>
                        <dd class="col-sm-8">
                            <span class="badge @GetRiskScoreBadgeClass(Model.InherentRisk)">@Model.InherentRisk</span>
                        </dd>

                        <dt class="col-sm-4">@L["Risk_Owner"]:</dt>
                        <dd class="col-sm-8">@Model.Owner</dd>

                        <dt class="col-sm-4">@L["Description"]:</dt>
                        <dd class="col-sm-8">@Model.Description</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> @L["Risk_YesDelete"]
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> @L["Cancel"]
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetRiskScoreBadgeClass(int score)
    {
        return score switch
        {
            >= 15 => "bg-danger",
            >= 8 => "bg-warning",
            _ => "bg-success"
        };
    }

    private string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "active" => "bg-danger",
            "mitigated" => "bg-warning",
            "closed" => "bg-success",
            "monitoring" => "bg-info",
            _ => "bg-secondary"
        };
    }
}