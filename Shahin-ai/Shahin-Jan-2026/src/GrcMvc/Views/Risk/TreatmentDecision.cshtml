@using Microsoft.AspNetCore.Mvc.Localization
@using GrcMvc.Configuration
@inject IHtmlLocalizer<SharedResource> L
@model GrcMvc.Models.DTOs.RiskDto
@{
    ViewData["Title"] = "Risk Treatment Decision";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-check2-square"></i> Risk Treatment Decision</h2>
            <p class="text-muted">Choose treatment strategy: Accept, Mitigate, Transfer, or Avoid</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>Risk: @Model.Name</h5>
                    <small>Current Score: @(Model.Probability * Model.Impact) | Level: @Model.Category</small>
                </div>
                <div class="card-body">
                    <form asp-action="ApplyTreatmentDecision" method="post">
                        <input type="hidden" name="riskId" value="@Model.Id" />
                        
                        <div class="mb-4">
                            <label class="form-label fw-bold">Treatment Strategy</label>
                            <div class="row">
                                <div class="col-md-3 mb-3">
                                    <div class="card h-100 treatment-option" data-treatment="Accept">
                                        <div class="card-body text-center">
                                            <i class="bi bi-check-circle display-4 text-info"></i>
                                            <h5>Accept</h5>
                                            <small>Accept the risk and monitor</small>
                                        </div>
                                    </div>
                                    <input type="radio" name="treatment" value="Accept" class="d-none" />
                                </div>
                                <div class="col-md-3 mb-3">
                                    <div class="card h-100 treatment-option" data-treatment="Mitigate">
                                        <div class="card-body text-center">
                                            <i class="bi bi-shield-check display-4 text-success"></i>
                                            <h5>Mitigate</h5>
                                            <small>Reduce risk with controls</small>
                                        </div>
                                    </div>
                                    <input type="radio" name="treatment" value="Mitigate" class="d-none" />
                                </div>
                                <div class="col-md-3 mb-3">
                                    <div class="card h-100 treatment-option" data-treatment="Transfer">
                                        <div class="card-body text-center">
                                            <i class="bi bi-arrow-left-right display-4 text-warning"></i>
                                            <h5>Transfer</h5>
                                            <small>Transfer to third party</small>
                                        </div>
                                    </div>
                                    <input type="radio" name="treatment" value="Transfer" class="d-none" />
                                </div>
                                <div class="col-md-3 mb-3">
                                    <div class="card h-100 treatment-option" data-treatment="Avoid">
                                        <div class="card-body text-center">
                                            <i class="bi bi-x-circle display-4 text-danger"></i>
                                            <h5>Avoid</h5>
                                            <small>Eliminate the risk source</small>
                                        </div>
                                    </div>
                                    <input type="radio" name="treatment" value="Avoid" class="d-none" />
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Decision Rationale</label>
                            <textarea name="rationale" class="form-control" rows="4" required placeholder="Explain why this treatment strategy was chosen..."></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Approver</label>
                            <input type="text" name="approver" class="form-control" required placeholder="Enter approver name" />
                        </div>

                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Apply Treatment Decision
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const options = document.querySelectorAll('.treatment-option');
        const radios = document.querySelectorAll('input[type="radio"][name="treatment"]');
        
        options.forEach((option, index) => {
            option.addEventListener('click', function() {
                radios[index].checked = true;
                options.forEach(o => o.classList.remove('border-primary', 'border-3'));
                option.classList.add('border-primary', 'border-3');
            });
        });
    });
</script>