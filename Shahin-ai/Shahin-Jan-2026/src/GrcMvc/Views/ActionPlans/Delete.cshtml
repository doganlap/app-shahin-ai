@model GrcMvc.Models.DTOs.ActionPlanDto

@{
    ViewData["Title"] = "Delete Action Plan";
}

<div class="container-fluid">
    <h2 class="text-danger"><i class="bi bi-exclamation-triangle"></i> Confirm Delete</h2>

    <div class="alert alert-danger mt-4">
        <h5>Are you sure you want to delete this action plan?</h5>
        <p>This action cannot be undone.</p>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5>Action Plan Details</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Plan Number:</dt>
                <dd class="col-sm-9">@Model.PlanNumber</dd>

                <dt class="col-sm-3">Title:</dt>
                <dd class="col-sm-9">@Model.Title</dd>

                <dt class="col-sm-3">Description:</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Category:</dt>
                <dd class="col-sm-9">@Model.Category</dd>

                <dt class="col-sm-3">Priority:</dt>
                <dd class="col-sm-9">@Model.Priority</dd>

                <dt class="col-sm-3">Status:</dt>
                <dd class="col-sm-9">@Model.Status</dd>

                <dt class="col-sm-3">Assigned To:</dt>
                <dd class="col-sm-9">@Model.AssignedTo</dd>
            </dl>
        </div>
    </div>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post" class="mt-4">
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Yes, Delete This Action Plan
        </button>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
            <i class="bi bi-x-lg"></i> Cancel
        </a>
    </form>
</div>
