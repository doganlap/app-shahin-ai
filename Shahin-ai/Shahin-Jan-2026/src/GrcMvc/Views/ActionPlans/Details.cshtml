@model GrcMvc.Models.DTOs.ActionPlanDto

@{
    ViewData["Title"] = "Action Plan Details";
    var priorityBadge = Model.Priority switch {
        "Critical" => "badge bg-danger",
        "High" => "badge bg-warning text-dark",
        "Medium" => "badge bg-info",
        _ => "badge bg-secondary"
    };
    var statusBadge = Model.Status switch {
        "Completed" => "badge bg-success",
        "InProgress" => "badge bg-primary",
        "Cancelled" => "badge bg-dark",
        _ => "badge bg-secondary"
    };
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2><i class="bi bi-clipboard-check"></i> @Model.Title</h2>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-3">
                <div class="card-header">
                    <h5>Action Plan Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Plan Number:</strong> @Model.PlanNumber
                        </div>
                        <div class="col-md-6">
                            <strong>Category:</strong> @Model.Category
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Priority:</strong> <span class="@priorityBadge">@Model.Priority</span>
                        </div>
                        <div class="col-md-6">
                            <strong>Status:</strong> <span class="@statusBadge">@Model.Status</span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-12">
                            <strong>Description:</strong>
                            <p class="mt-2">@Model.Description</p>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="row mb-3">
                            <div class="col-12">
                                <strong>Notes:</strong>
                                <p class="mt-2">@Model.Notes</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0">Timeline</h6>
                </div>
                <div class="card-body">
                    <p><strong>Start Date:</strong> @Model.StartDate?.ToString("MMM dd, yyyy")</p>
                    <p><strong>Due Date:</strong> @Model.DueDate?.ToString("MMM dd, yyyy")</p>
                    @if (Model.CompletedDate.HasValue)
                    {
                        <p><strong>Completed:</strong> @Model.CompletedDate.Value.ToString("MMM dd, yyyy")</p>
                    }
                    <p><strong>Assigned To:</strong> @Model.AssignedTo</p>
                </div>
            </div>
        </div>
    </div>
</div>
