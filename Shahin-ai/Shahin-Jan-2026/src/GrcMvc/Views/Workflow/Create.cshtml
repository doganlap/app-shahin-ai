@model GrcMvc.Models.DTOs.CreateWorkflowDto
@{
    ViewData["Title"] = "Create Workflow";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="bi bi-plus-circle"></i> Create New Workflow</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label fw-bold">Workflow Name</label>
                            <input asp-for="Name" class="form-control" placeholder="e.g. Quarterly Access Review" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label asp-for="WorkflowNumber" class="control-label fw-bold">Workflow Number</label>
                            <input asp-for="WorkflowNumber" class="form-control" placeholder="e.g. WF-ACC-01" />
                            <span asp-validation-for="WorkflowNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label asp-for="Status" class="control-label fw-bold">Status</label>
                            <select asp-for="Status" class="form-select">
                                <option value="Draft">Draft</option>
                                <option value="Active">Active</option>
                                <option value="Suspended">Suspended</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="Category" class="control-label fw-bold">Category</label>
                            <select asp-for="Category" class="form-select">
                                <option value="">Select Category...</option>
                                <option value="Access Control">Access Control</option>
                                <option value="Incident Management">Incident Management</option>
                                <option value="Change Management">Change Management</option>
                                <option value="Vendor Management">Vendor Management</option>
                                <option value="Compliance">Compliance</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="Type" class="control-label fw-bold">Type</label>
                            <select asp-for="Type" class="form-select">
                                <option value="">Select Type...</option>
                                <option value="Sequential">Sequential</option>
                                <option value="Parallel">Parallel</option>
                                <option value="State Machine">State Machine</option>
                            </select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="Priority" class="control-label fw-bold">Priority</label>
                            <select asp-for="Priority" class="form-select">
                                <option value="Low">Low</option>
                                <option value="Medium">Medium</option>
                                <option value="High">High</option>
                                <option value="Critical">Critical</option>
                            </select>
                            <span asp-validation-for="Priority" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label fw-bold">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Steps" class="control-label fw-bold">Workflow Steps (JSON/Text)</label>
                            <textarea asp-for="Steps" class="form-control" rows="5" placeholder="Define steps..."></textarea>
                            <span asp-validation-for="Steps" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Conditions" class="control-label fw-bold">Conditions / Logic</label>
                            <textarea asp-for="Conditions" class="form-control" rows="5" placeholder="Define conditions..."></textarea>
                            <span asp-validation-for="Conditions" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="AssignedTo" class="control-label fw-bold">Assigned To</label>
                            <input asp-for="AssignedTo" class="form-control" />
                            <span asp-validation-for="AssignedTo" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="InitiatedBy" class="control-label fw-bold">Initiated By</label>
                            <input asp-for="InitiatedBy" class="form-control" />
                            <span asp-validation-for="InitiatedBy" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="DueDate" class="control-label fw-bold">Due Date</label>
                            <input asp-for="DueDate" class="form-control" type="date" />
                            <span asp-validation-for="DueDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Notifications" class="control-label fw-bold">Notification Settings</label>
                    <textarea asp-for="Notifications" class="form-control" rows="2" placeholder="Email addresses or logic for notifications..."></textarea>
                    <span asp-validation-for="Notifications" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary" id="submitBtn">
                        <i class="bi bi-check-circle"></i> Create Workflow
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            const submitBtn = document.getElementById('submitBtn');

            form.addEventListener('submit', async function(e) {
                e.preventDefault();

                // Validate form
                if (!form.checkValidity()) {
                    form.classList.add('was-validated');
                    return;
                }

                // Collect form data
                const formData = {
                    name: document.querySelector('[name="Name"]').value,
                    workflowNumber: document.querySelector('[name="WorkflowNumber"]').value,
                    status: document.querySelector('[name="Status"]').value,
                    category: document.querySelector('[name="Category"]').value,
                    type: document.querySelector('[name="Type"]').value,
                    priority: document.querySelector('[name="Priority"]').value,
                    description: document.querySelector('[name="Description"]').value,
                    steps: document.querySelector('[name="Steps"]').value,
                    conditions: document.querySelector('[name="Conditions"]').value,
                    assignedTo: document.querySelector('[name="AssignedTo"]').value,
                    initiatedBy: document.querySelector('[name="InitiatedBy"]').value,
                    dueDate: document.querySelector('[name="DueDate"]').value,
                    notifications: document.querySelector('[name="Notifications"]').value
                };

                try {
                    submitBtn.disabled = true;
                    submitBtn.innerHTML = '<i class="bi bi-spinner"></i> Creating...';

                    const response = await fetch('/api/workflow/create', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(formData)
                    });

                    if (response.ok) {
                        const result = await response.json();
                        alert('Workflow created successfully!');
                        window.location.href = '/Workflow/Details?workflowId=' + result.id;
                    } else {
                        const error = await response.text();
                        alert('Error creating workflow: ' + error);
                        submitBtn.disabled = false;
                        submitBtn.innerHTML = '<i class="bi bi-check-circle"></i> Create Workflow';
                    }
                } catch (error) {
                    alert('Error: ' + error.message);
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = '<i class="bi bi-check-circle"></i> Create Workflow';
                }
            });
        });
    </script>
}
