@model IEnumerable<GrcMvc.Models.DTOs.WorkflowDto>
@{
    ViewData["Title"] = "Workflows";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="bi bi-diagram-3"></i> Workflows</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> New Workflow
            </a>
            <a asp-action="Overdue" class="btn btn-warning">
                <i class="bi bi-exclamation-circle"></i> Overdue
            </a>
            <a asp-action="Statistics" class="btn btn-secondary">
                <i class="bi bi-bar-chart"></i> Statistics
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="workflowsTable">
                    <thead>
                        <tr>
                            <th>Number</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Status</th>
                            <th>Priority</th>
                            <th>Assigned To</th>
                            <th>Due Date</th>
                            <th>Executions</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id">@item.WorkflowNumber</a>
                                </td>
                                <td>@item.Name</td>
                                <td>@item.Category</td>
                                <td>
                                    <span class="badge @GetStatusBadgeClass(item.Status)">
                                        @item.Status
                                    </span>
                                </td>
                                <td>
                                    <span class="badge @GetPriorityBadgeClass(item.Priority)">
                                        @item.Priority
                                    </span>
                                </td>
                                <td>@item.AssignedTo</td>
                                <td>@(item.DueDate?.ToShortDateString() ?? "-")</td>
                                <td>
                                    @if (item.ExecutionsCount > 0)
                                    {
                                        <a asp-action="Executions" asp-route-id="@item.Id" class="badge bg-info text-decoration-none">
                                            @item.ExecutionsCount Runs
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">0 Runs</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <form asp-action="Execute" asp-route-id="@item.Id" method="post" style="display:inline;">
                                            <button type="submit" class="btn btn-outline-success" title="Execute Now" onclick="return confirm('Start a new execution of this workflow?');">
                                                <i class="bi bi-play-fill"></i>
                                            </button>
                                        </form>
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-outline-primary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-outline-info" title="Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "active" => "bg-success",
            "draft" => "bg-secondary",
            "suspended" => "bg-warning",
            "completed" => "bg-info",
            _ => "bg-secondary"
        };
    }

    private string GetPriorityBadgeClass(string priority)
    {
        return priority?.ToLower() switch
        {
            "high" or "critical" => "bg-danger",
            "medium" => "bg-warning",
            "low" => "bg-info",
            _ => "bg-secondary"
        };
    }
}

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#workflowsTable').DataTable({
                "order": [[6, "asc"]], // Sort by Due Date
                "pageLength": 25,
                "responsive": true
            });
        });
    </script>
}
