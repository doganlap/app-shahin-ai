@model IEnumerable<GrcMvc.Models.DTOs.WorkflowDto>
@{
    ViewData["Title"] = "Overdue Workflows";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="bi bi-exclamation-circle text-danger"></i> Overdue Workflows</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> All Workflows
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-check-circle display-1 text-success"></i>
                    <h4 class="mt-3 text-success">No overdue workflows.</h4>
                    <p>Everything is on track!</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover" id="overdueTable">
                        <thead>
                            <tr>
                                <th>Due Date</th>
                                <th>Workflow</th>
                                <th>Assigned To</th>
                                <th>Status</th>
                                <th>Overdue By</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                var daysOverdue = (DateTime.UtcNow - item.DueDate.GetValueOrDefault()).Days;
                                <tr>
                                    <td class="text-danger fw-bold">@item.DueDate?.ToShortDateString()</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id">@item.Name</a>
                                        <br />
                                        <small class="text-muted">@item.WorkflowNumber</small>
                                    </td>
                                    <td>@item.AssignedTo</td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(item.Status)">
                                            @item.Status
                                        </span>
                                    </td>
                                    <td class="text-danger fw-bold">
                                        @daysOverdue days
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id"
                                               class="btn btn-outline-primary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.Id"
                                               class="btn btn-outline-info" title="Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    private string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "active" => "bg-success",
            "draft" => "bg-secondary",
            "suspended" => "bg-warning",
            "completed" => "bg-info",
            _ => "bg-secondary"
        };
    }
}
