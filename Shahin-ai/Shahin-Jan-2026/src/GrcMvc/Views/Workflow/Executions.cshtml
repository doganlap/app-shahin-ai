@model IEnumerable<GrcMvc.Models.DTOs.WorkflowExecutionDto>
@{
    ViewData["Title"] = "Workflow Executions";
    Layout = "_Layout";
    Guid? workflowId = ViewBag.WorkflowId;
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="bi bi-clock-history"></i> Execution History</h2>
            @if (workflowId.HasValue)
            {
                <h5 class="text-muted">For Workflow ID: @workflowId</h5>
            }
        </div>
        <div class="col text-end">
            @if (workflowId.HasValue)
            {
                <form asp-action="Execute" asp-route-id="@workflowId" method="post" style="display:inline;" class="me-2">
                    <button type="submit" class="btn btn-success" onclick="return confirm('Start a new execution?');">
                        <i class="bi bi-play-fill"></i> Execute Again
                    </button>
                </form>
                <a asp-action="Details" asp-route-id="@workflowId" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Workflow
                </a>
            }
            else
            {
                 <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-list"></i> All Workflows
                </a>
            }
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-play-circle display-1 text-muted"></i>
                    <h4 class="mt-3 text-muted">No execution history found.</h4>
                    <p>This workflow has not been run yet.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover" id="executionsTable">
                        <thead>
                            <tr>
                                <th>Execution #</th>
                                <th>Start Time</th>
                                <th>End Time</th>
                                <th>Duration</th>
                                <th>Status</th>
                                <th>Initiated By</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ExecutionNumber</td>
                                    <td>@item.StartTime.ToString("g")</td>
                                    <td>@(item.EndTime?.ToString("g") ?? "-")</td>
                                    <td>
                                        @if (item.Duration.HasValue)
                                        {
                                            <span>@item.Duration.Value.ToString("F1")s</span>
                                        }
                                        else
                                        {
                                            <span>-</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(item.Status)">
                                            @item.Status
                                        </span>
                                    </td>
                                    <td>@item.InitiatedBy</td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-info" disabled title="Logs coming soon">
                                            <i class="bi bi-file-text"></i> Logs
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    private string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "success" or "completed" => "bg-success",
            "running" or "in progress" => "bg-primary",
            "failed" or "error" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#executionsTable').DataTable({
                "order": [[1, "desc"]], // Sort by Start Time desc
                "pageLength": 25,
                "responsive": true
            });
        });
    </script>
}
