@model GrcMvc.Models.DTOs.WorkflowDto
@{
    ViewData["Title"] = "Workflow Details";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="bi bi-diagram-3"></i> Workflow Details</h2>
        </div>
        <div class="col text-end">
            <form asp-action="Execute" asp-route-id="@Model.Id" method="post" style="display:inline;">
                <button type="submit" class="btn btn-success" onclick="return confirm('Start a new execution of this workflow?');">
                    <i class="bi bi-play-fill"></i> Execute
                </button>
            </form>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">General Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="fw-bold">Name</label>
                            <p>@Model.Name</p>
                        </div>
                        <div class="col-md-6">
                            <label class="fw-bold">Workflow Number</label>
                            <p>@Model.WorkflowNumber</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label class="fw-bold">Category</label>
                            <p>@Model.Category</p>
                        </div>
                        <div class="col-md-4">
                            <label class="fw-bold">Type</label>
                            <p>@Model.Type</p>
                        </div>
                        <div class="col-md-4">
                            <label class="fw-bold">Status</label>
                            <p>
                                <span class="badge @GetStatusBadgeClass(Model.Status)">
                                    @Model.Status
                                </span>
                            </p>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">Description</label>
                        <p>@Model.Description</p>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Logic & Steps</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="fw-bold">Steps</label>
                        <div class="bg-light p-3 rounded font-monospace" style="white-space: pre-wrap;">@Model.Steps</div>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">Conditions</label>
                        <div class="bg-light p-3 rounded font-monospace" style="white-space: pre-wrap;">@Model.Conditions</div>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">Notifications</label>
                        <p>@Model.Notifications</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Assignment & Timing</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="fw-bold">Priority</label>
                        <p>
                             <span class="badge @GetPriorityBadgeClass(Model.Priority)">
                                @Model.Priority
                            </span>
                        </p>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">Assigned To</label>
                        <p>@Model.AssignedTo</p>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">Initiated By</label>
                        <p>@Model.InitiatedBy</p>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">Due Date</label>
                        <p>@(Model.DueDate?.ToShortDateString() ?? "-")</p>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Execution History</h5>
                        <span class="badge bg-secondary">@Model.ExecutionsCount</span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Executions" asp-route-id="@Model.Id" class="btn btn-outline-info">
                            <i class="bi bi-clock-history"></i> View Execution History
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "active" => "bg-success",
            "draft" => "bg-secondary",
            "suspended" => "bg-warning",
            "completed" => "bg-info",
            _ => "bg-secondary"
        };
    }

    private string GetPriorityBadgeClass(string priority)
    {
        return priority?.ToLower() switch
        {
            "high" or "critical" => "bg-danger",
            "medium" => "bg-warning",
            "low" => "bg-info",
            _ => "bg-secondary"
        };
    }
}
