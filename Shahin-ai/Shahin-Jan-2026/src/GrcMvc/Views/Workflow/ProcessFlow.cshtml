@{
    ViewData["Title"] = "Workflow Process";
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1 class="h2 mb-2">
                                <i class="fas fa-project-diagram text-primary me-2"></i>Workflow Process
                            </h1>
                            <p class="text-muted mb-0">Visualize and monitor workflow execution</p>
                        </div>
                        <select class="form-select w-25">
                            <option>All Workflows</option>
                            <option>WF-001: NCA Assessment</option>
                            <option>WF-002: SAMA Assessment</option>
                            <option>WF-005: Policy Review</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Workflow Instance Card -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light border-bottom p-4">
                    <div class="row align-items-center">
                        <div class="col">
                            <h5 class="mb-1">WF-2025-0042: NCA ECC Assessment</h5>
                            <small class="text-muted">Started by: John Smith • Started: 2025-01-04</small>
                        </div>
                        <div class="col-auto">
                            <span class="badge bg-primary">In Progress</span>
                            <span class="badge bg-info ms-2">45% Complete</span>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4">
                    <!-- Progress Bar -->
                    <div class="mb-4">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="small fw-bold">Overall Progress</span>
                            <span class="small">45%</span>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar" style="width: 45%"></div>
                        </div>
                    </div>

                    <!-- Process Steps -->
                    <div class="row">
                        <div class="col-12">
                            <h6 class="mb-4">Process Flow</h6>
                        </div>
                    </div>

                    <div class="timeline">
                        <!-- Step 1: Completed -->
                        <div class="timeline-item mb-4">
                            <div class="d-flex">
                                <div class="timeline-marker completed me-3">
                                    <i class="fas fa-check text-white"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">Define Scope</h6>
                                    <p class="text-muted small mb-2">Completed • Jan 4, 2025 • 2 hours</p>
                                    <small class="text-success"><i class="fas fa-check me-1"></i> All documentation
                                        submitted</small>
                                </div>
                            </div>
                        </div>

                        <!-- Step 2: In Progress -->
                        <div class="timeline-item mb-4">
                            <div class="d-flex">
                                <div class="timeline-marker active me-3">
                                    <div class="spinner-border spinner-border-sm text-primary"></div>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">Asset Identification</h6>
                                    <p class="text-muted small mb-2">In Progress • Started: Jan 4, 2025</p>
                                    <div class="alert alert-info p-2 mt-2">
                                        <small><strong>Status:</strong> 42 assets identified, 28 remaining</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Step 3: Pending -->
                        <div class="timeline-item mb-4">
                            <div class="d-flex">
                                <div class="timeline-marker pending me-3">
                                    <i class="fas fa-circle-notch"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">Control Assessment</h6>
                                    <p class="text-muted small mb-2">Pending • Scheduled: Jan 6, 2025</p>
                                </div>
                            </div>
                        </div>

                        <!-- Step 4: Pending -->
                        <div class="timeline-item mb-4">
                            <div class="d-flex">
                                <div class="timeline-marker pending me-3">
                                    <i class="fas fa-circle-notch"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">Gap Analysis</h6>
                                    <p class="text-muted small mb-2">Pending • Scheduled: Jan 8, 2025</p>
                                </div>
                            </div>
                        </div>

                        <!-- Step 5: Pending (Approval) -->
                        <div class="timeline-item mb-4">
                            <div class="d-flex">
                                <div class="timeline-marker pending me-3">
                                    <i class="fas fa-circle-notch"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">
                                        <i class="fas fa-check-circle me-2"></i>Review & Approval
                                    </h6>
                                    <p class="text-muted small mb-2">Pending • Will require 2 approvals</p>
                                    <small class="text-warning">⚠️ Awaiting completion of previous steps</small>
                                </div>
                            </div>
                        </div>

                        <!-- Step 6: Pending (Report) -->
                        <div class="timeline-item">
                            <div class="d-flex">
                                <div class="timeline-marker pending me-3">
                                    <i class="fas fa-circle-notch"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">Report Generation</h6>
                                    <p class="text-muted small mb-2">Pending • Scheduled after approval</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Approval Chain Info -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light border-bottom p-3">
                    <h6 class="mb-0">Approval Chain</h6>
                </div>
                <div class="card-body p-3">
                    <div class="d-flex mb-3">
                        <div class="badge bg-success me-3">Level 1</div>
                        <div>
                            <strong>Department Head</strong>
                            <p class="small text-muted mb-0">SLA: 24 hours</p>
                        </div>
                    </div>
                    <div class="d-flex mb-3">
                        <div class="badge bg-primary me-3">Level 2</div>
                        <div>
                            <strong>Manager</strong>
                            <p class="small text-muted mb-0">SLA: 24 hours</p>
                        </div>
                    </div>
                    <div class="d-flex">
                        <div class="badge bg-secondary me-3">Level 3</div>
                        <div>
                            <strong>Director</strong>
                            <p class="small text-muted mb-0">SLA: 24 hours</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light border-bottom p-3">
                    <h6 class="mb-0">Workflow Statistics</h6>
                </div>
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between mb-3">
                        <span>Total Steps:</span>
                        <strong>6</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span>Completed:</span>
                        <strong class="text-success">1</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span>In Progress:</span>
                        <strong class="text-primary">1</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span>Pending:</span>
                        <strong class="text-warning">4</strong>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between">
                        <span>Estimated Completion:</span>
                        <strong>Jan 15, 2025</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .timeline {
        position: relative;
    }

    .timeline-item {
        position: relative;
        padding-left: 40px;
    }

    .timeline-marker {
        position: absolute;
        left: 0;
        top: 0;
        width: 24px;
        height: 24px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 12px;
    }

    .timeline-marker.completed {
        background-color: #28a745;
        color: white;
    }

    .timeline-marker.active {
        background-color: #007bff;
        color: white;
    }

    .timeline-marker.pending {
        background-color: #e9ecef;
        color: #6c757d;
    }
</style>

@section Scripts {
    <script>
        $(function () {
            // Update progress bar based on completed steps
            updateProgress();
        });

        function updateProgress() {
            // Calculate and update progress percentage
        }
    </script>
}