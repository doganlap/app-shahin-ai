@{
    ViewData["Title"] = "الإشعارات";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="fas fa-bell me-2 text-primary"></i>
                        مركز الإشعارات
                    </h2>
                    <p class="text-muted mb-0">عرض وإدارة جميع الإشعارات والتنبيهات</p>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-outline-primary">
                        <i class="fas fa-check-double me-1"></i> تعليم الكل كمقروء
                    </button>
                    <button class="btn btn-outline-secondary">
                        <i class="fas fa-cog me-1"></i> إعدادات
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Sidebar Filters -->
        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <a href="#" class="list-group-item list-group-item-action active d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-inbox me-2"></i> جميع الإشعارات</span>
                            <span class="badge bg-primary rounded-pill">24</span>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-circle text-danger me-2" style="font-size: 8px;"></i> غير مقروءة</span>
                            <span class="badge bg-danger rounded-pill">8</span>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-tasks me-2 text-warning"></i> المهام</span>
                            <span class="badge bg-warning text-dark rounded-pill">5</span>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-check-circle me-2 text-success"></i> الموافقات</span>
                            <span class="badge bg-success rounded-pill">3</span>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-exclamation-triangle me-2 text-danger"></i> تنبيهات</span>
                            <span class="badge bg-danger rounded-pill">4</span>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-info-circle me-2 text-info"></i> تحديثات النظام</span>
                            <span class="badge bg-info rounded-pill">4</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Notifications List -->
        <div class="col-md-9">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">الإشعارات الأخيرة</h5>
                        <div class="input-group" style="width: 250px;">
                            <input type="text" class="form-control form-control-sm" placeholder="بحث في الإشعارات...">
                            <button class="btn btn-outline-secondary btn-sm"><i class="fas fa-search"></i></button>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <!-- Unread Notification -->
                    <div class="border-bottom p-3 bg-primary bg-opacity-10">
                        <div class="d-flex">
                            <div class="me-3">
                                <div class="bg-danger rounded-circle p-2 text-white">
                                    <i class="fas fa-exclamation-triangle"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h6 class="mb-1">تنبيه: مهمة متأخرة</h6>
                                        <p class="text-muted mb-1 small">المهمة "تقييم مخاطر الموردين" تجاوزت تاريخ الاستحقاق بـ 5 أيام</p>
                                        <span class="badge bg-danger">عاجل</span>
                                    </div>
                                    <small class="text-muted">منذ 5 دقائق</small>
                                </div>
                            </div>
                            <div class="ms-2">
                                <button class="btn btn-sm btn-link text-muted"><i class="fas fa-ellipsis-v"></i></button>
                            </div>
                        </div>
                    </div>

                    <!-- Unread Notification -->
                    <div class="border-bottom p-3 bg-primary bg-opacity-10">
                        <div class="d-flex">
                            <div class="me-3">
                                <div class="bg-warning rounded-circle p-2 text-dark">
                                    <i class="fas fa-clipboard-check"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h6 class="mb-1">طلب موافقة جديد</h6>
                                        <p class="text-muted mb-1 small">سارة العلي طلبت موافقتك على سياسة حماية البيانات الشخصية</p>
                                        <div class="mt-2">
                                            <button class="btn btn-success btn-sm me-1"><i class="fas fa-check me-1"></i>موافقة</button>
                                            <button class="btn btn-outline-danger btn-sm"><i class="fas fa-times me-1"></i>رفض</button>
                                        </div>
                                    </div>
                                    <small class="text-muted">منذ 30 دقيقة</small>
                                </div>
                            </div>
                            <div class="ms-2">
                                <button class="btn btn-sm btn-link text-muted"><i class="fas fa-ellipsis-v"></i></button>
                            </div>
                        </div>
                    </div>

                    <!-- Read Notification -->
                    <div class="border-bottom p-3">
                        <div class="d-flex">
                            <div class="me-3">
                                <div class="bg-success rounded-circle p-2 text-white">
                                    <i class="fas fa-check"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h6 class="mb-1">تم إكمال التقييم</h6>
                                        <p class="text-muted mb-1 small">تم إكمال تقييم NCA ECC بنجاح - نسبة الامتثال 87%</p>
                                        <span class="badge bg-success">مكتمل</span>
                                    </div>
                                    <small class="text-muted">منذ ساعة</small>
                                </div>
                            </div>
                            <div class="ms-2">
                                <button class="btn btn-sm btn-link text-muted"><i class="fas fa-ellipsis-v"></i></button>
                            </div>
                        </div>
                    </div>

                    <!-- Read Notification -->
                    <div class="border-bottom p-3">
                        <div class="d-flex">
                            <div class="me-3">
                                <div class="bg-primary rounded-circle p-2 text-white">
                                    <i class="fas fa-user-plus"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h6 class="mb-1">مهمة جديدة مُسندة إليك</h6>
                                        <p class="text-muted mb-1 small">تم إسناد مهمة "مراجعة ضوابط إدارة الهوية" إليك من قبل أحمد محمد</p>
                                        <button class="btn btn-outline-primary btn-sm mt-1"><i class="fas fa-eye me-1"></i>عرض المهمة</button>
                                    </div>
                                    <small class="text-muted">منذ 2 ساعة</small>
                                </div>
                            </div>
                            <div class="ms-2">
                                <button class="btn btn-sm btn-link text-muted"><i class="fas fa-ellipsis-v"></i></button>
                            </div>
                        </div>
                    </div>

                    <!-- Read Notification -->
                    <div class="border-bottom p-3">
                        <div class="d-flex">
                            <div class="me-3">
                                <div class="bg-info rounded-circle p-2 text-white">
                                    <i class="fas fa-sync-alt"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h6 class="mb-1">تحديث النظام</h6>
                                        <p class="text-muted mb-1 small">تم تحديث إطار NCA ECC إلى الإصدار 2.0 - يرجى مراجعة التغييرات</p>
                                    </div>
                                    <small class="text-muted">أمس</small>
                                </div>
                            </div>
                            <div class="ms-2">
                                <button class="btn btn-sm btn-link text-muted"><i class="fas fa-ellipsis-v"></i></button>
                            </div>
                        </div>
                    </div>

                    <!-- Read Notification -->
                    <div class="border-bottom p-3">
                        <div class="d-flex">
                            <div class="me-3">
                                <div class="bg-secondary rounded-circle p-2 text-white">
                                    <i class="fas fa-calendar-check"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h6 class="mb-1">تذكير: موعد التدقيق</h6>
                                        <p class="text-muted mb-1 small">تذكير: موعد التدقيق الداخلي بعد 7 أيام - يرجى التأكد من جاهزية الأدلة</p>
                                    </div>
                                    <small class="text-muted">منذ 3 أيام</small>
                                </div>
                            </div>
                            <div class="ms-2">
                                <button class="btn btn-sm btn-link text-muted"><i class="fas fa-ellipsis-v"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white border-0 text-center">
                    <button class="btn btn-link">تحميل المزيد</button>
                </div>
            </div>
        </div>
    </div>
</div>
