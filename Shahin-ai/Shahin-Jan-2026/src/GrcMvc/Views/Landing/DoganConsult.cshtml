@{
    ViewData["Title"] = "Dogan Consult - ICT & Telecommunications Engineering Consulting";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Dogan Consult - Independent ICT and Telecommunications Engineering Consultancy providing strategic advisory, engineering design, and technical assurance services." />
    <title>@ViewData["Title"]</title>
    
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Using centralized theme from landing.css instead of inline :root override -->
    <link rel="stylesheet" href="~/css/landing.css" asp-append-version="true" />
    <style>
            --text: #334155;
            --text-muted: #64748b;
            --border: #e2e8f0;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            background: #ffffff;
            color: var(--text);
            line-height: 1.7;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 2rem;
        }

        /* Header */
        .header {
            background: var(--primary);
            padding: 1rem 0;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 100;
        }

        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            color: white;
            font-size: 1.5rem;
            font-weight: 700;
            text-decoration: none;
            letter-spacing: -0.5px;
        }

        .logo span {
            color: var(--accent);
        }

        .nav {
            display: flex;
            gap: 2rem;
        }

        .nav a {
            color: rgba(255,255,255,0.9);
            text-decoration: none;
            font-size: 0.95rem;
            font-weight: 500;
            transition: color 0.3s;
        }

        .nav a:hover {
            color: var(--accent);
        }

        /* Hero */
        .hero {
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
            padding: 10rem 0 6rem;
            color: white;
            position: relative;
            overflow: hidden;
        }

        .hero::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 50%;
            height: 100%;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="50" cy="50" r="40" fill="none" stroke="rgba(255,255,255,0.05)" stroke-width="0.5"/><circle cx="50" cy="50" r="30" fill="none" stroke="rgba(255,255,255,0.05)" stroke-width="0.5"/><circle cx="50" cy="50" r="20" fill="none" stroke="rgba(255,255,255,0.05)" stroke-width="0.5"/></svg>') center/cover;
            opacity: 0.3;
        }

        .hero-content {
            position: relative;
            z-index: 1;
            max-width: 700px;
        }

        .hero-tagline {
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 2px;
            color: var(--accent);
            margin-bottom: 1rem;
            font-weight: 600;
        }

        .hero h1 {
            font-size: 3rem;
            font-weight: 700;
            line-height: 1.2;
            margin-bottom: 1.5rem;
        }

        .hero p {
            font-size: 1.2rem;
            line-height: 1.8;
            opacity: 0.9;
        }

        /* Section Styles */
        .section {
            padding: 5rem 0;
        }

        .section-alt {
            background: #f8fafc;
        }

        .section-title {
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary);
            margin-bottom: 1rem;
        }

        .section-subtitle {
            font-size: 1.1rem;
            color: var(--text-muted);
            margin-bottom: 3rem;
            max-width: 600px;
        }

        /* Expertise Grid */
        .expertise-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 2rem;
        }

        .expertise-card {
            background: white;
            border: 1px solid var(--border);
            border-radius: 12px;
            padding: 2rem;
            transition: all 0.3s ease;
        }

        .expertise-card:hover {
            border-color: var(--primary);
            box-shadow: 0 10px 40px rgba(30, 58, 95, 0.1);
            transform: translateY(-5px);
        }

        .expertise-card i {
            font-size: 2.5rem;
            color: var(--primary);
            margin-bottom: 1.5rem;
        }

        .expertise-card h3 {
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 1rem;
        }

        .expertise-card p {
            font-size: 0.95rem;
            color: var(--text-muted);
            line-height: 1.7;
        }

        .expertise-card a {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            color: var(--primary);
            text-decoration: none;
            font-weight: 500;
            margin-top: 1rem;
            font-size: 0.9rem;
        }

        .expertise-card a:hover {
            color: var(--accent);
        }

        /* Approach */
        .approach-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 0;
            background: white;
            border: 1px solid var(--border);
            border-radius: 12px;
            overflow: hidden;
        }

        .approach-step {
            padding: 2rem;
            text-align: center;
            border-right: 1px solid var(--border);
            position: relative;
        }

        .approach-step:last-child {
            border-right: none;
        }

        .approach-step::after {
            content: '→';
            position: absolute;
            right: -0.75rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--accent);
            font-size: 1.5rem;
            z-index: 2;
            background: white;
        }

        .approach-step:last-child::after {
            display: none;
        }

        .approach-step .number {
            width: 40px;
            height: 40px;
            background: var(--primary);
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            margin: 0 auto 1rem;
        }

        .approach-step h4 {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--dark);
        }

        /* Sectors */
        .sectors-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 2rem;
        }

        .sector-item {
            display: flex;
            align-items: flex-start;
            gap: 1rem;
            padding: 1.5rem;
            background: white;
            border: 1px solid var(--border);
            border-radius: 10px;
        }

        .sector-item i {
            font-size: 1.5rem;
            color: var(--primary);
        }

        .sector-item h4 {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 0.25rem;
        }

        .sector-item p {
            font-size: 0.9rem;
            color: var(--text-muted);
            margin: 0;
        }

        /* Why Us */
        .why-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1.5rem;
        }

        .why-item {
            display: flex;
            align-items: flex-start;
            gap: 1rem;
        }

        .why-item i {
            font-size: 1.25rem;
            color: var(--accent);
            margin-top: 0.25rem;
        }

        .why-item p {
            font-size: 1rem;
            color: var(--text);
            margin: 0;
        }

        /* CTA */
        .cta-section {
            background: var(--primary);
            padding: 4rem 0;
            text-align: center;
            color: white;
        }

        .cta-section h2 {
            font-size: 2rem;
            margin-bottom: 1rem;
        }

        .cta-section p {
            font-size: 1.1rem;
            opacity: 0.9;
            margin-bottom: 2rem;
        }

        .cta-btn {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 1rem 2rem;
            background: var(--accent);
            color: var(--dark);
            font-size: 1rem;
            font-weight: 600;
            text-decoration: none;
            border-radius: 8px;
            transition: all 0.3s;
        }

        .cta-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 20px rgba(201, 162, 39, 0.4);
        }

        /* Footer */
        .footer {
            background: var(--dark);
            color: white;
            padding: 3rem 0 2rem;
        }

        .footer-content {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 2rem;
        }

        .footer-brand h3 {
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
        }

        .footer-brand p {
            color: rgba(255,255,255,0.7);
            font-size: 0.9rem;
        }

        .footer-contact p {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: rgba(255,255,255,0.7);
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
        }

        .footer-bottom {
            border-top: 1px solid rgba(255,255,255,0.1);
            padding-top: 2rem;
            text-align: center;
            font-size: 0.85rem;
            color: rgba(255,255,255,0.5);
        }

        @@media (max-width: 992px) {
            .approach-grid {
                grid-template-columns: repeat(2, 1fr);
            }

            .approach-step:nth-child(2)::after {
                display: none;
            }

            .approach-step:nth-child(2) {
                border-right: none;
            }

            .approach-step:nth-child(3) {
                border-top: 1px solid var(--border);
            }

            .approach-step:nth-child(4) {
                border-top: 1px solid var(--border);
            }
        }

        @@media (max-width: 768px) {
            .hero h1 {
                font-size: 2rem;
            }

            .nav {
                display: none;
            }

            .sectors-grid,
            .why-grid {
                grid-template-columns: 1fr;
            }

            .approach-grid {
                grid-template-columns: 1fr;
            }

            .approach-step {
                border-right: none;
                border-bottom: 1px solid var(--border);
            }

            .approach-step::after {
                display: none;
            }

            .footer-content {
                flex-direction: column;
                gap: 2rem;
            }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="container">
            <div class="header-content">
                <a href="/dogan-consult" class="logo">DOGAN<span>CONSULT</span></a>
                <nav class="nav">
                    <a href="#expertise">Expertise</a>
                    <a href="#approach">Approach</a>
                    <a href="#sectors">Sectors</a>
                    <a href="/dogan-consult/ar">العربية</a>
                    <a href="/contact">Contact</a>
                </nav>
            </div>
        </div>
    </header>

    <!-- Hero -->
    <section class="hero">
        <div class="container">
            <div class="hero-content">
                <div class="hero-tagline">ICT & Telecommunications Engineering Consulting</div>
                <h1>Trusted Engineering Advisory for Critical Digital Infrastructure</h1>
                <p>
                    Dogan Consult is an independent ICT and Telecommunications Engineering Consultancy 
                    providing strategic advisory, engineering design, and technical assurance services 
                    for governments, operators, and large enterprises.
                </p>
            </div>
        </div>
    </section>

    <!-- Core Expertise -->
    <section class="section" id="expertise">
        <div class="container">
            <h2 class="section-title">Core Expertise</h2>
            <p class="section-subtitle">
                Senior-led engineering consultancy across telecommunications, data centers, 
                cybersecurity, and critical ICT programs.
            </p>

            <div class="expertise-grid">
                <div class="expertise-card">
                    <i class="bi bi-diagram-3"></i>
                    <h3>Telecommunications Engineering</h3>
                    <p>
                        Network architecture review, fiber and structured cabling advisory, 
                        connectivity planning, and implementation governance across access, 
                        aggregation, and core network environments.
                    </p>
                    <a href="/dogan-consult/telecommunications">Learn more <i class="bi bi-arrow-right"></i></a>
                </div>

                <div class="expertise-card">
                    <i class="bi bi-building"></i>
                    <h3>Data Centers & Critical Facilities</h3>
                    <p>
                        Design assessment, readiness review, availability and resilience assurance 
                        for data centers and mission-critical facilities, ensuring integrated 
                        ICT and facility operations.
                    </p>
                    <a href="/dogan-consult/data-centers">Learn more <i class="bi bi-arrow-right"></i></a>
                </div>

                <div class="expertise-card">
                    <i class="bi bi-shield-check"></i>
                    <h3>Cybersecurity & Technical Assurance</h3>
                    <p>
                        Security architecture advisory, risk and audit support, and executive-level 
                        cybersecurity guidance for critical infrastructure programs aligned with 
                        regulatory requirements.
                    </p>
                    <a href="/dogan-consult/cybersecurity">Learn more <i class="bi bi-arrow-right"></i></a>
                </div>

                <div class="expertise-card">
                    <i class="bi bi-clipboard-check"></i>
                    <h3>ICT Program Governance</h3>
                    <p>
                        PMO and delivery oversight, vendor and integrator governance, 
                        large-scale ICT project assurance ensuring quality, security, 
                        and long-term operational sustainability.
                    </p>
                    <a href="/dogan-consult/governance">Learn more <i class="bi bi-arrow-right"></i></a>
                </div>
            </div>
        </div>
    </section>

    <!-- Our Approach -->
    <section class="section section-alt" id="approach">
        <div class="container">
            <h2 class="section-title">Our Consulting Approach</h2>
            <p class="section-subtitle">
                Vendor-neutral, standards-driven, and focused on execution, resilience, 
                and long-term operational sustainability.
            </p>

            <div class="approach-grid">
                <div class="approach-step">
                    <div class="number">1</div>
                    <h4>Assess</h4>
                </div>
                <div class="approach-step">
                    <div class="number">2</div>
                    <h4>Design</h4>
                </div>
                <div class="approach-step">
                    <div class="number">3</div>
                    <h4>Assure</h4>
                </div>
                <div class="approach-step">
                    <div class="number">4</div>
                    <h4>Support</h4>
                </div>
            </div>
        </div>
    </section>

    <!-- Sectors -->
    <section class="section" id="sectors">
        <div class="container">
            <h2 class="section-title">Sectors We Serve</h2>
            <p class="section-subtitle">
                Deep experience across government, telecommunications, critical infrastructure, 
                and regulated industries.
            </p>

            <div class="sectors-grid">
                <div class="sector-item">
                    <i class="bi bi-bank"></i>
                    <div>
                        <h4>Government & Public Sector</h4>
                        <p>Ministries, authorities, regulators, and public-sector digital transformation</p>
                    </div>
                </div>
                <div class="sector-item">
                    <i class="bi bi-broadcast-pin"></i>
                    <div>
                        <h4>Telecommunications Operators</h4>
                        <p>Mobile, fixed, and wholesale network operators</p>
                    </div>
                </div>
                <div class="sector-item">
                    <i class="bi bi-lightning-charge"></i>
                    <div>
                        <h4>Critical Infrastructure</h4>
                        <p>Energy, utilities, transportation, and national infrastructure programs</p>
                    </div>
                </div>
                <div class="sector-item">
                    <i class="bi bi-buildings"></i>
                    <div>
                        <h4>Large & Regulated Enterprises</h4>
                        <p>Financial services, healthcare, and highly regulated industries</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Why Dogan Consult -->
    <section class="section section-alt">
        <div class="container">
            <h2 class="section-title">Why Dogan Consult</h2>
            <p class="section-subtitle">
                A trusted engineering advisor for governments and critical infrastructure.
            </p>

            <div class="why-grid">
                <div class="why-item">
                    <i class="bi bi-check-circle-fill"></i>
                    <p>Senior consultant engineer leadership</p>
                </div>
                <div class="why-item">
                    <i class="bi bi-check-circle-fill"></i>
                    <p>Vendor-neutral, standards-driven advice</p>
                </div>
                <div class="why-item">
                    <i class="bi bi-check-circle-fill"></i>
                    <p>Deep regional and international experience</p>
                </div>
                <div class="why-item">
                    <i class="bi bi-check-circle-fill"></i>
                    <p>Strong alignment with international standards</p>
                </div>
                <div class="why-item">
                    <i class="bi bi-check-circle-fill"></i>
                    <p>Understanding of government and regulated environments</p>
                </div>
                <div class="why-item">
                    <i class="bi bi-check-circle-fill"></i>
                    <p>Focus on long-term operability and resilience</p>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA -->
    <section class="cta-section">
        <div class="container">
            <h2>Ready to Discuss Your Requirements?</h2>
            <p>Contact us to explore how Dogan Consult can support your ICT initiatives.</p>
            <a href="/contact" class="cta-btn">
                <i class="bi bi-envelope"></i>
                Get in Touch
            </a>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-brand">
                    <h3>DOGAN<span style="color: var(--accent);">CONSULT</span></h3>
                    <p>ICT & Telecommunications Engineering Consulting</p>
                </div>
                <div class="footer-contact">
                    <p><i class="bi bi-envelope"></i> info@doganconsult.com</p>
                    <p><i class="bi bi-globe"></i> www.doganconsult.com</p>
                    <p><i class="bi bi-geo-alt"></i> Middle East | International Engagements</p>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2024 Dogan Consult. All rights reserved.</p>
            </div>
        </div>
    </footer>
</body>
</html>
