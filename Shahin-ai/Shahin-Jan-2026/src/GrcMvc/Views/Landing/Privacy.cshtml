@section Scripts {
<script>
    function toggleDataDetails(card) {
        card.classList.toggle('expanded');
    }

    function requestData(type) {
        const messages = {
            'access': 'سيتم إرسال نسخة من بياناتك إلى بريدك الإلكتروني خلال 48 ساعة.',
            'correct': 'يرجى تسجيل الدخول لتعديل بياناتك، أو راسلنا على privacy@shahin-ai.com',
            'delete': 'سيتم مراجعة طلبك والرد عليك خلال 72 ساعة.'
        };
        alert(messages[type] || 'تم استلام طلبك!');
    }

    // Animate on scroll
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.style.opacity = '1';
                entry.target.style.transform = 'translateY(0)';
            }
        });
    }, { threshold: 0.1 });

    document.querySelectorAll('.fade-up').forEach(el => {
        el.style.opacity = '0';
        el.style.transform = 'translateY(20px)';
        el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
        observer.observe(el);
    });
</script>
}
