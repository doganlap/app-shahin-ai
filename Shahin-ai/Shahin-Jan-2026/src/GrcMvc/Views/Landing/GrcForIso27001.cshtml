@{
    ViewData["Title"] = "GRC Software for ISO 27001 Implementation";
    Layout = "~/Views/Landing/_LandingLayout.cshtml";
}

<style>
    .usecase-hero {
        background: linear-gradient(135deg, var(--darker) 0%, #0a0a1a 100%);
        padding: 6rem 0 4rem;
        position: relative;
        overflow: hidden;
    }

    .usecase-hero::before {
        content: '';
        position: absolute;
        top: -30%;
        left: -10%;
        width: 60%;
        height: 160%;
        background: radial-gradient(circle, rgba(59, 130, 246, 0.08) 0%, transparent 70%);
        pointer-events: none;
    }

    .usecase-hero h1 {
        font-size: 3rem;
        font-weight: 800;
        color: var(--light);
        margin-bottom: 1.5rem;
        line-height: 1.2;
    }

    .usecase-hero .sub-headline {
        font-size: 1.3rem;
        color: var(--text-muted);
        margin-bottom: 2rem;
        max-width: 700px;
    }

    .iso-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: rgba(59, 130, 246, 0.15);
        border: 1px solid rgba(59, 130, 246, 0.3);
        border-radius: 8px;
        color: #3b82f6;
        font-size: 0.9rem;
        margin-bottom: 2rem;
    }

    .workflow-section {
        padding: 5rem 0;
        background: var(--dark);
    }

    .workflow-steps {
        max-width: 900px;
        margin: 0 auto;
    }

    .workflow-step {
        display: flex;
        gap: 2rem;
        padding: 2rem;
        background: var(--glass);
        border: 1px solid var(--glass-border);
        border-radius: 16px;
        margin-bottom: 1.5rem;
        transition: all 0.3s ease;
    }

    .workflow-step:hover {
        border-color: #3b82f6;
    }

    .step-number {
        width: 56px;
        height: 56px;
        background: linear-gradient(135deg, #3b82f6, #1d4ed8);
        color: white;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 1.3rem;
        flex-shrink: 0;
    }

    .step-content h3 {
        color: var(--light);
        font-size: 1.2rem;
        margin-bottom: 0.5rem;
    }

    .step-content p {
        color: var(--text-muted);
        margin: 0;
        font-size: 0.95rem;
    }

    .controls-section {
        padding: 5rem 0;
        background: var(--darker);
    }

    .controls-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        max-width: 1000px;
        margin: 0 auto;
    }

    .control-item {
        background: var(--glass);
        border: 1px solid var(--glass-border);
        border-radius: 12px;
        padding: 1.5rem;
        text-align: center;
        transition: all 0.3s ease;
    }

    .control-item:hover {
        border-color: #3b82f6;
        transform: translateY(-3px);
    }

    .control-item .annexure {
        font-size: 0.85rem;
        color: #3b82f6;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .control-item h4 {
        color: var(--light);
        font-size: 1rem;
        margin: 0;
    }

    .usecase-cta {
        padding: 5rem 0;
        background: linear-gradient(135deg, var(--dark) 0%, #0a0a1a 100%);
        text-align: center;
    }

    .usecase-cta h2 {
        font-size: 2.2rem;
        color: var(--light);
        margin-bottom: 1rem;
    }

    .usecase-cta p {
        color: var(--text-muted);
        font-size: 1.1rem;
        margin-bottom: 2rem;
    }

    .usecase-cta-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1.25rem 2.5rem;
        background: #3b82f6;
        color: white;
        font-size: 1.1rem;
        font-weight: 700;
        border: none;
        border-radius: 12px;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 4px 20px rgba(59, 130, 246, 0.4);
    }

    .usecase-cta-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 30px rgba(59, 130, 246, 0.5);
        color: white;
    }

    .section-title {
        font-size: 2rem;
        font-weight: 700;
        color: var(--light);
        margin-bottom: 2rem;
        text-align: center;
    }

    @@media (max-width: 768px) {
        .usecase-hero h1 {
            font-size: 2rem;
        }

        .workflow-step {
            flex-direction: column;
            gap: 1rem;
        }
    }
</style>

<!-- Hero Section -->
<section class="usecase-hero">
    <div class="container">
        <div class="iso-badge">
            <i class="bi bi-award"></i>
            ISO/IEC 27001:2022
        </div>
        <h1>GRC Software for ISO 27001 Implementation</h1>
        <p class="sub-headline">
            Manage ISO 27001 controls, risks, and evidence in one structured workflow â€” from gap assessment to audit readiness.
        </p>
        <a href="/trial" class="usecase-cta-btn">
            <i class="bi bi-play-circle"></i>
            Try ISO 27001 Use Case
        </a>
    </div>
</section>

<!-- Workflow Section -->
<section class="workflow-section">
    <div class="container">
        <h2 class="section-title">Your Path to ISO 27001 Certification</h2>
        <div class="workflow-steps">
            <div class="workflow-step">
                <div class="step-number">1</div>
                <div class="step-content">
                    <h3>Gap Assessment</h3>
                    <p>Identify where you stand against ISO 27001 requirements. The platform maps your current state to all Annex A controls.</p>
                </div>
            </div>
            <div class="workflow-step">
                <div class="step-number">2</div>
                <div class="step-content">
                    <h3>Statement of Applicability</h3>
                    <p>Generate your SoA automatically based on your scope. Justify inclusions and exclusions with built-in templates.</p>
                </div>
            </div>
            <div class="workflow-step">
                <div class="step-number">3</div>
                <div class="step-content">
                    <h3>Risk Assessment</h3>
                    <p>Link risks to controls using a structured methodology. Track treatment plans and residual risk levels.</p>
                </div>
            </div>
            <div class="workflow-step">
                <div class="step-number">4</div>
                <div class="step-content">
                    <h3>Control Implementation</h3>
                    <p>Assign owners, set deadlines, and track implementation progress for each control.</p>
                </div>
            </div>
            <div class="workflow-step">
                <div class="step-number">5</div>
                <div class="step-content">
                    <h3>Evidence Collection</h3>
                    <p>Collect and organize evidence for each control. The platform reminds owners when evidence is due.</p>
                </div>
            </div>
            <div class="workflow-step">
                <div class="step-number">6</div>
                <div class="step-content">
                    <h3>Audit Readiness</h3>
                    <p>Generate audit packages with all evidence organized by control. Be ready for Stage 1 and Stage 2 audits.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Controls Coverage -->
<section class="controls-section">
    <div class="container">
        <h2 class="section-title">ISO 27001:2022 Annex A Coverage</h2>
        <div class="controls-grid">
            <div class="control-item">
                <div class="annexure">A.5</div>
                <h4>Organizational Controls</h4>
            </div>
            <div class="control-item">
                <div class="annexure">A.6</div>
                <h4>People Controls</h4>
            </div>
            <div class="control-item">
                <div class="annexure">A.7</div>
                <h4>Physical Controls</h4>
            </div>
            <div class="control-item">
                <div class="annexure">A.8</div>
                <h4>Technological Controls</h4>
            </div>
        </div>
        <p style="text-align: center; color: var(--text-muted); margin-top: 2rem;">
            All 93 controls from ISO 27001:2022 Annex A pre-loaded with implementation guidance
        </p>
    </div>
</section>

<!-- CTA -->
<section class="usecase-cta">
    <div class="container">
        <h2>Start Your ISO 27001 Journey</h2>
        <p>See how the platform guides you from gap assessment to certification readiness.</p>
        <a href="/trial" class="usecase-cta-btn">
            <i class="bi bi-rocket-takeoff"></i>
            Try ISO 27001 Use Case
        </a>
    </div>
</section>
