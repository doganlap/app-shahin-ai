@model GrcMvc.Controllers.SystemStatusViewModel
@{
    ViewData["Title"] = "حالة النظام";
    ViewData["MetaDescription"] = "تحقق من حالة خدمات منصة شاهين ومعرفة أي انقطاعات أو صيانة مجدولة.";
    Layout = "_LandingLayout";
}

<section class="section" style="padding-top: 8rem;">
    <div class="container">
        <div class="section-header">
            <span class="section-eyebrow">حالة النظام</span>
            <h1 class="section-title">حالة خدمات شاهين</h1>
            <p class="section-subtitle">تحقق من حالة جميع خدمات المنصة في الوقت الفعلي</p>
        </div>

        <!-- Overall Status Banner -->
        <div class="status-banner @(Model.OverallStatus == "operational" ? "status-operational" : "status-degraded")" role="status">
            <div class="status-indicator">
                @if (Model.OverallStatus == "operational")
                {
                    <i class="bi bi-check-circle-fill" aria-hidden="true"></i>
                }
                else
                {
                    <i class="bi bi-exclamation-triangle-fill" aria-hidden="true"></i>
                }
            </div>
            <div class="status-text">
                <h2>@Model.OverallStatusAr</h2>
                <p>آخر تحديث: @DateTime.UtcNow.ToString("dd MMMM yyyy - HH:mm") UTC</p>
            </div>
        </div>

        <!-- Services List -->
        <div class="services-list" role="list" aria-label="حالة الخدمات">
            @foreach (var service in Model.Services)
            {
                <div class="service-item" role="listitem">
                    <div class="service-info">
                        <h3>@service.Name</h3>
                        <span class="service-name-en">@service.NameEn</span>
                    </div>
                    <div class="service-status">
                        <span class="status-badge @($"status-{service.Status}")" aria-label="@service.StatusAr">
                            @if (service.Status == "operational")
                            {
                                <i class="bi bi-check-circle-fill" aria-hidden="true"></i>
                            }
                            else if (service.Status == "degraded")
                            {
                                <i class="bi bi-exclamation-circle-fill" aria-hidden="true"></i>
                            }
                            else
                            {
                                <i class="bi bi-x-circle-fill" aria-hidden="true"></i>
                            }
                            @service.StatusAr
                        </span>
                        <span class="uptime">متوسط التشغيل: @service.Uptime</span>
                    </div>
                </div>
            }
        </div>

        <!-- Uptime History (Placeholder) -->
        <div class="uptime-section fade-up">
            <h2>سجل التشغيل - آخر 30 يوم</h2>
            <div class="uptime-bars" aria-label="سجل التشغيل">
                @for (int i = 0; i < 30; i++)
                {
                    <div class="uptime-bar operational" title="@DateTime.UtcNow.AddDays(-29 + i).ToString("dd/MM"): متاح 100%"></div>
                }
            </div>
            <div class="uptime-legend">
                <span>30 يوم مضت</span>
                <span>اليوم</span>
            </div>
        </div>

        <!-- Incident History -->
        <div class="incidents-section fade-up">
            <h2>آخر الحوادث</h2>
            <div class="no-incidents">
                <i class="bi bi-shield-check" aria-hidden="true"></i>
                <p>لا توجد حوادث مسجلة في آخر 30 يوم</p>
            </div>
        </div>

        <!-- Subscribe to Updates -->
        <div class="subscribe-section fade-up">
            <h2>اشترك في التنبيهات</h2>
            <p>احصل على إشعارات فورية عند حدوث أي انقطاع في الخدمة</p>
            <div class="subscribe-actions">
                <a href="/Landing/Contact" class="btn btn-primary">
                    <i class="bi bi-bell" aria-hidden="true"></i>
                    تواصل معنا للاشتراك
                </a>
            </div>
        </div>
    </div>
</section>

@section Styles {
<style>
    .status-banner {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        padding: 2rem;
        border-radius: 16px;
        margin-bottom: 3rem;
    }

    .status-banner.status-operational {
        background: rgba(40, 167, 69, 0.1);
        border: 1px solid rgba(40, 167, 69, 0.3);
    }

    .status-banner.status-degraded {
        background: rgba(255, 193, 7, 0.1);
        border: 1px solid rgba(255, 193, 7, 0.3);
    }

    .status-indicator {
        font-size: 3rem;
    }

    .status-operational .status-indicator {
        color: var(--success);
    }

    .status-degraded .status-indicator {
        color: var(--warning);
    }

    .status-text h2 {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 0.25rem;
    }

    .status-text p {
        color: var(--text-secondary);
        margin: 0;
    }

    .services-list {
        background: var(--card-bg);
        border: 1px solid var(--border);
        border-radius: 16px;
        overflow: hidden;
        margin-bottom: 3rem;
    }

    .service-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.5rem 2rem;
        border-bottom: 1px solid var(--border);
    }

    .service-item:last-child {
        border-bottom: none;
    }

    .service-info h3 {
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 0.25rem;
    }

    .service-name-en {
        font-size: 0.85rem;
        color: var(--text-tertiary);
    }

    .service-status {
        display: flex;
        align-items: center;
        gap: 1.5rem;
    }

    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-size: 0.9rem;
        font-weight: 600;
    }

    .status-badge.status-operational {
        background: rgba(40, 167, 69, 0.15);
        color: #28a745;
    }

    .status-badge.status-degraded {
        background: rgba(255, 193, 7, 0.15);
        color: #d39e00;
    }

    .status-badge.status-outage {
        background: rgba(220, 53, 69, 0.15);
        color: #dc3545;
    }

    .uptime {
        font-size: 0.9rem;
        color: var(--text-secondary);
    }

    .uptime-section {
        margin-bottom: 3rem;
    }

    .uptime-section h2 {
        font-size: 1.25rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .uptime-bars {
        display: flex;
        gap: 3px;
        height: 32px;
        margin-bottom: 0.5rem;
    }

    .uptime-bar {
        flex: 1;
        border-radius: 4px;
        cursor: pointer;
        transition: transform 0.2s;
    }

    .uptime-bar:hover {
        transform: scaleY(1.1);
    }

    .uptime-bar.operational {
        background: #28a745;
    }

    .uptime-bar.degraded {
        background: #ffc107;
    }

    .uptime-bar.outage {
        background: #dc3545;
    }

    .uptime-legend {
        display: flex;
        justify-content: space-between;
        font-size: 0.85rem;
        color: var(--text-tertiary);
    }

    .incidents-section {
        margin-bottom: 3rem;
    }

    .incidents-section h2 {
        font-size: 1.25rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .no-incidents {
        text-align: center;
        padding: 3rem;
        background: var(--card-bg);
        border: 1px solid var(--border);
        border-radius: 16px;
        color: var(--text-secondary);
    }

    .no-incidents i {
        font-size: 3rem;
        color: var(--success);
        margin-bottom: 1rem;
        display: block;
    }

    .subscribe-section {
        text-align: center;
        padding: 3rem;
        background: var(--bg-secondary);
        border: 1px solid var(--border);
        border-radius: 16px;
    }

    .subscribe-section h2 {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .subscribe-section p {
        color: var(--text-secondary);
        margin-bottom: 1.5rem;
    }

    @@media (max-width: 768px) {
        .status-banner {
            flex-direction: column;
            text-align: center;
        }

        .service-item {
            flex-direction: column;
            gap: 1rem;
            text-align: center;
        }

        .service-status {
            flex-direction: column;
            gap: 0.5rem;
        }
    }
</style>
}
