@using GrcMvc.Services
@inject IAppInfoService AppInfo
@{
    ViewData["Title"] = "المدونة - " + AppInfo.Name;
    Layout = "_LandingLayout";
}

<section class="blog-hero">
    <div class="container">
        <div class="section-header fade-up">
            <div class="section-badge">
                <i class="bi bi-journal-richtext"></i>
                <span>المدونة</span>
            </div>
            <h1 class="section-title">أحدث المقالات والأخبار</h1>
            <p class="section-subtitle">
                مقالات متخصصة في الحوكمة والمخاطر والامتثال، وأخبار المنصة وتحديثاتها.
            </p>
        </div>

        <!-- Coming Soon Message -->
        <div class="coming-soon-section fade-up" style="text-align: center; padding: 4rem 2rem;">
            <div style="background: var(--glass); border: 1px solid var(--glass-border); border-radius: 20px; padding: 4rem 2rem; max-width: 700px; margin: 0 auto;">
                <i class="bi bi-file-earmark-text" style="font-size: 4rem; color: var(--primary); margin-bottom: 1.5rem; display: block;"></i>
                <h2 style="font-size: 2rem; font-weight: 700; margin-bottom: 1rem;">المدونة قريباً</h2>
                <p style="color: rgba(248, 250, 252, 0.6); margin-bottom: 2rem; font-size: 1.1rem;">
                    نعمل حالياً على إنشاء محتوى قيّم حول الحوكمة والمخاطر والامتثال
                </p>
                <p style="color: rgba(248, 250, 252, 0.5); margin-bottom: 2.5rem;">
                    سننشر مقالات ودراسات حالات وأدلة عملية لمساعدتك في رحلة الامتثال.
                    <br>
                    اشترك في النشرة الإخبارية ليصلك إشعار عند نشر المحتوى.
                </p>
                <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
                    <a href="/contact" class="btn btn-primary">
                        <i class="bi bi-envelope"></i> تواصل معنا
                    </a>
                    <a href="/trial" class="btn btn-outline">
                        <i class="bi bi-rocket-takeoff"></i> جرّب المنصة مجاناً
                    </a>
                </div>
            </div>
        </div>

        <!-- Newsletter -->
        <div class="newsletter fade-up">
            <div class="newsletter-content">
                <h2><i class="bi bi-envelope"></i> اشترك في نشرتنا البريدية</h2>
                <p>احصل على أحدث المقالات والأخبار في صندوق بريدك مباشرة</p>
            </div>
            <form class="newsletter-form">
                <input type="email" placeholder="بريدك الإلكتروني" required>
                <button type="submit" class="btn btn-primary">اشترك</button>
            </form>
        </div>
    </div>
</section>

@section Styles {
<style>
    .blog-hero {
        padding: 8rem 0 4rem;
    }

    .featured-post {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 3rem;
        background: var(--glass);
        border: 1px solid var(--glass-border);
        border-radius: 24px;
        overflow: hidden;
        margin-bottom: 4rem;
    }

    .featured-image {
        min-height: 400px;
        background: linear-gradient(135deg, rgba(16, 185, 129, 0.3), rgba(59, 130, 246, 0.3));
        position: relative;
    }

    .post-category {
        position: absolute;
        top: 1.5rem;
        right: 1.5rem;
        background: var(--primary);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .featured-content {
        padding: 3rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .featured-content h2 {
        font-size: 1.75rem;
        margin-bottom: 1rem;
        line-height: 1.4;
    }

    .featured-content > p {
        color: rgba(248, 250, 252, 0.7);
        font-size: 1.05rem;
        margin-bottom: 1.5rem;
        line-height: 1.8;
    }

    .post-meta {
        display: flex;
        gap: 1.5rem;
        color: rgba(248, 250, 252, 0.5);
        font-size: 0.9rem;
        margin-bottom: 1.5rem;
    }

    .post-meta span {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .blog-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
        margin-bottom: 4rem;
    }

    .blog-card {
        background: var(--glass);
        border: 1px solid var(--glass-border);
        border-radius: 20px;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .blog-card:hover {
        transform: translateY(-5px);
        border-color: rgba(16, 185, 129, 0.3);
    }

    .card-image {
        height: 180px;
        background: linear-gradient(135deg, rgba(16, 185, 129, 0.2), rgba(139, 92, 246, 0.2));
        position: relative;
    }

    .card-content {
        padding: 1.5rem;
    }

    .card-content h3 {
        font-size: 1.1rem;
        margin-bottom: 0.75rem;
        line-height: 1.5;
    }

    .card-content > p {
        color: rgba(248, 250, 252, 0.6);
        font-size: 0.9rem;
        line-height: 1.7;
        margin-bottom: 1rem;
    }

    .newsletter {
        background: var(--glass);
        border: 1px solid var(--glass-border);
        border-radius: 24px;
        padding: 3rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 2rem;
    }

    .newsletter-content h2 {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
    }

    .newsletter-content h2 i {
        color: var(--primary);
    }

    .newsletter-content p {
        color: rgba(248, 250, 252, 0.6);
    }

    .newsletter-form {
        display: flex;
        gap: 1rem;
    }

    .newsletter-form input {
        padding: 1rem 1.5rem;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid var(--glass-border);
        border-radius: 12px;
        color: var(--light);
        font-size: 1rem;
        width: 300px;
    }

    .newsletter-form input:focus {
        outline: none;
        border-color: var(--primary);
    }

    @@media (max-width: 1024px) {
        .featured-post {
            grid-template-columns: 1fr;
        }

        .featured-image {
            min-height: 250px;
        }

        .blog-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .newsletter {
            flex-direction: column;
            text-align: center;
        }

        .newsletter-form {
            width: 100%;
            flex-direction: column;
        }

        .newsletter-form input {
            width: 100%;
        }
    }

    @@media (max-width: 768px) {
        .blog-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
}
