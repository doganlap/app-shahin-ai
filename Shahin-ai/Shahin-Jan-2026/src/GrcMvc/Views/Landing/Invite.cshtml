@{
    ViewData["Title"] = "Access the GRC Platform";
    Layout = null;
    var token = ViewData["Token"] as string;
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shahin AI</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Using centralized theme from landing.css instead of inline :root override -->
    <link rel="stylesheet" href="~/css/landing.css" asp-append-version="true" />
    <style>
            --glass: rgba(255, 255, 255, 0.05);
            --glass-border: rgba(255, 255, 255, 0.1);
            --text-muted: #94a3b8;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--darker);
            color: var(--light);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .invite-container {
            max-width: 420px;
            width: 100%;
        }

        .logo {
            text-align: center;
            margin-bottom: 2rem;
        }

        .logo img {
            height: 40px;
        }

        .logo-text {
            font-size: 1.5rem;
            font-weight: 800;
            color: var(--light);
        }

        .logo-text span {
            color: var(--primary);
        }

        .invite-card {
            background: var(--glass);
            border: 1px solid var(--glass-border);
            border-radius: 20px;
            padding: 2.5rem;
            text-align: center;
        }

        .step-indicator {
            display: flex;
            justify-content: center;
            gap: 0.5rem;
            margin-bottom: 2rem;
        }

        .step-dot {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            background: var(--glass-border);
            transition: all 0.3s ease;
        }

        .step-dot.active {
            background: var(--primary);
            width: 30px;
            border-radius: 5px;
        }

        .step-content {
            display: none;
        }

        .step-content.active {
            display: block;
        }

        .step-content h2 {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 1rem;
        }

        .step-content p {
            color: var(--text-muted);
            margin-bottom: 2rem;
            line-height: 1.6;
        }

        .form-group {
            margin-bottom: 1.5rem;
            text-align: left;
        }

        .form-group label {
            display: block;
            font-size: 0.9rem;
            color: var(--text-muted);
            margin-bottom: 0.5rem;
        }

        .form-group input {
            width: 100%;
            padding: 1rem;
            background: var(--darker);
            border: 1px solid var(--glass-border);
            border-radius: 10px;
            color: var(--light);
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .form-group input:focus {
            outline: none;
            border-color: var(--primary);
        }

        .code-inputs {
            display: flex;
            gap: 0.75rem;
            justify-content: center;
            margin-bottom: 2rem;
        }

        .code-inputs input {
            width: 50px;
            height: 60px;
            text-align: center;
            font-size: 1.5rem;
            font-weight: 700;
            background: var(--darker);
            border: 1px solid var(--glass-border);
            border-radius: 10px;
            color: var(--light);
            transition: all 0.3s ease;
        }

        .code-inputs input:focus {
            outline: none;
            border-color: var(--primary);
        }

        .btn-primary {
            width: 100%;
            padding: 1rem;
            background: var(--primary);
            color: white;
            font-size: 1rem;
            font-weight: 600;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 20px rgba(220, 38, 38, 0.4);
        }

        .btn-primary:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }

        .helper-text {
            font-size: 0.85rem;
            color: var(--text-muted);
            margin-top: 1rem;
        }

        .success-icon {
            font-size: 4rem;
            color: #10b981;
            margin-bottom: 1.5rem;
        }

        .resend-link {
            color: var(--primary);
            text-decoration: none;
            font-size: 0.9rem;
            cursor: pointer;
        }

        .resend-link:hover {
            text-decoration: underline;
        }

        .security-note {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.85rem;
            color: var(--text-muted);
            margin-top: 1.5rem;
            padding-top: 1.5rem;
            border-top: 1px solid var(--glass-border);
        }

        .security-note i {
            color: #10b981;
        }

        @@keyframes shake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-5px); }
            75% { transform: translateX(5px); }
        }

        .shake {
            animation: shake 0.3s ease;
        }
    </style>
</head>
<body>
    <div class="invite-container">
        <div class="logo">
            <div class="logo-text">Shahin<span>AI</span> GRC</div>
        </div>

        <div class="invite-card">
            <div class="step-indicator">
                <div class="step-dot active" id="dot1"></div>
                <div class="step-dot" id="dot2"></div>
                <div class="step-dot" id="dot3"></div>
            </div>

            <!-- Step 1: Welcome -->
            <div class="step-content active" id="step1">
                <h2>Access the GRC Platform</h2>
                <p>
                    You've been invited to explore the GRC platform in a real trial environment.
                    Access is secure, limited, and can be closed anytime.
                </p>

                <div class="form-group">
                    <label>Work Email</label>
                    <input type="email" id="email" placeholder="you@company.com" required>
                </div>

                <button class="btn-primary" onclick="requestCode()">
                    <i class="bi bi-arrow-left"></i>
                    Continue with Email
                </button>

                <p class="helper-text">
                    <i class="bi bi-shield-check"></i>
                    This access is personal and time-limited.
                </p>
            </div>

            <!-- Step 2: Verify Code -->
            <div class="step-content" id="step2">
                <h2>Enter the Code</h2>
                <p>We sent a one-time code to your email.</p>

                <div class="code-inputs">
                    <input type="text" maxlength="1" id="c1" oninput="moveToNext(this, 'c2')">
                    <input type="text" maxlength="1" id="c2" oninput="moveToNext(this, 'c3')">
                    <input type="text" maxlength="1" id="c3" oninput="moveToNext(this, 'c4')">
                    <input type="text" maxlength="1" id="c4" oninput="moveToNext(this, 'c5')">
                    <input type="text" maxlength="1" id="c5" oninput="moveToNext(this, 'c6')">
                    <input type="text" maxlength="1" id="c6" oninput="verifyCode()">
                </div>

                <button class="btn-primary" onclick="verifyCode()" id="verifyBtn">
                    <i class="bi bi-check-lg"></i>
                    Confirm & Continue
                </button>

                <p class="helper-text">
                    Didn't receive it? <a class="resend-link" onclick="resendCode()">Resend code</a>
                </p>
            </div>

            <!-- Step 3: Access Granted -->
            <div class="step-content" id="step3">
                <i class="bi bi-check-circle-fill success-icon"></i>
                <h2>Access Granted</h2>
                <p>
                    Your trial access is active.<br>
                    You can now start the guided onboarding and explore the platform.
                </p>

                <a href="/OnboardingWizard" class="btn-primary">
                    <i class="bi bi-rocket-takeoff"></i>
                    Start Onboarding
                </a>

                <div class="security-note">
                    <i class="bi bi-shield-check"></i>
                    Access valid for 7 days. Data is encrypted.
                </div>
            </div>
        </div>
    </div>

    <script>
        const token = '@(token ?? "")';
        let userEmail = '';

        function showStep(stepNum) {
            document.querySelectorAll('.step-content').forEach(s => s.classList.remove('active'));
            document.querySelectorAll('.step-dot').forEach(d => d.classList.remove('active'));
            
            document.getElementById('step' + stepNum).classList.add('active');
            document.getElementById('dot' + stepNum).classList.add('active');
        }

        async function requestCode() {
            const email = document.getElementById('email').value;
            if (!email || !email.includes('@@')) {
                document.getElementById('email').classList.add('shake');
                setTimeout(() => document.getElementById('email').classList.remove('shake'), 300);
                return;
            }
            
            userEmail = email;
            
            // In production, this would send a real verification code
            // For now, we simulate success
            try {
                await fetch('/api/trial/demo-request', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        name: 'Invited User',
                        email: email,
                        type: 'invite_access',
                        company: 'Via Invite'
                    })
                });
            } catch (e) {
            }
            
            showStep(2);
            document.getElementById('c1').focus();
        }

        function moveToNext(current, nextId) {
            if (current.value.length === 1) {
                const next = document.getElementById(nextId);
                if (next) next.focus();
            }
        }

        function verifyCode() {
            const code = ['c1','c2','c3','c4','c5','c6'].map(id => 
                document.getElementById(id).value
            ).join('');
            
            if (code.length === 6) {
                // In production, verify the code
                // For demo, accept any 6-digit code
                showStep(3);
            }
        }

        function resendCode() {
            alert('A new code has been sent to ' + userEmail);
        }

        // Auto-focus email on load
        document.addEventListener('DOMContentLoaded', () => {
            document.getElementById('email').focus();
        });
    </script>
</body>
</html>
