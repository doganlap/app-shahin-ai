@model GrcMvc.Controllers.PricingViewModel
@using GrcMvc.Services
@inject IAppInfoService AppInfo
@{
    ViewData["Title"] = "الأسعار - " + AppInfo.Name;
    Layout = "_LandingLayout";
}

<section class="pricing-hero">
    <div class="container">
        <div class="section-header fade-up">
            <div class="section-badge">
                <i class="bi bi-tag"></i>
                <span>خطط مرنة</span>
            </div>
            <h1 class="section-title">اختر الخطة المناسبة لمؤسستك</h1>
            <p class="section-subtitle">
                ابدأ مجاناً ثم ترقَّ حسب احتياجاتك. جميع الخطط تشمل تحديثات مجانية ودعم فني.
            </p>
        </div>

        <div class="pricing-grid fade-up">
            @foreach (var plan in Model.Plans)
            {
                <div class="pricing-card @(plan.IsPopular ? "popular" : "")">
                    @if (plan.IsPopular)
                    {
                        <div class="popular-badge">الأكثر شعبية</div>
                    }
                    <div class="plan-header">
                        <h3>@plan.NameAr</h3>
                        <p class="plan-name-en">@plan.Name</p>
                    </div>
                    <div class="plan-price">
                        @if (plan.Price == 0)
                        {
                            <span class="price">مجاني</span>
                            <span class="period">@plan.Period</span>
                        }
                        else if (plan.Price < 0)
                        {
                            <span class="price">تواصل معنا</span>
                            <span class="period">حسب الطلب</span>
                        }
                        else
                        {
                            <span class="currency">$</span>
                            <span class="price">@plan.Price.ToString("N0")</span>
                            <span class="period">/ @plan.Period</span>
                        }
                    </div>
                    <ul class="plan-features">
                        @foreach (var feature in plan.Features)
                        {
                            <li>
                                <i class="bi bi-check-circle-fill"></i>
                                <span>@feature</span>
                            </li>
                        }
                    </ul>
                    <div class="plan-cta">
                        @if (plan.Price == 0)
                        {
                            <a href="/trial" class="btn btn-primary">ابدأ التجربة المجانية</a>
                        }
                        else if (plan.Price < 0)
                        {
                            <a href="/Landing/Contact" class="btn btn-outline">تواصل معنا</a>
                        }
                        else
                        {
                            <a href="/trial?plan=@plan.Name.ToLower()" class="btn @(plan.IsPopular ? "btn-primary" : "btn-outline")">اختر هذه الخطة</a>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- FAQ Section -->
        <div class="pricing-faq fade-up">
            <h2>الأسئلة الشائعة حول الأسعار</h2>
            <div class="faq-grid">
                <div class="faq-item">
                    <h4><i class="bi bi-question-circle"></i> هل يمكنني الترقية لاحقاً؟</h4>
                    <p>نعم، يمكنك الترقية أو التخفيض في أي وقت. سيتم احتساب الفرق بشكل تناسبي.</p>
                </div>
                <div class="faq-item">
                    <h4><i class="bi bi-question-circle"></i> ماذا يحدث بعد انتهاء التجربة؟</h4>
                    <p>ستحتفظ ببياناتك لمدة 30 يوماً إضافية. يمكنك الاشتراك في أي وقت لاستعادة الوصول الكامل.</p>
                </div>
                <div class="faq-item">
                    <h4><i class="bi bi-question-circle"></i> هل هناك خصم للدفع السنوي؟</h4>
                    <p>نعم! وفر 20% عند الدفع السنوي. تواصل معنا للحصول على عرض خاص.</p>
                </div>
                <div class="faq-item">
                    <h4><i class="bi bi-question-circle"></i> هل تقدمون خصماً للمنظمات غير الربحية؟</h4>
                    <p>نعم، نقدم خصم 50% للمنظمات غير الربحية والمؤسسات التعليمية.</p>
                </div>
            </div>
        </div>

        <!-- CTA Section -->
        <div class="pricing-cta fade-up">
            <h2>هل لديك متطلبات خاصة؟</h2>
            <p>تواصل معنا لنناقش حل مخصص لمؤسستك</p>
            <a href="/Landing/Contact" class="btn btn-primary btn-lg">
                <i class="bi bi-chat-dots"></i>
                تحدث مع فريق المبيعات
            </a>
        </div>
    </div>
</section>

@section Styles {
<style>
    .pricing-hero {
        padding: 8rem 0 4rem;
    }

    .pricing-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1.5rem;
        margin-bottom: 4rem;
    }

    .pricing-card {
        background: var(--glass);
        border: 1px solid var(--glass-border);
        border-radius: 24px;
        padding: 2rem;
        position: relative;
        transition: all 0.3s ease;
    }

    .pricing-card:hover {
        transform: translateY(-5px);
        border-color: rgba(16, 185, 129, 0.3);
    }

    .pricing-card.popular {
        border-color: var(--primary);
        background: rgba(16, 185, 129, 0.05);
    }

    .popular-badge {
        position: absolute;
        top: -12px;
        right: 20px;
        background: var(--gradient-1);
        color: white;
        padding: 0.4rem 1rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 700;
    }

    .plan-header h3 {
        font-size: 1.5rem;
        font-weight: 800;
        margin-bottom: 0.25rem;
    }

    .plan-name-en {
        color: rgba(248, 250, 252, 0.5);
        font-size: 0.85rem;
    }

    .plan-price {
        padding: 1.5rem 0;
        border-bottom: 1px solid var(--glass-border);
        margin-bottom: 1.5rem;
    }

    .plan-price .currency {
        font-size: 1.5rem;
        vertical-align: top;
        color: var(--primary);
    }

    .plan-price .price {
        font-size: 2.5rem;
        font-weight: 900;
        color: var(--light);
    }

    .plan-price .period {
        color: rgba(248, 250, 252, 0.5);
        font-size: 0.9rem;
    }

    .plan-features {
        list-style: none;
        margin-bottom: 2rem;
    }

    .plan-features li {
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
        margin-bottom: 0.75rem;
        font-size: 0.9rem;
    }

    .plan-features li i {
        color: var(--primary);
        flex-shrink: 0;
        margin-top: 0.1rem;
    }

    .plan-cta .btn {
        width: 100%;
        justify-content: center;
    }

    .pricing-faq {
        margin-bottom: 4rem;
    }

    .pricing-faq h2 {
        text-align: center;
        font-size: 2rem;
        margin-bottom: 2rem;
    }

    .faq-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }

    .faq-item {
        background: var(--glass);
        border: 1px solid var(--glass-border);
        border-radius: 16px;
        padding: 1.5rem;
    }

    .faq-item h4 {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 1rem;
        margin-bottom: 0.75rem;
    }

    .faq-item h4 i {
        color: var(--primary);
    }

    .faq-item p {
        color: rgba(248, 250, 252, 0.6);
        font-size: 0.9rem;
        line-height: 1.7;
    }

    .pricing-cta {
        text-align: center;
        background: var(--glass);
        border: 1px solid var(--glass-border);
        border-radius: 24px;
        padding: 3rem;
    }

    .pricing-cta h2 {
        font-size: 1.75rem;
        margin-bottom: 0.5rem;
    }

    .pricing-cta p {
        color: rgba(248, 250, 252, 0.6);
        margin-bottom: 1.5rem;
    }

    @@media (max-width: 1024px) {
        .pricing-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media (max-width: 768px) {
        .pricing-grid,
        .faq-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
}
