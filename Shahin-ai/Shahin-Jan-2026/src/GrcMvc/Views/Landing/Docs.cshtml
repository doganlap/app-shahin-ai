@using GrcMvc.Services
@inject IAppInfoService AppInfo
@{
    ViewData["Title"] = "التوثيق - " + AppInfo.Name;
    Layout = "_LandingLayout";
}

<section class="docs-hero">
    <div class="container">
        <div class="section-header fade-up">
            <div class="section-badge">
                <i class="bi bi-book"></i>
                <span>مركز التوثيق</span>
            </div>
            <h1 class="section-title">كل ما تحتاجه لبدء العمل</h1>
            <p class="section-subtitle">
                أدلة شاملة، دروس تعليمية، ومراجع API لمساعدتك في تحقيق أقصى استفادة من منصة شاهين.
            </p>
        </div>

        <!-- Quick Start -->
        <div class="quick-start fade-up">
            <h2><i class="bi bi-lightning-charge"></i> البداية السريعة</h2>
            <div class="quick-start-grid">
                <a href="/Help/GettingStarted" class="quick-card">
                    <div class="card-icon"><i class="bi bi-rocket-takeoff"></i></div>
                    <h3>دليل البداية</h3>
                    <p>تعلم أساسيات المنصة في 10 دقائق</p>
                </a>
                <a href="/Onboarding" class="quick-card">
                    <div class="card-icon"><i class="bi bi-list-check"></i></div>
                    <h3>معالج الإعداد</h3>
                    <p>أجب على الأسئلة واحصل على خطتك</p>
                </a>
                <a href="/Help" class="quick-card">
                    <div class="card-icon"><i class="bi bi-question-circle"></i></div>
                    <h3>مركز المساعدة</h3>
                    <p>إجابات على الأسئلة الشائعة</p>
                </a>
            </div>
        </div>

        <!-- Documentation Categories -->
        <div class="docs-categories fade-up">
            <h2>أقسام التوثيق</h2>
            <div class="categories-grid">
                <div class="category-card">
                    <div class="category-icon"><i class="bi bi-building"></i></div>
                    <h3>إدارة الحوكمة</h3>
                    <ul>
                        <li><a href="#">إعداد هياكل الحوكمة</a></li>
                        <li><a href="#">إدارة اللجان والفرق</a></li>
                        <li><a href="#">التفويضات والصلاحيات</a></li>
                        <li><a href="#">السياسات والإجراءات</a></li>
                    </ul>
                </div>
                <div class="category-card">
                    <div class="category-icon"><i class="bi bi-exclamation-triangle"></i></div>
                    <h3>إدارة المخاطر</h3>
                    <ul>
                        <li><a href="#">إنشاء سجل المخاطر</a></li>
                        <li><a href="#">تقييم المخاطر</a></li>
                        <li><a href="#">خطط المعالجة</a></li>
                        <li><a href="#">مؤشرات المخاطر الرئيسية</a></li>
                    </ul>
                </div>
                <div class="category-card">
                    <div class="category-icon"><i class="bi bi-clipboard-check"></i></div>
                    <h3>إدارة الامتثال</h3>
                    <ul>
                        <li><a href="#">ربط الأُطر التنظيمية</a></li>
                        <li><a href="#">تقييم الضوابط</a></li>
                        <li><a href="#">تحليل الفجوات</a></li>
                        <li><a href="#">تقويم الامتثال</a></li>
                    </ul>
                </div>
                <div class="category-card">
                    <div class="category-icon"><i class="bi bi-search"></i></div>
                    <h3>إدارة التدقيق</h3>
                    <ul>
                        <li><a href="#">تخطيط التدقيق</a></li>
                        <li><a href="#">تنفيذ التدقيق</a></li>
                        <li><a href="#">متابعة الملاحظات</a></li>
                        <li><a href="#">إعداد التقارير</a></li>
                    </ul>
                </div>
                <div class="category-card">
                    <div class="category-icon"><i class="bi bi-file-earmark-check"></i></div>
                    <h3>إدارة الأدلة</h3>
                    <ul>
                        <li><a href="#">رفع الأدلة</a></li>
                        <li><a href="#">تصنيف الأدلة</a></li>
                        <li><a href="#">دورة حياة الأدلة</a></li>
                        <li><a href="#">الربط مع الضوابط</a></li>
                    </ul>
                </div>
                <div class="category-card">
                    <div class="category-icon"><i class="bi bi-plug"></i></div>
                    <h3>API والتكاملات</h3>
                    <ul>
                        <li><a href="#">مرجع API</a></li>
                        <li><a href="#">المصادقة</a></li>
                        <li><a href="#">Webhooks</a></li>
                        <li><a href="#">أمثلة التكامل</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Video Tutorials -->
        <div class="video-tutorials fade-up">
            <h2><i class="bi bi-play-circle"></i> دروس فيديو</h2>
            <div class="videos-grid">
                <div class="video-card">
                    <div class="video-thumbnail">
                        <i class="bi bi-play-circle-fill"></i>
                    </div>
                    <h4>جولة في المنصة</h4>
                    <p>تعرف على واجهة المستخدم والميزات الرئيسية</p>
                    <span class="video-duration">10:25</span>
                </div>
                <div class="video-card">
                    <div class="video-thumbnail">
                        <i class="bi bi-play-circle-fill"></i>
                    </div>
                    <h4>إعداد فريق العمل</h4>
                    <p>كيفية إضافة المستخدمين وتعيين الصلاحيات</p>
                    <span class="video-duration">8:30</span>
                </div>
                <div class="video-card">
                    <div class="video-thumbnail">
                        <i class="bi bi-play-circle-fill"></i>
                    </div>
                    <h4>إنشاء تقييم امتثال</h4>
                    <p>خطوات إنشاء وتنفيذ تقييم الامتثال</p>
                    <span class="video-duration">15:00</span>
                </div>
            </div>
        </div>

        <!-- CTA -->
        <div class="docs-cta fade-up">
            <h2>هل تحتاج مساعدة؟</h2>
            <p>فريق الدعم الفني جاهز لمساعدتك</p>
            <div class="cta-buttons">
                <a href="/Landing/Contact" class="btn btn-primary btn-lg">
                    <i class="bi bi-chat-dots"></i>
                    تواصل مع الدعم
                </a>
                <a href="/Help/FAQ" class="btn btn-outline btn-lg">
                    <i class="bi bi-question-circle"></i>
                    الأسئلة الشائعة
                </a>
            </div>
        </div>
    </div>
</section>

@section Styles {
<style>
    .docs-hero {
        padding: 8rem 0 4rem;
    }

    .quick-start {
        margin-bottom: 4rem;
    }

    .quick-start h2 {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 1.5rem;
        margin-bottom: 2rem;
    }

    .quick-start h2 i {
        color: var(--accent);
    }

    .quick-start-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1.5rem;
    }

    .quick-card {
        background: var(--glass);
        border: 1px solid var(--glass-border);
        border-radius: 20px;
        padding: 2rem;
        text-decoration: none;
        color: var(--light);
        transition: all 0.3s ease;
        text-align: center;
    }

    .quick-card:hover {
        transform: translateY(-5px);
        border-color: var(--primary);
        background: rgba(16, 185, 129, 0.05);
    }

    .quick-card .card-icon {
        width: 70px;
        height: 70px;
        background: var(--gradient-1);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.75rem;
        color: white;
        margin: 0 auto 1.25rem;
    }

    .quick-card h3 {
        font-size: 1.15rem;
        margin-bottom: 0.5rem;
    }

    .quick-card p {
        color: rgba(248, 250, 252, 0.6);
        font-size: 0.9rem;
    }

    .docs-categories h2 {
        text-align: center;
        font-size: 2rem;
        margin-bottom: 2rem;
    }

    .categories-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1.5rem;
        margin-bottom: 4rem;
    }

    .category-card {
        background: var(--glass);
        border: 1px solid var(--glass-border);
        border-radius: 20px;
        padding: 2rem;
    }

    .category-icon {
        width: 50px;
        height: 50px;
        background: rgba(16, 185, 129, 0.15);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: var(--primary);
        margin-bottom: 1rem;
    }

    .category-card h3 {
        font-size: 1.15rem;
        margin-bottom: 1rem;
    }

    .category-card ul {
        list-style: none;
    }

    .category-card li {
        margin-bottom: 0.5rem;
    }

    .category-card a {
        color: rgba(248, 250, 252, 0.7);
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.3s ease;
    }

    .category-card a:hover {
        color: var(--primary);
    }

    .video-tutorials h2 {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 1.5rem;
        margin-bottom: 2rem;
    }

    .video-tutorials h2 i {
        color: var(--primary);
    }

    .videos-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1.5rem;
        margin-bottom: 4rem;
    }

    .video-card {
        background: var(--glass);
        border: 1px solid var(--glass-border);
        border-radius: 16px;
        padding: 1.5rem;
        position: relative;
    }

    .video-thumbnail {
        height: 150px;
        background: linear-gradient(135deg, rgba(16, 185, 129, 0.2), rgba(59, 130, 246, 0.2));
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1rem;
    }

    .video-thumbnail i {
        font-size: 3rem;
        color: var(--primary);
        opacity: 0.8;
    }

    .video-card h4 {
        font-size: 1rem;
        margin-bottom: 0.5rem;
    }

    .video-card p {
        color: rgba(248, 250, 252, 0.6);
        font-size: 0.85rem;
        margin-bottom: 0.5rem;
    }

    .video-duration {
        font-size: 0.8rem;
        color: var(--primary);
    }

    .docs-cta {
        text-align: center;
        background: linear-gradient(180deg, rgba(16, 185, 129, 0.1), transparent);
        border-radius: 24px;
        padding: 4rem;
    }

    .docs-cta h2 {
        font-size: 2rem;
        margin-bottom: 0.75rem;
    }

    .docs-cta p {
        color: rgba(248, 250, 252, 0.6);
        margin-bottom: 1.5rem;
    }

    .cta-buttons {
        display: flex;
        justify-content: center;
        gap: 1rem;
        flex-wrap: wrap;
    }

    @@media (max-width: 1024px) {
        .quick-start-grid,
        .categories-grid,
        .videos-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media (max-width: 768px) {
        .quick-start-grid,
        .categories-grid,
        .videos-grid {
            grid-template-columns: 1fr;
        }

        .cta-buttons {
            flex-direction: column;
            align-items: center;
        }
    }
</style>
}
