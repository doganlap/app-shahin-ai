@using GrcMvc.Services
@inject IAppInfoService AppInfo
@{
    ViewData["Title"] = "أفضل برنامج GRC - مقارنة شاملة | " + AppInfo.Name;
    ViewData["Description"] = "اكتشف لماذا شاهين هو أفضل برنامج GRC للمؤسسات السعودية. مقارنة شاملة مع المنافسين ومميزات حصرية.";
    Layout = "_LandingLayout";
}

<section class="comparison-hero">
    <div class="container">
        <div class="section-header fade-up">
            <div class="section-badge">
                <i class="bi bi-trophy-fill"></i>
                <span>أفضل برنامج GRC</span>
            </div>
            <h1 class="section-title">لماذا شاهين هو الخيار الأفضل؟</h1>
            <p class="section-subtitle">
                مقارنة شاملة مع أفضل 20 منصة GRC عالمياً - واكتشف الفرق الحقيقي
            </p>
        </div>

        <!-- G2/Capterra Style Rating -->
        <div class="ratings-bar fade-up">
            <div class="rating-item">
                <div class="rating-score">4.9</div>
                <div class="rating-stars">★★★★★</div>
                <div class="rating-source">تقييم العملاء</div>
            </div>
            <div class="rating-item">
                <div class="rating-score">#1</div>
                <div class="rating-label">في السوق السعودي</div>
                <div class="rating-source">GRC للامتثال المحلي</div>
            </div>
            <div class="rating-item">
                <div class="rating-score">70%</div>
                <div class="rating-label">توفير في الوقت</div>
                <div class="rating-source">مقارنة بالمنافسين</div>
            </div>
            <div class="rating-item">
                <div class="rating-score">130+</div>
                <div class="rating-label">جهة تنظيمية</div>
                <div class="rating-source">جاهز للامتثال</div>
            </div>
        </div>
    </div>
</section>

<!-- Comparison Table -->
