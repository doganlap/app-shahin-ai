@{
    ViewData["Title"] = "GRC for SOC 2 Readiness";
    Layout = "~/Views/Landing/_LandingLayout.cshtml";
}

<style>
    .usecase-hero {
        background: linear-gradient(135deg, var(--darker) 0%, #1a1a0a 100%);
        padding: 6rem 0 4rem;
        position: relative;
        overflow: hidden;
    }

    .usecase-hero::before {
        content: '';
        position: absolute;
        top: -30%;
        right: -10%;
        width: 60%;
        height: 160%;
        background: radial-gradient(circle, rgba(245, 158, 11, 0.08) 0%, transparent 70%);
        pointer-events: none;
    }

    .usecase-hero h1 {
        font-size: 3rem;
        font-weight: 800;
        color: var(--light);
        margin-bottom: 1.5rem;
        line-height: 1.2;
    }

    .usecase-hero .sub-headline {
        font-size: 1.3rem;
        color: var(--text-muted);
        margin-bottom: 2rem;
        max-width: 700px;
    }

    .soc-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: rgba(245, 158, 11, 0.15);
        border: 1px solid rgba(245, 158, 11, 0.3);
        border-radius: 8px;
        color: #f59e0b;
        font-size: 0.9rem;
        margin-bottom: 2rem;
    }

    .tsc-section {
        padding: 5rem 0;
        background: var(--dark);
    }

    .tsc-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
        max-width: 1100px;
        margin: 0 auto;
    }

    .tsc-card {
        background: var(--glass);
        border: 1px solid var(--glass-border);
        border-radius: 16px;
        padding: 2rem;
        transition: all 0.3s ease;
    }

    .tsc-card:hover {
        border-color: #f59e0b;
        transform: translateY(-3px);
    }

    .tsc-card .tsc-name {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 1rem;
    }

    .tsc-card .tsc-icon {
        width: 48px;
        height: 48px;
        background: linear-gradient(135deg, #f59e0b, #d97706);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.3rem;
    }

    .tsc-card h3 {
        color: var(--light);
        font-size: 1.1rem;
        margin: 0;
    }

    .tsc-card p {
        color: var(--text-muted);
        font-size: 0.95rem;
        margin: 0;
    }

    .workflow-section {
        padding: 5rem 0;
        background: var(--darker);
    }

    .workflow-list {
        max-width: 800px;
        margin: 0 auto;
    }

    .workflow-item {
        display: flex;
        align-items: flex-start;
        gap: 1.5rem;
        padding: 1.5rem;
        background: var(--glass);
        border: 1px solid var(--glass-border);
        border-radius: 12px;
        margin-bottom: 1rem;
    }

    .workflow-item i {
        font-size: 1.5rem;
        color: #f59e0b;
        margin-top: 0.25rem;
    }

    .workflow-item h4 {
        color: var(--light);
        font-size: 1.1rem;
        margin-bottom: 0.5rem;
    }

    .workflow-item p {
        color: var(--text-muted);
        margin: 0;
        font-size: 0.95rem;
    }

    .usecase-cta {
        padding: 5rem 0;
        background: linear-gradient(135deg, var(--dark) 0%, #1a1a0a 100%);
        text-align: center;
    }

    .usecase-cta h2 {
        font-size: 2.2rem;
        color: var(--light);
        margin-bottom: 1rem;
    }

    .usecase-cta p {
        color: var(--text-muted);
        font-size: 1.1rem;
        margin-bottom: 2rem;
    }

    .usecase-cta-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1.25rem 2.5rem;
        background: #f59e0b;
        color: white;
        font-size: 1.1rem;
        font-weight: 700;
        border: none;
        border-radius: 12px;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 4px 20px rgba(245, 158, 11, 0.4);
    }

    .usecase-cta-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 30px rgba(245, 158, 11, 0.5);
        color: white;
    }

    .section-title {
        font-size: 2rem;
        font-weight: 700;
        color: var(--light);
        margin-bottom: 2rem;
        text-align: center;
    }

    @@media (max-width: 768px) {
        .usecase-hero h1 {
            font-size: 2rem;
        }
    }
</style>

<!-- Hero Section -->
<section class="usecase-hero">
    <div class="container">
        <div class="soc-badge">
            <i class="bi bi-shield-check"></i>
            SOC 2 Type I & Type II
        </div>
        <h1>GRC for SOC 2 Readiness</h1>
        <p class="sub-headline">
            Track trust service criteria controls, evidence, and owners â€” with a workflow your team can actually run.
        </p>
        <a href="/trial" class="usecase-cta-btn">
            <i class="bi bi-play-circle"></i>
            Try SOC 2 Use Case
        </a>
    </div>
</section>

<!-- Trust Service Criteria -->
<section class="tsc-section">
    <div class="container">
        <h2 class="section-title">Trust Service Criteria Coverage</h2>
        <div class="tsc-grid">
            <div class="tsc-card">
                <div class="tsc-name">
                    <div class="tsc-icon"><i class="bi bi-shield-lock"></i></div>
                    <h3>Security</h3>
                </div>
                <p>Protection of system resources against unauthorized access</p>
            </div>
            <div class="tsc-card">
                <div class="tsc-name">
                    <div class="tsc-icon"><i class="bi bi-lightning"></i></div>
                    <h3>Availability</h3>
                </div>
                <p>System resources accessible as committed or agreed</p>
            </div>
            <div class="tsc-card">
                <div class="tsc-name">
                    <div class="tsc-icon"><i class="bi bi-cpu"></i></div>
                    <h3>Processing Integrity</h3>
                </div>
                <p>System processing is complete, valid, accurate, and timely</p>
            </div>
            <div class="tsc-card">
                <div class="tsc-name">
                    <div class="tsc-icon"><i class="bi bi-eye-slash"></i></div>
                    <h3>Confidentiality</h3>
                </div>
                <p>Information designated as confidential is protected</p>
            </div>
            <div class="tsc-card">
                <div class="tsc-name">
                    <div class="tsc-icon"><i class="bi bi-person-lock"></i></div>
                    <h3>Privacy</h3>
                </div>
                <p>Personal information collected, used, retained, and disclosed appropriately</p>
            </div>
        </div>
    </div>
</section>

<!-- What You Get -->
<section class="workflow-section">
    <div class="container">
        <h2 class="section-title">Your SOC 2 Workflow</h2>
        <div class="workflow-list">
            <div class="workflow-item">
                <i class="bi bi-check2-square"></i>
                <div>
                    <h4>Control Mapping</h4>
                    <p>Map your controls to SOC 2 criteria with built-in guidance and templates</p>
                </div>
            </div>
            <div class="workflow-item">
                <i class="bi bi-people"></i>
                <div>
                    <h4>Control Ownership</h4>
                    <p>Assign owners for each control and track accountability across teams</p>
                </div>
            </div>
            <div class="workflow-item">
                <i class="bi bi-file-earmark-check"></i>
                <div>
                    <h4>Evidence Collection</h4>
                    <p>Collect and organize evidence with automated reminders and deadlines</p>
                </div>
            </div>
            <div class="workflow-item">
                <i class="bi bi-calendar-check"></i>
                <div>
                    <h4>Type II Period Tracking</h4>
                    <p>Track your observation period and ensure continuous control operation</p>
                </div>
            </div>
            <div class="workflow-item">
                <i class="bi bi-folder2-open"></i>
                <div>
                    <h4>Audit Package Generation</h4>
                    <p>Generate complete audit packages organized by TSC for your auditors</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA -->
<section class="usecase-cta">
    <div class="container">
        <h2>Get SOC 2 Ready</h2>
        <p>See how the platform guides you through SOC 2 preparation with structured workflows.</p>
        <a href="/trial" class="usecase-cta-btn">
            <i class="bi bi-rocket-takeoff"></i>
            Try SOC 2 Use Case
        </a>
    </div>
</section>
