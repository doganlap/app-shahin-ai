@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> L
@{
    ViewData["Title"] = L["FreeTrial_PageTitle"].Value;
    Layout = "~/Views/Landing/_LandingLayout.cshtml";
}

<style>
    .trial-hero {
        background: linear-gradient(135deg, var(--darker) 0%, #1a0a0a 100%);
        padding: 6rem 0 4rem;
        position: relative;
        overflow: hidden;
    }

    .trial-hero::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -20%;
        width: 80%;
        height: 200%;
        background: radial-gradient(circle, rgba(220, 38, 38, 0.08) 0%, transparent 70%);
        pointer-events: none;
    }

    .trial-hero h1 {
        font-size: 3.5rem;
        font-weight: 800;
        color: var(--light);
        margin-bottom: 1.5rem;
        line-height: 1.2;
    }

    .trial-hero .sub-headline {
        font-size: 1.4rem;
        color: var(--text-tertiary);
        margin-bottom: 2rem;
        max-width: 600px;
    }

    .value-bullets {
        list-style: none;
        padding: 0;
        margin: 2rem 0;
    }

    .value-bullets li {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 0.75rem 0;
        color: var(--light);
        font-size: 1.1rem;
    }

    .value-bullets li i {
        color: var(--primary);
        font-size: 1.2rem;
        width: 24px;
    }

    .trial-cta-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1.25rem 3rem;
        background: var(--primary);
        color: white;
        font-size: 1.2rem;
        font-weight: 700;
        border: none;
        border-radius: 12px;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 4px 20px rgba(220, 38, 38, 0.4);
    }

    .trial-cta-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 30px rgba(220, 38, 38, 0.5);
        color: white;
        opacity: 0.9;
    }

    .helper-text {
        color: var(--text-tertiary);
        font-size: 0.9rem;
        margin-top: 1rem;
    }

    .section-title {
        font-size: 2rem;
        font-weight: 700;
        color: var(--text);
        margin-bottom: 2rem;
        text-align: center;
    }

    .explore-section {
        padding: 5rem 0;
        background: var(--dark);
    }

    .explore-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 2rem;
        max-width: 1000px;
        margin: 0 auto;
    }

    .explore-card {
        background: var(--glass);
        border: 1px solid var(--glass-border);
        border-radius: 16px;
        padding: 2rem;
        text-align: center;
        transition: all 0.3s ease;
        box-shadow: var(--shadow-sm);
    }

    .explore-card:hover {
        transform: translateY(-5px);
        border-color: var(--primary);
        box-shadow: var(--shadow-md);
    }

    .explore-card i {
        font-size: 2.5rem;
        color: var(--primary);
        margin-bottom: 1rem;
    }

    .explore-card h3 {
        color: var(--text);
        font-size: 1.2rem;
        margin-bottom: 0.5rem;
    }

    .explore-card p {
        color: var(--text-muted);
        font-size: 0.95rem;
    }

    .steps-section {
        padding: 5rem 0;
        background: var(--bg-secondary);
    }

    .steps-timeline {
        max-width: 700px;
        margin: 0 auto;
    }

    .step-item {
        display: flex;
        gap: 1.5rem;
        padding: 1.5rem 0;
        position: relative;
    }

    .step-number {
        width: 48px;
        height: 48px;
        background: var(--primary);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 1.2rem;
        flex-shrink: 0;
    }

    .step-content h4 {
        color: var(--text);
        font-size: 1.1rem;
        margin-bottom: 0.5rem;
    }

    .step-content p {
        color: var(--text-muted);
        font-size: 0.95rem;
        margin: 0;
    }

    .faq-section {
        padding: 5rem 0;
        background: var(--dark);
    }

    .faq-grid {
        max-width: 800px;
        margin: 0 auto;
    }

    .faq-item {
        background: var(--glass);
        border: 1px solid var(--glass-border);
        border-radius: 12px;
        padding: 1.5rem 2rem;
        margin-bottom: 1rem;
        box-shadow: var(--shadow-sm);
    }

    .faq-item h4 {
        color: var(--text);
        font-size: 1.1rem;
        margin-bottom: 0.75rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .faq-item h4 i {
        color: var(--primary);
    }

    .faq-item p {
        color: var(--text-muted);
        margin: 0;
        padding-right: 2rem;
    }

    .final-cta {
        padding: 5rem 0;
        background: linear-gradient(135deg, var(--darker) 0%, #1a0a0a 100%);
        text-align: center;
    }

    .final-cta h2 {
        font-size: 2.5rem;
        color: var(--light);
        margin-bottom: 1.5rem;
    }

    .final-cta p {
        color: var(--text-tertiary);
        font-size: 1.1rem;
        margin-bottom: 2rem;
    }

    @@media (max-width: 768px) {
        .trial-hero h1 {
            font-size: 2.2rem;
        }

        .trial-hero .sub-headline {
            font-size: 1.1rem;
        }

        .trial-cta-btn {
            padding: 1rem 2rem;
            font-size: 1rem;
        }
    }
</style>

<!-- Hero Section -->
<section class="trial-hero">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7">
                <h1>@L["FreeTrial_HeroTitle"]</h1>
                <p class="sub-headline">
                    @L["FreeTrial_HeroSubtitle1"]<br>
                    @L["FreeTrial_HeroSubtitle2"]
                </p>

                <ul class="value-bullets">
                    <li>
                        <i class="bi bi-check-circle-fill"></i>
                        @L["FreeTrial_Bullet1"]
                    </li>
                    <li>
                        <i class="bi bi-check-circle-fill"></i>
                        @L["FreeTrial_Bullet2"]
                    </li>
                    <li>
                        <i class="bi bi-check-circle-fill"></i>
                        @L["FreeTrial_Bullet3"]
                    </li>
                    <li>
                        <i class="bi bi-check-circle-fill"></i>
                        @L["FreeTrial_Bullet4"]
                    </li>
                </ul>

                <a href="/trial" class="trial-cta-btn">
                    <i class="bi bi-rocket-takeoff"></i>
                    @L["FreeTrial_StartButton"]
                </a>
                <p class="helper-text">
                    <i class="bi bi-shield-check"></i>
                    @L["FreeTrial_HelperText"]
                </p>
            </div>
            <div class="col-lg-5 d-none d-lg-block">
                <div class="text-center">
                    <img src="/images/grc-dashboard-preview.svg" alt="GRC Dashboard" style="max-width: 100%; opacity: 0.9;" onerror="this.style.display='none'">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- What You'll Explore -->
<section class="explore-section">
    <div class="container">
        <h2 class="section-title">@L["FreeTrial_ExploreTitle"]</h2>
        <div class="explore-grid">
            <div class="explore-card">
                <i class="bi bi-diagram-3"></i>
                <h3>@L["FreeTrial_Explore_Card1_Title"]</h3>
                <p>@L["FreeTrial_Explore_Card1_Desc"]</p>
            </div>
            <div class="explore-card">
                <i class="bi bi-file-earmark-check"></i>
                <h3>@L["FreeTrial_Explore_Card2_Title"]</h3>
                <p>@L["FreeTrial_Explore_Card2_Desc"]</p>
            </div>
            <div class="explore-card">
                <i class="bi bi-clipboard2-check"></i>
                <h3>@L["FreeTrial_Explore_Card3_Title"]</h3>
                <p>@L["FreeTrial_Explore_Card3_Desc"]</p>
            </div>
            <div class="explore-card">
                <i class="bi bi-graph-up-arrow"></i>
                <h3>@L["FreeTrial_Explore_Card4_Title"]</h3>
                <p>@L["FreeTrial_Explore_Card4_Desc"]</p>
            </div>
        </div>
    </div>
</section>

<!-- What Happens Next -->
<section class="steps-section">
    <div class="container">
        <h2 class="section-title">@L["FreeTrial_StepsTitle"]</h2>
        <div class="steps-timeline">
            <div class="step-item">
                <div class="step-number">1</div>
                <div class="step-content">
                    <h4>@L["FreeTrial_Step1_Title"]</h4>
                    <p>@L["FreeTrial_Step1_Desc"]</p>
                </div>
            </div>
            <div class="step-item">
                <div class="step-number">2</div>
                <div class="step-content">
                    <h4>@L["FreeTrial_Step2_Title"]</h4>
                    <p>@L["FreeTrial_Step2_Desc"]</p>
                </div>
            </div>
            <div class="step-item">
                <div class="step-number">3</div>
                <div class="step-content">
                    <h4>@L["FreeTrial_Step3_Title"]</h4>
                    <p>@L["FreeTrial_Step3_Desc"]</p>
                </div>
            </div>
            <div class="step-item">
                <div class="step-number">4</div>
                <div class="step-content">
                    <h4>@L["FreeTrial_Step4_Title"]</h4>
                    <p>@L["FreeTrial_Step4_Desc"]</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- FAQ -->
<section class="faq-section">
    <div class="container">
        <h2 class="section-title">@L["FreeTrial_FAQTitle"]</h2>
        <div class="faq-grid">
            <div class="faq-item">
                <h4><i class="bi bi-question-circle"></i> @L["FreeTrial_FAQ1_Question"]</h4>
                <p>@L["FreeTrial_FAQ1_Answer"]</p>
            </div>
            <div class="faq-item">
                <h4><i class="bi bi-question-circle"></i> @L["FreeTrial_FAQ2_Question"]</h4>
                <p>@L["FreeTrial_FAQ2_Answer"]</p>
            </div>
            <div class="faq-item">
                <h4><i class="bi bi-question-circle"></i> @L["FreeTrial_FAQ3_Question"]</h4>
                <p>@L["FreeTrial_FAQ3_Answer"]</p>
            </div>
            <div class="faq-item">
                <h4><i class="bi bi-question-circle"></i> @L["FreeTrial_FAQ4_Question"]</h4>
                <p>@L["FreeTrial_FAQ4_Answer"]</p>
            </div>
        </div>
    </div>
</section>

<!-- Final CTA -->
<section class="final-cta">
    <div class="container">
        <h2>@L["FreeTrial_FinalTitle"]</h2>
        <p>@L["FreeTrial_FinalDesc"]</p>
        <a href="/trial" class="trial-cta-btn">
            <i class="bi bi-rocket-takeoff"></i>
            @L["FreeTrial_StartButton"]
        </a>
    </div>
</section>
