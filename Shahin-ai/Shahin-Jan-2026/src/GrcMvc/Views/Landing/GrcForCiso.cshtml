@{
    ViewData["Title"] = "GRC Platform for Risk & Security Leaders";
    Layout = "~/Views/Landing/_LandingLayout.cshtml";
}

<style>
    .role-hero {
        background: linear-gradient(135deg, var(--darker) 0%, #1a0a1a 100%);
        padding: 6rem 0 4rem;
        position: relative;
        overflow: hidden;
    }

    .role-hero::before {
        content: '';
        position: absolute;
        top: -30%;
        right: -10%;
        width: 60%;
        height: 160%;
        background: radial-gradient(circle, rgba(99, 102, 241, 0.08) 0%, transparent 70%);
        pointer-events: none;
    }

    .role-hero h1 {
        font-size: 3rem;
        font-weight: 800;
        color: var(--light);
        margin-bottom: 1.5rem;
        line-height: 1.2;
    }

    .role-hero .sub-headline {
        font-size: 1.3rem;
        color: var(--text-muted);
        margin-bottom: 2rem;
        max-width: 650px;
    }

    .value-section {
        padding: 5rem 0;
        background: var(--dark);
    }

    .value-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        max-width: 1000px;
        margin: 0 auto;
    }

    .value-card {
        background: var(--glass);
        border: 1px solid var(--glass-border);
        border-radius: 16px;
        padding: 2rem;
        transition: all 0.3s ease;
    }

    .value-card:hover {
        border-color: #6366f1;
        transform: translateY(-5px);
    }

    .value-card i {
        font-size: 2.5rem;
        color: #6366f1;
        margin-bottom: 1rem;
    }

    .value-card h3 {
        color: var(--light);
        font-size: 1.2rem;
        margin-bottom: 0.75rem;
    }

    .value-card p {
        color: var(--text-muted);
        font-size: 0.95rem;
        margin: 0;
    }

    .benefits-section {
        padding: 5rem 0;
        background: var(--darker);
    }

    .benefits-list {
        max-width: 700px;
        margin: 0 auto;
    }

    .benefit-item {
        display: flex;
        align-items: flex-start;
        gap: 1.25rem;
        padding: 1.5rem;
        background: var(--glass);
        border: 1px solid var(--glass-border);
        border-left: 4px solid #6366f1;
        border-radius: 0 12px 12px 0;
        margin-bottom: 1rem;
    }

    .benefit-item i {
        font-size: 1.3rem;
        color: #6366f1;
        margin-top: 0.25rem;
    }

    .benefit-item div h4 {
        color: var(--light);
        font-size: 1.1rem;
        margin-bottom: 0.5rem;
    }

    .benefit-item div p {
        color: var(--text-muted);
        margin: 0;
        font-size: 0.95rem;
    }

    .role-cta {
        padding: 5rem 0;
        background: linear-gradient(135deg, var(--dark) 0%, #1a0a1a 100%);
        text-align: center;
    }

    .role-cta h2 {
        font-size: 2.2rem;
        color: var(--light);
        margin-bottom: 1rem;
    }

    .role-cta p {
        color: var(--text-muted);
        font-size: 1.1rem;
        margin-bottom: 2rem;
    }

    .role-cta-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1.25rem 2.5rem;
        background: #6366f1;
        color: white;
        font-size: 1.1rem;
        font-weight: 700;
        border: none;
        border-radius: 12px;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 4px 20px rgba(99, 102, 241, 0.4);
    }

    .role-cta-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 30px rgba(99, 102, 241, 0.5);
        color: white;
    }

    .section-title {
        font-size: 2rem;
        font-weight: 700;
        color: var(--light);
        margin-bottom: 2rem;
        text-align: center;
    }

    @@media (max-width: 768px) {
        .role-hero h1 {
            font-size: 2rem;
        }
    }
</style>

<!-- Hero Section -->
<section class="role-hero">
    <div class="container">
        <h1>GRC Platform for Risk & Security Leaders</h1>
        <p class="sub-headline">
            Turn risk management into accountable workflows tied to controls and evidence.
        </p>
        <a href="/trial" class="role-cta-btn">
            <i class="bi bi-shield-check"></i>
            Explore Risk Workflows
        </a>
    </div>
</section>

