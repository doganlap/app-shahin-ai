@{
    ViewData["Title"] = "GRC Software for Compliance Managers";
    Layout = "~/Views/Landing/_LandingLayout.cshtml";
}

<style>
    .role-hero {
        background: linear-gradient(135deg, var(--darker) 0%, #0a1a1a 100%);
        padding: 6rem 0 4rem;
        position: relative;
        overflow: hidden;
    }

    .role-hero::before {
        content: '';
        position: absolute;
        top: -30%;
        left: -10%;
        width: 60%;
        height: 160%;
        background: radial-gradient(circle, rgba(16, 185, 129, 0.08) 0%, transparent 70%);
        pointer-events: none;
    }

    .role-hero h1 {
        font-size: 3rem;
        font-weight: 800;
        color: var(--light);
        margin-bottom: 1.5rem;
        line-height: 1.2;
    }

    .role-hero .sub-headline {
        font-size: 1.3rem;
        color: var(--text-muted);
        margin-bottom: 2rem;
        max-width: 650px;
    }

    .pain-outcome {
        padding: 5rem 0;
        background: var(--dark);
    }

    .pain-outcome-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 2rem;
        max-width: 1100px;
        margin: 0 auto;
    }

    .pain-card {
        background: var(--glass);
        border: 1px solid var(--glass-border);
        border-radius: 16px;
        padding: 2rem;
        position: relative;
        overflow: hidden;
    }

    .pain-card .arrow {
        position: absolute;
        top: 50%;
        right: -1rem;
        transform: translateY(-50%);
        font-size: 2rem;
        color: var(--primary);
        z-index: 10;
    }

    .pain-card.pain {
        border-right-color: #ef4444;
    }

    .pain-card.outcome {
        border-right-color: #10b981;
    }

    .pain-card h4 {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        color: var(--light);
        font-size: 1.1rem;
        margin-bottom: 1rem;
    }

    .pain-card h4 i.pain-icon {
        color: #ef4444;
    }

    .pain-card h4 i.outcome-icon {
        color: #10b981;
    }

    .pain-card p {
        color: var(--text-muted);
        margin: 0;
        font-size: 0.95rem;
    }

    .transform-row {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 2rem;
        padding: 1.5rem;
        background: var(--glass);
        border-radius: 12px;
        border: 1px solid var(--glass-border);
    }

    .transform-row .pain-text {
        flex: 1;
        color: #ef4444;
        font-size: 1rem;
    }

    .transform-row .arrow {
        font-size: 1.5rem;
        color: var(--primary);
    }

    .transform-row .outcome-text {
        flex: 1;
        color: #10b981;
        font-size: 1rem;
    }

    .value-section {
        padding: 5rem 0;
        background: var(--darker);
    }

    .value-list {
        max-width: 700px;
        margin: 2rem auto;
    }

    .value-item {
        display: flex;
        align-items: flex-start;
        gap: 1.25rem;
        padding: 1.5rem;
        background: var(--glass);
        border: 1px solid var(--glass-border);
        border-radius: 12px;
        margin-bottom: 1rem;
        transition: all 0.3s ease;
    }

    .value-item:hover {
        border-color: var(--primary);
        transform: translateX(5px);
    }

    .value-item i {
        font-size: 1.5rem;
        color: var(--primary);
        margin-top: 0.25rem;
    }

    .value-item h4 {
        color: var(--light);
        font-size: 1.1rem;
        margin-bottom: 0.5rem;
    }

    .value-item p {
        color: var(--text-muted);
        margin: 0;
        font-size: 0.95rem;
    }

    .role-cta {
        padding: 5rem 0;
        background: linear-gradient(135deg, var(--dark) 0%, #0a1a1a 100%);
        text-align: center;
    }

    .role-cta h2 {
        font-size: 2.2rem;
        color: var(--light);
        margin-bottom: 1rem;
    }

    .role-cta p {
        color: var(--text-muted);
        font-size: 1.1rem;
        margin-bottom: 2rem;
    }

    .role-cta-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1.25rem 2.5rem;
        background: #10b981;
        color: white;
        font-size: 1.1rem;
        font-weight: 700;
        border: none;
        border-radius: 12px;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 4px 20px rgba(16, 185, 129, 0.4);
    }

    .role-cta-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 30px rgba(16, 185, 129, 0.5);
        color: white;
    }

    .section-title {
        font-size: 2rem;
        font-weight: 700;
        color: var(--light);
        margin-bottom: 2rem;
        text-align: center;
    }

    @@media (max-width: 768px) {
        .role-hero h1 {
            font-size: 2rem;
        }

        .transform-row {
            flex-direction: column;
            text-align: center;
        }

        .transform-row .arrow {
            transform: rotate(90deg);
        }
    }
</style>

<!-- Hero Section -->
<section class="role-hero">
    <div class="container">
        <h1>GRC Software for Compliance Managers</h1>
        <p class="sub-headline">
            Built to support real compliance operations — policies, controls, evidence, and audits — without manual overhead.
        </p>
        <a href="/trial" class="role-cta-btn">
            <i class="bi bi-clipboard-check"></i>
            Start a Compliance-Focused Trial
        </a>
    </div>
</section>

<!-- Pain → Outcome Transformation -->
<section class="pain-outcome">
    <div class="container">
        <h2 class="section-title">From Pain to Outcome</h2>

        <div class="transform-row">
            <div class="pain-text">
                <i class="bi bi-x-circle-fill"></i>
                Manual evidence chasing across teams
            </div>
            <div class="arrow">→</div>
            <div class="outcome-text">
                <i class="bi bi-check-circle-fill"></i>
                Structured evidence flow with ownership
            </div>
        </div>

        <div class="transform-row">
            <div class="pain-text">
                <i class="bi bi-x-circle-fill"></i>
                Fragmented controls in spreadsheets
            </div>
            <div class="arrow">→</div>
            <div class="outcome-text">
                <i class="bi bi-check-circle-fill"></i>
                Centralized control ownership & tracking
            </div>
        </div>

        <div class="transform-row">
            <div class="pain-text">
                <i class="bi bi-x-circle-fill"></i>
                Audit anxiety and last-minute scrambles
            </div>
            <div class="arrow">→</div>
            <div class="outcome-text">
                <i class="bi bi-check-circle-fill"></i>
                Always audit-ready with live status
            </div>
        </div>
    </div>
</section>

<!-- Key Value -->
<section class="value-section">
    <div class="container">
        <h2 class="section-title">What You Get</h2>
        <div class="value-list">
            <div class="value-item">
                <i class="bi bi-eye"></i>
                <div>
                    <h4>Centralized Compliance View</h4>
                    <p>See all frameworks, controls, and evidence status in one dashboard</p>
                </div>
            </div>
            <div class="value-item">
                <i class="bi bi-file-earmark-check"></i>
                <div>
                    <h4>Evidence & Control Tracking</h4>
                    <p>Assign owners, set deadlines, and track completion automatically</p>
                </div>
            </div>
            <div class="value-item">
                <i class="bi bi-clipboard2-pulse"></i>
                <div>
                    <h4>Audit-Ready at All Times</h4>
                    <p>No more scrambling — your compliance posture is always visible</p>
                </div>
            </div>
            <div class="value-item">
                <i class="bi bi-graph-up"></i>
                <div>
                    <h4>Real-time Compliance Scores</h4>
                    <p>Track progress and identify gaps before they become issues</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA -->
<section class="role-cta">
    <div class="container">
        <h2>Ready to Simplify Compliance?</h2>
        <p>See how the platform works for compliance managers — in a real trial environment.</p>
        <a href="/trial" class="role-cta-btn">
            <i class="bi bi-rocket-takeoff"></i>
            Start a Compliance-Focused Trial
        </a>
    </div>
</section>
