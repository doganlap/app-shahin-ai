            const suggestionBtns = document.querySelectorAll('.suggestion-btn');
            
            let isOpen = false;

            // Toggle chat
            chatToggle.addEventListener('click', () => {
                isOpen = !isOpen;
                chatWidget.classList.toggle('open', isOpen);
                chatToggle.classList.toggle('hidden', isOpen);
                if (isOpen) {
