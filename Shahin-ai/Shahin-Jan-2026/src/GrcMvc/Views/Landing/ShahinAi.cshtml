                    const data = await response.json();
                    removeTypingIndicator(typingId);
                    addMessage(data.response || 'عذراً، حدث خطأ. يرجى المحاولة مرة أخرى.', 'bot');

                } catch (error) {
                    removeTypingIndicator(typingId);
                    addMessage('مرحباً! 👋 كيف يمكنني مساعدتك اليوم؟ جرب التسجيل للحصول على تجربة مجانية!', 'bot');
