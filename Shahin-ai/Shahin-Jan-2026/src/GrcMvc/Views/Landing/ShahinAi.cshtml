@using GrcMvc.Services
@inject IAppInfoService AppInfo
@{
    ViewData["Title"] = AppInfo.FullName;
    Layout = null;
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="منصة شاهين - نظام متكامل لإدارة الحوكمة والمخاطر والامتثال. جرّب جميع المميزات مجاناً بدون قيود." />
    <meta name="keywords" content="GRC, حوكمة, مخاطر, امتثال, السعودية, NCA, SAMA, PDPL" />
    <meta name="author" content="@AppInfo.CompanyName" />
    <title>@AppInfo.Name - منصة الحوكمة والمخاطر والامتثال</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="~/images/brand/favicon-32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="~/images/brand/favicon-16.png" />
    <link rel="apple-touch-icon" sizes="128x128" href="~/images/brand/favicon-128.png" />
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@300;400;500;700;800;900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
    
    <style>
        /* CSS Variables removed - now using centralized theme from landing.css */
            --glass: rgba(255, 255, 255, 0.03);
            --glass-border: rgba(255, 255, 255, 0.08);
            --gradient-1: linear-gradient(135deg, #10b981, #3b82f6);
            --gradient-2: linear-gradient(135deg, #f59e0b, #ef4444);
            --gradient-3: linear-gradient(135deg, #8b5cf6, #ec4899);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html {
            scroll-behavior: smooth;
        }

        body {
            font-family: 'Tajawal', sans-serif;
            background: var(--darker);
            color: var(--light);
            line-height: 1.7;
            overflow-x: hidden;
        }

        /* ========== ANIMATED BACKGROUND ========== */
        .hero-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            overflow: hidden;
        }

        .hero-bg::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: 
                radial-gradient(ellipse at 20% 20%, rgba(16, 185, 129, 0.15) 0%, transparent 50%),
                radial-gradient(ellipse at 80% 80%, rgba(59, 130, 246, 0.1) 0%, transparent 50%),
                radial-gradient(ellipse at 50% 50%, rgba(245, 158, 11, 0.05) 0%, transparent 60%);
        }

        .orb {
            position: absolute;
            border-radius: 50%;
            filter: blur(80px);
            animation: float 20s ease-in-out infinite;
        }

        .orb-1 {
            width: 600px;
            height: 600px;
            background: rgba(16, 185, 129, 0.2);
            top: -200px;
            right: -200px;
            animation-delay: 0s;
        }

        .orb-2 {
            width: 500px;
            height: 500px;
            background: rgba(59, 130, 246, 0.15);
            bottom: -150px;
            left: -150px;
            animation-delay: -7s;
        }

        .orb-3 {
            width: 400px;
            height: 400px;
            background: rgba(245, 158, 11, 0.1);
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            animation-delay: -14s;
        }

        @@keyframes float {
            0%, 100% { transform: translate(0, 0) scale(1); }
            25% { transform: translate(30px, -30px) scale(1.05); }
            50% { transform: translate(-20px, 20px) scale(0.95); }
            75% { transform: translate(20px, 30px) scale(1.02); }
        }

        /* ========== GRID PATTERN ========== */
        .grid-pattern {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: 
                linear-gradient(rgba(255,255,255,0.02) 1px, transparent 1px),
                linear-gradient(90deg, rgba(255,255,255,0.02) 1px, transparent 1px);
            background-size: 60px 60px;
            z-index: -1;
        }

        /* ========== NAVIGATION ========== */
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
            padding: 1rem 2rem;
            transition: all 0.3s ease;
        }

        .navbar.scrolled {
            background: rgba(2, 6, 23, 0.95);
            backdrop-filter: blur(20px);
            border-bottom: 1px solid var(--glass-border);
        }

        .navbar-content {
            max-width: 1400px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            text-decoration: none;
        }

        .logo-icon {
            width: 48px;
            height: 48px;
            background: var(--gradient-1);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            font-weight: 900;
            color: white;
            box-shadow: 0 4px 20px rgba(16, 185, 129, 0.3);
        }

        .logo-text {
            font-size: 1.75rem;
            font-weight: 900;
            color: var(--light);
        }

        .nav-links {
            display: flex;
            align-items: center;
            gap: 2rem;
        }

        .nav-link {
            color: rgba(248, 250, 252, 0.7);
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .nav-link:hover {
            color: var(--primary);
        }

        /* Mega Menu Dropdown */
        .nav-dropdown {
            position: relative;
        }

        .nav-trigger {
            display: flex;
            align-items: center;
            gap: 0.3rem;
        }

        .nav-trigger i {
            font-size: 0.75rem;
            transition: transform 0.3s;
        }

        .nav-dropdown:hover .nav-trigger i {
            transform: rotate(180deg);
        }

        .mega-menu {
            position: absolute;
            top: 100%;
            right: 0;
            background: rgba(15, 23, 42, 0.98);
            backdrop-filter: blur(20px);
            border: 1px solid var(--glass-border);
            border-radius: 16px;
            padding: 1.5rem;
            min-width: 600px;
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 1.5rem;
            opacity: 0;
            visibility: hidden;
            transform: translateY(10px);
            transition: all 0.3s ease;
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5);
        }

        .mega-menu-sm {
            min-width: 250px;
            grid-template-columns: 1fr;
        }

        .nav-dropdown:hover .mega-menu {
            opacity: 1;
            visibility: visible;
            transform: translateY(0);
        }

        .mega-menu-section h4 {
            font-size: 0.85rem;
            color: var(--primary);
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .mega-menu-section a {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.6rem 0.75rem;
            color: rgba(248, 250, 252, 0.8);
            text-decoration: none;
            border-radius: 8px;
            font-size: 0.9rem;
            transition: all 0.2s;
        }

        .mega-menu-section a:hover {
            background: rgba(16, 185, 129, 0.1);
            color: var(--primary);
        }

        .mega-menu-section a i {
            color: var(--primary);
            font-size: 1rem;
        }

        .mega-menu-section.highlight {
            background: rgba(16, 185, 129, 0.05);
            border-radius: 12px;
            padding: 1rem;
        }

        .mega-promo {
            text-align: center;
        }

        .mega-promo i {
            font-size: 2rem;
            color: var(--accent);
            margin-bottom: 0.5rem;
        }

        .mega-promo h5 {
            font-size: 1rem;
            margin-bottom: 0.25rem;
        }

        .mega-promo p {
            font-size: 0.8rem;
            color: rgba(248, 250, 252, 0.6);
            margin-bottom: 0.75rem;
        }

        .btn-sm {
            padding: 0.5rem 1rem;
            font-size: 0.85rem;
        }

        .btn-demo-nav {
            background: transparent;
            border: 1px solid var(--accent);
            color: var(--accent);
        }

        .btn-demo-nav:hover {
            background: var(--accent);
            color: var(--dark);
        }

        /* Language Toggle */
        .lang-toggle {
            display: flex;
            background: var(--glass);
            border: 1px solid var(--glass-border);
            border-radius: 8px;
            overflow: hidden;
        }

        .lang-switch {
            padding: 0.5rem 0.75rem;
            background: transparent;
            border: none;
            color: rgba(248, 250, 252, 0.6);
            font-size: 0.85rem;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.2s;
            font-family: inherit;
        }

        .lang-switch.active {
            background: var(--primary);
            color: white;
        }

        .lang-switch:hover:not(.active) {
            color: var(--light);
            background: rgba(255, 255, 255, 0.05);
        }

        .nav-cta {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .btn {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1.5rem;
            border-radius: 10px;
            font-weight: 700;
            text-decoration: none;
            transition: all 0.3s ease;
            font-size: 0.95rem;
        }

        .btn-outline {
            border: 1px solid var(--glass-border);
            color: var(--light);
            background: transparent;
        }

        .btn-outline:hover {
            border-color: var(--primary);
            color: var(--primary);
        }

        .btn-primary {
            background: var(--gradient-1);
            color: white;
            border: none;
            box-shadow: 0 4px 20px rgba(16, 185, 129, 0.3);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 30px rgba(16, 185, 129, 0.4);
        }

        /* ========== HERO SECTION ========== */
        .hero {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 8rem 2rem 4rem;
            position: relative;
        }

        .hero-content {
            max-width: 1000px;
            text-align: center;
        }

        /* Hero Carousel */
        .hero-carousel {
            position: relative;
            min-height: 320px;
        }

        .carousel-slide {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            opacity: 0;
            visibility: hidden;
            transform: translateY(20px);
            transition: all 0.6s ease;
        }

        .carousel-slide.active {
            position: relative;
            opacity: 1;
            visibility: visible;
            transform: translateY(0);
        }

        .carousel-indicators {
            display: flex;
            justify-content: center;
            gap: 0.75rem;
            margin-bottom: 2rem;
        }

        .indicator {
            width: 40px;
            height: 4px;
            background: rgba(255, 255, 255, 0.2);
            border: none;
            border-radius: 2px;
            cursor: pointer;
            transition: all 0.3s;
        }

        .indicator.active {
            background: var(--primary);
            width: 60px;
        }

        .indicator:hover {
            background: rgba(16, 185, 129, 0.5);
        }

        .hero-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            background: rgba(16, 185, 129, 0.1);
            border: 1px solid rgba(16, 185, 129, 0.3);
            color: var(--primary);
            padding: 0.75rem 1.5rem;
            border-radius: 50px;
            font-size: 0.95rem;
            font-weight: 600;
            margin-bottom: 2rem;
            animation: pulse-glow 2s ease-in-out infinite;
        }

        @@keyframes pulse-glow {
            0%, 100% { box-shadow: 0 0 20px rgba(16, 185, 129, 0.2); }
            50% { box-shadow: 0 0 40px rgba(16, 185, 129, 0.4); }
        }

        .hero-title {
            font-size: clamp(2.5rem, 6vw, 4.5rem);
            font-weight: 900;
            line-height: 1.2;
            margin-bottom: 1.5rem;
        }

        .gradient-text {
            background: var(--gradient-1);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .hero-subtitle {
            font-size: 1.35rem;
            color: rgba(248, 250, 252, 0.7);
            max-width: 800px;
            margin: 0 auto 2.5rem;
            line-height: 1.8;
        }

        .hero-cta {
            display: flex;
            justify-content: center;
            gap: 1.25rem;
            margin-bottom: 3rem;
            flex-wrap: wrap;
        }

        .btn-hero {
            padding: 1.1rem 2.5rem;
            font-size: 1.1rem;
            border-radius: 14px;
        }

        .btn-demo {
            background: var(--accent);
            border: none;
            color: var(--dark);
        }

        .btn-demo:hover {
            background: var(--accent-dark);
            transform: translateY(-2px);
        }

        .btn-outline-light {
            background: transparent;
            border: 1px solid var(--glass-border);
            color: var(--light);
        }

        .btn-outline-light:hover {
            background: var(--glass);
            border-color: rgba(255,255,255,0.2);
        }

        .hero-trust {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 2rem;
            flex-wrap: wrap;
            opacity: 0.6;
            font-size: 0.9rem;
        }

        .trust-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .trust-item i {
            color: var(--primary);
        }

        /* ========== STATS SECTION ========== */
        .stats-section {
            padding: 4rem 2rem;
            background: rgba(16, 185, 129, 0.03);
            border-top: 1px solid var(--glass-border);
            border-bottom: 1px solid var(--glass-border);
        }

        .stats-container {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 2rem;
        }

        .stat-item {
            text-align: center;
            padding: 1.5rem;
        }

        .stat-number {
            font-size: 3.5rem;
            font-weight: 900;
            background: var(--gradient-1);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            display: inline;
        }

        .stat-suffix {
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary);
            display: inline;
        }

        .stat-label {
            font-size: 1.1rem;
            font-weight: 700;
            margin-top: 0.5rem;
        }

        .stat-desc {
            font-size: 0.85rem;
            color: rgba(248, 250, 252, 0.5);
            margin-top: 0.25rem;
        }

        @@media (max-width: 768px) {
            .stats-container {
                grid-template-columns: repeat(2, 1fr);
            }
            .stat-number {
                font-size: 2.5rem;
            }
        }

        /* ========== TRUSTED BY SECTION ========== */
        .trusted-section {
            padding: 4rem 2rem;
        }

        .trusted-container {
            max-width: 1200px;
            margin: 0 auto;
            text-align: center;
        }

        .trusted-label {
            font-size: 0.9rem;
            color: rgba(248, 250, 252, 0.5);
            margin-bottom: 2rem;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .trusted-logos {
            display: flex;
            justify-content: center;
            gap: 3rem;
            flex-wrap: wrap;
            margin-bottom: 2rem;
        }

        .logo-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 0.5rem;
            color: rgba(248, 250, 252, 0.4);
            transition: all 0.3s;
        }

        .logo-item:hover {
            color: var(--primary);
        }

        .logo-item i {
            font-size: 2.5rem;
        }

        .logo-item span {
            font-size: 0.8rem;
        }

        .trust-badges {
            display: flex;
            justify-content: center;
            gap: 1.5rem;
            flex-wrap: wrap;
        }

        .badge-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            background: rgba(16, 185, 129, 0.1);
            border: 1px solid rgba(16, 185, 129, 0.2);
            padding: 0.5rem 1rem;
            border-radius: 50px;
            font-size: 0.85rem;
            color: var(--primary);
        }

        /* ========== SCHEDULE DEMO SECTION ========== */
        .demo-section {
            padding: 6rem 2rem;
            background: linear-gradient(135deg, rgba(16, 185, 129, 0.05) 0%, rgba(59, 130, 246, 0.05) 100%);
            border-top: 1px solid var(--glass-border);
        }

        .demo-container {
            max-width: 800px;
            margin: 0 auto;
        }

        .demo-content {
            background: var(--glass);
            border: 1px solid var(--glass-border);
            border-radius: 24px;
            padding: 3rem;
            text-align: center;
        }

        .demo-icon {
            width: 80px;
            height: 80px;
            background: var(--gradient-1);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            font-size: 2rem;
            color: white;
        }

        .demo-content h2 {
            font-size: 2rem;
            margin-bottom: 1rem;
        }

        .demo-content > p {
            color: rgba(248, 250, 252, 0.7);
            margin-bottom: 2rem;
        }

        .demo-features {
            display: flex;
            justify-content: center;
            gap: 2rem;
            margin-bottom: 2rem;
            flex-wrap: wrap;
        }

        .demo-feature {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.9rem;
            color: rgba(248, 250, 252, 0.8);
        }

        .demo-feature i {
            color: var(--primary);
        }

        .demo-form {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
        }

        .demo-form input,
        .demo-form select {
            background: rgba(0, 0, 0, 0.3);
            border: 1px solid var(--glass-border);
            border-radius: 12px;
            padding: 1rem 1.25rem;
            color: var(--light);
            font-size: 1rem;
            font-family: inherit;
            transition: all 0.3s;
        }

        .demo-form input:focus,
        .demo-form select:focus {
            outline: none;
            border-color: var(--primary);
            background: rgba(16, 185, 129, 0.05);
        }

        .demo-form input::placeholder {
            color: rgba(248, 250, 252, 0.4);
        }

        .demo-form select option {
            background: var(--dark);
        }

        .btn-lg {
            padding: 1.25rem 2rem;
            font-size: 1.1rem;
        }

        @@media (max-width: 640px) {
            .form-row {
                grid-template-columns: 1fr;
            }
            .demo-features {
                flex-direction: column;
                align-items: center;
            }
        }

        /* ========== JOURNEY SECTION ========== */
        .journey-section {
            padding: 6rem 2rem;
            background: var(--glass);
            border-top: 1px solid var(--glass-border);
            border-bottom: 1px solid var(--glass-border);
        }

        .journey-flow {
            display: flex;
            justify-content: center;
            align-items: stretch;
            gap: 0;
            margin-bottom: 3rem;
            flex-wrap: wrap;
        }

        .journey-step {
            flex: 1;
            min-width: 280px;
            max-width: 350px;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            padding: 2rem;
            position: relative;
        }

        .journey-icon {
            width: 80px;
            height: 80px;
            background: var(--gradient-1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            color: white;
            margin-bottom: 1.5rem;
            box-shadow: 0 10px 40px rgba(16, 185, 129, 0.3);
            position: relative;
            z-index: 2;
        }

        .journey-icon.accent {
            background: var(--gradient-2);
            box-shadow: 0 10px 40px rgba(245, 158, 11, 0.3);
        }

        .journey-icon.success {
            background: var(--gradient-3);
            box-shadow: 0 10px 40px rgba(139, 92, 246, 0.3);
        }

        .journey-content h3 {
            font-size: 1.25rem;
            font-weight: 800;
            margin-bottom: 0.75rem;
        }

        .journey-content p {
            color: rgba(248, 250, 252, 0.6);
            font-size: 0.95rem;
            line-height: 1.7;
        }

        .journey-arrow {
            position: absolute;
            left: -20px;
            top: 55px;
            color: rgba(248, 250, 252, 0.2);
            font-size: 1.5rem;
        }

        .journey-step:last-child .journey-arrow {
            display: none;
        }

        .journey-result {
            display: flex;
            justify-content: center;
        }

        .result-card {
            display: flex;
            align-items: center;
            gap: 1.5rem;
            background: rgba(16, 185, 129, 0.1);
            border: 1px solid rgba(16, 185, 129, 0.2);
            border-radius: 16px;
            padding: 1.5rem 2.5rem;
            max-width: 700px;
        }

        .result-icon {
            width: 56px;
            height: 56px;
            background: var(--primary);
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            color: white;
            flex-shrink: 0;
        }

        .result-text {
            font-size: 1.05rem;
            color: rgba(248, 250, 252, 0.85);
        }

        .result-text strong {
            color: var(--primary);
        }

        /* ========== VALUE PROPOSITION ========== */
        .value-section {
            padding: 6rem 2rem;
            position: relative;
        }

        .section-container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .section-header {
            text-align: center;
            margin-bottom: 4rem;
        }

        .section-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            background: rgba(245, 158, 11, 0.1);
            border: 1px solid rgba(245, 158, 11, 0.3);
            color: var(--accent);
            padding: 0.5rem 1rem;
            border-radius: 50px;
            font-size: 0.85rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
        }

