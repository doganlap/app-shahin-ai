@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> L
@using GrcMvc.Services
@using GrcMvc.Services.Interfaces
@inject IAppInfoService AppInfo
@inject ISiteSettingsService SiteSettings
@{
    ViewData["Title"] = L["Landing_Contact"].Value + " - " + AppInfo.Name;
    Layout = "_LandingLayout";
}

<section class="contact-hero">
    <div class="container">
        <div class="section-header fade-up">
            <div class="section-badge">
                <i class="bi bi-chat-dots"></i>
                <span>@L["Landing_Contact"]</span>
            </div>
            <h1 class="section-title">@L["Landing_ContactTitle"]</h1>
            <p class="section-subtitle">
                @L["Landing_ContactSubtitle"]
            </p>
        </div>

        <div class="contact-content fade-up">
            <div class="contact-info">
                <h3>@L["Landing_ContactMethods"]</h3>

                <div class="contact-item">
                    <div class="contact-icon"><i class="bi bi-envelope"></i></div>
                    <div class="contact-details">
                        <h4>@L["Landing_Email"]</h4>
                        <p>@SiteSettings.InfoEmail</p>
                        <p>@SiteSettings.SupportEmail</p>
                    </div>
                </div>

                <div class="contact-item">
                    <div class="contact-icon"><i class="bi bi-telephone"></i></div>
                    <div class="contact-details">
                        <h4>الهاتف</h4>
                        <p dir="ltr">@SiteSettings.PhoneNumberDisplay</p>
                        <p class="note">@SiteSettings.BusinessHoursAr</p>
                    </div>
                </div>

                <div class="contact-item">
                    <div class="contact-icon"><i class="bi bi-geo-alt"></i></div>
                    <div class="contact-details">
                        <h4>العنوان</h4>
                        <p>@SiteSettings.FullAddressAr</p>
                    </div>
                </div>

                <div class="contact-item">
                    <div class="contact-icon"><i class="bi bi-clock"></i></div>
                    <div class="contact-details">
                        <h4>ساعات العمل</h4>
                        <p>@SiteSettings.BusinessHoursAr</p>
                        <p>الجمعة - السبت: مغلق</p>
                    </div>
                </div>

                <div class="social-links">
                    <h4>تابعنا</h4>
                    <div class="social-icons">
                        @if (SiteSettings.HasLinkedIn)
                        {
                            <a href="@SiteSettings.LinkedInUrl" target="_blank" rel="noopener" class="social-icon"><i class="bi bi-linkedin"></i></a>
                        }
                        @if (SiteSettings.HasTwitter)
                        {
                            <a href="@SiteSettings.TwitterUrl" target="_blank" rel="noopener" class="social-icon"><i class="bi bi-twitter-x"></i></a>
                        }
                        @if (SiteSettings.HasYouTube)
                        {
                            <a href="@SiteSettings.YouTubeUrl" target="_blank" rel="noopener" class="social-icon"><i class="bi bi-youtube"></i></a>
                        }
                    </div>
                </div>
            </div>

            <div class="contact-form-wrapper">
                <h3>أرسل رسالة</h3>
                <form id="contactForm" class="contact-form" novalidate>
                    @Html.AntiForgeryToken()

                    <div id="form-success" class="alert alert-success d-none" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        شكراً لتواصلك معنا! سنرد عليك في أقرب وقت.
                    </div>

                    <div id="form-error" class="alert alert-danger d-none" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        حدث خطأ أثناء إرسال الرسالة. يرجى المحاولة مرة أخرى.
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="name">الاسم الكامل <span class="text-danger">*</span></label>
                            <input type="text"
                                   id="name"
                                   name="name"
                                   required
                                   minlength="2"
                                   maxlength="100"
                                   placeholder="أدخل اسمك"
                                   autocomplete="name"
                                   aria-required="true"
                                   aria-describedby="name-error">
                            <div id="name-error" class="invalid-feedback">يرجى إدخال الاسم الكامل (على الأقل حرفين)</div>
                        </div>
                        <div class="form-group">
                            <label for="email">البريد الإلكتروني <span class="text-danger">*</span></label>
                            <input type="email"
                                   id="email"
                                   name="email"
                                   required
                                   pattern="[a-z0-9._%+-]+@@[a-z0-9.-]+\.[a-z]{2,}$"
                                   placeholder="example@domain.com"
                                   autocomplete="email"
                                   aria-required="true"
                                   aria-describedby="email-error">
                            <div id="email-error" class="invalid-feedback">يرجى إدخال بريد إلكتروني صحيح</div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="company">اسم المنظمة</label>
                            <input type="text"
                                   id="company"
                                   name="company"
                                   maxlength="150"
                                   placeholder="اسم شركتك (اختياري)"
                                   autocomplete="organization">
                        </div>
                        <div class="form-group">
                            <label for="phone">رقم الهاتف</label>
                            <input type="tel"
                                   id="phone"
                                   name="phone"
                                   pattern="[\+]?[0-9\s\-]{8,20}"
                                   placeholder="+966 XX XXX XXXX"
                                   autocomplete="tel"
                                   aria-describedby="phone-error">
                            <div id="phone-error" class="invalid-feedback">يرجى إدخال رقم هاتف صحيح</div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="subject">الموضوع <span class="text-danger">*</span></label>
                        <select id="subject"
                                name="subject"
                                required
                                aria-required="true"
                                aria-describedby="subject-error">
                            <option value="">اختر موضوع الرسالة</option>
                            <option value="sales">استفسار عن المبيعات</option>
                            <option value="demo">طلب عرض توضيحي</option>
                            <option value="support">الدعم الفني</option>
                            <option value="partnership">الشراكات</option>
                            <option value="other">أخرى</option>
                        </select>
                        <div id="subject-error" class="invalid-feedback">يرجى اختيار موضوع الرسالة</div>
                    </div>

                    <div class="form-group">
                        <label for="message">الرسالة <span class="text-danger">*</span></label>
                        <textarea id="message"
                                  name="message"
                                  rows="5"
                                  required
                                  minlength="10"
                                  maxlength="2000"
                                  placeholder="اكتب رسالتك هنا..."
                                  aria-required="true"
                                  aria-describedby="message-error"></textarea>
                        <div id="message-error" class="invalid-feedback">يرجى كتابة رسالتك (على الأقل 10 أحرف)</div>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg" id="submitBtn">
                        <i class="bi bi-send" aria-hidden="true"></i>
                        <span id="submitText">إرسال الرسالة</span>
                        <span id="submitSpinner" class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                    </button>
                </form>
            </div>
        </div>

        <!-- Quick Links -->
        <div class="quick-links fade-up">
            <h3>روابط سريعة</h3>
            <div class="links-grid">
                <a href="/Help" class="quick-link">
                    <i class="bi bi-question-circle"></i>
                    <span>مركز المساعدة</span>
                </a>
                <a href="/Help/FAQ" class="quick-link">
                    <i class="bi bi-chat-left-text"></i>
                    <span>الأسئلة الشائعة</span>
                </a>
                <a href="/Landing/Pricing" class="quick-link">
                    <i class="bi bi-tag"></i>
                    <span>الأسعار</span>
                </a>
                <a href="/trial" class="quick-link">
                    <i class="bi bi-rocket-takeoff"></i>
                    <span>التجربة المجانية</span>
                </a>
            </div>
        </div>
    </div>
</section>

