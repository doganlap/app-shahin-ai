@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> L
@model GrcMvc.Controllers.LandingPageViewModel
@{
    ViewData["Title"] = L["Landing_Title"].Value;
    ViewData["MetaDescription"] = L["Landing_MetaDescription"].Value;
    Layout = "_LandingLayout";
}

<!-- Hero Section -->
<section class="hero-section" aria-labelledby="hero-title">
    <div class="container">
        <div class="hero-content">
            <div class="hero-badge scroll-reveal" role="status">
                <span class="hero-badge-dot" aria-hidden="true"></span>
                <span>@L["Landing_HeroBadge"]</span>
            </div>

            <h1 id="hero-title" class="hero-title scroll-reveal scroll-reveal-delay-1">
                @L["Landing_HeroTitle"]
                <br>
                <span class="hero-title-gradient">@L["Landing_HeroTitleAI"]</span>
                <br>
                @L["Landing_HeroTitleFor"]
            </h1>

            <p class="hero-subtitle scroll-reveal scroll-reveal-delay-2">
                @L["Landing_HeroSubtitle"]
            </p>

            <div class="hero-actions scroll-reveal scroll-reveal-delay-3">
                <a href="/trial" class="btn btn-gradient btn-lg">
                    @L["Landing_StartFreeTrial"]
                    <i class="bi bi-arrow-left-circle-fill" aria-hidden="true"></i>
                </a>
                <a href="/contact" class="btn btn-outline btn-lg">@L["Landing_BookDemo"]</a>
            </div>
        </div>
    </div>
</section>

@* Client Logos Section - Will be enabled once we have real customers
