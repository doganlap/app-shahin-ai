@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> L
@model dynamic
@{
    ViewData["Title"] = "Program Execution Monitoring";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-speedometer2"></i> @L["ProgramExecutionMonitoring"]</h2>
            <p class="text-muted">@L["TrackRealTimeProgressAndPerformanceOfGRCPrograms"]</p>
        </div>
        <div class="col text-end">
            <a asp-action="Definition" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> @L["BackToPrograms"]
            </a>
            <button class="btn btn-primary">
                <i class="bi bi-file-earmark-pdf"></i> @L["ExecutionReport"]
            </button>
        </div>
    </div>

    <!-- Execution Dashboard -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white shadow-sm">
                <div class="card-body text-center">
                    <h6 class="opacity-75">@L["OverallProgress"]</h6>
                    <h1 class="mb-0">68%</h1>
                    <small>@L["AcrossAllPrograms"]</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white shadow-sm">
                <div class="card-body text-center">
                    <h6 class="opacity-75">@L["OnTrack"]</h6>
                    <h2 class="mb-0">4</h2>
                    <small>@L["of"] 5 @L["programs"]</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark shadow-sm">
                <div class="card-body text-center">
                    <h6>@L["AtRisk"]</h6>
                    <h2 class="mb-0">1</h2>
                    <small>@L["needsAttention"]</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white shadow-sm">
                <div class="card-body text-center">
                    <h6 class="opacity-75">@L["Milestones"]</h6>
                    <h2 class="mb-0">12/18</h2>
                    <small>@L["completed"]</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Program Execution Matrix -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-grid-3x3"></i> @L["ProgramExecutionMatrix"]</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>@L["Program"]</th>
                                    <th>@L["Progress"]</th>
                                    <th>@L["ScheduleVariance"]</th>
                                    <th>@L["CostVariance"]</th>
                                    <th>@L["QualityScore"]</th>
                                    <th>@L["RiskScore"]</th>
                                    <th>@L["Health"]</th>
                                    <th>@L["Actions"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <strong><i class="bi bi-shield-check"></i> ISO 27001</strong>
                                        <br /><small class="text-muted">8 initiatives</small>
                                    </td>
                                    <td>
                                        <div class="progress" style="width: 100px; height: 20px;">
                                            <div class="progress-bar bg-success" style="width: 75%">75%</div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-success">
                                            <i class="bi bi-arrow-up"></i> +5%
                                        </span>
                                        <br /><small class="text-muted">@L["aheadOfSchedule"]</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-success">
                                            <i class="bi bi-dash"></i> -$50K
                                        </span>
                                        <br /><small class="text-muted">@L["underBudget"]</small>
                                    </td>
                                    <td>
                                        <div class="text-center">
                                            <h5 class="mb-0 text-success">92/100</h5>
                                            <small class="text-muted">@L["excellent"]</small>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="text-center">
                                            <h5 class="mb-0 text-success">Low</h5>
                                            <small class="text-muted">3/10</small>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-success px-3 py-2">
                                            <i class="bi bi-heart-fill"></i> @L["Excellent"]
                                        </span>
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary" title="@L["ViewDetails"]">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <strong><i class="bi bi-exclamation-triangle"></i> Risk Mgmt</strong>
                                        <br /><small class="text-muted">5 initiatives</small>
                                    </td>
                                    <td>
                                        <div class="progress" style="width: 100px; height: 20px;">
                                            <div class="progress-bar bg-info" style="width: 60%">60%</div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-success">
                                            <i class="bi bi-dash"></i> 0%
                                        </span>
                                        <br /><small class="text-muted">@L["onSchedule"]</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-success">
                                            <i class="bi bi-dash"></i> -$40K
                                        </span>
                                        <br /><small class="text-muted">@L["underBudget"]</small>
                                    </td>
                                    <td>
                                        <div class="text-center">
                                            <h5 class="mb-0 text-info">85/100</h5>
                                            <small class="text-muted">@L["good"]</small>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="text-center">
                                            <h5 class="mb-0 text-info">Medium</h5>
                                            <small class="text-muted">5/10</small>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-success px-3 py-2">
                                            <i class="bi bi-heart-fill"></i> @L["Good"]
                                        </span>
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary" title="@L["ViewDetails"]">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </td>
                                </tr>
                                <tr class="table-warning">
                                    <td>
                                        <strong><i class="bi bi-check-square"></i> Compliance</strong>
                                        <br /><small class="text-muted">4 initiatives</small>
                                    </td>
                                    <td>
                                        <div class="progress" style="width: 100px; height: 20px;">
                                            <div class="progress-bar bg-warning" style="width: 45%">45%</div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-danger">
                                            <i class="bi bi-arrow-down"></i> -12%
                                        </span>
                                        <br /><small class="text-muted">@L["behindSchedule"]</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-danger">
                                            <i class="bi bi-arrow-up"></i> +$20K
                                        </span>
                                        <br /><small class="text-muted">@L["overBudget"]</small>
                                    </td>
                                    <td>
                                        <div class="text-center">
                                            <h5 class="mb-0 text-warning">72/100</h5>
                                            <small class="text-muted">@L["fair"]</small>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="text-center">
                                            <h5 class="mb-0 text-warning">High</h5>
                                            <small class="text-muted">7/10</small>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-warning text-dark px-3 py-2">
                                            <i class="bi bi-exclamation-triangle"></i> @L["AtRisk"]
                                        </span>
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary" title="@L["ViewDetails"]">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <strong><i class="bi bi-shield-lock"></i> BC Program</strong>
                                        <br /><small class="text-muted">3 initiatives</small>
                                    </td>
                                    <td>
                                        <div class="progress" style="width: 100px; height: 20px;">
                                            <div class="progress-bar bg-success" style="width: 82%">82%</div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-success">
                                            <i class="bi bi-arrow-up"></i> +8%
                                        </span>
                                        <br /><small class="text-muted">@L["aheadOfSchedule"]</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-success">
                                            <i class="bi bi-dash"></i> -$15K
                                        </span>
                                        <br /><small class="text-muted">@L["underBudget"]</small>
                                    </td>
                                    <td>
                                        <div class="text-center">
                                            <h5 class="mb-0 text-success">88/100</h5>
                                            <small class="text-muted">@L["good"]</small>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="text-center">
                                            <h5 class="mb-0 text-success">Low</h5>
                                            <small class="text-muted">2/10</small>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-success px-3 py-2">
                                            <i class="bi bi-heart-fill"></i> @L["Excellent"]
                                        </span>
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary" title="@L["ViewDetails"]">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <strong><i class="bi bi-stars"></i> Maturity</strong>
                                        <br /><small class="text-muted">3 initiatives</small>
                                    </td>
                                    <td>
                                        <div class="progress" style="width: 100px; height: 20px;">
                                            <div class="progress-bar bg-primary" style="width: 55%">55%</div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-success">
                                            <i class="bi bi-dash"></i> 0%
                                        </span>
                                        <br /><small class="text-muted">@L["onSchedule"]</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-success">
                                            <i class="bi bi-dash"></i> -$35K
                                        </span>
                                        <br /><small class="text-muted">@L["underBudget"]</small>
                                    </td>
                                    <td>
                                        <div class="text-center">
                                            <h5 class="mb-0 text-info">80/100</h5>
                                            <small class="text-muted">@L["good"]</small>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="text-center">
                                            <h5 class="mb-0 text-success">Low</h5>
                                            <small class="text-muted">4/10</small>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-success px-3 py-2">
                                            <i class="bi bi-heart-fill"></i> @L["Good"]
                                        </span>
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary" title="@L["ViewDetails"]">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts -->
    <div class="row mb-4">
        <div class="col-lg-6 mb-3">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="bi bi-graph-up-arrow"></i> @L["ProgressTrend"]</h6>
                </div>
                <div class="card-body">
                    <canvas id="progressChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-3">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="bi bi-bar-chart"></i> @L["MilestoneCompletion"]</h6>
                </div>
                <div class="card-body">
                    <canvas id="milestonesChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Key Issues and Risks -->
    <div class="row mb-4">
        <div class="col-lg-6">
            <div class="card shadow-sm border-warning">
                <div class="card-header bg-warning text-dark">
                    <h6 class="mb-0"><i class="bi bi-exclamation-triangle"></i> @L["KeyIssues"]</h6>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h6 class="mb-1">@L["ComplianceAutomationBehindSchedule"]</h6>
                                    <p class="mb-1 small">@L["TechnicalComplexityAndResourceConstraints"]</p>
                                    <small class="text-muted">@L["Program"]: Compliance Automation</small>
                                </div>
                                <span class="badge bg-danger">Critical</span>
                            </div>
                        </div>
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h6 class="mb-1">@L["BudgetOverrunIn1Program"]</h6>
                                    <p class="mb-1 small">@L["UnexpectedConsultingCosts"]</p>
                                    <small class="text-muted">@L["Program"]: Compliance Automation</small>
                                </div>
                                <span class="badge bg-warning text-dark">High</span>
                            </div>
                        </div>
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h6 class="mb-1">@L["ResourceContention"]</h6>
                                    <p class="mb-1 small">@L["KeyPersonnelSharedAcrossMultiplePrograms"]</p>
                                    <small class="text-muted">@L["Affects"]: 3 programs</small>
                                </div>
                                <span class="badge bg-info">Medium</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow-sm border-success">
                <div class="card-header bg-success text-white">
                    <h6 class="mb-0"><i class="bi bi-check-circle"></i> @L["RecentAccomplishments"]</h6>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                <div>
                                    <h6 class="mb-1">@L["BCPDrillCompleted"]</h6>
                                    <small class="text-muted">Business Continuity Program - Jan 8, 2026</small>
                                </div>
                            </div>
                        </div>
                        <div class="list-group-item">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                <div>
                                    <h6 class="mb-1">@L["ISO27001GapAnalysisFinished"]</h6>
                                    <small class="text-muted">ISO 27001 Certification - Jan 5, 2026</small>
                                </div>
                            </div>
                        </div>
                        <div class="list-group-item">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                <div>
                                    <h6 class="mb-1">@L["RiskRegisterUpdated"]</h6>
                                    <small class="text-muted">Risk Management Enhancement - Jan 3, 2026</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recommendations -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-primary">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-lightbulb"></i> @L["ExecutionRecommendations"]</h5>
                </div>
                <div class="card-body">
                    <ol>
                        <li class="mb-2">
                            <strong>@L["PrioritizeComplianceAutomation"]</strong>
                            <p class="text-muted small mb-0">@L["AllocateAdditionalResourcesOrAdjustTimelineForAtRiskProgram"]</p>
                        </li>
                        <li class="mb-2">
                            <strong>@L["ReviewBudgetAllocation"]</strong>
                            <p class="text-muted small mb-0">@L["AddressOverrunInComplianceAutomationAndReallocateSavingsFromOtherPrograms"]</p>
                        </li>
                        <li>
                            <strong>@L["OptimizeResourceUtilization"]</strong>
                            <p class="text-muted small mb-0">@L["ResolveResourceContentionByCrossTrainingOrHiringAdditionalStaff"]</p>
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Progress Trend Chart
        const progressCtx = document.getElementById('progressChart').getContext('2d');
        new Chart(progressCtx, {
            type: 'line',
            data: {
                labels: ['Week 1', 'Week 2', 'Week 3', 'Week 4', 'Week 5', 'Week 6', 'Week 7', 'Week 8'],
                datasets: [{
                    label: 'ISO 27001',
                    data: [10, 20, 32, 45, 55, 65, 72, 75],
                    borderColor: 'rgb(54, 162, 235)',
                    backgroundColor: 'rgba(54, 162, 235, 0.1)',
                    tension: 0.4
                }, {
                    label: 'Risk Mgmt',
                    data: [8, 15, 25, 35, 42, 50, 56, 60],
                    borderColor: 'rgb(255, 206, 86)',
                    backgroundColor: 'rgba(255, 206, 86, 0.1)',
                    tension: 0.4
                }, {
                    label: 'Compliance',
                    data: [12, 18, 25, 30, 35, 38, 42, 45],
                    borderColor: 'rgb(255, 99, 132)',
                    backgroundColor: 'rgba(255, 99, 132, 0.1)',
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 100,
                        ticks: {
                            callback: function(value) {
                                return value + '%';
                            }
                        }
                    }
                }
            }
        });

        // Milestones Chart
        const milestonesCtx = document.getElementById('milestonesChart').getContext('2d');
        new Chart(milestonesCtx, {
            type: 'bar',
            data: {
                labels: ['ISO 27001', 'Risk Mgmt', 'Compliance', 'BC Program', 'Maturity'],
                datasets: [{
                    label: 'Completed',
                    data: [3, 2, 1, 4, 2],
                    backgroundColor: 'rgba(75, 192, 192, 0.8)'
                }, {
                    label: 'Remaining',
                    data: [1, 2, 3, 0, 2],
                    backgroundColor: 'rgba(201, 203, 207, 0.5)'
                }]
            },
            options: {
                responsive: true,
                scales: {
                    x: { stacked: true },
                    y: {
                        stacked: true,
                        beginAtZero: true,
                        ticks: { stepSize: 1 }
                    }
                }
            }
        });
    </script>
}
