@{
    ViewData["Title"] = "AI-Powered Assessments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="h3">
                <i class="fas fa-robot text-primary me-2"></i>
                AI-Powered Assessments
            </h1>
            <p class="text-muted">Shahin AI helps automate and accelerate your compliance assessments</p>
        </div>
        <div class="col-md-4 text-end">
            <button class="btn btn-primary" onclick="startAIAssessment()">
                <i class="fas fa-magic me-2"></i>Start AI Assessment
            </button>
        </div>
    </div>

    <!-- AI Capabilities -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white h-100">
                <div class="card-body text-center">
                    <i class="fas fa-search fa-2x mb-2"></i>
                    <h5>Auto-Discovery</h5>
                    <small>AI discovers controls from documents</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white h-100">
                <div class="card-body text-center">
                    <i class="fas fa-check-double fa-2x mb-2"></i>
                    <h5>Evidence Scoring</h5>
                    <small>Automated evidence evaluation</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white h-100">
                <div class="card-body text-center">
                    <i class="fas fa-chart-bar fa-2x mb-2"></i>
                    <h5>Gap Analysis</h5>
                    <small>AI-powered gap identification</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark h-100">
                <div class="card-body text-center">
                    <i class="fas fa-lightbulb fa-2x mb-2"></i>
                    <h5>Recommendations</h5>
                    <small>Smart remediation suggestions</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Active AI Assessments -->
    <div class="card shadow-sm mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-tasks me-2"></i>AI-Assisted Assessments</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Assessment</th>
                            <th>Framework</th>
                            <th>AI Status</th>
                            <th>Controls Analyzed</th>
                            <th>Confidence</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>NCA ECC Assessment 2026</td>
                            <td><span class="badge bg-primary">NCA-ECC</span></td>
                            <td><span class="badge bg-success"><i class="fas fa-check me-1"></i>Complete</span></td>
                            <td>
                                <div class="progress" style="height:20px;width:100px;">
                                    <div class="progress-bar bg-success" style="width:100%">109/109</div>
                                </div>
                            </td>
                            <td><span class="badge bg-success">92%</span></td>
                            <td><a href="#" class="btn btn-sm btn-outline-primary"><i class="fas fa-eye"></i> Review</a></td>
                        </tr>
                        <tr>
                            <td>PDPL Privacy Assessment</td>
                            <td><span class="badge bg-info">PDPL</span></td>
                            <td><span class="badge bg-info"><i class="fas fa-spinner fa-spin me-1"></i>Analyzing</span></td>
                            <td>
                                <div class="progress" style="height:20px;width:100px;">
                                    <div class="progress-bar bg-info" style="width:65%">28/43</div>
                                </div>
                            </td>
                            <td><span class="badge bg-warning">78%</span></td>
                            <td><a href="#" class="btn btn-sm btn-outline-secondary"><i class="fas fa-clock"></i> Pending</a></td>
                        </tr>
                        <tr>
                            <td>ISO 27001 Gap Analysis</td>
                            <td><span class="badge bg-secondary">ISO27001</span></td>
                            <td><span class="badge bg-warning"><i class="fas fa-hourglass-half me-1"></i>Queued</span></td>
                            <td>
                                <div class="progress" style="height:20px;width:100px;">
                                    <div class="progress-bar bg-secondary" style="width:0%">0/114</div>
                                </div>
                            </td>
                            <td>-</td>
                            <td><a href="#" class="btn btn-sm btn-outline-primary"><i class="fas fa-play"></i> Start</a></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- AI Insights -->
    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h6 class="mb-0"><i class="fas fa-brain me-2"></i>AI Insights</h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-success mb-2">
                        <i class="fas fa-check-circle me-2"></i>
                        <strong>85% of controls</strong> have sufficient evidence based on AI analysis
                    </div>
                    <div class="alert alert-warning mb-2">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>12 controls</strong> need additional evidence
                    </div>
                    <div class="alert alert-danger mb-0">
                        <i class="fas fa-times-circle me-2"></i>
                        <strong>3 critical gaps</strong> identified requiring immediate attention
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-clock me-2"></i>Time Savings</h6>
                </div>
                <div class="card-body text-center">
                    <h1 class="display-4 text-success">68%</h1>
                    <p class="text-muted">Time saved vs. manual assessment</p>
                    <small class="text-muted">Estimated: 120 hours saved this quarter</small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    function startAIAssessment() {
        alert('AI Assessment wizard will guide you through setting up a new AI-powered assessment.');
    }
</script>
}
