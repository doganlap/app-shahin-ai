@{
    ViewData["Title"] = "Document Vault - Shahin VAULT";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="h3">
                <i class="fas fa-vault text-secondary me-2"></i>Shahin VAULT - Document Repository
            </h1>
            <p class="text-muted">Secure centralized storage for policies, evidence, and compliance documents</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="@Url.Action("Upload")" class="btn btn-primary">
                <i class="fas fa-upload me-2"></i>Upload Document
            </a>
            <a href="@Url.Action("Search")" class="btn btn-outline-secondary">
                <i class="fas fa-search me-2"></i>Search
            </a>
        </div>
    </div>

    <!-- Storage Summary -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <i class="fas fa-file fa-2x mb-2"></i>
                    <h3 id="totalDocs">1,247</h3>
                    <small>Total Documents</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <i class="fas fa-certificate fa-2x mb-2"></i>
                    <h3 id="evidenceCount">456</h3>
                    <small>Evidence Files</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <i class="fas fa-file-contract fa-2x mb-2"></i>
                    <h3 id="policyCount">89</h3>
                    <small>Policies</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body text-center">
                    <i class="fas fa-clock fa-2x mb-2"></i>
                    <h3 id="expiringCount">12</h3>
                    <small>Expiring Soon</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Categories Sidebar -->
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-folder me-2"></i>Categories</h6>
                </div>
                <div class="list-group list-group-flush">
                    <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center active">
                        <span><i class="fas fa-folder-open me-2"></i>All Documents</span>
                        <span class="badge bg-light text-dark">1,247</span>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-file-contract me-2"></i>Policies</span>
                        <span class="badge bg-primary">89</span>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-certificate me-2"></i>Evidence</span>
                        <span class="badge bg-success">456</span>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-clipboard-list me-2"></i>Procedures</span>
                        <span class="badge bg-info">234</span>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-file-alt me-2"></i>Reports</span>
                        <span class="badge bg-secondary">178</span>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-file-signature me-2"></i>Contracts</span>
                        <span class="badge bg-warning text-dark">145</span>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-archive me-2"></i>Archived</span>
                        <span class="badge bg-dark">145</span>
                    </a>
                </div>
            </div>

            <!-- Quick Links -->
            <div class="card shadow-sm mt-3">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-bolt me-2"></i>Quick Actions</h6>
                </div>
                <div class="list-group list-group-flush">
                    <a href="@Url.Action("Templates")" class="list-group-item list-group-item-action">
                        <i class="fas fa-file-download text-primary me-2"></i>Document Templates
                    </a>
                    <a href="@Url.Action("RetentionPolicies")" class="list-group-item list-group-item-action">
                        <i class="fas fa-calendar-alt text-info me-2"></i>Retention Policies
                    </a>
                    <a href="@Url.Action("AccessLogs")" class="list-group-item list-group-item-action">
                        <i class="fas fa-history text-secondary me-2"></i>Access Logs
                    </a>
                    <a href="@Url.Action("BulkOperations")" class="list-group-item list-group-item-action">
                        <i class="fas fa-layer-group text-warning me-2"></i>Bulk Operations
                    </a>
                </div>
            </div>
        </div>

        <!-- Documents List -->
        <div class="col-md-9">
            <div class="card shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-file-alt me-2"></i>Recent Documents</h5>
                    <div class="btn-group btn-group-sm">
                        <button class="btn btn-outline-secondary active"><i class="fas fa-list"></i></button>
                        <button class="btn btn-outline-secondary"><i class="fas fa-th"></i></button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover" id="documentsTable">
                            <thead class="table-light">
                                <tr>
                                    <th>Name</th>
                                    <th>Category</th>
                                    <th>Size</th>
                                    <th>Version</th>
                                    <th>Modified</th>
                                    <th>Owner</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <i class="fas fa-file-pdf text-danger me-2"></i>
                                        Information Security Policy v3.2
                                    </td>
                                    <td><span class="badge bg-primary">Policy</span></td>
                                    <td>2.4 MB</td>
                                    <td>3.2</td>
                                    <td>Jan 5, 2026</td>
                                    <td>Ahmed Al-Rashid</td>
                                    <td>
                                        <a href="@Url.Action("Details")?id=1" class="btn btn-sm btn-outline-primary me-1">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="#" class="btn btn-sm btn-outline-success">
                                            <i class="fas fa-download"></i>
                                        </a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <i class="fas fa-file-image text-success me-2"></i>
                                        Firewall Configuration Screenshot
                                    </td>
                                    <td><span class="badge bg-success">Evidence</span></td>
                                    <td>845 KB</td>
                                    <td>1.0</td>
                                    <td>Jan 4, 2026</td>
                                    <td>IT Security Team</td>
                                    <td>
                                        <a href="@Url.Action("Details")?id=2" class="btn btn-sm btn-outline-primary me-1">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="#" class="btn btn-sm btn-outline-success">
                                            <i class="fas fa-download"></i>
                                        </a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <i class="fas fa-file-word text-info me-2"></i>
                                        NCA ECC Compliance Report Q4 2025
                                    </td>
                                    <td><span class="badge bg-secondary">Report</span></td>
                                    <td>5.1 MB</td>
                                    <td>1.1</td>
                                    <td>Jan 3, 2026</td>
                                    <td>Compliance Team</td>
                                    <td>
                                        <a href="@Url.Action("Details")?id=3" class="btn btn-sm btn-outline-primary me-1">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="#" class="btn btn-sm btn-outline-success">
                                            <i class="fas fa-download"></i>
                                        </a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <i class="fas fa-file-excel text-success me-2"></i>
                                        Risk Register 2026
                                    </td>
                                    <td><span class="badge bg-warning text-dark">Risk</span></td>
                                    <td>1.8 MB</td>
                                    <td>2.0</td>
                                    <td>Jan 2, 2026</td>
                                    <td>Risk Management</td>
                                    <td>
                                        <a href="@Url.Action("Details")?id=4" class="btn btn-sm btn-outline-primary me-1">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="#" class="btn btn-sm btn-outline-success">
                                            <i class="fas fa-download"></i>
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    $(document).ready(function() {
        // Initialize functionality
    });
</script>
}
