@{
    ViewData["Title"] = "Reports & Analytics";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1"><i class="fas fa-chart-bar text-purple me-2" style="color:#9B59B6;"></i>Reports & Analytics</h1>
            <p class="text-muted">Compliance scores, trends, and drill-downs</p>
        </div>
    </div>

    <!-- Compliance Score -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="display-4 fw-bold text-success">@ViewBag.ComplianceScore%</div>
                    <div class="text-muted">Overall Compliance Score</div>
                    <div class="progress mt-3" style="height: 10px;">
                        <div class="progress-bar bg-success" style="width: @ViewBag.ComplianceScore%"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm text-center">
                        <div class="card-body">
                            <div class="h3 mb-0 text-primary">@ViewBag.TotalAssessments</div>
                            <small class="text-muted">Assessments</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm text-center">
                        <div class="card-body">
                            <div class="h3 mb-0 text-success">@ViewBag.CompletedAssessments</div>
                            <small class="text-muted">Completed</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm text-center">
                        <div class="card-body">
                            <div class="h3 mb-0 text-info">@ViewBag.TotalEvidence</div>
                            <small class="text-muted">Evidence</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm text-center">
                        <div class="card-body">
                            <div class="h3 mb-0 text-warning">@ViewBag.OpenExceptions</div>
                            <small class="text-muted">Exceptions</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Reports -->
    <div class="row">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="rounded-circle bg-primary bg-opacity-10 p-4 d-inline-block mb-3">
                        <i class="fas fa-clipboard-check fa-2x text-primary"></i>
                    </div>
                    <h5>Compliance Report</h5>
                    <p class="text-muted small">View compliance status by baseline and package</p>
                    <a href="@Url.Action("Compliance")" class="btn btn-outline-primary">View Report</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="rounded-circle bg-success bg-opacity-10 p-4 d-inline-block mb-3">
                        <i class="fas fa-file-alt fa-2x text-success"></i>
                    </div>
                    <h5>Evidence Report</h5>
                    <p class="text-muted small">View all collected and approved evidence</p>
                    <a href="@Url.Action("Evidence")" class="btn btn-outline-success">View Report</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="rounded-circle bg-warning bg-opacity-10 p-4 d-inline-block mb-3">
                        <i class="fas fa-exclamation-triangle fa-2x text-warning"></i>
                    </div>
                    <h5>Exception Report</h5>
                    <p class="text-muted small">View all control exceptions and their status</p>
                    <a href="@Url.Action("Index", "Exception")" class="btn btn-outline-warning">View Report</a>
                </div>
            </div>
        </div>
    </div>
</div>
