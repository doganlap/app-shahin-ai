@model List<TenantDto>

@{
    ViewData["Title"] = "Manage Tenants";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1>
                <i class="bi bi-building"></i> Manage Tenants
            </h1>
        </div>
        <div class="col-md-4 text-end">
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createTenantModal">
                <i class="bi bi-plus-circle"></i> Create New Tenant
            </button>
        </div>
    </div>

    <!-- Tenants Table -->
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Active Tenants</h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Count > 0)
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Organization Name</th>
                                <th>Slug</th>
                                <th>Status</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var tenant in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@tenant.Name</strong>
                                    </td>
                                    <td>
                                        <code>@tenant.TenantSlug</code>
                                    </td>
                                    <td>
                                        @if (tenant.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        @tenant.CreatedAt.ToString("MMM dd, yyyy")
                                    </td>
                                    <td>
                                        <a href="#" class="btn btn-sm btn-info" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="#" class="btn btn-sm btn-warning" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a href="#" class="btn btn-sm btn-danger" title="Deactivate">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No tenants created yet. Click <strong>Create New Tenant</strong> to get started.
                </div>
            }
        </div>
    </div>
</div>

<!-- Create Tenant Modal -->
<div class="modal fade" id="createTenantModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Create New Tenant</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form id="createTenantForm" method="post" action="/api/onboarding/signup">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="orgName" class="form-label">Organization Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="orgName" name="organizationName" required placeholder="Company Name Inc.">
                        <small class="text-muted">The full legal name of the organization</small>
                    </div>

                    <div class="mb-3">
                        <label for="adminEmail" class="form-label">Admin Email <span class="text-danger">*</span></label>
                        <input type="email" class="form-control" id="adminEmail" name="adminEmail" required placeholder="admin@company.com">
                        <small class="text-muted">Primary admin contact email</small>
                    </div>

                    <div class="mb-3">
                        <label for="tenantSlug" class="form-label">Tenant Slug <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="tenantSlug" name="tenantSlug" required placeholder="company-slug">
                        <small class="text-muted">URL-friendly identifier (lowercase, hyphens only)</small>
                    </div>

                    <div class="mb-3">
                        <label for="country" class="form-label">Country <span class="text-danger">*</span></label>
                        <select class="form-select" id="country" name="country" required>
                            <option value="">-- Select Country --</option>
                            <option value="United States">United States</option>
                            <option value="Canada">Canada</option>
                            <option value="United Kingdom">United Kingdom</option>
                            <option value="Germany">Germany</option>
                            <option value="Saudi Arabia">Saudi Arabia</option>
                            <option value="UAE">United Arab Emirates</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="subscription" class="form-label">Subscription Tier <span class="text-danger">*</span></label>
                        <select class="form-select" id="subscription" name="subscriptionTier" required>
                            <option value="Starter">Starter - Basic compliance</option>
                            <option value="Professional" selected>Professional - Standard features</option>
                            <option value="Enterprise">Enterprise - Full features</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create Tenant</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('createTenantForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const payload = {
                organizationName: formData.get('organizationName'),
                adminEmail: formData.get('adminEmail'),
                tenantSlug: formData.get('tenantSlug'),
                country: formData.get('country'),
                subscriptionTier: formData.get('subscriptionTier')
            };

            try {
                const response = await fetch('/api/onboarding/signup', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(payload)
                });

                if (response.ok) {
                    const result = await response.json();
                    alert('Tenant created successfully!');
                    location.reload();
                } else {
                    const error = await response.json();
                    alert('Error: ' + (error.message || 'Failed to create tenant'));
                }
            } catch (error) {
                alert('Error: ' + error.message);
            }
        });

        // Auto-generate slug from org name
        document.getElementById('orgName').addEventListener('change', function() {
            const slug = this.value
                .toLowerCase()
                .replace(/[^a-z0-9]+/g, '-')
                .replace(/^-+|-+$/g, '');
            document.getElementById('tenantSlug').value = slug;
        });
    </script>
}
