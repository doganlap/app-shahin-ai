@{
    ViewData["Title"] = "Reports Dashboard";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="bi bi-file-earmark-bar-graph"></i> Reports Dashboard</h2>
            <p class="text-muted">Centralized reporting for Governance, Risk, and Compliance.</p>
        </div>
    </div>

    <div class="row">
        <!-- Risk Reports -->
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <i class="bi bi-exclamation-triangle"></i> Risk Management
                </div>
                <div class="card-body">
                    <h5 class="card-title">Risk Analysis</h5>
                    <p class="card-text">Comprehensive analysis of organizational risks, including probability, impact, and mitigation status.</p>
                    <div class="d-grid gap-2">
                        <a asp-controller="Risk" asp-action="Report" class="btn btn-outline-primary">
                            <i class="bi bi-file-text"></i> Full Risk Report
                        </a>
                        <a asp-controller="Risk" asp-action="Matrix" class="btn btn-outline-primary">
                            <i class="bi bi-grid-3x3"></i> Risk Matrix Heatmap
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Compliance Reports -->
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-success text-white">
                    <i class="bi bi-clipboard-check"></i> Compliance & Controls
                </div>
                <div class="card-body">
                    <h5 class="card-title">Control Effectiveness</h5>
                    <p class="card-text">Status of internal controls, testing results, and compliance adherence.</p>
                    <div class="d-grid gap-2">
                        <a asp-controller="Control" asp-action="Matrix" class="btn btn-outline-success">
                            <i class="bi bi-shield-check"></i> Control Effectiveness
                        </a>
                        <a asp-controller="Assessment" asp-action="Statistics" class="btn btn-outline-success">
                            <i class="bi bi-bar-chart"></i> Assessment Stats
                        </a>
                        <a asp-controller="Audit" asp-action="Statistics" class="btn btn-outline-success">
                            <i class="bi bi-search"></i> Audit Findings
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Operational Reports -->
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-info text-white">
                    <i class="bi bi-gear"></i> Operations & Policy
                </div>
                <div class="card-body">
                    <h5 class="card-title">Operational Overview</h5>
                    <p class="card-text">Workflow execution metrics, policy status, and evidence collection progress.</p>
                    <div class="d-grid gap-2">
                        <a asp-controller="Policy" asp-action="Statistics" class="btn btn-outline-info">
                            <i class="bi bi-file-text"></i> Policy Status
                        </a>
                        <a asp-controller="Workflow" asp-action="Statistics" class="btn btn-outline-info">
                            <i class="bi bi-diagram-3"></i> Workflow Metrics
                        </a>
                        <a asp-controller="Evidence" asp-action="Statistics" class="btn btn-outline-info">
                            <i class="bi bi-folder"></i> Evidence Collection
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <i class="bi bi-clock-history"></i> Recent Activity Report
                </div>
                <div class="card-body text-center py-5">
                    <i class="bi bi-cone-striped display-1 text-muted"></i>
                    <h4 class="mt-3">Activity Logging Coming Soon</h4>
                    <p class="text-muted">Detailed audit logs and user activity reports are currently being implemented.</p>
                </div>
            </div>
        </div>
    </div>
</div>
