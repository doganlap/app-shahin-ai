@using Microsoft.AspNetCore.Localization
@using GrcMvc.Data
@using Microsoft.EntityFrameworkCore
@inject GrcMvc.Services.Interfaces.ICurrentUserService CurrentUserService
@inject GrcDbContext DbContext
@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var isArabic = requestCulture?.RequestCulture?.UICulture?.Name == "ar";
    ViewData["Title"] = isArabic ? "نظام GRC - التسجيل" : "GRC System - Onboarding";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Get current user's tenant ID or use default
    var tenantId = Guid.Empty;
    try { tenantId = CurrentUserService.GetTenantId(); } catch { }
    if (tenantId == Guid.Empty) tenantId = Guid.Parse("00000000-0000-0000-0000-000000000001");

    // Get wizard progress from database (with error handling for unauthenticated access)
    var completedSections = new List<string>();
    var progressPercent = 0;
    try
    {
        var wizard = await DbContext.OnboardingWizards.FirstOrDefaultAsync(w => w.TenantId == tenantId);
        if (wizard != null)
        {
            progressPercent = wizard.ProgressPercent;
            if (!string.IsNullOrEmpty(wizard.CompletedSectionsJson))
            {
                try { completedSections = System.Text.Json.JsonSerializer.Deserialize<List<string>>(wizard.CompletedSectionsJson) ?? new(); } catch { }
            }
        }
    }
    catch { /* Database access may fail for unauthenticated users - use defaults */ }
}

<div class="container-fluid py-5" style="background: var(--bg-tertiary);">
    <div class="container">
        <div class="row">
            <!-- Sidebar - 12 Wizard Steps -->
            <div class="col-md-3">
                <div class="card shadow-sm sticky-top" style="top: 20px;">
                    <div class="card-body p-3">
                        <h5 class="card-title mb-3">
                            <i class="bi bi-list-check me-2" style="color: var(--primary);"></i>12-Step Wizard
                        </h5>

                        <div class="progress mb-3" style="height: 8px;">
                            <div class="progress-bar" role="progressbar" style="width: @progressPercent%; background: var(--success);">@progressPercent%</div>
                        </div>

                        <div class="list-group list-group-flush small">
                            @{
                                var steps = new[] {
                                    ("A", "building", "primary", "Organization Identity"),
                                    ("B", "bullseye", "info", "Assurance Objective"),
                                    ("C", "bank", "warning", "Regulatory Frameworks"),
                                    ("D", "diagram-3", "success", "Scope Definition"),
                                    ("E", "shield-exclamation", "danger", "Data & Risk Profile"),
                                    ("F", "cpu", "secondary", "Technology Landscape"),
                                    ("G", "person-badge", "primary", "Control Ownership"),
                                    ("H", "people", "info", "Teams & Roles"),
                                    ("I", "calendar-check", "warning", "Workflow Cadence"),
                                    ("J", "file-earmark-check", "success", "Evidence Standards"),
                                    ("K", "layers", "danger", "Baseline & Overlays"),
                                    ("L", "rocket-takeoff", "primary", "Go-Live & Metrics")
                                };
                            }
                            @foreach (var (letter, icon, color, name) in steps)
                            {
                                var isCompleted = completedSections.Contains(letter);
                                var statusIcon = isCompleted ? "check-circle-fill text-success" : $"{icon} text-{color}";
                                var bgStyle = isCompleted ? "background: var(--success);" : "";
                                <a href="/OnboardingWizard/Step@(letter)/@tenantId" class="list-group-item list-group-item-action py-2" style="@bgStyle">
                                    <i class="bi bi-@statusIcon me-2"></i>
                                    <strong>@letter.</strong> @name
                                    @if (isCompleted)
                                    {
                                        <i class="bi bi-check text-success float-end"></i>
                                    }
                                </a>
                            }
                        </div>

                        <div class="mt-3 pt-2 border-top">
                            <small class="text-muted">
                                <i class="bi bi-clock me-1"></i> Est. 15-20 minutes
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-9">
                <div class="card shadow">
                    <div class="card-body p-5">
                        <h1 class="mb-4">مرحباً بك في نظام إدارة الحوكمة والمخاطر والامتثال</h1>

                        <div class="alert alert-info border-0" role="alert">
                            <i class="bi bi-info-circle"></i>
                            <strong class="ms-2">أكمل عملية الإعداد</strong> لتهيئة مؤسستك وتحديد نطاق الامتثال الخاص بك.
                        </div>

                        <div class="row mt-4">
                            <div class="col-md-6">
                                <h5 class="mb-3"><i class="bi bi-check2-square text-success me-2"></i>ما ستقوم بتهيئته:</h5>
                                <ul class="list-unstyled">
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle text-success"></i>
                                        <span class="ms-2"><strong>أ-ج:</strong> هوية المؤسسة والأهداف والجهات التنظيمية</span>
                                    </li>
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle text-success"></i>
                                        <span class="ms-2"><strong>د-و:</strong> النطاق وملف البيانات والبنية التقنية</span>
                                    </li>
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle text-success"></i>
                                        <span class="ms-2"><strong>ز-ط:</strong> ملكية الضوابط والفرق وسير العمل</span>
                                    </li>
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle text-success"></i>
                                        <span class="ms-2"><strong>ي-ل:</strong> معايير الأدلة والخطوط الأساسية والانطلاق</span>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <div class="card border-0" style="background: var(--bg-tertiary);">
                                    <div class="card-body">
                                        <h6><i class="bi bi-magic me-2" style="color: var(--primary);"></i><strong>المخرجات المُشتقة تلقائياً:</strong></h6>
                                        <ul class="text-muted small mt-2 mb-0">
                                            <li><i class="bi bi-check text-success"></i> الأُطر التنظيمية المطبقة (NCA, SAMA, PDPL)</li>
                                            <li><i class="bi bi-check text-success"></i> الخطوط الأساسية والإضافات للضوابط</li>
                                            <li><i class="bi bi-check text-success"></i> قوالب التقييم</li>
                                            <li><i class="bi bi-check text-success"></i> الفرق ومصفوفة RACI</li>
                                            <li><i class="bi bi-check text-success"></i> جداول جمع الأدلة</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-5">
                            <!-- Always show wizard button - wizard handles its own auth -->
                            <a href="/OnboardingWizard/StepA/@tenantId" class="btn btn-success btn-lg me-3" id="btn-start-wizard" data-button-type="wizard">
                                <i class="bi bi-rocket-takeoff"></i> ابدأ المعالج من 12 خطوة
                            </a>
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <a href="/OrgSetup" class="btn btn-primary btn-lg me-3" id="btn-org-setup" data-button-type="orgsetup">
                                    <i class="bi bi-building-gear"></i> إعداد المؤسسة
                                </a>
                            }
                            <a href="@Url.Action("Signup", "Onboarding")" class="btn btn-outline-secondary btn-lg" id="btn-new-org" data-button-type="neworg">
                                <i class="bi bi-building"></i> مؤسسة جديدة
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Disable form submit links in sidebar for incomplete steps
            document.querySelectorAll('.list-group-item.disabled').forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                });
            });
        });
    </script>
}
