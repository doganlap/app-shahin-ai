@model OnboardingScopeDto

@{
    ViewData["Title"] = "GRC System - Review Compliance Scope";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4 mb-5">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <!-- Progress Indicator -->
            <div class="card mb-4 border-0" style="background: var(--bg-tertiary);">
                <div class="card-body">
                    <h5 class="card-title mb-3">Onboarding Progress</h5>
                    <div class="progress" style="height: 25px;">
                        <div class="progress-bar" role="progressbar" style="width: 75%; background: var(--success);" aria-valuenow="75"
                            aria-valuemin="0" aria-valuemax="100">
                            Step 3: Review Scope
                        </div>
                    </div>
                    <small class="text-muted mt-2 d-block">
                        Step 1: Registration ✓ → Step 2: Organization Profile ✓ → Step 3: Review Scope → Step 4: Create
                        Plan
                    </small>
                </div>
            </div>

            <!-- Scope Summary Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header" style="background: var(--success); color: var(--light);">
                    <h4 class="mb-0">
                        <i class="fas fa-check-circle"></i> Derived Compliance Scope
                    </h4>
                </div>

                <div class="card-body p-4">
                    <p class="text-muted mb-4">
                        Based on your organization profile, the following compliance baselines, packages, and templates
                        have been automatically determined:
                    </p>

                    <!-- Baselines Section -->
                    <h5 class="mb-3 text-primary">
                        <i class="fas fa-layer-group"></i> Applicable Baselines
                    </h5>

                    <div class="row mb-4">
                        @if (Model.ApplicableBaselines != null && Model.ApplicableBaselines.Any())
                        {
                            @foreach (var baseline in Model.ApplicableBaselines)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="card border-left" style="border-color: var(--success);">
                                        <div class="card-body">
                                            <h6 class="card-title text-success">
                                                <i class="fas fa-check text-success"></i> @baseline.BaselineCode
                                            </h6>
                                            <p class="card-text small">
                                                <strong>Reason:</strong> @baseline.ReasonJson
                                            </p>
                                            <small class="text-muted">
                                                Estimated Controls: ~45-52
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="col-12">
                                <div class="alert alert-info">
                                    No baselines applicable to your organization at this time.
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Packages Section -->
                    <h5 class="mb-3 text-primary">
                        <i class="fas fa-box"></i> Recommended Packages
                    </h5>

                    <div class="row mb-4">
                        @if (Model.ApplicablePackages != null && Model.ApplicablePackages.Any())
                        {
                            @foreach (var package in Model.ApplicablePackages)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="card border-left border-info">
                                        <div class="card-body">
                                            <h6 class="card-title text-info">
                                                <i class="fas fa-box text-info"></i> @package.PackageCode
                                            </h6>
                                            <p class="card-text small">
                                                <strong>Reason:</strong> @package.ReasonJson
                                            </p>
                                            <small class="text-muted">
                                                Estimated Controls: ~12-20
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="col-12">
                                <div class="alert alert-info">
                                    No additional packages recommended at this time.
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Templates Section -->
                    <h5 class="mb-3 text-primary">
                        <i class="fas fa-file-alt"></i> Recommended Templates
                    </h5>

                    <div class="row mb-4">
                        @if (Model.ApplicableTemplates != null && Model.ApplicableTemplates.Any())
                        {
                            @foreach (var template in Model.ApplicableTemplates)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="card border-left border-warning">
                                        <div class="card-body">
                                            <h6 class="card-title text-warning">
                                                <i class="fas fa-file-alt text-warning"></i> @template.TemplateCode
                                            </h6>
                                            <p class="card-text small">
                                                <strong>Reason:</strong> @template.ReasonJson
                                            </p>
                                            <small class="text-muted">
                                                Template Sections: 5-8
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="col-12">
                                <div class="alert alert-info">
                                    No additional templates recommended at this time.
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Scope Summary Stats -->
                    <hr class="my-4">

                    <div class="row text-center">
                        <div class="col-md-3">
                            <div class="card border-0 bg-light">
                                <div class="card-body">
                                    <h5 class="card-title text-primary">
                                        @(Model.ApplicableBaselines?.Count ?? 0)
                                    </h5>
                                    <p class="card-text small">Baselines</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card border-0 bg-light">
                                <div class="card-body">
                                    <h5 class="card-title text-info">
                                        @(Model.ApplicablePackages?.Count ?? 0)
                                    </h5>
                                    <p class="card-text small">Packages</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card border-0 bg-light">
                                <div class="card-body">
                                    <h5 class="card-title text-warning">
                                        @(Model.ApplicableTemplates?.Count ?? 0)
                                    </h5>
                                    <p class="card-text small">Templates</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card border-0 bg-light">
                                <div class="card-body">
                                    <h5 class="card-title text-success">
                                        @(((Model.ApplicableBaselines?.Count ?? 0) * 48) +
                                                                                ((Model.ApplicablePackages?.Count ?? 0) * 16) +
                                                                                ((Model.ApplicableTemplates?.Count ?? 0) * 6))
                                    </h5>
                                    <p class="card-text small">Est. Controls</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Acknowledge & Continue -->
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> <strong>Note:</strong> This scope has been automatically
                        derived based on your organization profile using the KSA General Compliance Rules v1. You can
                        adjust this scope after the onboarding is complete.
                    </div>

                    <form asp-action="CompleteOnboarding" asp-controller="Onboarding" method="post" id="completeForm">
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="agreeScope" name="AgreedToScope"
                                required>
                            <label class="form-check-label" for="agreeScope">
                                I agree to proceed with this compliance scope. I understand I can refine it in the
                                dashboard.
                            </label>
                        </div>

                        <div class="d-grid gap-2 d-sm-flex justify-content-between">
                            <a href="@Url.Action("OrgProfile", "Onboarding")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-arrow-right"></i> Create First Assessment Plan
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>