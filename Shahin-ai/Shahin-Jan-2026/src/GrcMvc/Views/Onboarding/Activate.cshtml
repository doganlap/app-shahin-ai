@model ActivateTenantDto

@{
    ViewData["Title"] = "GRC System - Activate Organization";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <!-- Activation Card -->
            <div class="card shadow-sm border-0">
                <div class="card-header" style="background: var(--info); color: var(--light);">
                    <h4 class="mb-0">
                        <i class="fas fa-envelope-open"></i> Activate Your Organization
                    </h4>
                </div>

                <div class="card-body p-4">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                        </div>
                    }
                    
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                        </div>
                    }
                    
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert" role="alert" style="background-color: var(--info); color: var(--light); border-color: var(--info);">
                            @TempData["Message"]
                        </div>
                    }

                    <p class="text-muted mb-4">
                        Please check your email for the activation link, or enter your activation token below.
                    </p>

                    <form asp-action="ActivatePost" asp-controller="Auth" method="post" novalidate>
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                        <!-- Activation Token -->
                        <div class="mb-3">
                            <label asp-for="ActivationToken" class="form-label">
                                <span class="text-danger">*</span> Activation Token
                            </label>
                            <input asp-for="ActivationToken" class="form-control form-control-lg font-monospace"
                                placeholder="Paste your activation token here">
                            <span asp-validation-for="ActivationToken" class="text-danger small"></span>
                            <small class="text-muted d-block mt-1">You received this token in your registration
                                email.</small>
                        </div>

                        <!-- Tenant Slug (if known) -->
                        <div class="mb-4">
                            <label asp-for="TenantSlug" class="form-label">
                                Tenant Slug (Optional)
                            </label>
                            <input asp-for="TenantSlug" class="form-control form-control-lg"
                                placeholder="your-organization">
                            <small class="text-muted d-block mt-1">
                                If you know your tenant slug, enter it here. Otherwise, leave blank.
                            </small>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-info btn-lg">
                                <i class="fas fa-check"></i> Activate Organization
                            </button>
                        </div>
                    </form>

                    <hr class="my-4">

                    <!-- Resend Activation Email Section -->
                    <div class="text-center">
                        <p class="text-muted mb-3">Didn't receive an activation email?</p>
                        
                        <form asp-controller="Auth" asp-action="ResendActivation" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <div class="input-group mb-3" style="max-width: 400px; margin: 0 auto;">
                                <input type="email" name="email" class="form-control" placeholder="Enter your email address" required>
                                <button type="submit" class="btn btn-outline-secondary">
                                    <i class="fas fa-paper-plane"></i> Resend
                                </button>
                            </div>
                        </form>
                        
                        <p class="text-muted small mt-3">
                            Still having issues? <a href="mailto:support@shahin-ai.com">Contact support</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>