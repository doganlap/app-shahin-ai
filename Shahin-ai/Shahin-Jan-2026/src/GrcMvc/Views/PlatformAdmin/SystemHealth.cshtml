@model dynamic
@{
    ViewData["Title"] = "System Health";
    Layout = "_Layout";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">System Health</h1>
            <p class="text-muted mb-0">Platform monitoring and diagnostics</p>
        </div>
        <div>
            <a href="@Url.Action("Dashboard")" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>

    <!-- Status Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card @(Model.DatabaseStatus ? "bg-success" : "bg-danger") text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-50">Database</h6>
                            <h4 class="mb-0">@(Model.DatabaseStatus ? "Healthy" : "Error")</h4>
                        </div>
                        <div class="align-self-center">
                            <i class="bi @(Model.DatabaseStatus ? "bi-check-circle" : "bi-x-circle") fs-1 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-50">Uptime</h6>
                            <h4 class="mb-0">@Model.UptimeHours.ToString("F1") hrs</h4>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-clock fs-1 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="opacity-75">Memory Usage</h6>
                            <h4 class="mb-0">@Model.MemoryUsageMb MB</h4>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-memory fs-1 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-secondary text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-50">Server Time</h6>
                            <h4 class="mb-0">@Model.ServerTime.ToString("HH:mm:ss")</h4>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-globe fs-1 opacity-50"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <small>UTC</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h2 class="text-primary mb-0">@Model.TotalTenants</h2>
                    <small class="text-muted">Total Tenants</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h2 class="text-success mb-0">@Model.ActiveTenants</h2>
                    <small class="text-muted">Active Tenants</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h2 class="text-info mb-0">@Model.TotalUsers</h2>
                    <small class="text-muted">Total Users</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h2 class="text-secondary mb-0">@Model.TotalAuditEvents</h2>
                    <small class="text-muted">Audit Events</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Errors -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-exclamation-triangle text-danger me-2"></i>Recent Errors</h5>
        </div>
        <div class="card-body">
            @if (Model.RecentErrors.Any())
            {
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Timestamp</th>
                                <th>Event Type</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var error in Model.RecentErrors)
                            {
                                <tr>
                                    <td>@error.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    <td><span class="badge bg-danger">@error.EventType</span></td>
                                    <td>@error.Description</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center text-muted py-4">
                    <i class="bi bi-check-circle fs-1 text-success"></i>
                    <p class="mt-2 mb-0">No recent errors</p>
                </div>
            }
        </div>
    </div>
</div>
