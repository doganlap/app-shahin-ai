@{
    ViewData["Title"] = "Platform Admin Dashboard V2";
    var version = ViewData["Version"] as string;
    var message = ViewData["Message"] as string;
}

<div class="container-fluid py-4">
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i>
        <strong>Version:</strong> @version<br/>
        <strong>Message:</strong> @message
    </div>
    
    <div class="row">
        <div class="col-md-12">
            <h1>Platform Admin Dashboard V2</h1>
            <p>This dashboard uses the facade pattern for gradual migration.</p>
            
            <div class="card mt-3">
                <div class="card-header">
                    <h5>Quick Links</h5>
                </div>
                <div class="card-body">
                    <a href="/platform-admin/v2/users" class="btn btn-primary">Users (V2)</a>
                    <a href="/platform-admin/migration-metrics" class="btn btn-info">Migration Metrics</a>
                    <a href="/platform-admin/dashboard" class="btn btn-secondary">Legacy Dashboard</a>
                </div>
            </div>
            
            <div class="card mt-3">
                <div class="card-header">
                    <h5>What's Different in V2?</h5>
                </div>
                <div class="card-body">
                    <ul>
                        <li><strong>Facade Pattern:</strong> Routes to legacy or enhanced services based on feature flags</li>
                        <li><strong>Metrics Tracking:</strong> All operations are tracked for monitoring</li>
                        <li><strong>Zero Impact:</strong> When feature flags are OFF, uses existing legacy code</li>
                        <li><strong>Secure Passwords:</strong> Crypto-safe RNG when enabled</li>
                        <li><strong>Instant Rollback:</strong> Just flip a feature flag</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
