@{
    ViewData["Title"] = "Platform Settings";
    Layout = "_Layout";
}

<div class="container-fluid py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-1">
            <li class="breadcrumb-item"><a href="@Url.Action("Dashboard")">Platform Admin</a></li>
            <li class="breadcrumb-item active">Settings</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">Platform Settings</h1>
            <p class="text-muted mb-0">Configure system-wide platform settings</p>
        </div>
    </div>

    <div class="row g-4">
        <!-- General Settings -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0"><i class="bi bi-gear"></i> General Settings</h5>
                </div>
                <div class="card-body">
                    <form>
                        <div class="mb-3">
                            <label class="form-label">Platform Name</label>
                            <input type="text" class="form-control" value="Shahin-AI GRC Platform" disabled>
                            <small class="text-muted">Contact support to change</small>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Support Email</label>
                            <input type="email" class="form-control" value="support@shahin-ai.com" disabled>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Default Language</label>
                            <select class="form-select" disabled>
                                <option selected>English</option>
                                <option>Arabic</option>
                            </select>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Security Settings -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0"><i class="bi bi-shield-lock"></i> Security Settings</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="enforceMfa" checked disabled>
                            <label class="form-check-label" for="enforceMfa">Enforce MFA for all Platform Admins</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Session Timeout (minutes)</label>
                        <input type="number" class="form-control" value="30" disabled>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Max Failed Login Attempts</label>
                        <input type="number" class="form-control" value="5" disabled>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Password Expiry (days)</label>
                        <input type="number" class="form-control" value="90" disabled>
                    </div>
                </div>
            </div>
        </div>

        <!-- Email Settings -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0"><i class="bi bi-envelope"></i> Email Configuration</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">SMTP Server</label>
                        <input type="text" class="form-control" placeholder="smtp.example.com" disabled>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">From Address</label>
                        <input type="email" class="form-control" placeholder="noreply@shahin-ai.com" disabled>
                    </div>
                    <div class="alert alert-info mb-0">
                        <i class="bi bi-info-circle"></i> Email settings are configured via environment variables for security.
                    </div>
                </div>
            </div>
        </div>

        <!-- Storage Settings -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0"><i class="bi bi-hdd"></i> Storage Settings</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Default Storage Quota per Tenant</label>
                        <select class="form-select" disabled>
                            <option>5 GB</option>
                            <option selected>10 GB</option>
                            <option>25 GB</option>
                            <option>50 GB</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Max File Upload Size</label>
                        <select class="form-select" disabled>
                            <option>10 MB</option>
                            <option selected>25 MB</option>
                            <option>50 MB</option>
                            <option>100 MB</option>
                        </select>
                    </div>
                    <div class="alert alert-warning mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Storage settings require application restart to take effect.
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="alert alert-secondary mt-4">
        <i class="bi bi-info-circle"></i>
        <strong>Note:</strong> Platform settings are currently read-only. Contact Shahin-AI support to modify these settings.
    </div>
</div>
