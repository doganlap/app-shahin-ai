@model List<GrcMvc.Models.Entities.TenantUser>
@{
    ViewData["Title"] = "User Management";
    Layout = "_Layout";
    var tenantId = ViewBag.TenantId as Guid?;
    var searchFilter = ViewBag.SearchFilter as string;
    var tenants = ViewBag.Tenants as List<GrcMvc.Models.Entities.Tenant>;
    var currentPage = ViewBag.CurrentPage ?? 1;
    var totalPages = ViewBag.TotalPages ?? 1;
    var totalCount = ViewBag.TotalCount ?? 0;
}

<div class="container-fluid py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-1">
            <li class="breadcrumb-item"><a href="@Url.Action("Dashboard")">Platform Admin</a></li>
            <li class="breadcrumb-item active">Users</li>
        </ol>
    </nav>
    <h1 class="h3 mb-4">User Management</h1>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Tenant</label>
                    <select name="tenantId" class="form-select">
                        <option value="">All Tenants</option>
                        @if (tenants != null)
                        {
                            @foreach (var t in tenants)
                            {
                                <option value="@t.Id" selected="@(tenantId == t.Id)">@t.OrganizationName</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Search</label>
                    <input type="text" name="search" class="form-control" placeholder="Email or name..." value="@searchFilter">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-outline-primary w-100">
                        <i class="bi bi-search"></i> Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>User</th>
                            <th>Tenant</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Joined</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tu in Model)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("UserDetails", new { id = tu.UserId })" class="text-decoration-none">
                                        @tu.User?.Email
                                    </a>
                                    <br><small class="text-muted">@tu.User?.FullName</small>
                                </td>
                                <td>
                                    <a href="@Url.Action("TenantDetails", new { id = tu.TenantId })">
                                        @tu.Tenant?.OrganizationName
                                    </a>
                                </td>
                                <td><span class="badge bg-secondary">@tu.RoleCode</span></td>
                                <td>
                                    <span class="badge bg-@(tu.Status == "Active" ? "success" : tu.Status == "Pending" ? "warning" : "danger")">
                                        @tu.Status
                                    </span>
                                </td>
                                <td>@tu.CreatedAt.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="@Url.Action("UserDetails", new { id = tu.UserId })" class="btn btn-outline-primary" title="View">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-secondary" title="Reset Password"
                                                data-bs-toggle="modal" data-bs-target="#resetPasswordModal"
                                                onclick="setResetUserId('@tu.UserId')">
                                            <i class="bi bi-key"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted">
                                    <i class="bi bi-people fs-1 d-block mb-2"></i>
                                    No users found
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between align-items-center">
            <span class="text-muted">
                Showing @Model.Count of @totalCount users
            </span>
            @if ((int)totalPages > 1)
            {
                <nav aria-label="User pagination">
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item @((int)currentPage <= 1 ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Users", new { tenantId, search = searchFilter, page = (int)currentPage - 1 })">Previous</a>
                        </li>
                        @for (var i = Math.Max(1, (int)currentPage - 2); i <= Math.Min((int)totalPages, (int)currentPage + 2); i++)
                        {
                            <li class="page-item @(i == (int)currentPage ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Users", new { tenantId, search = searchFilter, page = i })">@i</a>
                            </li>
                        }
                        <li class="page-item @((int)currentPage >= (int)totalPages ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Users", new { tenantId, search = searchFilter, page = (int)currentPage + 1 })">Next</a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

<!-- Reset Password Modal -->
<div class="modal fade" id="resetPasswordModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="ResetUserPassword" method="post" id="resetPasswordForm">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" id="resetUserId">
                <div class="modal-header">
                    <h5 class="modal-title">Reset Password</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">New Password</label>
                        <input type="password" name="newPassword" class="form-control" required minlength="6">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Reset Password</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function setResetUserId(userId) {
            document.getElementById('resetUserId').value = userId;
            document.getElementById('resetPasswordForm').action = '@Url.Action("ResetUserPassword")/' + userId + '/reset-password';
        }
    </script>
}
