@model GrcMvc.Services.Interfaces.CreatePlatformAdminDto
@{
    ViewData["Title"] = "Create Platform Admin";
    Layout = "_Layout";
    var availableUsers = ViewBag.AvailableUsers as List<GrcMvc.Models.Entities.ApplicationUser>;
}

<div class="container-fluid py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-1">
            <li class="breadcrumb-item"><a href="@Url.Action("Dashboard")">Platform Admin</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Admins")">Platform Admins</a></li>
            <li class="breadcrumb-item active">Create</li>
        </ol>
    </nav>
    <h1 class="h3 mb-4">Create Platform Admin</h1>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="CreateAdmin" method="post">
                        @Html.AntiForgeryToken()

                        <h5 class="mb-3">Select User</h5>
                        <div class="mb-4">
                            <label class="form-label">User <span class="text-danger">*</span></label>
                            <select asp-for="UserId" class="form-select" required>
                                <option value="">Select a user...</option>
                                @if (availableUsers != null)
                                {
                                    @foreach (var user in availableUsers)
                                    {
                                        <option value="@user.Id">@user.Email (@user.FullName)</option>
                                    }
                                }
                            </select>
                            <small class="text-muted">Only users with SuperAdmin role are shown</small>
                        </div>

                        <h5 class="mb-3">Admin Details</h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label class="form-label">Display Name <span class="text-danger">*</span></label>
                                <input asp-for="DisplayName" class="form-control" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Contact Email <span class="text-danger">*</span></label>
                                <input asp-for="ContactEmail" type="email" class="form-control" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Contact Phone</label>
                                <input asp-for="ContactPhone" class="form-control">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Admin Level</label>
                                <select asp-for="AdminLevel" class="form-select">
                                    <option value="@GrcMvc.Models.Entities.PlatformAdminLevel.ReadOnly">Read Only</option>
                                    <option value="@GrcMvc.Models.Entities.PlatformAdminLevel.Support">Support</option>
                                    <option value="@GrcMvc.Models.Entities.PlatformAdminLevel.Partner">Partner</option>
                                    <option value="@GrcMvc.Models.Entities.PlatformAdminLevel.CoOwner">Co-Owner</option>
                                </select>
                            </div>
                        </div>

                        <h5 class="mb-3">Permissions</h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input asp-for="CanCreateTenants" class="form-check-input" type="checkbox">
                                    <label class="form-check-label" asp-for="CanCreateTenants">Create Tenants</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input asp-for="CanManageTenants" class="form-check-input" type="checkbox">
                                    <label class="form-check-label" asp-for="CanManageTenants">Manage Tenants</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input asp-for="CanDeleteTenants" class="form-check-input" type="checkbox">
                                    <label class="form-check-label" asp-for="CanDeleteTenants">Delete Tenants</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input asp-for="CanManageBilling" class="form-check-input" type="checkbox">
                                    <label class="form-check-label" asp-for="CanManageBilling">Manage Billing</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input asp-for="CanAccessTenantData" class="form-check-input" type="checkbox">
                                    <label class="form-check-label" asp-for="CanAccessTenantData">Access Tenant Data</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input asp-for="CanManageCatalogs" class="form-check-input" type="checkbox">
                                    <label class="form-check-label" asp-for="CanManageCatalogs">Manage Catalogs</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input asp-for="CanManagePlatformAdmins" class="form-check-input" type="checkbox">
                                    <label class="form-check-label" asp-for="CanManagePlatformAdmins">Manage Admins</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input asp-for="CanViewAnalytics" class="form-check-input" type="checkbox" checked>
                                    <label class="form-check-label" asp-for="CanViewAnalytics">View Analytics</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input asp-for="CanImpersonateUsers" class="form-check-input" type="checkbox">
                                    <label class="form-check-label" asp-for="CanImpersonateUsers">Impersonate Users</label>
                                </div>
                            </div>
                        </div>

                        <h5 class="mb-3">Limits</h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label class="form-label">Max Tenants Allowed</label>
                                <input asp-for="MaxTenantsAllowed" type="number" class="form-control" min="0" value="0">
                                <small class="text-muted">0 = unlimited</small>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Session Timeout (minutes)</label>
                                <input asp-for="SessionTimeoutMinutes" type="number" class="form-control" min="5" value="30">
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="form-check">
                                <input asp-for="MfaRequired" class="form-check-input" type="checkbox" checked>
                                <label class="form-check-label" asp-for="MfaRequired">Require MFA</label>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Notes</label>
                            <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-person-plus"></i> Create Admin
                            </button>
                            <a href="@Url.Action("Admins")" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body">
                    <h6><i class="bi bi-info-circle"></i> Admin Levels</h6>
                    <dl class="mb-0 small">
                        <dt>Owner (100)</dt>
                        <dd>Full platform access - cannot be created via UI</dd>

                        <dt>Co-Owner (90)</dt>
                        <dd>Full access except managing other owners</dd>

                        <dt>Partner (20)</dt>
                        <dd>Regional/limited tenant management</dd>

                        <dt>Support (10)</dt>
                        <dd>View tenant data, assist users</dd>

                        <dt>Read Only (0)</dt>
                        <dd>View only access</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
