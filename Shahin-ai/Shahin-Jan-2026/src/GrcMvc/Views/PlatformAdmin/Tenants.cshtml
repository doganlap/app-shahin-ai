@model List<GrcMvc.Models.Entities.Tenant>
@{
    ViewData["Title"] = "Tenant Management";
    Layout = "_Layout";
    var statusFilter = ViewBag.StatusFilter as string;
    var searchFilter = ViewBag.SearchFilter as string;
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a href="@Url.Action("Dashboard")">Platform Admin</a></li>
                    <li class="breadcrumb-item active">Tenants</li>
                </ol>
            </nav>
            <h1 class="h3 mb-0">Tenant Management</h1>
        </div>
        <a href="@Url.Action("CreateTenant")" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create Tenant
        </a>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Status</label>
                    <select name="status" class="form-select">
                        <option value="">All Statuses</option>
                        <option value="Active" selected="@(statusFilter == "Active")">Active</option>
                        <option value="Pending" selected="@(statusFilter == "Pending")">Pending</option>
                        <option value="Suspended" selected="@(statusFilter == "Suspended")">Suspended</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Search</label>
                    <input type="text" name="search" class="form-control" placeholder="Organization name or slug..." value="@searchFilter">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-outline-primary w-100">
                        <i class="bi bi-search"></i> Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Tenants Table -->
    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Organization</th>
                            <th>Admin Email</th>
                            <th>Status</th>
                            <th>Tier</th>
                            <th>Users</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tenant in Model)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("TenantDetails", new { id = tenant.Id })" class="fw-bold text-decoration-none">
                                        @tenant.OrganizationName
                                    </a>
                                    <br><small class="text-muted">/@tenant.TenantSlug</small>
                                </td>
                                <td>@tenant.AdminEmail</td>
                                <td>
                                    <span class="badge bg-@(tenant.Status == "Active" ? "success" : tenant.Status == "Pending" ? "warning" : tenant.Status == "Suspended" ? "danger" : "secondary")">
                                        @tenant.Status
                                    </span>
                                    @if (tenant.IsOwnerCreated)
                                    {
                                        <span class="badge bg-info">Owner Created</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-@(tenant.SubscriptionTier == "Enterprise" ? "dark" : tenant.SubscriptionTier == "Professional" ? "primary" : "secondary")">
                                        @tenant.SubscriptionTier
                                    </span>
                                </td>
                                <td>@tenant.Users.Count</td>
                                <td>@tenant.CreatedAt.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="@Url.Action("TenantDetails", new { id = tenant.Id })" class="btn btn-outline-primary" title="View">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="@Url.Action("EditTenant", new { id = tenant.Id })" class="btn btn-outline-secondary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        @if (tenant.Status == "Active")
                                        {
                                            <button type="button" class="btn btn-outline-warning" title="Suspend"
                                                    onclick="confirmSuspend('@tenant.Id', '@tenant.OrganizationName')">
                                                <i class="bi bi-pause-circle"></i>
                                            </button>
                                        }
                                        else if (tenant.Status == "Suspended" || tenant.Status == "Pending")
                                        {
                                            <form asp-action="ActivateTenant" asp-route-id="@tenant.Id" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-success" title="Activate">
                                                    <i class="bi bi-play-circle"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="7" class="text-center py-5 text-muted">
                                    <i class="bi bi-building fs-1 d-block mb-2"></i>
                                    No tenants found
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer text-muted">
            Showing @Model.Count tenants
        </div>
    </div>
</div>

<!-- Suspend Modal -->
<div class="modal fade" id="suspendModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="suspendForm" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title">Suspend Tenant</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to suspend <strong id="suspendTenantName"></strong>?</p>
                    <div class="mb-3">
                        <label class="form-label">Reason for suspension</label>
                        <textarea name="reason" class="form-control" rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">Suspend Tenant</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmSuspend(tenantId, tenantName) {
            document.getElementById('suspendTenantName').textContent = tenantName;
            document.getElementById('suspendForm').action = '@Url.Action("SuspendTenant", "PlatformAdmin")/' + tenantId;
            new bootstrap.Modal(document.getElementById('suspendModal')).show();
        }
    </script>
}
