@model GrcMvc.Models.ViewModels.UserDetailsViewModel
@{
    ViewData["Title"] = Model.User.Email;
    Layout = "_Layout";
}

<div class="container-fluid py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-1">
            <li class="breadcrumb-item"><a href="@Url.Action("Dashboard")">Platform Admin</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Users")">Users</a></li>
            <li class="breadcrumb-item active">@Model.User.Email</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-start mb-4">
        <div>
            <h1 class="h3 mb-1">@Model.User.FullName</h1>
            <p class="text-muted mb-0">
                @Model.User.Email
                <span class="badge bg-@(Model.User.IsActive ? "success" : "danger") ms-2">
                    @(Model.User.IsActive ? "Active" : "Inactive")
                </span>
            </p>
        </div>
        <div class="btn-group">
            @if (Model.User.IsActive)
            {
                <form asp-action="DeactivateUser" asp-route-id="@Model.User.Id" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-warning" onclick="return confirm('Deactivate this user?')">
                        <i class="bi bi-person-x"></i> Deactivate
                    </button>
                </form>
            }
            else
            {
                <form asp-action="ActivateUser" asp-route-id="@Model.User.Id" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-success">
                        <i class="bi bi-person-check"></i> Activate
                    </button>
                </form>
            }
            <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#resetPasswordModal">
                <i class="bi bi-key"></i> Reset Password
            </button>
            @if (ViewBag.CanImpersonate == true && Model.User.IsActive)
            {
                <form asp-action="Impersonate" asp-route-id="@Model.User.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-info" onclick="return confirm('Impersonate this user? You will be logged in as them.')">
                        <i class="bi bi-person-badge"></i> Impersonate
                    </button>
                </form>
            }
        </div>
    </div>

    <div class="row g-4">
        <!-- User Info -->
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0"><i class="bi bi-person"></i> User Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-5">Full Name</dt>
                        <dd class="col-7">@Model.User.FullName</dd>

                        <dt class="col-5">Email</dt>
                        <dd class="col-7">@Model.User.Email</dd>

                        <dt class="col-5">Email Confirmed</dt>
                        <dd class="col-7">@(Model.User.EmailConfirmed ? "Yes" : "No")</dd>

                        <dt class="col-5">Created</dt>
                        <dd class="col-7">@Model.User.CreatedAt.ToString("MMM dd, yyyy")</dd>

                        <dt class="col-5">System Roles</dt>
                        <dd class="col-7">
                            @foreach (var role in Model.SystemRoles)
                            {
                                <span class="badge bg-primary">@role</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Tenant Memberships -->
        <div class="col-md-8">
            <div class="card h-100">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0"><i class="bi bi-building"></i> Tenant Memberships</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Tenant</th>
                                    <th>Role</th>
                                    <th>Title</th>
                                    <th>Status</th>
                                    <th>Joined</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var tm in Model.TenantMemberships)
                                {
                                    <tr>
                                        <td>
                                            <a href="@Url.Action("TenantDetails", new { id = tm.TenantId })">
                                                @tm.Tenant?.OrganizationName
                                            </a>
                                        </td>
                                        <td><span class="badge bg-secondary">@tm.RoleCode</span></td>
                                        <td>@tm.TitleCode</td>
                                        <td>
                                            <span class="badge bg-@(tm.Status == "Active" ? "success" : "warning")">
                                                @tm.Status
                                            </span>
                                        </td>
                                        <td>@tm.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    </tr>
                                }
                                @if (!Model.TenantMemberships.Any())
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-4 text-muted">No tenant memberships</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="card mt-4">
        <div class="card-header bg-transparent">
            <h5 class="mb-0"><i class="bi bi-activity"></i> Recent Activity</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                <table class="table table-hover table-sm mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Timestamp</th>
                            <th>Event</th>
                            <th>Description</th>
                            <th>IP Address</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var evt in Model.RecentActivity)
                        {
                            <tr>
                                <td><small>@evt.Timestamp.ToString("yyyy-MM-dd HH:mm")</small></td>
                                <td><span class="badge bg-secondary">@evt.EventType</span></td>
                                <td><small>@evt.Description</small></td>
                                <td><small class="text-muted">@evt.IpAddress</small></td>
                            </tr>
                        }
                        @if (!Model.RecentActivity.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center py-4 text-muted">No recent activity</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Reset Password Modal -->
<div class="modal fade" id="resetPasswordModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="ResetUserPassword" asp-route-id="@Model.User.Id" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title">Reset Password</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Reset password for <strong>@Model.User.Email</strong></p>
                    <div class="mb-3">
                        <label class="form-label">New Password</label>
                        <input type="password" name="newPassword" class="form-control" required minlength="6">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Reset Password</button>
                </div>
            </form>
        </div>
    </div>
</div>
