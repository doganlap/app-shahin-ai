@model List<GrcMvc.Services.Interfaces.UserDto>
@{
    ViewData["Title"] = "Users (V2)";
    var version = ViewData["Version"] as string;
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Users Management <span class="badge bg-info">@version</span></h1>
        <div>
            <a href="/platform-admin/v2/dashboard" class="btn btn-secondary">Back to Dashboard</a>
            <a href="/platform-admin/migration-metrics" class="btn btn-info">View Metrics</a>
        </div>
    </div>
    
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    <div class="card">
        <div class="card-header">
            <h5>All Users</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Roles</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td><code>@user.Id.Substring(0, Math.Min(8, user.Id.Length))...</code></td>
                                    <td>@user.FullName</td>
                                    <td>@user.Email</td>
                                    <td>
                                        @if (user.Roles.Any())
                                        {
                                            @foreach (var role in user.Roles)
                                            {
                                                <span class="badge bg-secondary me-1">@role</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">No roles</span>
                                        }
                                    </td>
                                    <td>
                                        @if (user.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <a href="/platform-admin/v2/users/@user.Id" class="btn btn-sm btn-primary">View</a>
                                        <form method="post" action="/platform-admin/v2/users/@user.Id/reset-password" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-warning" 
                                                    onclick="return confirm('Reset password for @user.FullName?')">
                                                Reset Password
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i>
                    No users found.
                </div>
            }
        </div>
    </div>
    
    <div class="card mt-3">
        <div class="card-header">
            <h5>About V2 Implementation</h5>
        </div>
        <div class="card-body">
            <p>This V2 controller uses the <strong>Facade Pattern</strong> to route between legacy and enhanced services:</p>
            <ul>
                <li><strong>Feature Flags OFF:</strong> Uses existing PlatformAdminService (zero impact)</li>
                <li><strong>Feature Flags ON:</strong> Uses enhanced secure implementation</li>
                <li><strong>Canary Mode:</strong> Gradually rolls out to X% of users</li>
                <li><strong>Metrics:</strong> All operations tracked for monitoring</li>
            </ul>
            <a href="/platform-admin/migration-metrics" class="btn btn-info">View Migration Metrics</a>
        </div>
    </div>
</div>
