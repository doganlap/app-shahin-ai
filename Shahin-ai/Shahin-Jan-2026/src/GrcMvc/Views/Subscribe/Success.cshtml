@model GrcMvc.Controllers.SubscriptionSuccessViewModel
@{
    ViewData["Title"] = "تم الدفع بنجاح | Payment Successful";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            
            <!-- Progress Steps - Complete -->
            <div class="d-flex justify-content-center mb-5">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle bg-success text-white d-flex align-items-center justify-content-center" 
                         style="width: 40px; height: 40px;">
                        <i class="bi bi-check"></i>
                    </div>
                    <span class="mx-2 text-success">الخطة</span>
                    <div class="border-top border-2 border-success" style="width: 60px;"></div>
                    <div class="rounded-circle bg-success text-white d-flex align-items-center justify-content-center" 
                         style="width: 40px; height: 40px;">
                        <i class="bi bi-check"></i>
                    </div>
                    <span class="mx-2 text-success">الحساب</span>
                    <div class="border-top border-2 border-success" style="width: 60px;"></div>
                    <div class="rounded-circle bg-success text-white d-flex align-items-center justify-content-center" 
                         style="width: 40px; height: 40px;">
                        <i class="bi bi-check"></i>
                    </div>
                    <span class="mx-2 text-success">الدفع</span>
                    <div class="border-top border-2 border-primary" style="width: 60px;"></div>
                    <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center" 
                         style="width: 40px; height: 40px;">4</div>
                    <span class="mx-2 text-primary fw-bold">التفعيل</span>
                </div>
            </div>

            <!-- Success Animation -->
            <div class="text-center mb-4">
                <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                     style="width: 120px; height: 120px;">
                    <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                </div>
                <h1 class="display-5 text-success fw-bold">تم الدفع بنجاح!</h1>
                <h2 class="text-primary">Payment Successful!</h2>
                <p class="lead text-muted">
                    مرحباً بك في @Model.PlanName | Welcome to @Model.PlanName
                </p>
            </div>

            <!-- TENANT ID - CRITICAL DISPLAY -->
            <div class="card border-primary shadow mb-4">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0 text-center">
                        <i class="bi bi-key-fill me-2"></i>
                        معرّف المنشأة الخاص بك | Your Tenant ID
                    </h4>
                </div>
                <div class="card-body p-4 text-center">
                    <div class="alert alert-warning mb-3">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <strong>مهم:</strong> احفظ هذا المعرف! ستحتاجه للدعم الفني
                        <br/>
                        <strong>Important:</strong> Save this ID! You'll need it for support
                    </div>
                    
                    <div class="bg-light rounded-3 p-4 mb-3 position-relative">
                        <code class="fs-3 text-primary user-select-all" id="tenantId">
                            @Model.TenantId
                        </code>
                        <button type="button" class="btn btn-outline-primary btn-sm position-absolute top-50 end-0 translate-middle-y me-3"
                                onclick="copyTenantId()" id="copyBtn">
                            <i class="bi bi-clipboard me-1"></i> نسخ
                        </button>
                    </div>
                    
                    <p class="text-muted small mb-0">
                        <i class="bi bi-info-circle me-1"></i>
                        هذا المعرف يُستخدم لتحديد منشأتك في النظام
                    </p>
                </div>
            </div>

            <!-- Payment Details -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-receipt me-2"></i>
                        تفاصيل الدفع | Payment Details
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row mb-0">
                                <dt class="col-5">الشركة:</dt>
                                <dd class="col-7">@Model.CompanyName</dd>
                                
                                <dt class="col-5">الخطة:</dt>
                                <dd class="col-7">@Model.PlanName</dd>
                                
                                <dt class="col-5">الفترة:</dt>
                                <dd class="col-7">
                                    <span class="badge bg-primary">
                                        @(Model.BillingCycle == "Annual" ? "سنوي" : "شهري")
                                    </span>
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row mb-0">
                                <dt class="col-5">المبلغ:</dt>
                                <dd class="col-7 fw-bold">@Model.Amount.ToString("N2") @Model.Currency</dd>
                                
                                <dt class="col-5">رقم العملية:</dt>
                                <dd class="col-7"><code>@Model.TransactionId</code></dd>
                                
                                <dt class="col-5">التاريخ:</dt>
                                <dd class="col-7">@Model.PaymentDate.ToString("yyyy/MM/dd HH:mm")</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Subscription Status -->
            <div class="card border-info shadow-sm mb-4">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <div class="bg-info bg-opacity-10 rounded-circle p-3">
                                <i class="bi bi-hourglass-split text-info fs-2"></i>
                            </div>
                        </div>
                        <div class="col">
                            <h5 class="mb-1">حالة الاشتراك: @Model.SubscriptionStatus</h5>
                            <p class="mb-0 text-muted">
                                الاشتراك نشط ولكن يحتاج إلى إكمال إعداد المنشأة
                                <br/>
                                Subscription active - organization setup required
                            </p>
                        </div>
                        <div class="col-auto">
                            <span class="badge bg-warning text-dark fs-6 p-2">
                                <i class="bi bi-gear-fill me-1"></i>
                                في انتظار الإعداد
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Next Step: Onboarding -->
            <div class="card bg-primary text-white shadow">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col">
                            <h4 class="mb-2">
                                <i class="bi bi-arrow-left-circle me-2"></i>
                                الخطوة التالية: إعداد المنشأة
                            </h4>
                            <p class="mb-0 opacity-75">
                                أكمل إعداد منشأتك في 5 دقائق لبدء استخدام النظام
                            </p>
                        </div>
                        <div class="col-auto">
                            <form asp-action="StartOnboarding" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="tenantId" value="@Model.TenantId" />
                                <button type="submit" class="btn btn-light btn-lg">
                                    <i class="bi bi-play-circle me-2"></i>
                                    بدء الإعداد الآن
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Help Section -->
            <div class="text-center mt-4">
                <p class="text-muted">
                    <i class="bi bi-question-circle me-1"></i>
                    هل تحتاج مساعدة؟ تواصل معنا على
                    <a href="mailto:support@shahin-ai.com">support@shahin-ai.com</a>
                    <br/>
                    أو الواتساب: <a href="https://wa.me/966500000000">+966 50 000 0000</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    function copyTenantId() {
        var tenantId = document.getElementById('tenantId').textContent.trim();
        navigator.clipboard.writeText(tenantId).then(function() {
            var btn = document.getElementById('copyBtn');
            btn.innerHTML = '<i class="bi bi-check2 me-1"></i> تم النسخ!';
            btn.classList.remove('btn-outline-primary');
            btn.classList.add('btn-success');
            setTimeout(function() {
                btn.innerHTML = '<i class="bi bi-clipboard me-1"></i> نسخ';
                btn.classList.remove('btn-success');
                btn.classList.add('btn-outline-primary');
            }, 2000);
        });
    }
    
    // Confetti animation (optional)
    document.addEventListener('DOMContentLoaded', function() {
    });
</script>
}
