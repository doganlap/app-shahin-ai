@model List<GrcMvc.Models.DTOs.SubscriptionPlanDto>
@{
    ViewData["Title"] = "اختر خطة الاشتراك | Choose Your Plan";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">
            <i class="bi bi-gem me-2"></i>
            اختر خطتك | Choose Your Plan
        </h1>
        <p class="lead text-muted">
            ابدأ رحلة الامتثال والحوكمة مع Shahin AI
            <br/>
            Start your GRC journey with Shahin AI
        </p>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row g-4 justify-content-center">
        @foreach (var plan in Model.OrderBy(p => p.DisplayOrder))
        {
            var isPopular = plan.Code == "PRO";
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 shadow-sm @(isPopular ? "border-primary border-2" : "")">
                    @if (isPopular)
                    {
                        <div class="card-header bg-primary text-white text-center py-2">
                            <i class="bi bi-star-fill me-1"></i> الأكثر شعبية | Most Popular
                        </div>
                    }
                    <div class="card-body p-4">
                        <h3 class="card-title text-center mb-3">@plan.Name</h3>
                        <p class="text-muted text-center small">@plan.Description</p>
                        
                        <div class="text-center my-4">
                            <div class="d-flex justify-content-center align-items-baseline">
                                <span class="display-4 fw-bold text-primary">@plan.MonthlyPrice.ToString("N0")</span>
                                <span class="text-muted ms-2">SAR / شهر</span>
                            </div>
                            <small class="text-muted">
                                أو @plan.AnnualPrice.ToString("N0") SAR / سنوياً (وفر 20%)
                            </small>
                        </div>

                        <hr/>

                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                @plan.MaxUsers مستخدم | Users
                            </li>
                            <li class="mb-2">
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                @plan.MaxAssessments تقييم | Assessments
                            </li>
                            <li class="mb-2">
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                @plan.MaxPolicies سياسة | Policies
                            </li>
                            @if (plan.HasAdvancedReporting)
                            {
                                <li class="mb-2">
                                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                                    تقارير متقدمة | Advanced Reports
                                </li>
                            }
                            @if (plan.HasApiAccess)
                            {
                                <li class="mb-2">
                                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                                    وصول API | API Access
                                </li>
                            }
                            @if (plan.HasPrioritySupport)
                            {
                                <li class="mb-2">
                                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                                    دعم أولوية | Priority Support
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="card-footer bg-transparent p-4">
                        <div class="d-grid gap-2">
                            <a href="@Url.Action("Checkout", new { planId = plan.Id, cycle = "Monthly" })" 
                               class="btn @(isPopular ? "btn-primary" : "btn-outline-primary") btn-lg">
                                <i class="bi bi-cart-check me-2"></i>
                                اشترك شهرياً | Subscribe Monthly
                            </a>
                            <a href="@Url.Action("Checkout", new { planId = plan.Id, cycle = "Annual" })" 
                               class="btn btn-outline-success">
                                <i class="bi bi-calendar-check me-2"></i>
                                اشترك سنوياً (وفر 20%) | Annual (Save 20%)
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="text-center mt-5">
        <p class="text-muted">
            <i class="bi bi-shield-check me-2"></i>
            جميع الخطط تشمل: تشفير البيانات، نسخ احتياطي يومي، دعم فني
            <br/>
            All plans include: Data encryption, Daily backups, Technical support
        </p>
    </div>
</div>
