@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> L
@model List<GrcMvc.Models.DTOs.ExcellenceInitiativeDto>
@{
    ViewData["Title"] = "Excellence Initiatives";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-lightbulb"></i> Excellence Initiatives</h2>
            <p class="text-muted">Track continuous improvement and excellence programs</p>
        </div>
        <div class="col text-end">
            <a asp-action="Dashboard" class="btn btn-outline-secondary">
                <i class="bi bi-speedometer2"></i> Dashboard
            </a>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> New Initiative
            </a>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h6 class="opacity-75">Total Initiatives</h6>
                    <h2 class="mb-0">@Model.Count</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h6 class="opacity-75">Active</h6>
                    <h2 class="mb-0">@Model.Count(i => i.Status == "InProgress")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h6 class="opacity-75">Completed</h6>
                    <h2 class="mb-0">@Model.Count(i => i.Status == "Completed")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h6>Average Progress</h6>
                    <h2 class="mb-0">@(Model.Any() ? Model.Average(i => i.Progress ?? 0).ToString("F0") : "0")%</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Initiative</th>
                                <th>Type</th>
                                <th>Owner</th>
                                <th>Progress</th>
                                <th>Target Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var initiative in Model)
                            {
                                <tr>
                                    <td><strong>@initiative.Name</strong></td>
                                    <td><span class="badge bg-light text-dark">@initiative.Type</span></td>
                                    <td>@initiative.Owner</td>
                                    <td>
                                        <div class="progress" style="width: 120px; height: 20px;">
                                            <div class="progress-bar" style="width: @(initiative.Progress ?? 0)%">@(initiative.Progress ?? 0)%</div>
                                        </div>
                                    </td>
                                    <td>@initiative.TargetDate?.ToShortDateString()</td>
                                    <td><span class="badge bg-info">@initiative.Status</span></td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@initiative.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@initiative.Id" class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-lightbulb display-1 text-muted opacity-25"></i>
                    <p class="text-muted mt-3">No excellence initiatives yet</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create First Initiative
                    </a>
                </div>
            }
        </div>
    </div>
</div>
