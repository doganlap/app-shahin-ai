@model GrcMvc.Models.DTOs.SubscriptionPlanDto

@{
    ViewData["Title"] = "Checkout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8">
            <h1>
                <i class="bi bi-credit-card"></i> Checkout
            </h1>
            <p class="text-muted">Complete your subscription to @Model.Name</p>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Order Summary</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-8">
                            <h6>@Model.Name Plan</h6>
                            <p class="text-muted small">@Model.Description</p>
                        </div>
                        <div class="col-4 text-end">
                            <p class="h6 mb-0">${@Model.MonthlyPrice}</p>
                            <small class="text-muted">/month</small>
                        </div>
                    </div>

                    <hr />

                    <div class="row">
                        <div class="col-8">
                            <strong>Monthly Subtotal</strong>
                        </div>
                        <div class="col-4 text-end">
                            <strong>${@Model.MonthlyPrice}</strong>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-8">
                            <small class="text-muted">Tax (estimated)</small>
                        </div>
                        <div class="col-4 text-end">
                            <small class="text-muted">$0.00</small>
                        </div>
                    </div>

                    <hr />

                    <div class="row mb-3">
                        <div class="col-8">
                            <strong class="h6">Total Due Today</strong>
                        </div>
                        <div class="col-4 text-end">
                            <strong class="h6">${@Model.MonthlyPrice}</strong>
                        </div>
                    </div>

                    <div class="alert alert-info small">
                        <i class="bi bi-info-circle"></i> Your subscription will renew automatically each month on the same date.
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-credit-card-2-front"></i> Payment Information
                    </h5>
                </div>
                <div class="card-body">
                    <form id="paymentForm">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address *</label>
                            <input type="email" class="form-control" id="email" name="email" 
                                   placeholder="your@email.com" required>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="firstName" class="form-label">First Name *</label>
                                <input type="text" class="form-control" id="firstName" name="firstName" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="lastName" class="form-label">Last Name *</label>
                                <input type="text" class="form-control" id="lastName" name="lastName" required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="address" class="form-label">Address *</label>
                            <input type="text" class="form-control" id="address" name="address" required>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="city" class="form-label">City *</label>
                                <input type="text" class="form-control" id="city" name="city" required>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="state" class="form-label">State</label>
                                <input type="text" class="form-control" id="state" name="state">
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="zipCode" class="form-label">Zip Code</label>
                                <input type="text" class="form-control" id="zipCode" name="zipCode">
                            </div>
                        </div>

                        <hr />

                        <h6>Card Information</h6>
                        
                        <div class="mb-3">
                            <label for="cardName" class="form-label">Name on Card *</label>
                            <input type="text" class="form-control" id="cardName" name="cardName" required>
                        </div>

                        <div class="mb-3">
                            <label for="cardNumber" class="form-label">Card Number *</label>
                            <input type="text" class="form-control" id="cardNumber" name="cardNumber" 
                                   placeholder="4111 1111 1111 1111" required>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="expiryDate" class="form-label">Expiry Date *</label>
                                <input type="text" class="form-control" id="expiryDate" name="expiryDate" 
                                       placeholder="MM/YY" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="cvv" class="form-label">CVV *</label>
                                <input type="text" class="form-control" id="cvv" name="cvv" 
                                       placeholder="123" required>
                            </div>
                        </div>

                        <div class="form-check mb-3">
                            <input type="checkbox" class="form-check-input" id="terms" required>
                            <label class="form-check-label" for="terms">
                                I agree to the <a href="#" target="_blank">Terms of Service</a> and 
                                <a href="#" target="_blank">Privacy Policy</a>
                            </label>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            <i class="bi bi-lock"></i> Pay Now - $@Model.MonthlyPrice
                        </button>

                        <small class="text-muted d-block mt-2">
                            <i class="bi bi-shield-check"></i> Your payment information is secure and encrypted
                        </small>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card bg-light mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-star-fill"></i> @Model.Name
                    </h5>
                </div>
                <div class="card-body">
                    <h6 class="mb-3">Included Features</h6>
                    @if (Model.Features != null && Model.Features.Count > 0)
                    {
                        <ul class="list-unstyled small">
                            @foreach (var feature in Model.Features)
                            {
                                <li class="mb-2">
                                    <i class="bi bi-check-circle text-success"></i>
                                    @feature
                                </li>
                            }
                        </ul>
                    }

                    <hr />

                    <h6 class="mb-3">Plan Limits</h6>
                    <ul class="list-unstyled small">
                        <li class="mb-2">
                            <strong>@Model.MaxUsers Users</strong>
                        </li>
                        <li class="mb-2">
                            <strong>@Model.MaxAssessments Assessments</strong>
                        </li>
                        <li class="mb-2">
                            <strong>@Model.MaxPolicies Policies</strong>
                        </li>
                        @if (Model.HasAdvancedReporting)
                        {
                            <li class="mb-2">
                                <i class="bi bi-check-circle text-success"></i>
                                Advanced Reporting
                            </li>
                        }
                        @if (Model.HasApiAccess)
                        {
                            <li class="mb-2">
                                <i class="bi bi-check-circle text-success"></i>
                                API Access
                            </li>
                        }
                        @if (Model.HasPrioritySupport)
                        {
                            <li class="mb-2">
                                <i class="bi bi-check-circle text-success"></i>
                                Priority Support
                            </li>
                        }
                    </ul>
                </div>
            </div>

            <div class="card bg-success bg-opacity-10 border-success">
                <div class="card-header bg-success bg-opacity-10">
                    <h6 class="mb-0">
                        <i class="bi bi-check-circle text-success"></i> Secure & Safe
                    </h6>
                </div>
                <div class="card-body small">
                    <ul class="list-unstyled">
                        <li><i class="bi bi-shield-check"></i> 256-bit SSL encryption</li>
                        <li><i class="bi bi-shield-check"></i> PCI DSS compliant</li>
                        <li><i class="bi bi-shield-check"></i> Money-back guarantee</li>
                        <li><i class="bi bi-shield-check"></i> No hidden fees</li>
                    </ul>
                </div>
            </div>

            <div class="card bg-info bg-opacity-10 border-info">
                <div class="card-header bg-info bg-opacity-10">
                    <h6 class="mb-0">
                        <i class="bi bi-info-circle"></i> What Happens Next?
                    </h6>
                </div>
                <div class="card-body small">
                    <ol class="ps-3">
                        <li class="mb-2">
                            <strong>Payment Confirmation</strong>
                            <p class="text-muted small mb-1">You'll receive an instant confirmation email with your receipt</p>
                        </li>
                        <li class="mb-2">
                            <strong>Onboarding Setup</strong>
                            <p class="text-muted small mb-1">Complete a quick onboarding process to set up your organization</p>
                        </li>
                        <li class="mb-2">
                            <strong>Scope Derivation</strong>
                            <p class="text-muted small mb-1">Our system automatically determines applicable compliance frameworks</p>
                        </li>
                        <li>
                            <strong>Start Using GRC</strong>
                            <p class="text-muted small mb-0">Access your dashboard and begin managing your compliance program</p>
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('paymentForm').addEventListener('submit', async function(e) {
        e.preventDefault();

        const paymentData = {
            planId: '@Model.Id',
            email: document.getElementById('email').value,
            firstName: document.getElementById('firstName').value,
            lastName: document.getElementById('lastName').value,
            // Additional fields...
        };

        try {
            const response = await fetch('/api/subscription/payment', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(paymentData)
            });

            if (response.ok) {
                const result = await response.json();
                alert('Payment successful!');
                window.location.href = '/Subscription/Receipt?paymentId=' + result.paymentId;
            } else {
                alert('Payment failed. Please try again.');
            }
        } catch (error) {
            alert('Error processing payment: ' + error.message);
        }
    });

    // Format card number input
    document.getElementById('cardNumber').addEventListener('input', function(e) {
        e.target.value = e.target.value.replace(/\s/g, '').replace(/(.{4})/g, '$1 ').trim();
    });

    // Format expiry date input
    document.getElementById('expiryDate').addEventListener('input', function(e) {
        e.target.value = e.target.value.replace(/\D/g, '').replace(/(\d{2})(\d)/, '$1/$2').slice(0, 5);
    });
</script>
