@model List<GrcMvc.Models.DTOs.SubscriptionDto>
@inject Microsoft.Extensions.Localization.IStringLocalizer<GrcMvc.Resources.SharedResource> L

@{
    ViewData["Title"] = "My Subscriptions";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1>
                    <i class="bi bi-credit-card"></i> My Subscriptions
                </h1>
                <a href="@Url.Action("Index", "Plans")" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Browse Plans
                </a>
            </div>
        </div>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> You don't have any active subscriptions yet.
            <a href="@Url.Action("Index", "Plans")" class="alert-link">Browse available plans</a> to get started.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var subscription in Model)
            {
                var statusBadgeClass = subscription.Status switch
                {
                    "Active" => "bg-success",
                    "PendingPayment" => "bg-warning",
                    "Suspended" => "bg-danger",
                    "Cancelled" => "bg-secondary",
                    _ => "bg-info"
                };

                var daysUntilRenewal = subscription.NextBillingDate.HasValue ? 
                    (subscription.NextBillingDate.Value - DateTime.UtcNow).Days : 0;

                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">@(subscription.Plan?.Name ?? "Unknown Plan")</h5>
                            <span class="badge @statusBadgeClass">@subscription.Status</span>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-6">
                                    <small class="text-muted d-block">Billing Cycle</small>
                                    <strong>@subscription.BillingCycle</strong>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted d-block">Price</small>
                                    <strong>$@(subscription.Plan?.MonthlyPrice ?? 0)/month</strong>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-6">
                                    <small class="text-muted d-block">Started</small>
                                    <p class="mb-0">@subscription.SubscriptionStartDate.ToString("MMM d, yyyy")</p>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted d-block">Next Billing</small>
                                    <p class="mb-0">@(subscription.NextBillingDate?.ToString("MMM d, yyyy") ?? "N/A")</p>
                                </div>
                            </div>

                            @if (daysUntilRenewal >= 0 && daysUntilRenewal <= 14)
                            {
                                <div class="alert alert-warning alert-sm" style="padding: 0.5rem 0.75rem; margin-bottom: 1rem;">
                                    <small><i class="bi bi-exclamation-triangle"></i> Renews in @daysUntilRenewal days</small>
                                </div>
                            }

                            <hr />

                            <h6 class="mb-2">Plan Limits</h6>
                            <ul class="small list-unstyled">
                                <li><i class="bi bi-check-circle text-success"></i> Up to @(subscription.Plan?.MaxUsers ?? 0) users</li>
                                <li><i class="bi bi-check-circle text-success"></i> Up to @(subscription.Plan?.MaxAssessments ?? 0) assessments</li>
                                @if (subscription.Plan?.HasAdvancedReporting ?? false)
                                {
                                    <li><i class="bi bi-check-circle text-success"></i> Advanced reporting</li>
                                }
                                @if (subscription.Plan?.HasApiAccess ?? false)
                                {
                                    <li><i class="bi bi-check-circle text-success"></i> API access</li>
                                }
                                @if (subscription.Plan?.HasPrioritySupport ?? false)
                                {
                                    <li><i class="bi bi-check-circle text-success"></i> Priority support</li>
                                }
                            </ul>
                        </div>
                        <div class="card-footer bg-light d-flex gap-2">
                            <a href="@Url.Action("Index", new { subscriptionId = subscription.Id })" 
                               class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-eye"></i> View
                            </a>
                            @if (subscription.Status == "Active")
                            {
                                <button type="button" class="btn btn-sm btn-outline-warning" 
                                        onclick="changePlan('@subscription.Id')">
                                    <i class="bi bi-arrow-left-right"></i> Change Plan
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-danger" 
                                        onclick="cancelSubscription('@subscription.Id')">
                                    <i class="bi bi-trash"></i> Cancel
                                </button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Change Plan Modal -->
<div class="modal fade" id="changePlanModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Change Plan</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Select a new plan to switch to:</p>
                <div id="planOptions"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="confirmChangeBtn">Change Plan</button>
            </div>
        </div>
    </div>
</div>

<script>
    async function changePlan(subscriptionId) {
        try {
            // Load available subscription plans
            const response = await fetch('/api/subscription/available-plans');
            if (!response.ok) {
                throw new Error('Failed to load plans');
            }

            const plans = await response.json();

            // Build modal content
            let modalContent = `
                <div class="modal fade" id="changePlanModal" tabindex="-1">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">@L["Change Subscription Plan"]</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <div class="row g-3">`;

            plans.forEach(plan => {
                modalContent += `
                                    <div class="col-md-6">
                                        <div class="card h-100">
                                            <div class="card-body">
                                                <h5 class="card-title">${plan.name}</h5>
                                                <p class="card-text">${plan.description || ''}</p>
                                                <h3 class="text-primary">$${plan.monthlyPriceUSD}/mo</h3>
                                                <ul class="list-unstyled mt-3">
                                                    <li><i class="fas fa-check text-success"></i> ${plan.maxUsers || 'Unlimited'} users</li>
                                                    <li><i class="fas fa-check text-success"></i> ${plan.maxAssessments || 'Unlimited'} assessments</li>
                                                </ul>
                                                <button class="btn btn-primary w-100" onclick="confirmPlanChange('${subscriptionId}', '${plan.id}')">
                                                    @L["Select Plan"]
                                                </button>
                                            </div>
                                        </div>
                                    </div>`;
            });

            modalContent += `
                                </div>
                            </div>
                        </div>
                    </div>
                </div>`;

            // Insert modal into DOM and show
            const existingModal = document.getElementById('changePlanModal');
            if (existingModal) {
                existingModal.remove();
            }
            document.body.insertAdjacentHTML('beforeend', modalContent);

            const modal = new bootstrap.Modal(document.getElementById('changePlanModal'));
            modal.show();
        } catch (error) {
            console.error('Error loading plans:', error);
            alert('@L["Failed to load available plans. Please try again."]');
        }
    }

    async function confirmPlanChange(subscriptionId, newPlanId) {
        try {
            const response = await fetch(`/api/subscription/${subscriptionId}/change-plan`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ newPlanId })
            });

            if (!response.ok) {
                throw new Error('Plan change failed');
            }

            alert('@L["Plan changed successfully!"]');
            window.location.reload();
        } catch (error) {
            console.error('Error changing plan:', error);
            alert('@L["Failed to change plan. Please try again."]');
        }
    }

    async function cancelSubscription(subscriptionId) {
        if (!confirm('@L["Are you sure you want to cancel this subscription? This action cannot be undone."]')) {
            return;
        }

        try {
            const response = await fetch(`/api/subscription/${subscriptionId}/cancel`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            if (!response.ok) {
                throw new Error('Cancellation failed');
            }

            const result = await response.json();
            alert('@L["Subscription cancelled successfully. Access will continue until the end of the billing period."]');
            window.location.reload();
        } catch (error) {
            console.error('Error cancelling subscription:', error);
            alert('@L["Failed to cancel subscription. Please contact support."]');
        }
    }
</script>
