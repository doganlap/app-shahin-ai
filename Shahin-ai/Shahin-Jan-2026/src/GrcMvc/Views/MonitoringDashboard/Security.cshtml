@model GrcMvc.Services.Interfaces.SecurityDashboardDto
@{
    ViewData["Title"] = "لوحة تحكم الأمان";
    ViewData["TitleEn"] = "Security Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">
                <i class="fas fa-shield-alt text-primary me-2"></i>
                لوحة تحكم الأمان
            </h1>
            <p class="text-muted mb-0">مراقبة الأمان والتكامل والأداء</p>
        </div>
        <div class="d-flex gap-2">
            <span class="badge bg-@(Model?.AuthAnomalies.RiskLevel == "High" ? "danger" : Model?.AuthAnomalies.RiskLevel == "Medium" ? "warning" : "success")">
                <i class="fas fa-shield-alt me-1"></i>
                مستوى المخاطر: @(Model?.AuthAnomalies.RiskLevel ?? "غير معروف")
            </span>
            <button class="btn btn-outline-primary btn-sm" onclick="location.reload()">
                <i class="fas fa-sync-alt me-1"></i>
                تحديث
            </button>
        </div>
    </div>

    @if (Model == null)
    {
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle me-2"></i>
            لا تتوفر بيانات
        </div>
    }
    else
    {
        <!-- Security KPIs -->
        <div class="row g-3 mb-4">
            <div class="col-md-2">
                <div class="card border-0 shadow-sm text-center h-100 @(Model.AuthAnomalies.FailedLoginsLast24h > 10 ? "border-danger" : "")">
                    <div class="card-body">
                        <h4 class="@(Model.AuthAnomalies.FailedLoginsLast24h > 10 ? "text-danger" : "text-primary") mb-0">
                            @Model.AuthAnomalies.FailedLoginsLast24h
                        </h4>
                        <small class="text-muted">تسجيلات دخول فاشلة</small>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card border-0 shadow-sm text-center h-100">
                    <div class="card-body">
                        <h4 class="@(Model.AuthAnomalies.AccountLockouts > 0 ? "text-danger" : "text-success") mb-0">
                            @Model.AuthAnomalies.AccountLockouts
                        </h4>
                        <small class="text-muted">حسابات مقفلة</small>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card border-0 shadow-sm text-center h-100">
                    <div class="card-body">
                        <h4 class="text-info mb-0">@Model.Kpis.ActiveSessions</h4>
                        <small class="text-muted">جلسات نشطة</small>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card border-0 shadow-sm text-center h-100">
                    <div class="card-body">
                        <h4 class="text-success mb-0">@Model.Kpis.AuthSuccessRate%</h4>
                        <small class="text-muted">نسبة نجاح المصادقة</small>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card border-0 shadow-sm text-center h-100">
                    <div class="card-body">
                        <h4 class="text-primary mb-0">@Model.Kpis.TotalUsersActive24h</h4>
                        <small class="text-muted">مستخدمون نشطون</small>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card border-0 shadow-sm text-center h-100">
                    <div class="card-body">
                        <h4 class="text-success mb-0">@Model.Kpis.OverallSecurityScore%</h4>
                        <small class="text-muted">درجة الأمان</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <!-- Auth Anomalies -->
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-user-shield text-warning me-2"></i>
                            شذوذات المصادقة (24 ساعة)
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-6">
                                <div class="p-3 bg-light rounded text-center">
                                    <h4 class="mb-1">@Model.AuthAnomalies.FailedLoginsLast24h</h4>
                                    <small class="text-muted">تسجيلات دخول فاشلة</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="p-3 bg-light rounded text-center">
                                    <h4 class="mb-1">@Model.AuthAnomalies.AccountLockouts</h4>
                                    <small class="text-muted">حسابات مقفلة</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="p-3 bg-light rounded text-center">
                                    <h4 class="mb-1">@Model.AuthAnomalies.UnusualGeoLogins</h4>
                                    <small class="text-muted">مواقع غير عادية</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="p-3 bg-light rounded text-center">
                                    <h4 class="mb-1">@Model.AuthAnomalies.PasswordResets</h4>
                                    <small class="text-muted">إعادة تعيين كلمة المرور</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="p-3 bg-light rounded text-center">
                                    <h4 class="mb-1">@Model.AuthAnomalies.MfaFailures</h4>
                                    <small class="text-muted">فشل MFA</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="p-3 bg-light rounded text-center">
                                    <h4 class="mb-1">@Model.AuthAnomalies.SuspiciousIpAttempts</h4>
                                    <small class="text-muted">IP مشبوهة</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Integration Health -->
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-plug text-primary me-2"></i>
                            صحة التكاملات
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        @if (Model.IntegrationHealth.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>التكامل</th>
                                            <th>النوع</th>
                                            <th>الحالة</th>
                                            <th>آخر فحص</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var integration in Model.IntegrationHealth)
                                        {
                                            var statusClass = integration.Status switch
                                            {
                                                "Healthy" => "success",
                                                "Degraded" => "warning",
                                                "Down" => "danger",
                                                _ => "secondary"
                                            };
                                            var statusIcon = integration.Status switch
                                            {
                                                "Healthy" => "fa-check-circle",
                                                "Degraded" => "fa-exclamation-circle",
                                                "Down" => "fa-times-circle",
                                                _ => "fa-question-circle"
                                            };
                                            <tr>
                                                <td><strong>@integration.IntegrationName</strong></td>
                                                <td>@integration.IntegrationType</td>
                                                <td>
                                                    <span class="badge bg-@statusClass">
                                                        <i class="fas @statusIcon me-1"></i>
                                                        @integration.Status
                                                    </span>
                                                </td>
                                                <td>@integration.LastCheckTime.ToString("HH:mm:ss")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center text-muted py-5">
                                <i class="fas fa-unlink fa-3x mb-2"></i>
                                <p>لا توجد تكاملات مكونة</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4 mt-2">
            <!-- API Metrics -->
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-chart-bar text-info me-2"></i>
                            مقاييس API (24 ساعة)
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3 mb-4">
                            <div class="col-md-3">
                                <div class="text-center">
                                    <h4 class="mb-1">@Model.ApiMetrics.TotalRequestsLast24h.ToString("N0")</h4>
                                    <small class="text-muted">إجمالي الطلبات</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center">
                                    <h4 class="mb-1">@Model.ApiMetrics.AvgLatencyMs ms</h4>
                                    <small class="text-muted">متوسط زمن الاستجابة</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center">
                                    <h4 class="mb-1">@Model.ApiMetrics.P95LatencyMs ms</h4>
                                    <small class="text-muted">P95 زمن الاستجابة</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center">
                                    <h4 class="@(Model.ApiMetrics.ErrorRate > 2 ? "text-danger" : "text-success") mb-1">
                                        @Model.ApiMetrics.ErrorRate%
                                    </h4>
                                    <small class="text-muted">نسبة الأخطاء</small>
                                </div>
                            </div>
                        </div>
                        
                        <h6 class="text-muted mb-3">أبطأ النقاط الطرفية</h6>
                        @if (Model.ApiMetrics.TopSlowEndpoints.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead class="table-light">
                                        <tr>
                                            <th>النقطة الطرفية</th>
                                            <th>الطلبات</th>
                                            <th>متوسط الزمن</th>
                                            <th>نسبة الخطأ</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var endpoint in Model.ApiMetrics.TopSlowEndpoints)
                                        {
                                            <tr>
                                                <td><code>@endpoint.Endpoint</code></td>
                                                <td>@endpoint.RequestCount</td>
                                                <td>
                                                    <span class="@(endpoint.AvgLatencyMs > 200 ? "text-warning" : "")">
                                                        @endpoint.AvgLatencyMs ms
                                                    </span>
                                                </td>
                                                <td>@endpoint.ErrorRate%</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- HTTP Errors -->
            <div class="col-lg-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-bug text-danger me-2"></i>
                            أخطاء HTTP
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-6">
                                <div class="p-4 bg-warning bg-opacity-10 rounded text-center">
                                    <h3 class="text-warning mb-1">@Model.ApiMetrics.Http4xxErrors</h3>
                                    <small class="text-muted">أخطاء 4xx</small>
                                    <p class="small text-muted mb-0 mt-1">أخطاء العميل</p>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="p-4 bg-danger bg-opacity-10 rounded text-center">
                                    <h3 class="text-danger mb-1">@Model.ApiMetrics.Http5xxErrors</h3>
                                    <small class="text-muted">أخطاء 5xx</small>
                                    <p class="small text-muted mb-0 mt-1">أخطاء الخادم</p>
                                </div>
                            </div>
                        </div>
                        
                        @if (Model.JobFailures.Any())
                        {
                            <hr class="my-4">
                            <h6 class="text-muted mb-3">
                                <i class="fas fa-clock text-warning me-1"></i>
                                فشل المهام الخلفية
                            </h6>
                            @foreach (var job in Model.JobFailures.Take(3))
                            {
                                <div class="alert alert-warning py-2 mb-2">
                                    <strong>@job.JobName</strong>
                                    <br><small>@job.ErrorMessage?.Substring(0, Math.Min(50, job.ErrorMessage?.Length ?? 0))...</small>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>
