@model GrcMvc.Services.Interfaces.AdvancedExecutiveDashboardDto
@{
    ViewData["Title"] = "لوحة التحكم التنفيذية";
    ViewData["TitleEn"] = "Executive Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">
                <i class="fas fa-chart-line text-primary me-2"></i>
                لوحة التحكم التنفيذية
            </h1>
            <p class="text-muted mb-0">نظرة شاملة على وضع الامتثال والمخاطر</p>
        </div>
        <div class="d-flex gap-2">
            <span class="badge bg-light text-dark">
                <i class="fas fa-clock me-1"></i>
                آخر تحديث: @(Model?.GeneratedAt.ToString("HH:mm") ?? "--:--")
            </span>
            <button class="btn btn-outline-primary btn-sm" onclick="location.reload()">
                <i class="fas fa-sync-alt me-1"></i>
                تحديث
            </button>
            <div class="dropdown">
                <button class="btn btn-outline-secondary btn-sm dropdown-toggle" data-bs-toggle="dropdown">
                    <i class="fas fa-download me-1"></i>
                    تصدير
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#"><i class="fas fa-file-pdf me-2"></i>PDF</a></li>
                    <li><a class="dropdown-item" href="#"><i class="fas fa-file-excel me-2"></i>Excel</a></li>
                </ul>
            </div>
        </div>
    </div>

    @if (Model == null)
    {
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle me-2"></i>
            لا تتوفر بيانات. يرجى المحاولة مرة أخرى.
        </div>
    }
    else
    {
        <!-- KPI Cards Strip -->
        <div class="row g-3 mb-4">
            @foreach (var kpi in Model.Kpis)
            {
                var colorClass = kpi.Severity switch
                {
                    "Critical" => "danger",
                    "High" => "warning",
                    "Medium" => "info",
                    "Low" => "secondary",
                    "Good" => "success",
                    _ => "primary"
                };
                var trendIcon = kpi.Trend switch
                {
                    "Up" => "fa-arrow-up",
                    "Down" => "fa-arrow-down",
                    _ => "fa-minus"
                };
                
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <p class="text-muted small mb-1">@kpi.LabelAr</p>
                                    <h3 class="mb-0 text-@colorClass">
                                        @kpi.Value<small class="fs-6">@kpi.Unit</small>
                                    </h3>
                                </div>
                                <div class="bg-@colorClass bg-opacity-10 rounded-circle p-3">
                                    <i class="fas @trendIcon text-@colorClass"></i>
                                </div>
                            </div>
                            <div class="mt-2">
                                <span class="badge bg-@(kpi.TrendValue >= 0 ? "success" : "danger") bg-opacity-10 text-@(kpi.TrendValue >= 0 ? "success" : "danger")">
                                    <i class="fas @trendIcon me-1"></i>
                                    @Math.Abs(kpi.TrendValue)@kpi.Unit
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="row g-4">
            <!-- Compliance Trend Chart -->
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 pb-0">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-chart-area text-primary me-2"></i>
                            اتجاه الامتثال
                        </h5>
                    </div>
                    <div class="card-body">
                        <canvas id="complianceTrendChart" height="200"></canvas>
                    </div>
                </div>
            </div>

            <!-- Audit Readiness Gauge -->
            <div class="col-lg-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 pb-0">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-clipboard-check text-primary me-2"></i>
                            الجاهزية للتدقيق
                        </h5>
                    </div>
                    <div class="card-body text-center">
                        <div class="position-relative d-inline-block mb-3">
                            <canvas id="auditReadinessGauge" width="200" height="200"></canvas>
                            <div class="position-absolute top-50 start-50 translate-middle">
                                <h2 class="mb-0">@Model.AuditReadiness.OverallScore%</h2>
                                <small class="text-muted">@Model.AuditReadiness.ReadinessLevelAr</small>
                            </div>
                        </div>
                        <div class="text-start">
                            <div class="d-flex justify-content-between mb-2">
                                <small>اكتمال الأدلة</small>
                                <small>@Model.AuditReadiness.EvidenceCompletenessScore%</small>
                            </div>
                            <div class="progress mb-2" style="height: 6px;">
                                <div class="progress-bar bg-success" style="width: @Model.AuditReadiness.EvidenceCompletenessScore%"></div>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <small>اختبار الضوابط</small>
                                <small>@Model.AuditReadiness.ControlTestingScore%</small>
                            </div>
                            <div class="progress mb-2" style="height: 6px;">
                                <div class="progress-bar bg-info" style="width: @Model.AuditReadiness.ControlTestingScore%"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4 mt-2">
            <!-- Risk Heatmap -->
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 pb-0">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-fire text-danger me-2"></i>
                            خريطة حرارة المخاطر
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="risk-heatmap">
                            <table class="table table-bordered text-center mb-0">
                                <thead>
                                    <tr>
                                        <th class="bg-light"></th>
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <th class="bg-light">@i</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int likelihood = 5; likelihood >= 1; likelihood--)
                                    {
                                        <tr>
                                            <td class="bg-light fw-bold">@likelihood</td>
                                            @for (int impact = 1; impact <= 5; impact++)
                                            {
                                                var cell = Model.RiskHeatmap.Cells.FirstOrDefault(c => c.Likelihood == likelihood && c.Impact == impact);
                                                var count = cell?.Count ?? 0;
                                                var level = cell?.RiskLevel ?? "Low";
                                                var bgClass = level switch
                                                {
                                                    "Critical" => "bg-danger text-white",
                                                    "High" => "bg-warning",
                                                    "Medium" => "bg-info text-white",
                                                    _ => "bg-success text-white"
                                                };
                                                <td class="@bgClass" title="@(cell?.RiskNames != null ? string.Join(", ", cell.RiskNames) : "")">
                                                    @if (count > 0)
                                                    {
                                                        <strong>@count</strong>
                                                    }
                                                </td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <div class="d-flex justify-content-between mt-2">
                                <small class="text-muted">← التأثير →</small>
                                <small class="text-muted">↑ الاحتمالية</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Top Regulatory Gaps -->
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 pb-0">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-exclamation-circle text-warning me-2"></i>
                            أبرز الفجوات التنظيمية
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (Model.TopGaps.Any())
                        {
                            @foreach (var gap in Model.TopGaps)
                            {
                                var severityClass = gap.Severity switch
                                {
                                    "Critical" => "danger",
                                    "High" => "warning",
                                    _ => "info"
                                };
                                <div class="d-flex align-items-center mb-3">
                                    <div class="flex-shrink-0">
                                        <span class="badge bg-@severityClass rounded-pill">@gap.OpenGaps</span>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h6 class="mb-0">@gap.Domain</h6>
                                        <small class="text-muted">@gap.OpenGaps من @gap.TotalControls ضوابط</small>
                                    </div>
                                    <div class="flex-shrink-0">
                                        <div class="progress" style="width: 100px; height: 6px;">
                                            <div class="progress-bar bg-@severityClass" style="width: @(100 - gap.GapPercentage)%"></div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center text-muted py-4">
                                <i class="fas fa-check-circle fa-3x text-success mb-2"></i>
                                <p>لا توجد فجوات تنظيمية حرجة</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Executive Alerts -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-0 pb-0">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-bell text-danger me-2"></i>
                            التنبيهات التنفيذية
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (Model.Alerts.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover align-middle">
                                    <thead class="table-light">
                                        <tr>
                                            <th>الأهمية</th>
                                            <th>العنوان</th>
                                            <th>الفئة</th>
                                            <th>التاريخ</th>
                                            <th>الإجراء</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var alert in Model.Alerts)
                                        {
                                            var severityClass = alert.Severity switch
                                            {
                                                "Critical" => "danger",
                                                "High" => "warning",
                                                "Medium" => "info",
                                                _ => "secondary"
                                            };
                                            <tr>
                                                <td>
                                                    <span class="badge bg-@severityClass">@alert.Severity</span>
                                                </td>
                                                <td>
                                                    <strong>@alert.TitleAr</strong>
                                                    <br><small class="text-muted">@alert.Description</small>
                                                </td>
                                                <td>@alert.Category</td>
                                                <td>@alert.CreatedAt.ToString("dd/MM/yyyy")</td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(alert.ActionUrl))
                                                    {
                                                        <a href="@alert.ActionUrl" class="btn btn-sm btn-outline-primary">
                                                            <i class="fas fa-external-link-alt"></i>
                                                        </a>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center text-muted py-4">
                                <i class="fas fa-check-circle fa-3x text-success mb-2"></i>
                                <p>لا توجد تنبيهات تتطلب انتباهك</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Compliance Trend Chart
        @if (Model?.ComplianceTrend != null)
        {
            <text>
            const trendData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.ComplianceTrend.Select(t => new { date = t.Date.ToString("MMM"), value = t.Value })));
            
            new Chart(document.getElementById('complianceTrendChart'), {
                type: 'line',
                data: {
                    labels: trendData.map(d => d.date),
                    datasets: [{
                        label: 'نسبة الامتثال',
                        data: trendData.map(d => d.value),
                        borderColor: '#0d6efd',
                        backgroundColor: 'rgba(13, 110, 253, 0.1)',
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100,
                            ticks: { callback: value => value + '%' }
                        }
                    }
                }
            });
            </text>
        }

        // Audit Readiness Gauge
        @if (Model?.AuditReadiness != null)
        {
            <text>
            const gaugeValue = @Model.AuditReadiness.OverallScore;
            const gaugeColor = gaugeValue >= 90 ? '#198754' : gaugeValue >= 70 ? '#ffc107' : gaugeValue >= 50 ? '#0dcaf0' : '#dc3545';
            
            new Chart(document.getElementById('auditReadinessGauge'), {
                type: 'doughnut',
                data: {
                    datasets: [{
                        data: [gaugeValue, 100 - gaugeValue],
                        backgroundColor: [gaugeColor, '#e9ecef'],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    cutout: '75%',
                    plugins: { legend: { display: false }, tooltip: { enabled: false } }
                }
            });
            </text>
        }
    </script>
}
