@model List<GrcMvc.Models.Entities.EmailOperations.EmailMailbox>
@{
    ViewData["Title"] = "إدارة صناديق البريد";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">
                <i class="bi bi-mailbox2 text-primary me-2"></i>
                إدارة صناديق البريد
            </h1>
            <p class="text-muted mb-0">إدارة صناديق البريد المراقبة لشاهين و Dogan Consult</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-right"></i> العودة
            </a>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addMailboxModal">
                <i class="bi bi-plus-lg"></i> إضافة صندوق بريد
            </button>
        </div>
    </div>

    <!-- Mailboxes Grid -->
    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            @foreach (var mailbox in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <span class="badge @(mailbox.IsActive ? "bg-success" : "bg-secondary") me-2">
                                    @(mailbox.IsActive ? "نشط" : "متوقف")
                                </span>
                                <strong>@mailbox.DisplayName</strong>
                            </div>
                            <span class="badge @(mailbox.Brand == "Shahin" ? "bg-success" : "bg-info")">
                                @(mailbox.Brand == "Shahin" ? "شاهين" : "Dogan Consult")
                            </span>
                        </div>
                        <div class="card-body">
                            <p class="mb-2">
                                <i class="bi bi-envelope text-muted me-2"></i>
                                <code>@mailbox.EmailAddress</code>
                            </p>
                            <p class="mb-2 small text-muted">
                                <i class="bi bi-graph-up me-2"></i>
                                Graph User ID: <code>@(mailbox.GraphUserId?.Substring(0, Math.Min(8, mailbox.GraphUserId?.Length ?? 0)))...</code>
                            </p>
                            
                            <hr>
                            
                            <div class="row text-center small">
                                <div class="col-4">
                                    <div class="text-muted">الرد الآلي</div>
                                    <span class="badge @(mailbox.AutoReplyEnabled ? "bg-success" : "bg-secondary")">
                                        @(mailbox.AutoReplyEnabled ? "مفعّل" : "معطّل")
                                    </span>
                                </div>
                                <div class="col-4">
                                    <div class="text-muted">مسودة أولاً</div>
                                    <span class="badge @(mailbox.DraftModeDefault ? "bg-info" : "bg-secondary")">
                                        @(mailbox.DraftModeDefault ? "نعم" : "لا")
                                    </span>
                                </div>
                                <div class="col-4">
                                    <div class="text-muted">SLA (ساعة)</div>
                                    <span class="badge bg-warning text-dark">@mailbox.DefaultSlaHours</span>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="d-flex gap-2">
                                <a asp-action="SyncMailbox" asp-route-id="@mailbox.Id" class="btn btn-sm btn-outline-primary flex-fill">
                                    <i class="bi bi-arrow-repeat"></i> مزامنة
                                </a>
                                <a asp-action="EditMailbox" asp-route-id="@mailbox.Id" class="btn btn-sm btn-outline-secondary flex-fill">
                                    <i class="bi bi-pencil"></i> تعديل
                                </a>
                                <form asp-action="ToggleMailbox" asp-route-id="@mailbox.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm @(mailbox.IsActive ? "btn-outline-danger" : "btn-outline-success")">
                                        <i class="bi @(mailbox.IsActive ? "bi-pause" : "bi-play")"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-mailbox fs-1 text-muted d-block mb-3"></i>
                        <h5>لا توجد صناديق بريد مسجلة</h5>
                        <p class="text-muted mb-3">أضف صناديق البريد لبدء مراقبة الرسائل الواردة</p>
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addMailboxModal">
                            <i class="bi bi-plus-lg"></i> إضافة صندوق بريد
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Add Mailbox Modal -->
<div class="modal fade" id="addMailboxModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="AddMailbox" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-mailbox-flag text-primary me-2"></i>
                        إضافة صندوق بريد جديد
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">عنوان البريد الإلكتروني</label>
                        <input type="email" name="emailAddress" class="form-control" required placeholder="info@example.com">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">الاسم المعروض</label>
                        <input type="text" name="displayName" class="form-control" required placeholder="صندوق الدعم الفني">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">الشركة</label>
                        <select name="brand" class="form-select" required>
                            <option value="Shahin">شاهين (Shahin AI)</option>
                            <option value="DoganConsult">Dogan Consult</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Graph User ID</label>
                        <input type="text" name="graphUserId" class="form-control" placeholder="اختياري - سيتم اكتشافه تلقائياً">
                        <small class="text-muted">يمكن تركه فارغاً وسيتم اكتشافه تلقائياً</small>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" name="autoReplyEnabled" id="autoReplyEnabled">
                                <label class="form-check-label" for="autoReplyEnabled">تفعيل الرد الآلي</label>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" name="draftModeDefault" id="draftModeDefault" checked>
                                <label class="form-check-label" for="draftModeDefault">مسودة أولاً (للمراجعة)</label>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <label class="form-label">مهلة SLA الافتراضية (بالساعات)</label>
                        <input type="number" name="defaultSlaHours" class="form-control" value="24" min="1" max="168">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-plus-lg"></i> إضافة
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    // Auto-discover Graph User ID when email is entered
    document.querySelector('input[name="emailAddress"]')?.addEventListener('blur', async function() {
        const email = this.value;
        if (!email) return;
        
        try {
            const response = await fetch(`/api/email-operations/discover-user?email=${encodeURIComponent(email)}`);
            if (response.ok) {
                const data = await response.json();
                if (data.userId) {
                    document.querySelector('input[name="graphUserId"]').value = data.userId;
                }
            }
        } catch (e) {
        }
    });
</script>
}
