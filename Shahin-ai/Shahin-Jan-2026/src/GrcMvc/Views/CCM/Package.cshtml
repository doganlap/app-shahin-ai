@{
    ViewData["Title"] = "CCM Package Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "CCM")">CCM</a></li>
            <li class="breadcrumb-item active">Package Details</li>
        </ol>
    </nav>

    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="h3">
                <i class="fas fa-box text-primary me-2"></i>
                @(ViewBag.PackageName ?? "Control Package")
            </h1>
            <p class="text-muted">Continuous Control Monitoring Package</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="@Url.Action("Index", "CCM")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to CCM
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-list-check me-2"></i>Requirements</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.Requirements != null)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Requirement</th>
                                        <th>Status</th>
                                        <th>Last Check</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var req in ViewBag.Requirements)
                                    {
                                        <tr>
                                            <td>@req.Name</td>
                                            <td><span class="badge bg-success">Compliant</span></td>
                                            <td>@DateTime.UtcNow.ToString("MMM dd, yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No requirements found for this package.</p>
                    }
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-file-alt me-2"></i>Evidence</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.Evidence != null)
                    {
                        <div class="list-group">
                            @foreach (var ev in ViewBag.Evidence)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="fas fa-file text-info me-2"></i>
                                        @ev.Title
                                    </div>
                                    <span class="badge bg-success">Valid</span>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No evidence collected yet.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <h6 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Compliance Score</h6>
                </div>
                <div class="card-body text-center">
                    <h1 class="display-4 text-success">92%</h1>
                    <p class="text-muted">Overall Compliance</p>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-clock me-2"></i>Monitoring Status</h6>
                </div>
                <div class="card-body">
                    <div class="mb-2">
                        <small class="text-muted">Last Scan:</small>
                        <strong>@DateTime.UtcNow.ToString("MMM dd, yyyy HH:mm")</strong>
                    </div>
                    <div class="mb-2">
                        <small class="text-muted">Next Scan:</small>
                        <strong>@DateTime.UtcNow.AddHours(24).ToString("MMM dd, yyyy HH:mm")</strong>
                    </div>
                    <div>
                        <small class="text-muted">Frequency:</small>
                        <strong>Daily</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
