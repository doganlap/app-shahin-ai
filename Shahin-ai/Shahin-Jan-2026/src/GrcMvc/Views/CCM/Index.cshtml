@{
    ViewData["Title"] = "CCM - Continuous Control Monitoring";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var tests = ViewBag.Tests as List<GrcMvc.Models.Entities.CCMControlTest> ?? new List<GrcMvc.Models.Entities.CCMControlTest>();
    var executions = ViewBag.Executions as List<GrcMvc.Models.Entities.CCMTestExecution> ?? new List<GrcMvc.Models.Entities.CCMTestExecution>();
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1"><i class="fas fa-robot text-info me-2"></i>Continuous Control Monitoring</h1>
            <p class="text-muted">Automated control testing and validation</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm text-center border-start border-primary border-4">
                <div class="card-body">
                    <div class="h2 mb-0 text-primary">@ViewBag.TotalTests</div>
                    <small class="text-muted">Total Tests</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm text-center border-start border-success border-4">
                <div class="card-body">
                    <div class="h2 mb-0 text-success">@ViewBag.PassedTests</div>
                    <small class="text-muted">Passed</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm text-center border-start border-danger border-4">
                <div class="card-body">
                    <div class="h2 mb-0 text-danger">@ViewBag.FailedTests</div>
                    <small class="text-muted">Failed</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-info text-white">
                    <i class="fas fa-vial me-2"></i>Available Tests
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr><th>Test Name</th><th>Type</th><th>Action</th></tr>
                            </thead>
                            <tbody>
                                @foreach (var test in tests.Take(10))
                                {
                                    <tr>
                                        <td>@test.Name</td>
                                        <td><span class="badge bg-secondary">@test.TestCategory</span></td>
                                        <td>
                                            <a href="@Url.Action("RunTest", new { testId = test.Id })" class="btn btn-sm btn-success">
                                                <i class="fas fa-play"></i> Run
                                            </a>
                                        </td>
                                    </tr>
                                }
                                @if (!tests.Any())
                                {
                                    <tr><td colspan="3" class="text-center text-muted py-3">No tests configured</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <i class="fas fa-history me-2"></i>Recent Results
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr><th>Executed</th><th>Result</th><th>By</th></tr>
                            </thead>
                            <tbody>
                                @foreach (var exec in executions.Take(10))
                                {
                                    <tr>
                                        <td>@exec.PeriodEnd.ToString("MMM dd HH:mm")</td>
                                        <td>
                                            @if (exec.ResultStatus == "Pass")
                                            {
                                                <span class="badge bg-success">Pass</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Fail</span>
                                            }
                                        </td>
                                        <td>â€”</td>
                                    </tr>
                                }
                                @if (!executions.Any())
                                {
                                    <tr><td colspan="3" class="text-center text-muted py-3">No results yet</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
