@model List<GrcMvc.Controllers.TenantSummary>
@{
    ViewData["Title"] = "إدارة المؤسسات";
    Layout = null;
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;500;700;800&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
    
    <style>
        :root {
            --primary: #dc2626;
            --secondary: #10b981;
            --warning: #f59e0b;
            --info: #6366f1;
            --dark: #0f172a;
            --darker: #020617;
            --light: #f8fafc;
            --glass: rgba(255, 255, 255, 0.05);
            --glass-border: rgba(255, 255, 255, 0.1);
        }

        body {
            font-family: 'Tajawal', sans-serif;
            background: var(--darker);
            color: var(--light);
            margin: 0;
            min-height: 100vh;
        }

        .sidebar {
            position: fixed;
            top: 0;
            right: 0;
            width: 260px;
            height: 100vh;
            background: var(--dark);
            border-left: 1px solid var(--glass-border);
            padding: 1.5rem;
            display: flex;
            flex-direction: column;
        }

        .sidebar-logo {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid var(--glass-border);
            margin-bottom: 1.5rem;
        }

        .sidebar-logo-icon {
            width: 40px;
            height: 40px;
            background: var(--primary);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 900;
        }

        .sidebar-logo-text {
            font-size: 1.25rem;
            font-weight: 800;
        }

        .sidebar-logo-text small {
            display: block;
            font-size: 0.7rem;
            color: rgba(248,250,252,0.5);
            font-weight: 400;
        }

        .nav-link {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.75rem 1rem;
            color: rgba(248,250,252,0.7);
            text-decoration: none;
            border-radius: 10px;
            margin-bottom: 0.25rem;
            transition: all 0.2s ease;
        }

        .nav-link:hover, .nav-link.active {
            background: var(--glass);
            color: var(--light);
        }

        .nav-link.active {
            background: rgba(220, 38, 38, 0.15);
            color: var(--primary);
        }

        .nav-link i {
            width: 20px;
            text-align: center;
        }

        .sidebar-footer {
            margin-top: auto;
            padding-top: 1rem;
            border-top: 1px solid var(--glass-border);
        }

        .main-content {
            margin-right: 260px;
            padding: 2rem;
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }

        .page-header h1 {
            font-size: 1.75rem;
            font-weight: 800;
            margin: 0;
        }

        .btn-primary-custom {
            background: linear-gradient(135deg, var(--primary), #b91c1c);
            border: none;
            padding: 0.6rem 1.25rem;
            border-radius: 10px;
            color: white;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            cursor: pointer;
        }

        .btn-primary-custom:hover {
            opacity: 0.9;
            color: white;
        }

        .filter-bar {
            display: flex;
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .filter-bar input, .filter-bar select {
            background: var(--glass);
            border: 1px solid var(--glass-border);
            color: var(--light);
            padding: 0.6rem 1rem;
            border-radius: 8px;
            font-size: 0.9rem;
        }

        .filter-bar input::placeholder {
            color: rgba(248,250,252,0.5);
        }

        .data-table {
            background: var(--glass);
            border: 1px solid var(--glass-border);
            border-radius: 16px;
            overflow: hidden;
        }

        .table-header {
            padding: 1.25rem 1.5rem;
            border-bottom: 1px solid var(--glass-border);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .table-header h3 {
            font-size: 1.1rem;
            font-weight: 700;
            margin: 0;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 1rem 1.5rem;
            text-align: right;
        }

        th {
            background: rgba(0,0,0,0.2);
            font-weight: 600;
            font-size: 0.85rem;
            color: rgba(248,250,252,0.6);
            text-transform: uppercase;
        }

        td {
            border-bottom: 1px solid var(--glass-border);
        }

        tr:last-child td {
            border-bottom: none;
        }

        tr:hover td {
            background: rgba(255,255,255,0.02);
        }

        .badge {
            padding: 0.35rem 0.75rem;
            border-radius: 50px;
            font-size: 0.75rem;
            font-weight: 600;
        }

        .badge-success { background: rgba(16, 185, 129, 0.15); color: var(--secondary); }
        .badge-warning { background: rgba(245, 158, 11, 0.15); color: var(--warning); }
        .badge-danger { background: rgba(239, 68, 68, 0.15); color: #ef4444; }
        .badge-info { background: rgba(99, 102, 241, 0.15); color: var(--info); }

        .btn-sm {
            padding: 0.4rem 0.75rem;
            font-size: 0.8rem;
            border-radius: 8px;
            border: 1px solid var(--glass-border);
            background: transparent;
            color: var(--light);
            cursor: pointer;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.35rem;
        }

        .btn-sm:hover {
            background: var(--glass);
            color: white;
        }

        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            color: rgba(248,250,252,0.5);
        }

        .empty-state i {
            font-size: 4rem;
            margin-bottom: 1rem;
        }

        .stats-mini {
            display: flex;
            gap: 2rem;
            margin-bottom: 2rem;
        }

        .stat-mini {
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .stat-mini-icon {
            width: 45px;
            height: 45px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .stat-mini-icon.primary { background: rgba(220, 38, 38, 0.15); color: var(--primary); }
        .stat-mini-icon.success { background: rgba(16, 185, 129, 0.15); color: var(--secondary); }
        .stat-mini-icon.warning { background: rgba(245, 158, 11, 0.15); color: var(--warning); }

        .stat-mini-value {
            font-size: 1.5rem;
            font-weight: 800;
            line-height: 1;
        }

        .stat-mini-label {
            font-size: 0.8rem;
            color: rgba(248,250,252,0.5);
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="sidebar-logo">
            <div class="sidebar-logo-icon">ش</div>
            <div class="sidebar-logo-text">
                شاهين
                <small>Platform Admin</small>
            </div>
        </div>

        <nav>
            <a href="/admin/dashboard" class="nav-link">
                <i class="bi bi-speedometer2"></i>
                <span>لوحة التحكم</span>
            </a>
            <a href="/admin/tenants" class="nav-link active">
                <i class="bi bi-buildings"></i>
                <span>المؤسسات</span>
            </a>
            <a href="/owner/Tenants/Create" class="nav-link">
                <i class="bi bi-plus-circle"></i>
                <span>إنشاء مؤسسة</span>
            </a>
            <a href="/admin/users" class="nav-link">
                <i class="bi bi-people"></i>
                <span>المستخدمين</span>
            </a>
            <a href="/admin/analytics" class="nav-link">
                <i class="bi bi-graph-up"></i>
                <span>التحليلات</span>
            </a>
            <a href="/admin/settings" class="nav-link">
                <i class="bi bi-gear"></i>
                <span>الإعدادات</span>
            </a>
        </nav>

        <div class="sidebar-footer">
            <form asp-controller="AdminPortal" asp-action="Logout" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="nav-link" style="width: 100%; border: none; background: none; cursor: pointer;">
                    <i class="bi bi-box-arrow-right"></i>
                    <span>تسجيل الخروج</span>
                </button>
            </form>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <div class="page-header">
            <h1>إدارة المؤسسات</h1>
            <a href="/owner/Tenants/Create" class="btn-primary-custom">
                <i class="bi bi-plus-lg"></i>
                إنشاء مؤسسة جديدة
            </a>
        </div>

        <!-- Quick Stats -->
        <div class="stats-mini">
            <div class="stat-mini">
                <div class="stat-mini-icon primary">
                    <i class="bi bi-buildings"></i>
                </div>
                <div>
                    <div class="stat-mini-value">@Model.Count</div>
                    <div class="stat-mini-label">إجمالي المؤسسات</div>
                </div>
            </div>
            <div class="stat-mini">
                <div class="stat-mini-icon success">
                    <i class="bi bi-check-circle"></i>
                </div>
                <div>
                    <div class="stat-mini-value">@Model.Count(t => t.Status == "Active")</div>
                    <div class="stat-mini-label">نشط</div>
                </div>
            </div>
            <div class="stat-mini">
                <div class="stat-mini-icon warning">
                    <i class="bi bi-hourglass-split"></i>
                </div>
                <div>
                    <div class="stat-mini-value">@Model.Count(t => t.IsTrial)</div>
                    <div class="stat-mini-label">تجريبي</div>
                </div>
            </div>
        </div>

        <!-- Filter Bar -->
        <div class="filter-bar">
            <input type="text" id="searchInput" placeholder="بحث عن مؤسسة..." onkeyup="filterTable()">
            <select id="statusFilter" onchange="filterTable()">
                <option value="">جميع الحالات</option>
                <option value="Active">نشط</option>
                <option value="Pending">معلق</option>
                <option value="Suspended">موقوف</option>
            </select>
            <select id="trialFilter" onchange="filterTable()">
                <option value="">الكل</option>
                <option value="trial">تجريبي</option>
                <option value="paid">مدفوع</option>
            </select>
        </div>

        <!-- Tenants Table -->
        <div class="data-table">
            <div class="table-header">
                <h3>قائمة المؤسسات (@Model.Count)</h3>
            </div>
            
            @if (Model.Any())
            {
                <table id="tenantsTable">
                    <thead>
                        <tr>
                            <th>المؤسسة</th>
                            <th>البريد الإلكتروني</th>
                            <th>الحالة</th>
                            <th>الإعداد</th>
                            <th>المستخدمين</th>
                            <th>التسجيل</th>
                            <th>إجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tenant in Model)
                        {
                            <tr data-status="@tenant.Status" data-trial="@(tenant.IsTrial ? "trial" : "paid")">
                                <td>
                                    <strong>@tenant.OrganizationName</strong>
                                    @if (tenant.IsTrial)
                                    {
                                        <span class="badge badge-warning" style="margin-right: 0.5rem;">تجريبي</span>
                                        @if (tenant.TrialEndsAt.HasValue)
                                        {
                                            var daysLeft = (tenant.TrialEndsAt.Value - DateTime.UtcNow).Days;
                                            if (daysLeft <= 3)
                                            {
                                                <small class="text-danger">(@daysLeft يوم متبقي)</small>
                                            }
                                        }
                                    }
                                </td>
                                <td>@tenant.AdminEmail</td>
                                <td>
                                    @if (tenant.Status == "Active")
                                    {
                                        <span class="badge badge-success">نشط</span>
                                    }
                                    else if (tenant.Status == "Pending")
                                    {
                                        <span class="badge badge-warning">معلق</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">@tenant.Status</span>
                                    }
                                </td>
                                <td>
                                    @if (tenant.OnboardingStatus == "COMPLETED")
                                    {
                                        <span class="badge badge-success">مكتمل</span>
                                    }
                                    else if (tenant.OnboardingStatus == "IN_PROGRESS")
                                    {
                                        <span class="badge badge-info">جاري</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-warning">لم يبدأ</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge badge-info">@tenant.UserCount</span>
                                </td>
                                <td>@tenant.CreatedDate.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <a href="/admin/tenants/@tenant.Id" class="btn-sm">
                                        <i class="bi bi-eye"></i>
                                        عرض
                                    </a>
                                    <a href="/owner/Tenants/@tenant.Id/Details" class="btn-sm">
                                        <i class="bi bi-gear"></i>
                                        إدارة
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="empty-state">
                    <i class="bi bi-buildings"></i>
                    <h4>لا توجد مؤسسات مسجلة</h4>
                    <p>ابدأ بإنشاء أول مؤسسة</p>
                    <a href="/owner/Tenants/Create" class="btn-primary-custom" style="margin-top: 1rem;">
                        <i class="bi bi-plus-lg"></i>
                        إنشاء مؤسسة
                    </a>
                </div>
            }
        </div>
    </main>

    <script>
        function filterTable() {
            const searchInput = document.getElementById('searchInput').value.toLowerCase();
            const statusFilter = document.getElementById('statusFilter').value;
            const trialFilter = document.getElementById('trialFilter').value;
            const rows = document.querySelectorAll('#tenantsTable tbody tr');

            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                const status = row.dataset.status;
                const trial = row.dataset.trial;

                const matchSearch = text.includes(searchInput);
                const matchStatus = !statusFilter || status === statusFilter;
                const matchTrial = !trialFilter || trial === trialFilter;

                row.style.display = matchSearch && matchStatus && matchTrial ? '' : 'none';
            });
        }
    </script>
</body>
</html>
