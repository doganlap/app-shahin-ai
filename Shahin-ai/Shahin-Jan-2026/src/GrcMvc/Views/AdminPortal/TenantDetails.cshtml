@model GrcMvc.Models.Entities.Tenant
@{
    ViewData["Title"] = "تفاصيل المؤسسة - " + Model.OrganizationName;
    Layout = null;
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;500;700;800&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
    
    <style>
        :root {
            --primary: #dc2626;
            --secondary: #10b981;
            --warning: #f59e0b;
            --info: #6366f1;
            --dark: #0f172a;
            --darker: #020617;
            --light: #f8fafc;
            --glass: rgba(255, 255, 255, 0.05);
            --glass-border: rgba(255, 255, 255, 0.1);
        }

        body {
            font-family: 'Tajawal', sans-serif;
            background: var(--darker);
            color: var(--light);
            margin: 0;
            min-height: 100vh;
        }

        .sidebar {
            position: fixed;
            top: 0;
            right: 0;
            width: 260px;
            height: 100vh;
            background: var(--dark);
            border-left: 1px solid var(--glass-border);
            padding: 1.5rem;
            display: flex;
            flex-direction: column;
        }

        .sidebar-logo {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid var(--glass-border);
            margin-bottom: 1.5rem;
        }

        .sidebar-logo-icon {
            width: 40px;
            height: 40px;
            background: var(--primary);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 900;
        }

        .sidebar-logo-text {
            font-size: 1.25rem;
            font-weight: 800;
        }

        .sidebar-logo-text small {
            display: block;
            font-size: 0.7rem;
            color: rgba(248,250,252,0.5);
            font-weight: 400;
        }

        .nav-link {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.75rem 1rem;
            color: rgba(248,250,252,0.7);
            text-decoration: none;
            border-radius: 10px;
            margin-bottom: 0.25rem;
            transition: all 0.2s ease;
        }

        .nav-link:hover {
            background: var(--glass);
            color: var(--light);
        }

        .nav-link.active {
            background: rgba(220, 38, 38, 0.15);
            color: var(--primary);
        }

        .nav-link i {
            width: 20px;
            text-align: center;
        }

        .sidebar-footer {
            margin-top: auto;
            padding-top: 1rem;
            border-top: 1px solid var(--glass-border);
        }

        .main-content {
            margin-right: 260px;
            padding: 2rem;
        }

        .breadcrumb-custom {
            display: flex;
            gap: 0.5rem;
            margin-bottom: 1rem;
            font-size: 0.9rem;
        }

        .breadcrumb-custom a {
            color: rgba(248,250,252,0.6);
            text-decoration: none;
        }

        .breadcrumb-custom a:hover {
            color: var(--light);
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 2rem;
        }

        .page-header h1 {
            font-size: 1.75rem;
            font-weight: 800;
            margin: 0 0 0.5rem 0;
        }

        .tenant-id {
            font-size: 0.85rem;
            color: rgba(248,250,252,0.5);
            font-family: monospace;
        }

        .action-buttons {
            display: flex;
            gap: 0.75rem;
        }

        .btn-action {
            padding: 0.6rem 1.25rem;
            border-radius: 10px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.9rem;
            border: none;
            cursor: pointer;
        }

        .btn-primary { background: var(--primary); color: white; }
        .btn-success { background: var(--secondary); color: white; }
        .btn-warning { background: var(--warning); color: var(--dark); }
        .btn-outline { background: transparent; border: 1px solid var(--glass-border); color: var(--light); }

        .btn-action:hover { opacity: 0.9; }

        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .info-card {
            background: var(--glass);
            border: 1px solid var(--glass-border);
            border-radius: 16px;
            padding: 1.5rem;
        }

        .info-card h3 {
            font-size: 1rem;
            font-weight: 700;
            margin-bottom: 1.25rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .info-card h3 i {
            color: var(--primary);
        }

        .info-row {
            display: flex;
            justify-content: space-between;
            padding: 0.75rem 0;
            border-bottom: 1px solid var(--glass-border);
        }

        .info-row:last-child {
            border-bottom: none;
        }

        .info-label {
            color: rgba(248,250,252,0.6);
            font-size: 0.9rem;
        }

        .info-value {
            font-weight: 600;
        }

        .badge {
            padding: 0.35rem 0.75rem;
            border-radius: 50px;
            font-size: 0.75rem;
            font-weight: 600;
        }

        .badge-success { background: rgba(16, 185, 129, 0.15); color: var(--secondary); }
        .badge-warning { background: rgba(245, 158, 11, 0.15); color: var(--warning); }
        .badge-danger { background: rgba(239, 68, 68, 0.15); color: #ef4444; }
        .badge-info { background: rgba(99, 102, 241, 0.15); color: var(--info); }

        .users-table {
            width: 100%;
            border-collapse: collapse;
        }

        .users-table th, .users-table td {
            padding: 0.75rem;
            text-align: right;
        }

        .users-table th {
            background: rgba(0,0,0,0.2);
            font-weight: 600;
            font-size: 0.8rem;
            color: rgba(248,250,252,0.6);
        }

        .users-table td {
            border-bottom: 1px solid var(--glass-border);
        }

        .users-table tr:last-child td {
            border-bottom: none;
        }

        .timeline {
            position: relative;
            padding-right: 2rem;
        }

        .timeline::before {
            content: '';
            position: absolute;
            right: 0.5rem;
            top: 0;
            bottom: 0;
            width: 2px;
            background: var(--glass-border);
        }

        .timeline-item {
            position: relative;
            padding-bottom: 1.5rem;
        }

        .timeline-item::before {
            content: '';
            position: absolute;
            right: -1.6rem;
            top: 0.25rem;
            width: 10px;
            height: 10px;
            border-radius: 50%;
            background: var(--primary);
        }

        .timeline-date {
            font-size: 0.8rem;
            color: rgba(248,250,252,0.5);
        }

        .timeline-text {
            margin-top: 0.25rem;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="sidebar-logo">
            <div class="sidebar-logo-icon">ش</div>
            <div class="sidebar-logo-text">
                شاهين
                <small>Platform Admin</small>
            </div>
        </div>

        <nav>
            <a href="/admin/dashboard" class="nav-link">
                <i class="bi bi-speedometer2"></i>
                <span>لوحة التحكم</span>
            </a>
            <a href="/admin/tenants" class="nav-link active">
                <i class="bi bi-buildings"></i>
                <span>المؤسسات</span>
            </a>
            <a href="/owner/Tenants/Create" class="nav-link">
                <i class="bi bi-plus-circle"></i>
                <span>إنشاء مؤسسة</span>
            </a>
            <a href="/admin/users" class="nav-link">
                <i class="bi bi-people"></i>
                <span>المستخدمين</span>
            </a>
            <a href="/admin/analytics" class="nav-link">
                <i class="bi bi-graph-up"></i>
                <span>التحليلات</span>
            </a>
        </nav>

        <div class="sidebar-footer">
            <form asp-controller="AdminPortal" asp-action="Logout" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="nav-link" style="width: 100%; border: none; background: none; cursor: pointer;">
                    <i class="bi bi-box-arrow-right"></i>
                    <span>تسجيل الخروج</span>
                </button>
            </form>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <div class="breadcrumb-custom">
            <a href="/admin/dashboard">لوحة التحكم</a>
            <span>/</span>
            <a href="/admin/tenants">المؤسسات</a>
            <span>/</span>
            <span>@Model.OrganizationName</span>
        </div>

        <div class="page-header">
            <div>
                <h1>
                    @Model.OrganizationName
                    @if (Model.IsTrial)
                    {
                        <span class="badge badge-warning" style="font-size: 0.6em; vertical-align: middle;">تجريبي</span>
                    }
                </h1>
                <div class="tenant-id">ID: @Model.Id</div>
            </div>
            <div class="action-buttons">
                <a href="/owner/Tenants/@Model.Id/GenerateAdmin" class="btn-action btn-success">
                    <i class="bi bi-person-plus"></i>
                    إنشاء حساب مسؤول
                </a>
                <a href="/owner/Tenants/@Model.Id/Details" class="btn-action btn-outline">
                    <i class="bi bi-gear"></i>
                    إعدادات متقدمة
                </a>
            </div>
        </div>

        <!-- Info Cards -->
        <div class="info-grid">
            <!-- Basic Info -->
            <div class="info-card">
                <h3><i class="bi bi-building"></i> معلومات أساسية</h3>
                <div class="info-row">
                    <span class="info-label">اسم المؤسسة</span>
                    <span class="info-value">@Model.OrganizationName</span>
                </div>
                <div class="info-row">
                    <span class="info-label">البريد الإلكتروني</span>
                    <span class="info-value">@Model.AdminEmail</span>
                </div>
                <div class="info-row">
                    <span class="info-label">تاريخ التسجيل</span>
                    <span class="info-value">@Model.CreatedDate.ToString("yyyy-MM-dd HH:mm")</span>
                </div>
                <div class="info-row">
                    <span class="info-label">الحالة</span>
                    <span class="info-value">
                        @if (Model.Status == "Active")
                        {
                            <span class="badge badge-success">نشط</span>
                        }
                        else if (Model.Status == "Pending")
                        {
                            <span class="badge badge-warning">معلق</span>
                        }
                        else
                        {
                            <span class="badge badge-danger">@Model.Status</span>
                        }
                    </span>
                </div>
            </div>

            <!-- Onboarding Status -->
            <div class="info-card">
                <h3><i class="bi bi-list-check"></i> حالة الإعداد</h3>
                <div class="info-row">
                    <span class="info-label">حالة Onboarding</span>
                    <span class="info-value">
                        @if (Model.OnboardingStatus == "COMPLETED")
                        {
                            <span class="badge badge-success">مكتمل</span>
                        }
                        else if (Model.OnboardingStatus == "IN_PROGRESS")
                        {
                            <span class="badge badge-info">جاري</span>
                        }
                        else
                        {
                            <span class="badge badge-warning">لم يبدأ</span>
                        }
                    </span>
                </div>
                <div class="info-row">
                    <span class="info-label">اكتمال Onboarding</span>
                    <span class="info-value">
                        @if (Model.OnboardingCompletedAt.HasValue)
                        {
                            @Model.OnboardingCompletedAt.Value.ToString("yyyy-MM-dd")
                        }
                        else
                        {
                            <span style="color: rgba(248,250,252,0.5)">لم يكتمل بعد</span>
                        }
                    </span>
                </div>
                <div class="info-row">
                    <span class="info-label">حساب المسؤول</span>
                    <span class="info-value">
                        @if (Model.AdminAccountGenerated)
                        {
                            <span class="badge badge-success">تم الإنشاء</span>
                        }
                        else
                        {
                            <span class="badge badge-warning">غير منشأ</span>
                        }
                    </span>
                </div>
            </div>

            <!-- Subscription -->
            <div class="info-card">
                <h3><i class="bi bi-credit-card"></i> الاشتراك</h3>
                <div class="info-row">
                    <span class="info-label">النوع</span>
                    <span class="info-value">
                        @if (Model.IsTrial)
                        {
                            <span class="badge badge-warning">تجريبي</span>
                        }
                        else
                        {
                            <span class="badge badge-success">مدفوع</span>
                        }
                    </span>
                </div>
                @if (Model.IsTrial && Model.TrialEndsAt.HasValue)
                {
                    <div class="info-row">
                        <span class="info-label">انتهاء التجربة</span>
                        <span class="info-value">
                            @Model.TrialEndsAt.Value.ToString("yyyy-MM-dd")
                            @{
                                var daysLeft = (Model.TrialEndsAt.Value - DateTime.UtcNow).Days;
                            }
                            @if (daysLeft <= 0)
                            {
                                <span class="badge badge-danger">منتهي</span>
                            }
                            else if (daysLeft <= 3)
                            {
                                <span class="badge badge-warning">@daysLeft يوم</span>
                            }
                        </span>
                    </div>
                }
                <div class="info-row">
                    <span class="info-label">تم إنشاؤه بواسطة Owner</span>
                    <span class="info-value">
                        @if (Model.IsOwnerCreated)
                        {
                            <span class="badge badge-info">نعم</span>
                        }
                        else
                        {
                            <span style="color: rgba(248,250,252,0.5)">لا</span>
                        }
                    </span>
                </div>
            </div>

            <!-- Users -->
            <div class="info-card">
                <h3><i class="bi bi-people"></i> المستخدمين (@(Model.Users?.Count(u => !u.IsDeleted) ?? 0))</h3>
                @if (Model.Users != null && Model.Users.Any(u => !u.IsDeleted))
                {
                    <table class="users-table">
                        <thead>
                            <tr>
                                <th>الاسم</th>
                                <th>الدور</th>
                                <th>الحالة</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users.Where(u => !u.IsDeleted).Take(5))
                            {
                                <tr>
                                    <td>@user.UserId</td>
                                    <td><span class="badge badge-info">@user.RoleCode</span></td>
                                    <td>
                                        @if (user.Status == "Active")
                                        {
                                            <span class="badge badge-success">نشط</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-warning">@user.Status</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @if (Model.Users.Count(u => !u.IsDeleted) > 5)
                    {
                        <div style="text-align: center; margin-top: 1rem;">
                            <a href="/admin/tenants/@Model.Id/users" style="color: var(--primary); text-decoration: none;">
                                عرض الكل (@Model.Users.Count(u => !u.IsDeleted))
                            </a>
                        </div>
                    }
                }
                else
                {
                    <div style="text-align: center; color: rgba(248,250,252,0.5); padding: 1rem;">
                        لا يوجد مستخدمين
                    </div>
                }
            </div>
        </div>

        <!-- Back Button -->
        <div style="margin-top: 2rem;">
            <a href="/admin/tenants" class="btn-action btn-outline">
                <i class="bi bi-arrow-right"></i>
                العودة للقائمة
            </a>
        </div>
    </main>
</body>
</html>
