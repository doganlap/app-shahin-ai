@{
    ViewData["Title"] = "Audit Package Generation";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var assessments = ViewBag.Assessments as List<GrcMvc.Models.Entities.Assessment> ?? new List<GrcMvc.Models.Entities.Assessment>();
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1"><i class="fas fa-archive text-success me-2"></i>Audit Package Generation</h1>
            <p class="text-muted">Export evidence packages for auditors</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body">
                    <div class="h2 mb-0 text-success">@assessments.Count</div>
                    <small class="text-muted">Completed Assessments</small>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body">
                    <div class="h2 mb-0 text-primary">@ViewBag.EvidenceCount</div>
                    <small class="text-muted">Approved Evidence Items</small>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-success text-white">
            <i class="fas fa-file-export me-2"></i>Available for Export
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr><th>Assessment</th><th>Status</th><th>Created</th><th>Actions</th></tr>
                    </thead>
                    <tbody>
                        @foreach (var assessment in assessments)
                        {
                            <tr>
                                <td><strong>@assessment.Name</strong></td>
                                <td><span class="badge bg-success">@assessment.Status</span></td>
                                <td>@assessment.CreatedDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <a href="@Url.Action("Generate", new { assessmentId = assessment.Id })" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye me-1"></i>Preview
                                    </a>
                                    <a href="@Url.Action("Export", new { assessmentId = assessment.Id })" class="btn btn-sm btn-success">
                                        <i class="fas fa-download me-1"></i>Export
                                    </a>
                                </td>
                            </tr>
                        }
                        @if (!assessments.Any())
                        {
                            <tr><td colspan="4" class="text-center text-muted py-4">
                                <i class="fas fa-inbox fa-2x mb-2 d-block"></i>
                                No completed assessments available for export
                            </td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
