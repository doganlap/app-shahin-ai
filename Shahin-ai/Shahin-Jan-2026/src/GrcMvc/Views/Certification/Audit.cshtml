@using Microsoft.AspNetCore.Mvc.Localization
@using GrcMvc.Models.ViewModels.Certification
@inject IHtmlLocalizer<SharedResource> L
@model List<CertificationAuditViewModel>
@{
    ViewData["Title"] = "Certification Audits";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-file-earmark-text"></i> Certification Audits</h2>
            <p class="text-muted">Track certification audit history and findings</p>
        </div>
        <div class="col text-end">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Certifications
            </a>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#scheduleAuditModal">
                <i class="bi bi-calendar-plus"></i> Schedule Audit
            </button>
        </div>
    </div>

    <!-- Audit Summary -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h6 class="opacity-75">Total Audits</h6>
                    <h2 class="mb-0">@Model.Count</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h6 class="opacity-75">Passed</h6>
                    <h2 class="mb-0">@Model.Count(a => a.Result == "Passed")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h6>With Findings</h6>
                    <h2 class="mb-0">@Model.Count(a => a.FindingsCount > 0)</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h6 class="opacity-75">Scheduled</h6>
                    <h2 class="mb-0">@Model.Count(a => a.Status == "Scheduled")</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Audit Timeline -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> Audit History & Schedule</h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="timeline">
                            @foreach (var audit in Model.OrderByDescending(a => a.AuditDate))
                            {
                                var isPast = audit.AuditDate < DateTime.UtcNow;
                                var resultBadge = audit.Result switch
                                {
                                    "Passed" => "bg-success",
                                    "Passed with Findings" => "bg-warning text-dark",
                                    "Failed" => "bg-danger",
                                    _ => "bg-secondary"
                                };

                                <div class="timeline-item mb-4">
                                    <div class="row">
                                        <div class="col-md-2 text-end">
                                            <div class="badge @resultBadge py-2 px-3">
                                                @audit.AuditDate.ToString("MMM dd, yyyy")
                                            </div>
                                            <p class="small text-muted mt-1">@audit.AuditType</p>
                                        </div>
                                        <div class="col-md-10">
                                            <div class="card @(isPast ? "" : "border-primary")">
                                                <div class="card-body">
                                                    <div class="d-flex justify-content-between align-items-start">
                                                        <div>
                                                            <h6>
                                                                <i class="bi bi-building"></i> @audit.AuditorName
                                                                @if (!string.IsNullOrEmpty(audit.CertificationName))
                                                                {
                                                                    <span class="text-muted"> - @audit.CertificationName</span>
                                                                }
                                                            </h6>
                                                            @if (!string.IsNullOrEmpty(audit.Scope))
                                                            {
                                                                <p class="small text-muted mb-2">
                                                                    <strong>Scope:</strong> @audit.Scope
                                                                </p>
                                                            }
                                                        </div>
                                                        <div class="text-end">
                                                            <span class="badge @resultBadge">@audit.Result</span>
                                                            @if (audit.FindingsCount > 0)
                                                            {
                                                                <br />
                                                                <span class="badge bg-warning text-dark mt-1">
                                                                    @audit.FindingsCount Findings
                                                                </span>
                                                            }
                                                        </div>
                                                    </div>

                                                    @if (isPast && audit.FindingsCount > 0)
                                                    {
                                                        <hr />
                                                        <h6 class="small"><i class="bi bi-exclamation-triangle text-warning"></i> Key Findings:</h6>
                                                        <ul class="small mb-0">
                                                            @foreach (var finding in (audit.Findings ?? Enumerable.Empty<string>()).Take(3))
                                                            {
                                                                <li>@finding</li>
                                                            }
                                                            @if (audit.Findings?.Count() > 3)
                                                            {
                                                                <li class="text-muted">... and @(audit.Findings.Count() - 3) more</li>
                                                            }
                                                        </ul>
                                                    }

                                                    @if (!isPast)
                                                    {
                                                        <div class="alert alert-info mt-3 mb-0">
                                                            <i class="bi bi-calendar-event"></i>
                                                            <strong>Upcoming Audit</strong> -
                                                            @((audit.AuditDate - DateTime.UtcNow).Days) days remaining
                                                        </div>
                                                    }

                                                    <div class="mt-3">
                                                        @if (!string.IsNullOrEmpty(audit.ReportUrl))
                                                        {
                                                            <a href="@audit.ReportUrl" class="btn btn-sm btn-outline-primary" target="_blank">
                                                                <i class="bi bi-file-pdf"></i> View Report
                                                            </a>
                                                        }
                                                        @if (isPast && audit.FindingsCount > 0)
                                                        {
                                                            <button type="button" class="btn btn-sm btn-outline-warning" onclick="viewFindings('@audit.Id')">
                                                                <i class="bi bi-list-check"></i> View All Findings
                                                            </button>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-file-earmark-text display-1 text-muted opacity-25"></i>
                            <p class="text-muted mt-3">No audits scheduled or recorded yet</p>
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#scheduleAuditModal">
                                <i class="bi bi-calendar-plus"></i> Schedule First Audit
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Audit Statistics -->
    @if (Model.Any())
    {
        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="bi bi-bar-chart"></i> Audit Results Trend</h6>
                    </div>
                    <div class="card-body">
                        <canvas id="auditTrendChart"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="bi bi-pie-chart"></i> Findings by Severity</h6>
                    </div>
                    <div class="card-body">
                        <canvas id="findingsSeverityChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Schedule Audit Modal -->
<div class="modal fade" id="scheduleAuditModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Schedule Certification Audit</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="ScheduleAudit" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Certification *</label>
                        <select class="form-select" name="CertificationId" required>
                            <option value="">Select Certification</option>
                            <!-- Populated from available certifications -->
                        </select>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Audit Type *</label>
                            <select class="form-select" name="AuditType" required>
                                <option value="Initial Certification">Initial Certification</option>
                                <option value="Surveillance">Surveillance Audit</option>
                                <option value="Recertification">Recertification</option>
                                <option value="Internal">Internal Audit</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Audit Date *</label>
                            <input type="date" class="form-control" name="AuditDate" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Auditor/Certification Body *</label>
                        <input type="text" class="form-control" name="AuditorName" placeholder="e.g., BSI Group, AICPA" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Audit Scope</label>
                        <textarea class="form-control" name="Scope" rows="2" placeholder="Define the scope of the audit (locations, processes, systems)"></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Lead Auditor</label>
                            <input type="text" class="form-control" name="LeadAuditor">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Duration (days)</label>
                            <input type="number" class="form-control" name="DurationDays" min="1" value="3">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Schedule Audit</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        function viewFindings(auditId) {
            // TODO: Show findings modal
            alert('View findings for audit: ' + auditId);
        }

        @if (Model.Any())
        {
            <text>
            // Audit Trend Chart
            const trendCtx = document.getElementById('auditTrendChart').getContext('2d');
            new Chart(trendCtx, {
                type: 'line',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.OrderBy(a => a.AuditDate).Select(a => a.AuditDate.ToString("MMM yyyy")))),
                    datasets: [{
                        label: 'Findings Count',
                        data: @Html.Raw(Json.Serialize(Model.OrderBy(a => a.AuditDate).Select(a => a.FindingsCount))),
                        borderColor: 'rgb(255, 206, 86)',
                        backgroundColor: 'rgba(255, 206, 86, 0.1)',
                        tension: 0.1
                    }]
                },
                options: {
                    responsive: true,
                    scales: { y: { beginAtZero: true } }
                }
            });

            // Findings Severity Chart
            const severityCtx = document.getElementById('findingsSeverityChart').getContext('2d');
            const totalFindings = @Model.Sum(a => a.FindingsCount);
            new Chart(severityCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Critical', 'High', 'Medium', 'Low'],
                    datasets: [{
                        data: [
                            Math.floor(totalFindings * 0.1),
                            Math.floor(totalFindings * 0.3),
                            Math.floor(totalFindings * 0.4),
                            Math.floor(totalFindings * 0.2)
                        ],
                        backgroundColor: ['#dc3545', '#fd7e14', '#ffc107', '#28a745']
                    }]
                },
                options: { responsive: true }
            });
            </text>
        }
    </script>
}
