@model List<GrcMvc.Models.DTOs.SubscriptionPlanDto>

@{
    ViewData["Title"] = "Subscription Plans";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1>
                <i class="bi bi-briefcase"></i> Subscription Plans
            </h1>
            <p class="text-muted">Choose the perfect plan for your organization</p>
        </div>
        <div class="col-md-4 text-end">
            @if (User.IsInRole("Admin"))
            {
                <a href="@Url.Action("Create", "Plans")" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> New Plan
                </a>
            }
        </div>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No subscription plans available yet.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var plan in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm plan-card">
                        <div class="card-header bg-light border-bottom">
                            <h4 class="mb-0">@plan.Name</h4>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <p class="text-muted small">@plan.Description</p>

                            <div class="pricing mb-4">
                                <div class="price-monthly">
                                    <span class="h3 text-primary">${@plan.MonthlyPrice}</span>
                                    <span class="text-muted">/month</span>
                                </div>
                                <div class="price-yearly text-muted small mt-1">
                                    or ${@plan.AnnualPrice}/year
                                </div>
                            </div>

                            @if (plan.Features != null && plan.Features.Any())
                            {
                                <ul class="list-unstyled features mb-4 flex-grow-1">
                                    @foreach (var feature in plan.Features.Take(5))
                                    {
                                        <li class="mb-2">
                                            <i class="bi bi-check-circle text-success"></i>
                                            <span>@feature</span>
                                        </li>
                                    }
                                    @if (plan.Features.Count > 5)
                                    {
                                        <li class="text-muted small">
                                            +@(plan.Features.Count - 5) more features
                                        </li>
                                    }
                                </ul>
                            }

                            <div class="btn-group mt-auto" role="group">
                                <a href="@Url.Action("Details", "Plans", new { id = plan.Id })" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a href="@Url.Action("Edit", "Plans", new { id = plan.Id })" class="btn btn-outline-secondary btn-sm">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a href="@Url.Action("Delete", "Plans", new { id = plan.Id })" class="btn btn-outline-danger btn-sm" onclick="return confirm('Are you sure?')">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                }
                                else
                                {
                                    <a href="@Url.Action("Subscribe", "Subscription", new { planId = plan.Id })" class="btn btn-primary btn-sm">
                                        <i class="bi bi-check-circle"></i> Subscribe
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .plan-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .plan-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.15) !important;
    }

    .pricing {
        border-bottom: 1px solid #e9ecef;
        padding-bottom: 1rem;
    }

    .features li {
        font-size: 0.95rem;
        line-height: 1.5;
    }
</style>
