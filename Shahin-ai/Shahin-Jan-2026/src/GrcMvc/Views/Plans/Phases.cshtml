@model List<GrcMvc.Models.DTOs.PlanPhaseDto>

@{
    var planId = ViewBag.PlanId as Guid?;
    ViewData["Title"] = "Plan Phases";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1>
                    <i class="bi bi-diagram-3"></i> Plan Phases
                </h1>
                <div>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addPhaseModal">
                        <i class="bi bi-plus-circle"></i> Add Phase
                    </button>
                    <a href="@Url.Action("Details", new { planId = planId })" class="btn btn-outline-secondary ms-2">
                        Back
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No phases defined yet. 
            <button class="alert-link btn btn-link" data-bs-toggle="modal" data-bs-target="#addPhaseModal">
                Add a phase
            </button>
        </div>
    }
    else
    {
        <!-- Phases Timeline -->
        <div class="timeline">
            @foreach (var phase in Model.OrderBy(p => p.SequenceNumber))
            {
                var statusClass = phase.Status switch
                {
                    "NotStarted" => "primary",
                    "InProgress" => "info",
                    "Completed" => "success",
                    "OnHold" => "warning",
                    _ => "secondary"
                };

                <div class="timeline-item mb-4">
                    <div class="row">
                        <div class="col-md-1 text-center">
                            <div class="timeline-marker bg-@statusClass">
                                <i class="bi bi-circle-fill"></i>
                            </div>
                            <div class="timeline-line"></div>
                        </div>
                        <div class="col-md-11">
                            <div class="card">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <div>
                                        <h5 class="mb-0">@phase.Name</h5>
                                        <small class="text-muted">Phase @phase.SequenceNumber</small>
                                    </div>
                                    <div>
                                        <span class="badge bg-@statusClass">@phase.Status</span>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <p class="mb-3">@phase.Description</p>

                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <h6 class="text-muted">Progress</h6>
                                            <div class="progress" style="height: 25px;">
                                                <div class="progress-bar bg-@statusClass" role="progressbar" 
                                                     style="width: @(phase.ProgressPercentage ?? 0)%"
                                                     aria-valuenow="@(phase.ProgressPercentage ?? 0)" 
                                                     aria-valuemin="0" 
                                                     aria-valuemax="100">
                                                    @(phase.ProgressPercentage ?? 0)%
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <h6 class="text-muted">Timeline</h6>
                                            <p>
                                                @phase.StartDate?.ToString("MMM d, yyyy") - @phase.EndDate?.ToString("MMM d, yyyy")
                                            </p>
                                        </div>
                                    </div>

                                    @if (!string.IsNullOrEmpty(phase.Deliverables))
                                    {
                                        <div>
                                            <h6 class="text-muted">Deliverables</h6>
                                            <p>@phase.Deliverables</p>
                                        </div>
                                    }
                                </div>
                                <div class="card-footer bg-light d-flex gap-2">
                                    <button class="btn btn-sm btn-outline-primary" 
                                            onclick="editPhase('@phase.Id')">
                                        <i class="bi bi-pencil"></i> Edit
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" 
                                            onclick="deletePhase('@phase.Id')">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Add/Edit Phase Modal -->
<div class="modal fade" id="addPhaseModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Phase</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="phaseForm">
                    <div class="mb-3">
                        <label for="phaseName" class="form-label">Phase Name *</label>
                        <input type="text" class="form-control" id="phaseName" required>
                    </div>
                    <div class="mb-3">
                        <label for="phaseDescription" class="form-label">Description</label>
                        <textarea class="form-control" id="phaseDescription" rows="3"></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="phaseStartDate" class="form-label">Start Date</label>
                            <input type="date" class="form-control" id="phaseStartDate">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="phaseEndDate" class="form-label">End Date</label>
                            <input type="date" class="form-control" id="phaseEndDate">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="phaseDeliverables" class="form-label">Deliverables</label>
                        <textarea class="form-control" id="phaseDeliverables" rows="2"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="savePhase()">Save Phase</button>
            </div>
        </div>
    </div>
</div>

<style>
    .timeline {
        position: relative;
    }

    .timeline-item {
        position: relative;
    }

    .timeline-marker {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.2em;
        margin: 0 auto;
    }

    .timeline-line {
        width: 2px;
        height: 100px;
        background: #dee2e6;
        margin: 0 auto;
    }

    .timeline-item:last-child .timeline-line {
        display: none;
    }
</style>

<script>
    async function editPhase(phaseId) {
        try {
            // Load phase details from API
            const response = await fetch(`/api/plans/phases/${phaseId}`);
            if (!response.ok) {
                throw new Error('Failed to load phase details');
            }

            const phase = await response.json();

            // Populate modal form fields
            document.getElementById('phaseId').value = phase.id;
            document.getElementById('phaseName').value = phase.name;
            document.getElementById('phaseDescription').value = phase.description || '';
            document.getElementById('phaseStartDate').value = phase.startDate ? phase.startDate.split('T')[0] : '';
            document.getElementById('phaseEndDate').value = phase.endDate ? phase.endDate.split('T')[0] : '';
            document.getElementById('phaseStatus').value = phase.status || 'Pending';

            // Show modal
            const modal = new bootstrap.Modal(document.getElementById('editPhaseModal'));
            modal.show();
        } catch (error) {
            console.error('Error loading phase:', error);
            alert('Failed to load phase details. Please try again.');
        }
    }

    async function deletePhase(phaseId) {
        if (!confirm('Are you sure you want to delete this phase?')) {
            return;
        }

        try {
            const response = await fetch('/api/plans/phases/' + phaseId, {
                method: 'DELETE'
            });

            if (response.ok) {
                alert('Phase deleted successfully');
                window.location.reload();
            } else {
                alert('Error deleting phase');
            }
        } catch (error) {
            alert('Error: ' + error.message);
        }
    }

    async function savePhase() {
        const phaseData = {
            planId: '@planId',
            name: document.getElementById('phaseName').value,
            description: document.getElementById('phaseDescription').value,
            startDate: document.getElementById('phaseStartDate').value,
            endDate: document.getElementById('phaseEndDate').value,
            deliverables: document.getElementById('phaseDeliverables').value
        };

        try {
            const response = await fetch('/api/plans/@planId/phases', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(phaseData)
            });

            if (response.ok) {
                alert('Phase added successfully');
                window.location.reload();
            } else {
                alert('Error adding phase');
            }
        } catch (error) {
            alert('Error: ' + error.message);
        }
    }
</script>
