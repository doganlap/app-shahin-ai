@model GrcMvc.Models.DTOs.CreatePlanDto

@{
    ViewData["Title"] = "Create Assessment Plan";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1>
                <i class="bi bi-plus-circle"></i> Create Assessment Plan
            </h1>
            <p class="text-muted">Define a new assessment plan with phases and scope</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Plan Details</h5>
                </div>
                <div class="card-body">
                    <form id="planForm" method="post" action="@Url.Action("CreatePlanAsync", "Plans")">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="planCode" class="form-label">Plan Code *</label>
                                <input type="text" class="form-control" id="planCode" name="planCode" 
                                       placeholder="e.g., PLAN-2026-001" required>
                                <small class="text-muted">Unique identifier for this plan</small>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="planType" class="form-label">Plan Type *</label>
                                <select class="form-control" id="planType" name="planType" required>
                                    <option value="">-- Select Type --</option>
                                    <option value="QuickScan">Quick Scan</option>
                                    <option value="Full">Full Assessment</option>
                                    <option value="Remediation">Remediation</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="name" class="form-label">Plan Name *</label>
                            <input type="text" class="form-control" id="name" name="name" 
                                   placeholder="e.g., ISO 27001 Assessment 2026" required>
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <textarea class="form-control" id="description" name="description" 
                                      rows="3" placeholder="Describe the purpose and scope of this assessment plan..."></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="startDate" class="form-label">Start Date *</label>
                                <input type="date" class="form-control" id="startDate" name="startDate" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="targetEndDate" class="form-label">Target End Date *</label>
                                <input type="date" class="form-control" id="targetEndDate" name="targetEndDate" required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="rulesetVersionId" class="form-label">Ruleset Version</label>
                            <select class="form-control" id="rulesetVersionId" name="rulesetVersionId">
                                <option value="">-- No Specific Version --</option>
                                <option value="iso-27001">ISO 27001:2022</option>
                                <option value="nist-csf">NIST CSF 2.0</option>
                                <option value="cis-controls">CIS Controls v8</option>
                            </select>
                            <small class="text-muted">Optional: Select a framework version for this plan</small>
                        </div>

                        <hr />

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Create Plan
                            </button>
                            <a href="@Url.Action("List")" class="btn btn-outline-secondary">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card bg-light">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle"></i> Tips
                    </h5>
                </div>
                <div class="card-body">
                    <h6>Plan Types</h6>
                    <ul class="small">
                        <li><strong>Quick Scan:</strong> 1-2 week rapid assessment</li>
                        <li><strong>Full Assessment:</strong> Comprehensive 4-8 week evaluation</li>
                        <li><strong>Remediation:</strong> Focused remediation effort</li>
                    </ul>

                    <hr />

                    <h6>Best Practices</h6>
                    <ul class="small">
                        <li>Set realistic timelines</li>
                        <li>Define clear scope boundaries</li>
                        <li>Allocate sufficient resources</li>
                        <li>Schedule regular reviews</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('planForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        
        const formData = {
            tenantId: '@Model.TenantId',
            planCode: document.getElementById('planCode').value,
            name: document.getElementById('name').value,
            description: document.getElementById('description').value,
            planType: document.getElementById('planType').value,
            startDate: document.getElementById('startDate').value,
            targetEndDate: document.getElementById('targetEndDate').value,
            rulesetVersionId: document.getElementById('rulesetVersionId').value || null
        };

        try {
            const response = await fetch('/api/plans', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: JSON.stringify(formData)
            });

            if (response.ok) {
                const result = await response.json();
                alert('Plan created successfully!');
                window.location.href = '/Plans/Details?planId=' + result.id;
            } else {
                alert('Error creating plan: ' + (await response.text()));
            }
        } catch (error) {
            alert('Error: ' + error.message);
        }
    });

    // Set default dates
    document.addEventListener('DOMContentLoaded', function() {
        const today = new Date().toISOString().split('T')[0];
        document.getElementById('startDate').value = today;
        
        const endDate = new Date();
        endDate.setMonth(endDate.getMonth() + 3);
        document.getElementById('targetEndDate').value = endDate.toISOString().split('T')[0];
    });
</script>
