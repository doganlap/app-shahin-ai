@model List<GrcMvc.Models.DTOs.PlanDto>

@{
    ViewData["Title"] = "Assessment Plans";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1>
                    <i class="bi bi-clipboard-checklist"></i> Assessment Plans
                </h1>
                <a href="@Url.Action("Create")" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> New Plan
                </a>
            </div>
        </div>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No assessment plans yet.
            <a href="@Url.Action("Create")" class="alert-link">Create your first plan</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Plan Code</th>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Status</th>
                        <th>Progress</th>
                        <th>Start Date</th>
                        <th>Target End</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var plan in Model)
                    {
                        var statusBadgeClass = plan.Status switch
                        {
                            "Draft" => "bg-secondary",
                            "Active" => "bg-primary",
                            "Paused" => "bg-warning",
                            "Completed" => "bg-success",
                            _ => "bg-info"
                        };

                        var progressWidth = plan.ProgressPercentage;

                        <tr>
                            <td>
                                <strong>@plan.PlanCode</strong>
                            </td>
                            <td>@plan.Name</td>
                            <td>
                                <span class="badge bg-light text-dark">@plan.PlanType</span>
                            </td>
                            <td>
                                <span class="badge @statusBadgeClass">@plan.Status</span>
                            </td>
                            <td>
                                <div class="progress" style="height: 20px;">
                                    <div class="progress-bar bg-success" role="progressbar"
                                         style="width: @progressWidth%"
                                         aria-valuenow="@progressWidth"
                                         aria-valuemin="0"
                                         aria-valuemax="100">
                                        @progressWidth%
                                    </div>
                                </div>
                            </td>
                            <td>@plan.StartDate.ToString("MMM d, yyyy")</td>
                            <td>@plan.TargetEndDate.ToString("MMM d, yyyy")</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a href="@Url.Action("Details", new { planId = plan.Id })"
                                       class="btn btn-outline-primary"
                                       title="View Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="@Url.Action("Edit", new { planId = plan.Id })"
                                       class="btn btn-outline-warning"
                                       title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a href="@Url.Action("Phases", new { planId = plan.Id })"
                                       class="btn btn-outline-info"
                                       title="Manage Phases">
                                        <i class="bi bi-diagram-3"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<style>
    .progress {
        background-color: #e9ecef;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }
</style>
