@{
    ViewData["Title"] = "الجهات التنظيمية";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="fas fa-landmark me-2 text-primary"></i>
                        الجهات التنظيمية
