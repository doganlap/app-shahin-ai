@{
    ViewData["Title"] = "Role Delegation";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var delegations = ViewBag.Delegations as List<dynamic> ?? new List<dynamic>();
    var roles = ViewBag.Roles as List<GrcMvc.Models.Entities.Catalogs.RoleCatalog> ?? new List<GrcMvc.Models.Entities.Catalogs.RoleCatalog>();
    var users = ViewBag.Users as List<GrcMvc.Models.Entities.ApplicationUser> ?? new List<GrcMvc.Models.Entities.ApplicationUser>();
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1"><i class="fas fa-people-arrows text-info me-2"></i>Role Delegation</h1>
            <p class="text-muted">Delegate roles and responsibilities to team members</p>
        </div>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">
            <i class="fas fa-plus me-2"></i>New Delegation
        </button>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body">
                    <div class="h2 mb-0 text-success">@ViewBag.ActiveCount</div>
                    <small class="text-muted">Active Delegations</small>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body">
                    <div class="h2 mb-0 text-primary">@delegations.Count</div>
                    <small class="text-muted">Total Delegations</small>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-info text-white">
            <i class="fas fa-list me-2"></i>Delegations
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr><th>Role</th><th>From</th><th>To</th><th>Period</th><th>Status</th><th>Actions</th></tr>
                    </thead>
                    <tbody>
                        @foreach (var d in delegations)
                        {
                            <tr>
                                <td><span class="badge bg-primary">@d.RoleCode</span></td>
                                <td>@d.FromUserId.ToString().Substring(0, 8)...</td>
                                <td>@d.ToUserId.ToString().Substring(0, 8)...</td>
                                <td>@d.StartDate.ToString("MMM dd") - @d.EndDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @if (d.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Revoked</span>
                                    }
                                </td>
                                <td>
                                    @if (d.IsActive)
                                    {
                                        <form asp-action="Revoke" asp-route-id="@d.Id" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Revoke</button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                        @if (!delegations.Any())
                        {
                            <tr><td colspan="6" class="text-center text-muted py-4">No delegations configured</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Create Modal -->
<div class="modal fade" id="createModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Create" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Create Delegation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Role</label>
                        <select name="RoleCode" class="form-select" required>
                            @foreach (var role in roles)
                            {
                                <option value="@role.RoleCode">@role.RoleName</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">From User</label>
                        <select name="FromUserId" class="form-select" required>
                            @foreach (var user in users)
                            {
                                <option value="@user.Id">@user.FullName</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">To User</label>
                        <select name="ToUserId" class="form-select" required>
                            @foreach (var user in users)
                            {
                                <option value="@user.Id">@user.FullName</option>
                            }
                        </select>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Start Date</label>
                            <input type="date" name="StartDate" class="form-control" value="@DateTime.UtcNow.ToString("yyyy-MM-dd")">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">End Date</label>
                            <input type="date" name="EndDate" class="form-control" value="@DateTime.UtcNow.AddDays(30).ToString("yyyy-MM-dd")">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create Delegation</button>
                </div>
            </form>
        </div>
    </div>
</div>
