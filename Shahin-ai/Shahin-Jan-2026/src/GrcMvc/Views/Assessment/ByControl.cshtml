@model IEnumerable<GrcMvc.Models.DTOs.AssessmentDto>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> L
@{
    ViewData["Title"] = L["Assessment_ByControl_Title"].Value;
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="bi bi-clipboard-check"></i> @L["Assessment_ByControl_Title"]</h2>
        </div>
        <div class="col text-end">
            @if (ViewBag.ControlId != null)
            {
                <a asp-controller="Control" asp-action="Details" asp-route-id="@ViewBag.ControlId" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> @L["Assessment_BackToControl"]
                </a>
            }
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-list"></i> @L["Assessment_AllAssessments"]
            </a>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-clipboard-x display-1 text-muted"></i>
                    <h4 class="mt-3 text-muted">@L["Assessment_NoAssessmentsForControl"]</h4>
                    @if (ViewBag.ControlId != null)
                    {
                        <a asp-action="Create" asp-route-controlId="@ViewBag.ControlId" class="btn btn-primary mt-3">
                            <i class="bi bi-plus-circle"></i> @L["Assessment_CreateForControl"]
                        </a>
                    }
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover" id="controlAssessmentsTable">
                        <thead>
                            <tr>
                                <th>@L["Assessment_Date"]</th>
                                <th>@L["Assessment_Number"]</th>
                                <th>@L["Assessment_Name"]</th>
                                <th>@L["Assessment_Type"]</th>
                                <th>@L["Assessment_Status"]</th>
                                <th>@L["Assessment_Score"]</th>
                                <th>@L["Assessment_Reviewer"]</th>
                                <th>@L["Actions"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.StartDate.ToShortDateString()</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id">@item.AssessmentNumber</a>
                                    </td>
                                    <td>@item.Name</td>
                                    <td>@item.Type</td>
                                    <td>
                                        <span class="badge" style="@GetStatusBadgeStyle(item.Status)">
                                            @item.Status
                                        </span>
                                    </td>
                                    <td>
                                        @if (item.ComplianceScore.HasValue)
                                        {
                                            <span class="badge" style="@GetScoreBadgeStyle(item.ComplianceScore.Value)">
                                                @item.ComplianceScore%
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>@item.ReviewedBy</td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id"
                                               class="btn btn-outline-primary" title="@L["Edit"]">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.Id"
                                               class="btn btn-outline-info" title="@L["Details"]">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    private string GetStatusBadgeStyle(string status)
    {
        return status?.ToLower() switch
        {
            "completed" => "background: var(--success);",
            "inprogress" or "in progress" => "background: var(--primary);",
            "planned" => "background: var(--info);",
            "delayed" or "overdue" => "background: var(--danger);",
            "cancelled" => "background: var(--text-secondary);",
            _ => "background: var(--text-secondary);"
        };
    }

    private string GetScoreBadgeStyle(int score)
    {
        return score switch
        {
            >= 90 => "background: var(--success);",
            >= 70 => "background: var(--info);",
            >= 50 => "background: var(--warning);",
            _ => "background: var(--danger);"
        };
    }
}
