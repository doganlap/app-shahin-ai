@model List<IGrouping<string, GrcMvc.Models.Entities.SystemSetting>>
@using GrcMvc.Models.Entities
@{
    ViewData["Title"] = ViewBag.Title ?? "Settings";
    Layout = "_Layout";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">System Settings</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </nav>
            <h1>
                <i class="bi bi-gear"></i> @ViewData["Title"]
            </h1>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <form asp-action="BulkUpdate" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
        
        <div class="d-flex justify-content-end mb-3">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Save All Changes
            </button>
        </div>

        @foreach (var group in Model)
        {
            var categoryName = GetCategoryDisplayName(group.Key);
            var categoryIcon = GetCategoryIcon(group.Key);
            
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="bi @categoryIcon"></i> @categoryName
                        <span class="badge bg-secondary float-end">@group.Count() settings</span>
                    </h5>
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 25%;">Setting</th>
                                <th style="width: 35%;">Value</th>
                                <th style="width: 25%;">Description</th>
                                <th style="width: 15%;">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var setting in group.OrderBy(s => s.DisplayOrder))
                            {
                                <tr>
                                    <td>
                                        <strong>@setting.DisplayName</strong>
                                        <br>
                                        <code class="small text-muted">@setting.Key</code>
                                    </td>
                                    <td>
                                        @if (setting.DataType == "bool")
                                        {
                                            <div class="form-check form-switch">
                                                <input type="hidden" name="settings[@setting.Key]" value="false" />
                                                <input type="checkbox" 
                                                       class="form-check-input" 
                                                       id="setting_@setting.Key.Replace(":", "_").Replace(".", "_")"
                                                       name="settings[@setting.Key]"
                                                       value="true"
                                                       @(setting.Value == "true" ? "checked" : "") />
                                                <label class="form-check-label" for="setting_@setting.Key.Replace(":", "_").Replace(".", "_")">
                                                    @(setting.Value == "true" ? "Enabled" : "Disabled")
                                                </label>
                                            </div>
                                        }
                                        else if (setting.IsSensitive)
                                        {
                                            <div class="input-group">
                                                <input type="password" 
                                                       class="form-control form-control-sm sensitive-field" 
                                                       id="setting_@setting.Key.Replace(":", "_").Replace(".", "_")"
                                                       name="settings[@setting.Key]"
                                                       value="@setting.Value"
                                                       placeholder="Enter secret value..." />
                                                <button type="button" class="btn btn-outline-secondary btn-sm toggle-visibility" title="Show/Hide">
                                                    <i class="bi bi-eye"></i>
                                                </button>
                                            </div>
                                            @if (!string.IsNullOrEmpty(setting.Value))
                                            {
                                                <small class="text-success"><i class="bi bi-check"></i> Value is set</small>
                                            }
                                        }
                                        else if (setting.DataType == "int" || setting.DataType == "number")
                                        {
                                            <input type="number" 
                                                   class="form-control form-control-sm" 
                                                   name="settings[@setting.Key]"
                                                   value="@setting.Value"
                                                   style="max-width: 150px;" />
                                        }
                                        else
                                        {
                                            <input type="text" 
                                                   class="form-control form-control-sm" 
                                                   name="settings[@setting.Key]"
                                                   value="@setting.Value"
                                                   placeholder="@(setting.DefaultValue ?? "Enter value...")" />
                                        }
                                    </td>
                                    <td>
                                        <small class="text-muted">@setting.Description</small>
                                        @if (setting.IsRequired)
                                        {
                                            <span class="badge bg-danger">Required</span>
                                        }
                                    </td>
                                    <td>
                                        @if (setting.IsEnabled)
                                        {
                                            <span class="badge bg-success"><i class="bi bi-check-circle"></i> Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary"><i class="bi bi-x-circle"></i> Inactive</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        
        <div class="d-flex justify-content-between mb-4">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to All Settings
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Save All Changes
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        // Toggle password visibility
        document.querySelectorAll('.toggle-visibility').forEach(btn => {
            btn.addEventListener('click', function() {
                const input = this.parentElement.querySelector('.sensitive-field');
                const icon = this.querySelector('i');
                if (input.type === 'password') {
                    input.type = 'text';
                    icon.classList.remove('bi-eye');
                    icon.classList.add('bi-eye-slash');
                } else {
                    input.type = 'password';
                    icon.classList.remove('bi-eye-slash');
                    icon.classList.add('bi-eye');
                }
            });
        });

        // Update toggle label on change
        document.querySelectorAll('.form-check-input').forEach(checkbox => {
            checkbox.addEventListener('change', function() {
                const label = this.nextElementSibling;
                label.textContent = this.checked ? 'Enabled' : 'Disabled';
            });
        });
    </script>
}

@functions {
    string GetCategoryIcon(string category) => category switch
    {
        "Claude" or "OpenAI" or "AzureOpenAI" or "Gemini" or "LocalLlm" or "Copilot" => "bi-robot",
        "SMTP" => "bi-envelope",
        "Security" => "bi-shield-lock",
        "Camunda" => "bi-diagram-3",
        "Kafka" or "RabbitMQ" => "bi-broadcast",
        "Redis" => "bi-database",
        "Hangfire" => "bi-calendar-check",
        "Azure" or "AzureBlob" or "AzureKeyVault" => "bi-cloud",
        "MicrosoftGraph" => "bi-microsoft",
        _ => "bi-gear"
    };

    string GetCategoryDisplayName(string category) => category switch
    {
        "Claude" => "Claude AI",
        "OpenAI" => "OpenAI",
        "AzureOpenAI" => "Azure OpenAI",
        "Gemini" => "Google Gemini",
        "LocalLlm" => "Local LLM (Ollama)",
        "Copilot" => "Microsoft Copilot",
        "SMTP" => "Email Configuration",
        "Security" => "Security Settings",
        "Camunda" => "Camunda BPM",
        "Kafka" => "Apache Kafka",
        "RabbitMQ" => "RabbitMQ",
        "Redis" => "Redis Cache",
        "Hangfire" => "Hangfire Jobs",
        "Azure" => "Azure Services",
        "AzureBlob" => "Azure Blob Storage",
        "AzureKeyVault" => "Azure Key Vault",
        "MicrosoftGraph" => "Microsoft Graph API",
        _ => category
    };
}
