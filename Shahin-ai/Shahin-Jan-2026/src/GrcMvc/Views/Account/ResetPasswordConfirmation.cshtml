@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> L
@{
    ViewData["Title"] = L["Auth_PasswordResetSuccessful"].Value;
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-success shadow-sm">
                <div class="card-body py-5 text-center">
                    <div class="mb-4">
                        <i class="bi bi-check-circle text-success" style="font-size: 4rem;"></i>
                    </div>

                    <h2 class="card-title text-success mb-3">@L["Auth_PasswordResetSuccessful"]</h2>

                    <p class="card-text text-muted mb-4">
                        @L["Auth_PasswordResetSuccessfulMessage"]
                    </p>

                    <div class="alert alert-info" role="alert">
                        <i class="bi bi-info-circle"></i>
                        <small>@L["Auth_UseStrongPassword"]</small>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <a asp-action="Login" class="btn btn-primary btn-lg">
                            <i class="bi bi-box-arrow-in-right"></i> @L["Auth_LogInToYourAccount"]
                        </a>
                    </div>

                    <hr class="my-4" />

                    <p class="text-muted small mb-0">
                        @L["Auth_RememberPassword"] <a asp-action="Login">@L["Auth_GoToLogin"]</a>
                    </p>
                </div>
            </div>

            <div class="mt-4 text-center">
                <p class="text-muted">
                    <small>
                        @L["Auth_ContactSupport"]
                    </small>
                </p>
            </div>
        </div>
    </div>
</div>