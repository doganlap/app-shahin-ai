@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> L
@model GrcMvc.Models.ViewModels.LoginWithRecoveryCodeViewModel
@{
    ViewData["Title"] = L["Auth_RecoveryCodeLogin"].Value;
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4><i class="bi bi-shield-lock"></i> @L["Auth_RecoveryCodeLogin"]</h4>
                </div>
                <div class="card-body">
                    <p>
                        @L["Auth_RecoveryCodeLoginMessage"]
                    </p>
                    <form asp-action="LoginWithRecoveryCode" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="mb-3">
                            <label asp-for="RecoveryCode" class="form-label"></label>
                            <input asp-for="RecoveryCode" class="form-control" autocomplete="off" />
                            <span asp-validation-for="RecoveryCode" class="text-danger"></span>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">@L["Auth_LoginTitle"]</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
