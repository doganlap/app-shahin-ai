@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> L
@model GrcMvc.Models.ViewModels.LoginWith2faViewModel
@{
    ViewData["Title"] = L["Auth_TwoFactorAuthentication"].Value;
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4><i class="bi bi-shield-lock"></i> @L["Auth_TwoFactorAuthentication"]</h4>
                </div>
                <div class="card-body">
                    <p>@L["Auth_EnterAuthenticatorCode"]</p>
                    <hr />
                    <form asp-action="LoginWith2fa" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                        <input asp-for="RememberMe" type="hidden" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="TwoFactorCode" class="form-label"></label>
                            <input asp-for="TwoFactorCode" class="form-control" autocomplete="off" />
                            <span asp-validation-for="TwoFactorCode" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="RememberMachine" class="form-check-input" />
                            <label asp-for="RememberMachine" class="form-check-label"></label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">@L["Auth_LoginTitle"]</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-muted">
                    <small>@L["Auth_NoAccessToAuthenticator"] <a asp-action="LoginWithRecoveryCode" asp-route-returnUrl="@ViewData["ReturnUrl"]">@L["Auth_LoginWithRecoveryCode"]</a>.</small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
