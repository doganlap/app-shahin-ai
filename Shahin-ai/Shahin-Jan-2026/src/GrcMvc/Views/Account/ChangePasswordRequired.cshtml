@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> L
@model GrcMvc.Models.ViewModels.ChangePasswordRequiredViewModel
@{
    ViewData["Title"] = L["Auth_ChangePasswordRequired"].Value;
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-warning text-dark text-center py-4">
                    <i class="fas fa-key fa-3x mb-3"></i>
                    <h3 class="mb-0">@L["Auth_PasswordChangeRequired"]</h3>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-info mb-4">
                        <i class="fas fa-info-circle me-2"></i>
                        @L["Auth_MustChangePassword"]
                    </div>

                    <form asp-action="ChangePasswordRequired" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="CurrentPassword" class="form-label">
                                <i class="fas fa-lock me-1"></i> @L["Auth_CurrentPassword"]
                            </label>
                            <input asp-for="CurrentPassword" class="form-control" placeholder="@L["Auth_EnterCurrentPassword"]" />
                            <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label">
                                <i class="fas fa-key me-1"></i> @L["Auth_NewPassword"]
                            </label>
                            <input asp-for="NewPassword" class="form-control" placeholder="@L["Auth_EnterNewPassword"]" />
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                            <small class="text-muted">@L["Auth_PasswordMin8Chars"]</small>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label">
                                <i class="fas fa-check-double me-1"></i> @L["Auth_ConfirmNewPassword"]
                            </label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="@L["Auth_ConfirmNewPasswordPlaceholder"]" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i> @L["Auth_ChangePassword"]
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3 bg-light">
                    <small class="text-muted">
                        <i class="fas fa-shield-alt me-1"></i>
                        @L["Auth_PasswordEncryptedSecure"]
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
