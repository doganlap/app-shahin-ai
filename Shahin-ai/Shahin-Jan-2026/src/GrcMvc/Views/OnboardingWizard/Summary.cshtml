@model WizardSummaryDto
@using GrcMvc.Models.DTOs
@{
    ViewData["Title"] = "Onboarding Summary";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var tenantId = Model.TenantId;
}

<div class="container py-4">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="mb-1">
                        <i class="fas fa-list-alt text-primary me-2"></i>
                        Onboarding Summary
                    </h2>
                    <p class="text-muted mb-0">
                        @Model.OrganizationName • Started @Model.StartedAt?.ToString("MMM dd, yyyy")
                    </p>
                </div>
                <div>
                    <span class="badge bg-@(Model.WizardStatus == "Completed" ? "success" : "warning") fs-6">
                        @Model.WizardStatus
                    </span>
                </div>
            </div>

            <!-- Progress Overview -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h5 class="mb-0">Overall Progress</h5>
                        <span class="badge bg-primary fs-5">@Model.ProgressPercent%</span>
                    </div>
                    <div class="progress" style="height: 30px;">
                        <div class="progress-bar bg-success" role="progressbar" 
                             style="width: @Model.ProgressPercent%;" 
                             aria-valuenow="@Model.ProgressPercent" aria-valuemin="0" aria-valuemax="100">
                            @Model.Steps.Count(s => s.IsCompleted) of @Model.TotalSteps Steps Complete
                        </div>
                    </div>
                </div>
            </div>

            <!-- Steps Grid -->
            <div class="row">
                @foreach (var step in Model.Steps)
                {
                    var cardClass = step.IsCompleted ? "border-success" : step.IsCurrent ? "border-primary" : "border-secondary";
                    var bgClass = step.IsCompleted ? "bg-success-subtle" : step.IsCurrent ? "bg-primary-subtle" : "";
                    var iconClass = step.IsCompleted ? "fa-check-circle text-success" : 
                                   step.IsCurrent ? "fa-arrow-circle-right text-primary" : 
                                   step.IsLocked ? "fa-lock text-muted" : "fa-circle text-muted";
                    
                    <div class="col-md-4 mb-3">
                        <div class="card h-100 @cardClass @bgClass">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="fas @iconClass fa-lg me-2"></i>
                                    <span class="badge bg-secondary me-2">Step @step.StepNumber</span>
                                    @if (step.IsCompleted)
                                    {
                                        <span class="badge bg-success">✓ Complete</span>
                                    }
                                    else if (step.IsCurrent)
                                    {
                                        <span class="badge bg-primary">Current</span>
                                    }
                                </div>
                                <h6 class="card-title mb-1">
                                    <i class="fas @step.Icon text-primary me-1"></i>
                                    @step.StepName
                                </h6>
                                <p class="card-text small text-muted mb-2" dir="rtl">@step.StepNameAr</p>
                                
                                @if (!step.IsLocked)
                                {
                                    <a href="@Url.Action($"Step{(char)('A' + step.StepNumber - 1)}", new { tenantId })" 
                                       class="btn btn-sm btn-outline-primary">
                                        @(step.IsCompleted ? "Edit" : "Continue")
                                        <i class="fas fa-arrow-right ms-1"></i>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Actions -->
            <div class="card mt-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-2">
                            @if (Model.WizardStatus == "Completed")
                            {
                                <form asp-action="FinalizeOnboarding" asp-route-tenantId="@tenantId" method="post" class="d-grid">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-success">
                                        <i class="fas fa-rocket me-2"></i> Finalize & Go to Dashboard
                                    </button>
                                </form>
                            }
                            else
                            {
                                <a href="@Url.Action(GetCurrentStepAction(Model.CurrentStep), new { tenantId })" 
                                   class="btn btn-primary w-100">
                                    <i class="fas fa-play me-2"></i> Continue Wizard
                                </a>
                            }
                        </div>
                        <div class="col-md-4 mb-2">
                            <a href="@Url.Action("StepA", new { tenantId })" class="btn btn-outline-secondary w-100">
                                <i class="fas fa-edit me-2"></i> Start from Beginning
                            </a>
                        </div>
                        <div class="col-md-4 mb-2">
                            <a href="@Url.Action("Index", "Dashboard")" class="btn btn-outline-info w-100">
                                <i class="fas fa-tachometer-alt me-2"></i> Go to Dashboard
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetCurrentStepAction(int step) => $"Step{(char)('A' + step - 1)}";
}
