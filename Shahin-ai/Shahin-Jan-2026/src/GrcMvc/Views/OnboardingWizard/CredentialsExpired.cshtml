@model GrcMvc.Models.Entities.Tenant
@{
    ViewData["Title"] = "Credentials Expired";
    Layout = "_Layout";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4><i class="bi bi-exclamation-triangle-fill"></i> Credentials Expired</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        <h5><i class="bi bi-shield-exclamation"></i> Your admin credentials have expired</h5>
                        <p class="mb-0">
                            The credentials for tenant <strong>@Model.OrganizationName</strong> expired on 
                            @(Model.CredentialExpiresAt?.ToString("yyyy-MM-dd HH:mm:ss UTC") ?? "unknown date").
                        </p>
                    </div>

                    <div class="alert alert-info" role="alert">
                        <h6><i class="bi bi-info-circle"></i> What to do next:</h6>
                        <ol class="mb-0">
                            <li>Contact the system owner to regenerate your credentials</li>
                            <li>Provide your Tenant ID: <code>@Model.Id</code></li>
                            <li>Once new credentials are generated, you will be able to access onboarding</li>
                        </ol>
                    </div>

                    <div class="d-grid gap-2">
                        <a asp-action="TenantAdminLogin" asp-controller="Account" asp-route-tenantId="@Model.Id" class="btn btn-outline-primary">
                            <i class="bi bi-arrow-clockwise"></i> Try Login Again
                        </a>
                        <a asp-action="Login" asp-controller="Account" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
