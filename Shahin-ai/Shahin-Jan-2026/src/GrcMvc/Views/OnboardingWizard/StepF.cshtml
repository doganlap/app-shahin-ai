@model StepFTechnologyLandscapeDto
@using GrcMvc.Models.DTOs
@{
    ViewData["Title"] = "Technology Landscape - Onboarding Wizard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var summary = ViewData["WizardSummary"] as WizardSummaryDto;
    var tenantId = summary?.TenantId ?? Guid.Empty;
}

<div class="d-flex">
    @await Html.PartialAsync("_WizardSidebar", summary)

    <div class="flex-grow-1 p-4">
        <div class="container-fluid">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="mb-1">
                        <i class="fas fa-server text-primary me-2"></i>
                        Step F: Technology Landscape
                    </h2>
                    <p class="text-muted mb-0">المشهد التقني | Questions 41-53 • Integration readiness</p>
                </div>
                <span class="badge bg-primary fs-6">Step 6 of 12</span>
            </div>

            <form asp-action="StepF" asp-route-tenantId="@tenantId" method="post">
                @Html.AntiForgeryToken()

                <!-- Identity & Access -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-key me-2"></i>Identity & Access (Q41-43)</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="IdentityProvider" class="form-label">Identity Provider</label>
                                <select asp-for="IdentityProvider" class="form-select">
                                    <option value="">-- Select --</option>
                                    <option value="AzureAD">Microsoft Azure AD</option>
                                    <option value="Okta">Okta</option>
                                    <option value="PingIdentity">Ping Identity</option>
                                    <option value="OneLogin">OneLogin</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">SSO Enabled?</label>
                                <div class="form-check form-switch mt-2">
                                    <input class="form-check-input" type="checkbox" asp-for="SsoEnabled">
                                    <label class="form-check-label">Yes</label>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">SCIM Provisioning?</label>
                                <div class="form-check form-switch mt-2">
                                    <input class="form-check-input" type="checkbox" asp-for="ScimProvisioningAvailable">
                                    <label class="form-check-label">Yes</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- IT Service Management -->
                <div class="card mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="fas fa-ticket-alt me-2"></i>ITSM & Evidence (Q44-45)</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ItsmPlatform" class="form-label">ITSM/Ticketing Platform</label>
                                <select asp-for="ItsmPlatform" class="form-select">
                                    <option value="">-- Select --</option>
                                    <option value="ServiceNow">ServiceNow</option>
                                    <option value="Jira">Jira Service Management</option>
                                    <option value="Freshservice">Freshservice</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="EvidenceRepository" class="form-label">Evidence Repository</label>
                                <select asp-for="EvidenceRepository" class="form-select">
                                    <option value="">-- Select --</option>
                                    <option value="SharePoint">SharePoint</option>
                                    <option value="GrcVault">GRC Vault (Built-in)</option>
                                    <option value="GoogleDrive">Google Drive</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Security Tools -->
                <div class="card mb-4">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0"><i class="fas fa-shield-virus me-2"></i>Security Tools (Q46-48)</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="SiemPlatform" class="form-label">SIEM/SOC</label>
                                <select asp-for="SiemPlatform" class="form-select">
                                    <option value="">-- Select --</option>
                                    <option value="Sentinel">Microsoft Sentinel</option>
                                    <option value="Splunk">Splunk</option>
                                    <option value="QRadar">IBM QRadar</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="VulnerabilityManagementTool" class="form-label">Vulnerability Management</label>
                                <select asp-for="VulnerabilityManagementTool" class="form-select">
                                    <option value="">-- Select --</option>
                                    <option value="Tenable">Tenable</option>
                                    <option value="Qualys">Qualys</option>
                                    <option value="Rapid7">Rapid7</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="EdrPlatform" class="form-label">EDR Platform</label>
                                <select asp-for="EdrPlatform" class="form-select">
                                    <option value="">-- Select --</option>
                                    <option value="Defender">Microsoft Defender</option>
                                    <option value="CrowdStrike">CrowdStrike</option>
                                    <option value="SentinelOne">SentinelOne</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Cloud & Infrastructure -->
                <div class="card mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="fas fa-cloud me-2"></i>Cloud & Infrastructure (Q49-53)</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">Cloud Providers</label>
                            <div class="row">
                                @{ var clouds = new[] { ("AWS", "Amazon AWS"), ("Azure", "Microsoft Azure"), ("GCP", "Google Cloud"), ("Alibaba", "Alibaba Cloud") }; }
                                @foreach (var (code, name) in clouds)
                                {
                                    <div class="col-md-3">
                                        <div class="form-check">
                                            <input type="checkbox" class="form-check-input" name="CloudProviders" value="@code" id="cloud_@code"
                                                   @(Model.CloudProviders.Contains(code) ? "checked" : "")>
                                            <label class="form-check-label" for="cloud_@code">@name</label>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ErpSystem" class="form-label">ERP System</label>
                                <select asp-for="ErpSystem" class="form-select">
                                    <option value="">-- Select --</option>
                                    <option value="SAP">SAP</option>
                                    <option value="Oracle">Oracle</option>
                                    <option value="Dynamics">Microsoft Dynamics</option>
                                    <option value="ERPNext">ERPNext</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="CiCdTooling" class="form-label">CI/CD Tooling</label>
                                <select asp-for="CiCdTooling" class="form-select">
                                    <option value="">-- Select --</option>
                                    <option value="GitHub">GitHub Actions</option>
                                    <option value="GitLab">GitLab CI</option>
                                    <option value="AzureDevOps">Azure DevOps</option>
                                    <option value="Jenkins">Jenkins</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="@Url.Action("StepE", new { tenantId })" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back
                    </a>
                    <button type="submit" class="btn btn-primary btn-lg">
                        Continue to Step G <i class="fas fa-arrow-right ms-2"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
