@{
    ViewData["Title"] = "Login Required";
    Layout = "_Layout";
    var tenantId = ViewBag.TenantId as Guid?;
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark">
                    <h4><i class="bi bi-shield-lock"></i> Tenant Admin Login Required</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <h5><i class="bi bi-exclamation-triangle"></i> Authentication Required</h5>
                        <p class="mb-0">
                            You must be authenticated as a tenant admin to access the onboarding wizard.
                        </p>
                    </div>

                    <div class="alert alert-info" role="alert">
                        <h6><i class="bi bi-info-circle"></i> To proceed:</h6>
                        <ol class="mb-0">
                            <li>You need your Tenant ID, Username, and Password</li>
                            <li>These credentials were provided when your admin account was created</li>
                            <li>If you don't have these credentials, contact the system owner</li>
                        </ol>
                    </div>

                    <div class="d-grid gap-2">
                        @if (tenantId.HasValue)
                        {
                            <a asp-action="TenantAdminLogin" asp-controller="Account" asp-route-tenantId="@tenantId.Value" asp-route-returnUrl="@Context.Request.Path" class="btn btn-primary">
                                <i class="bi bi-box-arrow-in-right"></i> Login as Tenant Admin
                            </a>
                        }
                        else
                        {
                            <a asp-action="TenantAdminLogin" asp-controller="Account" asp-route-returnUrl="@Context.Request.Path" class="btn btn-primary">
                                <i class="bi bi-box-arrow-in-right"></i> Login as Tenant Admin
                            </a>
                        }
                        <a asp-action="Login" asp-controller="Account" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Regular Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
