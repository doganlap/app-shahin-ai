@model StepJEvidenceStandardsDto
@using GrcMvc.Models.DTOs
@{
    ViewData["Title"] = "Evidence Standards - Onboarding Wizard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var summary = ViewData["WizardSummary"] as WizardSummaryDto;
    var tenantId = summary?.TenantId ?? Guid.Empty;
}

<div class="d-flex">
    @await Html.PartialAsync("_WizardSidebar", summary)

    <div class="flex-grow-1 p-4">
        <div class="container-fluid">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="mb-1">
                        <i class="fas fa-file-contract text-primary me-2"></i>
                        Step J: Evidence Standards
                    </h2>
                    <p class="text-muted mb-0">معايير الأدلة | Questions 81-87 • So "PROVE" works automatically</p>
                </div>
                <span class="badge bg-primary fs-6">Step 10 of 12</span>
            </div>

            <form asp-action="StepJ" asp-route-tenantId="@tenantId" method="post">
                @Html.AntiForgeryToken()

                <!-- Naming Convention -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-tag me-2"></i>Naming Convention (Q81)</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" type="checkbox" id="namingRequired" asp-for="EvidenceNamingConventionRequired">
                            <label class="form-check-label" for="namingRequired">
                                <strong>Enforce evidence naming convention</strong>
                            </label>
                        </div>
                        <div class="mb-3">
                            <label asp-for="EvidenceNamingPattern" class="form-label">Naming Pattern</label>
                            <input asp-for="EvidenceNamingPattern" class="form-control" placeholder="{TenantId}-{ControlId}-{Date}-{Sequence}">
                            <small class="text-muted">Variables: {TenantId}, {ControlId}, {Date}, {Sequence}, {Type}</small>
                        </div>
                    </div>
                </div>

                <!-- Retention & Access -->
                <div class="card mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="fas fa-archive me-2"></i>Retention & Access (Q83-84)</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="EvidenceRetentionYears" class="form-label">Evidence Retention (Years)</label>
                                <input type="number" asp-for="EvidenceRetentionYears" class="form-control" min="1" max="25">
                                <small class="text-muted">Regulatory minimum: 7 years for most frameworks</small>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Confidential Evidence Encryption</label>
                                <div class="form-check form-switch mt-2">
                                    <input class="form-check-input" type="checkbox" asp-for="ConfidentialEvidenceEncryption">
                                    <label class="form-check-label">Enable encryption for confidential evidence</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Acceptable Evidence Types -->
                <div class="card mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="fas fa-file-alt me-2"></i>Acceptable Evidence Types (Q85)</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @{
                                var evidenceTypes = new[] {
                                    ("export_reports", "Export Reports", "System-generated reports"),
                                    ("logs", "Logs", "System/application logs"),
                                    ("screenshots", "Screenshots", "Screen captures"),
                                    ("signed_pdfs", "Signed PDFs", "Digitally signed documents"),
                                    ("system_attestations", "System Attestations", "Automated attestations"),
                                    ("policies", "Policy Documents", "Approved policies"),
                                    ("training_records", "Training Records", "Completion certificates")
                                };
                            }
                            @foreach (var (code, name, desc) in evidenceTypes)
                            {
                                <div class="col-md-4 mb-2">
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input" 
                                               name="AcceptableEvidenceTypes" value="@code" id="evt_@code"
                                               @(Model.AcceptableEvidenceTypes.Contains(code) ? "checked" : "")>
                                        <label class="form-check-label" for="evt_@code">
                                            <strong>@name</strong>
                                            <small class="text-muted d-block">@desc</small>
                                        </label>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="@Url.Action("StepI", new { tenantId })" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back
                    </a>
                    <button type="submit" class="btn btn-primary btn-lg">
                        Continue to Step K <i class="fas fa-arrow-right ms-2"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
