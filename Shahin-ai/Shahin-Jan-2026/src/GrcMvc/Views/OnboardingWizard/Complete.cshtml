@section Scripts {
<script>
    function copyTenantId() {
        var tenantId = document.getElementById('tenantIdValue').innerText;
        navigator.clipboard.writeText(tenantId).then(function() {
            // Show success feedback
            var btn = event.target.closest('button');
            var originalHtml = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-check text-success"></i> Copied!';
            btn.classList.remove('btn-outline-primary');
            btn.classList.add('btn-success');
            setTimeout(function() {
                btn.innerHTML = originalHtml;
                btn.classList.remove('btn-success');
                btn.classList.add('btn-outline-primary');
            }, 2000);
        }).catch(function(err) {
            alert('Failed to copy. Please select and copy manually: ' + tenantId);
        });
    }
</script>
