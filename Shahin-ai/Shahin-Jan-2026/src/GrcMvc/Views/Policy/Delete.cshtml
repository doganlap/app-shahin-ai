@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> L
@model GrcMvc.Models.DTOs.PolicyDto
@{
    ViewData["Title"] = L["Policy_Delete_Title"].Value;
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> @L["DeleteConfirmation"]</h4>
                </div>
                <div class="card-body">
                    <h5 class="card-title text-danger">@L["Policy_Delete_Confirmation"]</h5>
                    <p class="card-text">@L["Policy_Delete_Warning", Model.Title, Model.PolicyNumber]</p>

                    <dl class="row mt-4">
                        <dt class="col-sm-4">@L["Policy_Number"]</dt>
                        <dd class="col-sm-8">@Model.PolicyNumber</dd>

                        <dt class="col-sm-4">@L["Policy_Title"]</dt>
                        <dd class="col-sm-8">@Model.Title</dd>

                        <dt class="col-sm-4">@L["Category"]</dt>
                        <dd class="col-sm-8">@Model.Category</dd>

                        <dt class="col-sm-4">@L["Type"]</dt>
                        <dd class="col-sm-8">@Model.Type</dd>

                        <dt class="col-sm-4">@L["Status"]</dt>
                        <dd class="col-sm-8">@Model.Status</dd>
                    </dl>

                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-circle"></i> @L["Policy_Delete_ViolationsWarning", Model.ViolationsCount]
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">@L["Cancel"]</a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> @L["DeletePolicy"]
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
