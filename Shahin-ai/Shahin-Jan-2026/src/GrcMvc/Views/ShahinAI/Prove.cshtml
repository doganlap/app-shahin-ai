@model List<GrcMvc.Models.Entities.AutoTaggedEvidence>
@{
    ViewData["Title"] = "Shahin PROVE - Evidence & Testing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1">
                <i class="fas fa-file-alt me-2" style="color: #9B59B6;"></i>
                Shahin PROVE
            </h1>
            <p class="text-muted mb-0">Evidence Packs & Testing | <span dir="rtl">إثبات</span></p>
        </div>
        <a href="@Url.Action("Index", "ShahinAI")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body">
                    <div class="h2 mb-0" style="color: #9B59B6;">@ViewBag.EvidenceCount</div>
                    <small class="text-muted">Evidence Items</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body">
                    <div class="h2 mb-0 text-success">@ViewBag.PackCount</div>
                    <small class="text-muted">Evidence Packs</small>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header text-white" style="background-color: #9B59B6;">
            <i class="fas fa-clipboard-check me-2"></i>Evidence Collection
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Title</th>
                            <th>Process</th>
                            <th>Period</th>
                            <th>Status</th>
                            <th>Captured</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var evidence in Model)
                        {
                            <tr>
                                <td>@evidence.Title</td>
                                <td>@evidence.Process</td>
                                <td>@evidence.Period</td>
                                <td>
                                    @switch (evidence.Status)
                                    {
                                        case "Approved":
                                            <span class="badge bg-success">Approved</span>
                                            break;
                                        case "Rejected":
                                            <span class="badge bg-danger">Rejected</span>
                                            break;
                                        default:
                                            <span class="badge bg-warning text-dark">@evidence.Status</span>
                                            break;
                                    }
                                </td>
                                <td>@evidence.CapturedAt.ToString("yyyy-MM-dd")</td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted py-4">
                                    <i class="fas fa-inbox fa-2x mb-2 d-block"></i>
                                    No evidence collected yet.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
