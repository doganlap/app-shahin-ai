@model List<GrcMvc.Models.Entities.RiskIndicator>
@{
    ViewData["Title"] = "Shahin WATCH - Monitoring & Alerts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1">
                <i class="fas fa-eye text-danger me-2"></i>
                Shahin WATCH
            </h1>
            <p class="text-muted mb-0">KRIs/KPIs & Alerts | <span dir="rtl">مراقبة</span></p>
        </div>
        <a href="@Url.Action("Index", "ShahinAI")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body">
                    <div class="h2 mb-0 text-danger">@ViewBag.IndicatorCount</div>
                    <small class="text-muted">KRIs/KPIs</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body">
                    <div class="h2 mb-0 text-warning">@ViewBag.AlertCount</div>
                    <small class="text-muted">Open Alerts</small>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-danger text-white">
            <i class="fas fa-tachometer-alt me-2"></i>Risk Indicators
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Code</th>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Category</th>
                            <th>Current</th>
                            <th>Target</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var indicator in Model)
                        {
                            <tr>
                                <td><code>@indicator.IndicatorCode</code></td>
                                <td>@indicator.Name</td>
                                <td><span class="badge bg-info">@indicator.IndicatorType</span></td>
                                <td>@indicator.Category</td>
                                <td>—</td>
                                <td>@(indicator.TargetValue?.ToString("F1") ?? "—")</td>
                                <td><span class="badge bg-secondary">—</span></td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted py-4">
                                    <i class="fas fa-inbox fa-2x mb-2 d-block"></i>
                                    No risk indicators configured yet.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
