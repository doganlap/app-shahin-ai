@model List<GrcMvc.Models.Entities.CanonicalControl>
@{
    ViewData["Title"] = "Shahin MAP - Control Library";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1">
                <i class="fas fa-map text-primary me-2"></i>
                Shahin MAP
            </h1>
            <p class="text-muted mb-0">Requirement → Objective → Control Mapping | <span dir="rtl">خريطة</span></p>
        </div>
        <a href="@Url.Action("Index", "ShahinAI")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <span><i class="fas fa-list me-2"></i>Canonical Control Library</span>
                <span class="badge bg-light text-primary">@ViewBag.TotalControls Controls</span>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Control</th>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Frequency</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var control in Model)
                        {
                            <tr>
                                <td><code>@control.Id.ToString().Substring(0, 8)</code></td>
                                <td>@control.ControlName</td>
                                <td><span class="badge bg-secondary">@(control.ControlType ?? "—")</span></td>
                                <td>@(control.Frequency ?? "—")</td>
                                <td>
                                    @if (control.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted py-4">
                                    <i class="fas fa-inbox fa-2x mb-2 d-block"></i>
                                    No controls found. Add controls to build your library.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
