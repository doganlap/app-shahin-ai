@model List<GrcMvc.Models.Entities.ControlException>
@{
    ViewData["Title"] = "Shahin FIX - Remediation & Exceptions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1">
                <i class="fas fa-wrench text-warning me-2"></i>
                Shahin FIX
            </h1>
            <p class="text-muted mb-0">Remediation & Exceptions | <span dir="rtl">معالجة</span></p>
        </div>
        <a href="@Url.Action("Index", "ShahinAI")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body">
                    <div class="h2 mb-0 text-warning">@ViewBag.ExceptionCount</div>
                    <small class="text-muted">Control Exceptions</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body">
                    <div class="h2 mb-0 text-danger">@ViewBag.CCMExceptionCount</div>
                    <small class="text-muted">CCM Exceptions</small>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-warning text-dark">
            <i class="fas fa-exclamation-triangle me-2"></i>Control Exceptions
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Code</th>
                            <th>Control</th>
                            <th>Status</th>
                            <th>Reason</th>
                            <th>Requested</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var exception in Model)
                        {
                            <tr>
                                <td><code>@exception.ExceptionCode</code></td>
                                <td><code>@exception.ControlId.ToString().Substring(0, 8)</code></td>
                                <td>
                                    @switch (exception.Status)
                                    {
                                        case "Approved":
                                            <span class="badge bg-success">Approved</span>
                                            break;
                                        case "Rejected":
                                            <span class="badge bg-danger">Rejected</span>
                                            break;
                                        case "Pending":
                                            <span class="badge bg-warning text-dark">Pending</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@exception.Status</span>
                                            break;
                                    }
                                </td>
                                <td>@(exception.Reason?.Length > 50 ? exception.Reason.Substring(0, 50) + "..." : exception.Reason ?? "—")</td>
                                <td>@exception.RequestedAt.ToString("yyyy-MM-dd")</td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted py-4">
                                    <i class="fas fa-inbox fa-2x mb-2 d-block"></i>
                                    No exceptions found.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
