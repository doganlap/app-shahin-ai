@model List<GrcMvc.Models.Entities.ApplicabilityEntry>
@{
    ViewData["Title"] = "Shahin APPLY - Scope & Applicability";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1">
                <i class="fas fa-check-circle text-success me-2"></i>
                Shahin APPLY
            </h1>
            <p class="text-muted mb-0">Scope and Applicability Rules | <span dir="rtl">تطبيق</span></p>
        </div>
        <a href="@Url.Action("Index", "ShahinAI")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-success text-white">
            <div class="d-flex justify-content-between align-items-center">
                <span><i class="fas fa-filter me-2"></i>Applicability Matrix</span>
                <span class="badge bg-light text-success">@ViewBag.TotalEntries Entries</span>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Control</th>
                            <th>Status</th>
                            <th>Reason</th>
                            <th>Decided By</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var entry in Model)
                        {
                            <tr>
                                <td><code>@entry.ControlId.ToString().Substring(0, 8)</code></td>
                                <td>
                                    @switch (entry.Status)
                                    {
                                        case "Applicable":
                                            <span class="badge bg-success">Applicable</span>
                                            break;
                                        case "NotApplicable":
                                            <span class="badge bg-secondary">Not Applicable</span>
                                            break;
                                        case "Inherited":
                                            <span class="badge bg-info">Inherited</span>
                                            break;
                                        case "Exception":
                                            <span class="badge bg-warning text-dark">Exception</span>
                                            break;
                                        default:
                                            <span class="badge bg-light text-dark">@entry.Status</span>
                                            break;
                                    }
                                </td>
                                <td>@(entry.Reason ?? "—")</td>
                                <td>—</td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted py-4">
                                    <i class="fas fa-inbox fa-2x mb-2 d-block"></i>
                                    No applicability entries yet. Generate your control suite to populate.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
