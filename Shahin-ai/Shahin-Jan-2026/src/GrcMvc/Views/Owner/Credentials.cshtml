@model GrcMvc.Models.DTOs.TenantAdminCredentialsDto
@{
    ViewData["Title"] = "Admin Credentials";
    Layout = "_Layout";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark">
                    <h4><i class="bi bi-shield-lock"></i> Admin Credentials - Show Once</h4>
                    <p class="mb-0 text-dark"><strong>Warning:</strong> These credentials will not be shown again. Save them securely.</p>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <strong>SECURITY WARNING:</strong> This page will only be displayed once. Copy these credentials immediately.
                    </div>

                    <div class="credentials-box p-4 bg-light border rounded mb-4">
                        <h5 class="mb-3">Login Information</h5>
                        
                        <div class="mb-3">
                            <label class="form-label fw-bold">Organization:</label>
                            <div class="form-control bg-white">@Model.OrganizationName</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Tenant ID:</label>
                            <div class="form-control bg-white font-monospace">@Model.TenantId</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Username:</label>
                            <div class="form-control bg-white font-monospace">@Model.Username</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Password:</label>
                            <div class="input-group">
                                <input type="text" id="passwordDisplay" class="form-control font-monospace bg-white" value="@Model.Password" readonly />
                                <button class="btn btn-outline-secondary" type="button" onclick="copyToClipboard('@Model.Password')">
                                    <i class="bi bi-clipboard"></i> Copy
                                </button>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Login URL:</label>
                            <div class="input-group">
                                <input type="text" class="form-control bg-white" value="@Model.LoginUrl" readonly />
                                <a href="@Model.LoginUrl" class="btn btn-outline-primary" target="_blank">
                                    <i class="bi bi-box-arrow-up-right"></i> Open
                                </a>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Credentials Expire:</label>
                            <div class="form-control bg-white">@Model.ExpiresAt.ToString("yyyy-MM-dd HH:mm:ss UTC")</div>
                        </div>
                    </div>

                    <div class="alert alert-info" role="alert">
                        <h6><i class="bi bi-info-circle"></i> Delivery Options:</h6>
                        <div class="btn-group-vertical gap-2">
                            <button type="button" class="btn btn-outline-primary" onclick="copyAllCredentials()">
                                <i class="bi bi-clipboard"></i> Copy All to Clipboard
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.TenantId" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Tenant Details
                            </a>
                        </div>
                    </div>

                    <div class="alert alert-warning" role="alert">
                        <h6><i class="bi bi-shield-exclamation"></i> Security Instructions:</h6>
                        <ul class="mb-0">
                            <li>These credentials are temporary and will expire on @Model.ExpiresAt.ToString("yyyy-MM-dd")</li>
                            @if (Model.MustChangePasswordOnFirstLogin)
                            {
                                <li><strong>You must change your password on first login</strong></li>
                            }
                            <li>Do not share these credentials with anyone</li>
                            <li>Use a secure connection (HTTPS) when logging in</li>
                            <li>Deliver credentials securely to the tenant admin</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(function() {
                alert('Copied to clipboard!');
            });
        }

        function copyAllCredentials() {
            var text = `GRC Platform Admin Credentials
==============================
Organization: @Model.OrganizationName
Tenant ID: @Model.TenantId
Username: @Model.Username
Password: @Model.Password
Login URL: @Model.LoginUrl
Credentials Expire: @Model.ExpiresAt.ToString("yyyy-MM-dd HH:mm:ss UTC")
`;
            copyToClipboard(text);
        }
    </script>
}
