@model GrcMvc.Models.DTOs.CreateOwnerTenantDto
@{
    ViewData["Title"] = "Create Tenant";
    Layout = "_Layout";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h4><i class="bi bi-plus-circle"></i> Create New Tenant with Full Features</h4>
                    <p class="text-muted mb-0">Create a tenant that bypasses payment and gets Enterprise tier</p>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="OrganizationName" class="form-label"></label>
                            <input asp-for="OrganizationName" class="form-control" placeholder="Acme Corporation" />
                            <span asp-validation-for="OrganizationName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AdminEmail" class="form-label"></label>
                            <input asp-for="AdminEmail" type="email" class="form-control" placeholder="admin@acme.com" />
                            <span asp-validation-for="AdminEmail" class="text-danger"></span>
                            <small class="form-text text-muted">Email address for the tenant admin</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TenantSlug" class="form-label"></label>
                            <input asp-for="TenantSlug" class="form-control" placeholder="acme-corp" />
                            <span asp-validation-for="TenantSlug" class="text-danger"></span>
                            <small class="form-text text-muted">Unique identifier (lowercase, numbers, hyphens only)</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ExpirationDays" class="form-label"></label>
                            <input asp-for="ExpirationDays" type="number" min="7" max="90" class="form-control" />
                            <span asp-validation-for="ExpirationDays" class="text-danger"></span>
                            <small class="form-text text-muted">Number of days until admin credentials expire (7-90 days)</small>
                        </div>

                        <div class="alert alert-info" role="alert">
                            <i class="bi bi-info-circle"></i>
                            <strong>Note:</strong> This tenant will be created with:
                            <ul class="mb-0 mt-2">
                                <li>Enterprise subscription tier</li>
                                <li>Payment bypass enabled</li>
                                <li>Auto-activated status</li>
                                <li>Full feature access</li>
                            </ul>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Create Tenant
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
