@model IEnumerable<GrcMvc.Models.Entities.Tenant>
@{
    ViewData["Title"] = "All Tenants";
    Layout = "_Layout";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1>
                <i class="bi bi-building"></i> All Tenants
            </h1>
            <p class="text-muted">Manage all tenants in the system</p>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Tenant
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Organization Name</th>
                            <th>Tenant Slug</th>
                            <th>Status</th>
                            <th>Subscription Tier</th>
                            <th>Owner Created</th>
                            <th>Admin Generated</th>
                            <th>Expires At</th>
                            <th>Created Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tenant in Model)
                        {
                            <tr>
                                <td>@tenant.OrganizationName</td>
                                <td><code>@tenant.TenantSlug</code></td>
                                <td>
                                    @if (tenant.Status == "Active")
                                    {
                                        <span class="badge bg-success">@tenant.Status</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">@tenant.Status</span>
                                    }
                                </td>
                                <td>@tenant.SubscriptionTier</td>
                                <td>
                                    @if (tenant.IsOwnerCreated)
                                    {
                                        <span class="badge bg-info">Yes</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">No</span>
                                    }
                                </td>
                                <td>
                                    @if (tenant.AdminAccountGenerated)
                                    {
                                        <span class="badge bg-success">Yes</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">No</span>
                                    }
                                </td>
                                <td>
                                    @if (tenant.CredentialExpiresAt.HasValue)
                                    {
                                        var expiresAt = tenant.CredentialExpiresAt.Value;
                                        if (expiresAt < DateTime.UtcNow)
                                        {
                                            <span class="text-danger">Expired</span>
                                        }
                                        else
                                        {
                                            <span>@expiresAt.ToString("yyyy-MM-dd")</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>@tenant.CreatedDate.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@tenant.Id" class="btn btn-outline-primary">
                                            <i class="bi bi-eye"></i> Details
                                        </a>
                                        @if (!tenant.AdminAccountGenerated)
                                        {
                                            <a asp-action="GenerateAdmin" asp-route-id="@tenant.Id" class="btn btn-outline-success">
                                                <i class="bi bi-person-plus"></i> Generate Admin
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
