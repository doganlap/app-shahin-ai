@model GrcMvc.Models.Entities.Tenant
@{
    ViewData["Title"] = "Tenant Status";
    Layout = "_Layout";
    var ownerGeneratedUsers = ViewBag.OwnerGeneratedUsers as List<GrcMvc.Models.Entities.TenantUser> ?? new List<GrcMvc.Models.Entities.TenantUser>();
    var ownerTenantCreation = ViewBag.OwnerTenantCreation as GrcMvc.Models.Entities.OwnerTenantCreation;
    var hasExpiredCredentials = ViewBag.HasExpiredCredentials as bool? ?? false;
    var daysUntilExpiration = ViewBag.DaysUntilExpiration as int?;
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1>
                <i class="bi bi-activity"></i> Tenant Status: @Model.OrganizationName
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Owner Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="Tenants">All Tenants</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id">Details</a></li>
                    <li class="breadcrumb-item active">Status</li>
                </ol>
            </nav>
        </div>
    </div>

    @if (hasExpiredCredentials)
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <strong>Credentials Expired:</strong> Admin credentials have expired. Please generate new credentials.
        </div>
    }
    else if (daysUntilExpiration.HasValue && daysUntilExpiration.Value <= 7)
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle"></i>
            <strong>Warning:</strong> Credentials will expire in @daysUntilExpiration.Value day(s). Consider extending expiration.
        </div>
    }

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="bi bi-info-circle"></i> Tenant Status</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-5">Status:</dt>
                        <dd class="col-sm-7">
                            @if (Model.Status == "Active")
                            {
                                <span class="badge bg-success">@Model.Status</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">@Model.Status</span>
                            }
                        </dd>

                        <dt class="col-sm-5">Subscription Tier:</dt>
                        <dd class="col-sm-7">@Model.SubscriptionTier</dd>

                        <dt class="col-sm-5">Owner Created:</dt>
                        <dd class="col-sm-7">
                            @if (Model.IsOwnerCreated)
                            {
                                <span class="badge bg-info">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </dd>

                        <dt class="col-sm-5">Bypass Payment:</dt>
                        <dd class="col-sm-7">
                            @if (Model.BypassPayment)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </dd>

                        <dt class="col-sm-5">Admin Account Generated:</dt>
                        <dd class="col-sm-7">
                            @if (Model.AdminAccountGenerated)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">No</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="bi bi-clock-history"></i> Credential Expiration</h5>
                </div>
                <div class="card-body">
                    @if (Model.CredentialExpiresAt.HasValue)
                    {
                        var expiresAt = Model.CredentialExpiresAt.Value;
                        <dl class="row">
                            <dt class="col-sm-6">Expires At:</dt>
                            <dd class="col-sm-6">@expiresAt.ToString("yyyy-MM-dd HH:mm:ss UTC")</dd>

                            <dt class="col-sm-6">Days Remaining:</dt>
                            <dd class="col-sm-6">
                                @if (expiresAt < DateTime.UtcNow)
                                {
                                    <span class="badge bg-danger">Expired</span>
                                }
                                else
                                {
                                    var days = (int)(expiresAt - DateTime.UtcNow).TotalDays;
                                    <span class="badge bg-@(days <= 7 ? "warning" : "success")">@days days</span>
                                }
                            </dd>
                        </dl>

                        <form asp-action="ExtendExpiration" asp-route-id="@Model.Id" method="post" class="mt-3">
                            @Html.AntiForgeryToken()
                            <div class="input-group">
                                <input type="number" name="AdditionalDays" class="form-control" placeholder="Additional days" min="1" max="90" value="14" />
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-calendar-plus"></i> Extend
                                </button>
                            </div>
                        </form>
                    }
                    else
                    {
                        <p class="text-muted">No expiration set</p>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (ownerGeneratedUsers.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="bi bi-people"></i> Owner-Generated Admin Users</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Role Code</th>
                                        <th>Status</th>
                                        <th>Expires At</th>
                                        <th>Must Change Password</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in ownerGeneratedUsers)
                                    {
                                        <tr>
                                            <td>@user.RoleCode</td>
                                            <td>
                                                @if (user.Status == "Active")
                                                {
                                                    <span class="badge bg-success">@user.Status</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">@user.Status</span>
                                                }
                                            </td>
                                            <td>
                                                @if (user.CredentialExpiresAt.HasValue)
                                                {
                                                    var expiresAt = user.CredentialExpiresAt.Value;
                                                    if (expiresAt < DateTime.UtcNow)
                                                    {
                                                        <span class="text-danger">Expired</span>
                                                    }
                                                    else
                                                    {
                                                        <span>@expiresAt.ToString("yyyy-MM-dd HH:mm")</span>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (user.MustChangePasswordOnFirstLogin)
                                                {
                                                    <span class="badge bg-warning">Yes</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">No</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (ownerTenantCreation != null)
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="bi bi-file-text"></i> Credential Delivery History</h5>
                    </div>
                    <div class="card-body">
                        @if (ownerTenantCreation != null)
                        {
                            <dl class="row">
                                <dt class="col-sm-3">Delivery Method:</dt>
                                <dd class="col-sm-9">@ownerTenantCreation.DeliveryMethod</dd>

                                <dt class="col-sm-3">Credentials Delivered:</dt>
                                <dd class="col-sm-9">
                                    @if (ownerTenantCreation.CredentialsDelivered)
                                    {
                                        <span class="badge bg-success">Yes</span>
                                        @if (ownerTenantCreation.DeliveredAt.HasValue)
                                        {
                                            <br /><small class="text-muted">Delivered: @ownerTenantCreation.DeliveredAt.Value.ToString("yyyy-MM-dd HH:mm")</small>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">No</span>
                                    }
                                </dd>

                                @if (!string.IsNullOrEmpty(ownerTenantCreation.DeliveryNotes))
                                {
                                    <dt class="col-sm-3">Delivery Notes:</dt>
                                    <dd class="col-sm-9">@ownerTenantCreation.DeliveryNotes</dd>
                                }
                            </dl>
                        }
                        else
                        {
                            <p class="text-muted">No delivery history available.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row mt-4">
        <div class="col-12">
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Details
            </a>
        </div>
    </div>
</div>
