@model GrcMvc.Models.DTOs.GenerateAdminAccountDto
@{
    ViewData["Title"] = "Generate Admin Account";
    Layout = "_Layout";
    var tenant = ViewBag.Tenant as GrcMvc.Models.Entities.Tenant;
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h4><i class="bi bi-person-plus"></i> Generate Admin Account</h4>
                    <p class="text-muted mb-0">Generate admin credentials for: <strong>@tenant?.OrganizationName</strong></p>
                </div>
                <div class="card-body">
                    <form asp-action="GenerateAdmin" asp-route-id="@tenant?.Id" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="alert alert-info" role="alert">
                            <i class="bi bi-info-circle"></i>
                            <strong>What will be generated:</strong>
                            <ul class="mb-0 mt-2">
                                <li>Admin username (format: admin-{tenant-slug})</li>
                                <li>Secure password (16 characters, mixed case, numbers, symbols)</li>
                                <li>Credentials will expire after the specified number of days</li>
                                <li>Admin must change password on first login</li>
                            </ul>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ExpirationDays" class="form-label"></label>
                            <input asp-for="ExpirationDays" type="number" min="7" max="90" class="form-control" />
                            <span asp-validation-for="ExpirationDays" class="text-danger"></span>
                            <small class="form-text text-muted">Number of days until credentials expire (7-90 days, default: 14)</small>
                        </div>

                        <div class="alert alert-warning" role="alert">
                            <i class="bi bi-exclamation-triangle"></i>
                            <strong>Important:</strong> Credentials will be shown only once. Make sure to save them securely or deliver them to the tenant admin immediately.
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Details" asp-route-id="@tenant?.Id" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Generate Admin Account
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
