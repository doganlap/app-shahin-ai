@model GrcMvc.Models.Entities.Tenant
@{
    ViewData["Title"] = "Tenant Details";
    Layout = "_Layout";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1>
                <i class="bi bi-building"></i> @Model.OrganizationName
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Owner Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="Tenants">All Tenants</a></li>
                    <li class="breadcrumb-item active">Details</li>
                </ol>
            </nav>
        </div>
    </div>

    @if (ViewBag.HasExpiredCredentials == true)
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle"></i>
            <strong>Warning:</strong> Admin credentials have expired. Please generate new credentials.
        </div>
    }

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="bi bi-info-circle"></i> Tenant Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Tenant ID:</dt>
                        <dd class="col-sm-8"><code>@Model.Id</code></dd>

                        <dt class="col-sm-4">Tenant Slug:</dt>
                        <dd class="col-sm-8"><code>@Model.TenantSlug</code></dd>

                        <dt class="col-sm-4">Organization Name:</dt>
                        <dd class="col-sm-8">@Model.OrganizationName</dd>

                        <dt class="col-sm-4">Admin Email:</dt>
                        <dd class="col-sm-8">@Model.AdminEmail</dd>

                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Status == "Active")
                            {
                                <span class="badge bg-success">@Model.Status</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">@Model.Status</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Subscription Tier:</dt>
                        <dd class="col-sm-8">@Model.SubscriptionTier</dd>

                        <dt class="col-sm-4">Owner Created:</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsOwnerCreated)
                            {
                                <span class="badge bg-info">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Bypass Payment:</dt>
                        <dd class="col-sm-8">
                            @if (Model.BypassPayment)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Admin Account Generated:</dt>
                        <dd class="col-sm-8">
                            @if (Model.AdminAccountGenerated)
                            {
                                <span class="badge bg-success">Yes</span>
                                @if (Model.AdminAccountGeneratedAt.HasValue)
                                {
                                    <br /><small class="text-muted">Generated: @Model.AdminAccountGeneratedAt.Value.ToString("yyyy-MM-dd HH:mm")</small>
                                }
                            }
                            else
                            {
                                <span class="badge bg-warning">No</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Credential Expires:</dt>
                        <dd class="col-sm-8">
                            @if (Model.CredentialExpiresAt.HasValue)
                            {
                                var expiresAt = Model.CredentialExpiresAt.Value;
                                if (expiresAt < DateTime.UtcNow)
                                {
                                    <span class="text-danger">Expired on @expiresAt.ToString("yyyy-MM-dd HH:mm")</span>
                                }
                                else
                                {
                                    <span>@expiresAt.ToString("yyyy-MM-dd HH:mm")</span>
                                    <br /><small class="text-muted">(@((int)(expiresAt - DateTime.UtcNow).TotalDays) days remaining)</small>
                                }
                            }
                            else
                            {
                                <span class="text-muted">Not set</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="bi bi-person-check"></i> Admin Account Status</h5>
                </div>
                <div class="card-body">
                    @if (Model.AdminAccountGenerated)
                    {
                        <div class="alert alert-success">
                            <i class="bi bi-check-circle"></i> Admin account has been generated.
                        </div>

                        @if (ViewBag.OwnerGeneratedUsers != null)
                        {
                            var ownerUsers = ViewBag.OwnerGeneratedUsers as List<GrcMvc.Models.Entities.TenantUser>;
                            if (ownerUsers != null && ownerUsers.Any())
                            {
                                <h6>Owner-Generated Admin Users:</h6>
                                <ul class="list-group">
                                    @foreach (var user in ownerUsers)
                                    {
                                        <li class="list-group-item">
                                            <strong>@user.RoleCode</strong>
                                            @if (user.CredentialExpiresAt.HasValue)
                                            {
                                                var expiresAt = user.CredentialExpiresAt.Value;
                                                if (expiresAt < DateTime.UtcNow)
                                                {
                                                    <span class="badge bg-danger float-end">Expired</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-info float-end">Expires: @expiresAt.ToString("yyyy-MM-dd")</span>
                                                }
                                            }
                                        </li>
                                    }
                                </ul>
                            }
                        }

                        <div class="mt-3">
                            <form asp-action="ExtendExpiration" asp-route-id="@Model.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <div class="input-group">
                                    <input type="number" name="AdditionalDays" class="form-control" placeholder="Days" min="1" max="90" value="14" />
                                    <button type="submit" class="btn btn-outline-primary">
                                        <i class="bi bi-calendar-plus"></i> Extend Expiration
                                    </button>
                                </div>
                            </form>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i> Admin account has not been generated yet.
                        </div>
                        <a asp-action="GenerateAdmin" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="bi bi-person-plus"></i> Generate Admin Account
                        </a>
                    }
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-tools"></i> Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        @if (!Model.AdminAccountGenerated)
                        {
                            <a asp-action="GenerateAdmin" asp-route-id="@Model.Id" class="btn btn-primary">
                                <i class="bi bi-person-plus"></i> Generate Admin Account
                            </a>
                        }
                        else
                        {
                            <a asp-action="Status" asp-route-id="@Model.Id" class="btn btn-outline-info">
                                <i class="bi bi-info-circle"></i> View Status
                            </a>
                        }
                        <a asp-action="Tenants" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
