@{
    ViewData["Title"] = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card shadow-sm">
                <div class="card-body py-5">
                    <i class="fas fa-exclamation-triangle text-warning" style="font-size: 4rem;"></i>
                    <h2 class="mt-4">Something Went Wrong</h2>
                    <p class="text-muted mt-3">
                        We encountered an error while processing your request.
                        Please try again or contact support if the problem persists.
                    </p>
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "WorkflowUI")" class="btn btn-primary me-2">
                            <i class="fas fa-arrow-left me-2"></i>Back to Workflows
                        </a>
                        <a href="@Url.Action("Index", "Dashboard")" class="btn btn-outline-secondary">
                            <i class="fas fa-home me-2"></i>Go to Dashboard
                        </a>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <p class="text-muted small">
                    <i class="fas fa-headset me-1"></i>
                    Need help? <a href="@Url.Action("Contact", "Help")">Contact Support</a>
                </p>
            </div>
        </div>
    </div>
</div>
