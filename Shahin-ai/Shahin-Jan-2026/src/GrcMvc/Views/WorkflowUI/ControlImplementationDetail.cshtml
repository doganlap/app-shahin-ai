@{
    ViewData["Title"] = "Control Implementation Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var workflowId = ViewBag.WorkflowId ?? Context.Request.Query["id"].ToString();
}

<div class="container-fluid mt-4">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "WorkflowUI")">Workflows</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("ControlImplementation", "WorkflowUI")">Control Implementation</a></li>
            <li class="breadcrumb-item active">Detail</li>
        </ol>
    </nav>

    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="h3">
                <i class="fas fa-cog text-primary me-2"></i>
                <span id="controlNumber">Loading...</span>
            </h1>
            <p class="text-muted" id="controlTitle">Loading control details...</p>
        </div>
        <div class="col-md-4 text-end">
            <button class="btn btn-success me-2" onclick="completeTask()">
                <i class="fas fa-check"></i> Complete Task
            </button>
            <button class="btn btn-warning" onclick="reassignTask()">
                <i class="fas fa-user-edit"></i> Reassign
            </button>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Workflow Steps -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-tasks me-2"></i>Implementation Steps</h5>
                </div>
                <div class="card-body">
                    <div class="timeline" id="stepsTimeline">
                        <div class="timeline-item completed">
                            <div class="timeline-marker bg-success"><i class="fas fa-check"></i></div>
                            <div class="timeline-content">
                                <h6>Step 1: Review Requirements</h6>
                                <p class="text-muted small">Completed on Jan 5, 2026</p>
                            </div>
                        </div>
                        <div class="timeline-item active">
                            <div class="timeline-marker bg-primary"><i class="fas fa-spinner fa-spin"></i></div>
                            <div class="timeline-content">
                                <h6>Step 2: Implement Control</h6>
                                <p class="text-muted small">In Progress - Due Jan 15, 2026</p>
                            </div>
                        </div>
                        <div class="timeline-item">
                            <div class="timeline-marker bg-secondary"><i class="fas fa-clock"></i></div>
                            <div class="timeline-content">
                                <h6>Step 3: Upload Evidence</h6>
                                <p class="text-muted small">Pending</p>
                            </div>
                        </div>
                        <div class="timeline-item">
                            <div class="timeline-marker bg-secondary"><i class="fas fa-clock"></i></div>
                            <div class="timeline-content">
                                <h6>Step 4: Review & Approve</h6>
                                <p class="text-muted small">Pending</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Evidence -->
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-file-alt me-2"></i>Evidence</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>No evidence uploaded yet. Upload evidence to proceed.
                    </div>
                    <button class="btn btn-outline-primary">
                        <i class="fas fa-upload me-2"></i>Upload Evidence
                    </button>
                </div>
            </div>

            <!-- Comments -->
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-comments me-2"></i>Comments</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <textarea class="form-control" rows="3" placeholder="Add a comment..."></textarea>
                    </div>
                    <button class="btn btn-primary btn-sm"><i class="fas fa-paper-plane me-2"></i>Post Comment</button>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Status Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Status</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <small class="text-muted">Current Status</small>
                        <div><span class="badge bg-info fs-6">In Progress</span></div>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted">Progress</small>
                        <div class="progress" style="height: 25px;">
                            <div class="progress-bar bg-info" style="width: 50%">50%</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted">Due Date</small>
                        <div class="fw-bold">Jan 15, 2026</div>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted">Assigned To</small>
                        <div class="fw-bold">Ahmed Al-Rashid</div>
                    </div>
                </div>
            </div>

            <!-- Control Info -->
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-shield-alt me-2"></i>Control Info</h6>
                </div>
                <div class="card-body">
                    <div class="mb-2"><small class="text-muted">Framework:</small> <strong>NCA-ECC</strong></div>
                    <div class="mb-2"><small class="text-muted">Domain:</small> <strong>Governance</strong></div>
                    <div class="mb-2"><small class="text-muted">Control Type:</small> <strong>Preventive</strong></div>
                </div>
            </div>

            <!-- Actions -->
            <div class="card shadow-sm">
                <div class="list-group list-group-flush">
                    <a href="@Url.Action("ControlImplementation", "WorkflowUI")" class="list-group-item list-group-item-action">
                        <i class="fas fa-arrow-left text-secondary me-2"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.timeline { position: relative; padding-left: 30px; }
.timeline-item { position: relative; padding-bottom: 20px; padding-left: 20px; border-left: 2px solid #dee2e6; }
.timeline-item:last-child { border-left: none; }
.timeline-item.completed { border-left-color: #28a745; }
.timeline-item.active { border-left-color: #007bff; }
.timeline-marker { position: absolute; left: -12px; width: 24px; height: 24px; border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-size: 10px; }
</style>
