@{
    ViewData["Title"] = "Risk Management Workflows";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="h3">
                <i class="fas fa-exclamation-triangle text-danger me-2"></i>Risk Management Workflows
            </h1>
            <p class="text-muted">Manage risk assessments and treatment workflows</p>
        </div>
        <div class="col-md-4 text-end">
            <button class="btn btn-primary" onclick="showNewRiskModal()">
                <i class="fas fa-plus"></i> New Risk Assessment
            </button>
        </div>
    </div>

    <!-- KPI Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body text-center">
                    <h3 id="criticalCount">0</h3><small>Critical Risks</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body text-center">
                    <h3 id="highCount">0</h3><small>High Risks</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h3 id="mediumCount">0</h3><small>Medium Risks</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h3 id="lowCount">0</h3><small>Low Risks</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Active Risks Table -->
    <div class="card shadow-sm mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-tasks me-2"></i>Active Risk Workflows</h5>
            <div>
                <select class="form-select form-select-sm d-inline-block w-auto" id="riskFilter" onchange="loadRiskData()">
                    <option value="">All Categories</option>
                    <option value="Cybersecurity">Cybersecurity</option>
                    <option value="Compliance">Compliance</option>
                    <option value="Operational">Operational</option>
                    <option value="Financial">Financial</option>
                    <option value="Strategic">Strategic</option>
                </select>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Risk ID</th>
                            <th>Risk Title</th>
                            <th>Category</th>
                            <th>Risk Level</th>
                            <th>Score</th>
                            <th>Treatment</th>
                            <th>Owner</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="risksTableBody">
                        <tr>
                            <td colspan="9" class="text-center">
                                <i class="fas fa-spinner fa-spin"></i> Loading risks...
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Risk by Category</h6>
                </div>
                <div class="card-body">
                    <canvas id="riskCategoryChart" height="200"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Treatment Status</h6>
                </div>
                <div class="card-body">
                    <canvas id="treatmentChart" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    let categoryChart = null;
    let treatmentChart = null;

    async function loadRiskData() {
        try {
            const response = await fetch('/api/workflows/risk');
            if (!response.ok) throw new Error('Failed to load risks');
            
            const data = await response.json();
            
            // Update KPI cards
            document.getElementById('criticalCount').textContent = data.stats?.critical || 0;
            document.getElementById('highCount').textContent = data.stats?.high || 0;
            document.getElementById('mediumCount').textContent = data.stats?.medium || 0;
            document.getElementById('lowCount').textContent = data.stats?.low || 0;
            
            // Update table
            const tbody = document.getElementById('risksTableBody');
            const filter = document.getElementById('riskFilter').value;
            let risks = data.risks || [];
            
            if (filter) {
                risks = risks.filter(r => r.category === filter);
            }
            
            if (risks.length === 0) {
                tbody.innerHTML = '<tr><td colspan="9" class="text-center text-muted">No risks found</td></tr>';
            } else {
                tbody.innerHTML = risks.map(r => `
                    <tr>
                        <td>${r.riskId}</td>
                        <td>${r.title || r.name || 'Unnamed'}</td>
                        <td>${r.category || 'Uncategorized'}</td>
                        <td>${getRiskLevelBadge(r.riskLevel)}</td>
                        <td><span class="badge bg-secondary">${r.riskScore}</span></td>
                        <td>${r.treatment || 'Pending'}</td>
                        <td>${r.owner || 'Unassigned'}</td>
                        <td>${getStatusBadge(r.status)}</td>
                        <td>
                            <a href="/Risks/Details/${r.id}" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-eye"></i>
                            </a>
                        </td>
                    </tr>
                `).join('');
            }
            
            // Update charts
            updateCharts(data.charts);
            
        } catch (error) {
            console.error('Error loading risk data:', error);
            document.getElementById('risksTableBody').innerHTML = 
                '<tr><td colspan="9" class="text-center text-danger">Error loading data</td></tr>';
        }
    }
    
    function getRiskLevelBadge(level) {
        const badges = {
            'Critical': 'bg-danger',
            'High': 'bg-warning text-dark',
            'Medium': 'bg-info',
            'Low': 'bg-success'
        };
        return `<span class="badge ${badges[level] || 'bg-secondary'}">${level}</span>`;
    }
    
    function getStatusBadge(status) {
        const badges = {
            'Active': 'bg-primary',
            'In Treatment': 'bg-info',
            'Assessment': 'bg-warning',
            'Accepted': 'bg-success',
            'Mitigated': 'bg-success',
            'Closed': 'bg-secondary'
        };
        return `<span class="badge ${badges[status] || 'bg-secondary'}">${status}</span>`;
    }
    
    function updateCharts(charts) {
        if (!charts) return;
        
        // Category Chart
        const catCtx = document.getElementById('riskCategoryChart').getContext('2d');
        if (categoryChart) categoryChart.destroy();
        
        const categories = charts.byCategory || [];
        categoryChart = new Chart(catCtx, {
            type: 'doughnut',
            data: {
                labels: categories.map(c => c.category || 'Unknown'),
                datasets: [{
                    data: categories.map(c => c.count),
                    backgroundColor: ['#dc3545', '#fd7e14', '#ffc107', '#20c997', '#0d6efd', '#6f42c1']
                }]
            },
            options: {
                responsive: true,
                plugins: { legend: { position: 'right' } }
            }
        });
        
        // Treatment Chart
        const treatCtx = document.getElementById('treatmentChart').getContext('2d');
        if (treatmentChart) treatmentChart.destroy();
        
        const treatments = charts.byTreatment || [];
        treatmentChart = new Chart(treatCtx, {
            type: 'bar',
            data: {
                labels: treatments.map(t => t.treatment),
                datasets: [{
                    label: 'Count',
                    data: treatments.map(t => t.count),
                    backgroundColor: '#0d6efd'
                }]
            },
            options: {
                responsive: true,
                plugins: { legend: { display: false } },
                scales: { y: { beginAtZero: true } }
            }
        });
    }
    
    function showNewRiskModal() {
        window.location.href = '/Risks/Create';
    }
    
    // Load data on page load
    document.addEventListener('DOMContentLoaded', loadRiskData);
</script>
}
