@{
    ViewData["Title"] = "Exception Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var exceptionId = ViewBag.ExceptionId ?? Context.Request.Query["id"].ToString();
}

<div class="container-fluid mt-4">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "WorkflowUI")">Workflows</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Exceptions", "WorkflowUI")">Exceptions</a></li>
            <li class="breadcrumb-item active">Detail</li>
        </ol>
    </nav>

    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="h3">
                <i class="fas fa-exclamation-circle text-warning me-2"></i>
                Exception Request: EXC-2026-001
            </h1>
            <p class="text-muted">Control exception request details</p>
        </div>
        <div class="col-md-4 text-end">
            <button class="btn btn-success me-2" onclick="approveException()">
                <i class="fas fa-check"></i> Approve
            </button>
            <button class="btn btn-danger" onclick="rejectException()">
                <i class="fas fa-times"></i> Reject
            </button>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="fas fa-file-alt me-2"></i>Exception Details</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Control Reference</label>
                            <p class="fw-bold">ECC-2-1-1 - Access Control</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Risk Level</label>
                            <p><span class="badge bg-danger">High</span></p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Requested By</label>
                            <p>Ahmed Al-Rashid</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Request Date</label>
                            <p>Jan 5, 2026</p>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted small">Justification</label>
                        <p>Legacy system does not support modern authentication. Replacement project scheduled for Q2 2026. Requesting temporary exception with compensating controls.</p>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted small">Compensating Controls</label>
                        <p>Additional monitoring, restricted network access, enhanced logging, quarterly access reviews.</p>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Requested Duration</label>
                            <p>90 days (until Mar 31, 2026)</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Business Impact if Denied</label>
                            <p>Critical system unavailable, affecting 500+ users</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-comments me-2"></i>Review Comments</h5>
                </div>
                <div class="card-body">
                    <textarea class="form-control mb-3" rows="3" placeholder="Add approval/rejection comments..."></textarea>
                    <button class="btn btn-primary btn-sm"><i class="fas fa-paper-plane me-2"></i>Add Comment</button>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-warning text-dark">
                    <h6 class="mb-0"><i class="fas fa-clock me-2"></i>Status</h6>
                </div>
                <div class="card-body text-center">
                    <span class="badge bg-warning fs-5 mb-3">Pending Approval</span>
                    <p class="text-muted small">Awaiting CISO approval</p>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-user-shield me-2"></i>Approval Chain</h6>
                </div>
                <div class="list-group list-group-flush">
                    <div class="list-group-item d-flex justify-content-between">
                        <span>Manager</span>
                        <span class="badge bg-success">Approved</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between">
                        <span>Risk Officer</span>
                        <span class="badge bg-success">Approved</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between">
                        <span>CISO</span>
                        <span class="badge bg-warning">Pending</span>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="list-group list-group-flush">
                    <a href="@Url.Action("Exceptions", "WorkflowUI")" class="list-group-item list-group-item-action">
                        <i class="fas fa-arrow-left text-secondary me-2"></i> Back to Exceptions
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    function approveException() {
        if (confirm('Approve this exception request?')) {
            alert('Exception approved!');
            window.location.href = '@Url.Action("Exceptions", "WorkflowUI")';
        }
    }
    function rejectException() {
        var reason = prompt('Reason for rejection:');
        if (reason) {
            alert('Exception rejected.');
            window.location.href = '@Url.Action("Exceptions", "WorkflowUI")';
        }
    }
</script>
}
