@{
    ViewData["Title"] = "Approval Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var approvalId = ViewBag.ApprovalId ?? Context.Request.Query["id"].ToString();
}

<div class="container-fluid mt-4">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "WorkflowUI")">Workflows</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Approvals", "WorkflowUI")">Approvals</a></li>
            <li class="breadcrumb-item active">Detail</li>
        </ol>
    </nav>

    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="h3">
                <i class="fas fa-check-circle text-success me-2"></i>
                Approval Request
            </h1>
            <p class="text-muted">Review and approve pending request</p>
        </div>
        <div class="col-md-4 text-end">
            <button class="btn btn-success me-2" onclick="approveRequest()">
                <i class="fas fa-check"></i> Approve
            </button>
            <button class="btn btn-danger" onclick="rejectRequest()">
                <i class="fas fa-times"></i> Reject
            </button>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-file-alt me-2"></i>Request Details</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Request Type</label>
                            <p class="fw-bold">Evidence Approval</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Requested By</label>
                            <p class="fw-bold">Ahmed Al-Rashid</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Request Date</label>
                            <p>Jan 5, 2026</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Priority</label>
                            <p><span class="badge bg-warning">High</span></p>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted small">Description</label>
                        <p>Request for approval of Information Security Policy v2.0 evidence submission for NCA-ECC control ECC-1-1-1.</p>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-paperclip me-2"></i>Attachments</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div><i class="fas fa-file-pdf text-danger me-2"></i>InfoSec_Policy_v2.0.pdf</div>
                            <span class="badge bg-secondary">2.4 MB</span>
                        </a>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-comments me-2"></i>Comments</h5>
                </div>
                <div class="card-body">
                    <textarea class="form-control mb-3" rows="3" placeholder="Add approval comments (required for rejection)..."></textarea>
                    <button class="btn btn-primary btn-sm"><i class="fas fa-paper-plane me-2"></i>Add Comment</button>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-warning text-dark">
                    <h6 class="mb-0"><i class="fas fa-clock me-2"></i>Status</h6>
                </div>
                <div class="card-body text-center">
                    <span class="badge bg-warning fs-5 mb-3">Pending Approval</span>
                    <div class="text-muted small">Waiting for your decision</div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-history me-2"></i>Approval History</h6>
                </div>
                <div class="list-group list-group-flush">
                    <div class="list-group-item">
                        <div class="d-flex justify-content-between">
                            <small class="text-success"><i class="fas fa-check me-1"></i>Level 1 Approved</small>
                            <small class="text-muted">Jan 4</small>
                        </div>
                        <small class="text-muted">By: Sara Al-Mutairi</small>
                    </div>
                    <div class="list-group-item">
                        <div class="d-flex justify-content-between">
                            <small class="text-warning"><i class="fas fa-clock me-1"></i>Level 2 Pending</small>
                            <small class="text-muted">Now</small>
                        </div>
                        <small class="text-muted">Assigned to: You</small>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="list-group list-group-flush">
                    <a href="@Url.Action("Approvals", "WorkflowUI")" class="list-group-item list-group-item-action">
                        <i class="fas fa-arrow-left text-secondary me-2"></i> Back to Approvals
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    function approveRequest() {
        if (confirm('Are you sure you want to approve this request?')) {
            alert('Request approved successfully!');
            window.location.href = '@Url.Action("Approvals", "WorkflowUI")';
        }
    }
    function rejectRequest() {
        var reason = prompt('Please provide a reason for rejection:');
        if (reason) {
            alert('Request rejected.');
            window.location.href = '@Url.Action("Approvals", "WorkflowUI")';
        }
    }
</script>
}
