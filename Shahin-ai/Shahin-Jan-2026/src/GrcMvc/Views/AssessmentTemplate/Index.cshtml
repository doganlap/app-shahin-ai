@model List<GrcMvc.Models.Entities.Catalogs.TemplateCatalog>
@{
    ViewData["Title"] = "Assessment Templates";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1"><i class="fas fa-clipboard-list text-info me-2"></i>Assessment Templates</h1>
            <p class="text-muted">Pre-configured templates for compliance assessments</p>
        </div>
        <span class="badge bg-info fs-6">@ViewBag.TotalTemplates Templates</span>
    </div>

    <div class="row g-4">
        @foreach (var template in Model)
        {
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="rounded-circle bg-info bg-opacity-10 p-3 me-3">
                                <i class="fas fa-file-alt fa-lg text-info"></i>
                            </div>
                            <div>
                                <h5 class="card-title mb-0">@template.TemplateName</h5>
                                <small class="text-muted"><code>@template.TemplateCode</code></small>
                            </div>
                        </div>
                        <p class="card-text text-muted small">@(template.Description ?? "No description")</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge bg-secondary">@template.TemplateType</span>
                            <span class="text-muted small">v@template.Version</span>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <div class="d-flex gap-2">
                            <a href="@Url.Action("Details", new { id = template.Id })" class="btn btn-outline-info btn-sm flex-grow-1">
                                <i class="fas fa-eye me-1"></i>View
                            </a>
                            <a href="@Url.Action("CreateAssessment", new { templateId = template.Id })" class="btn btn-info btn-sm flex-grow-1">
                                <i class="fas fa-play me-1"></i>Start
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
        @if (!Model.Any())
        {
            <div class="col-12">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>No assessment templates available. Complete onboarding to generate templates.
                </div>
            </div>
        }
    </div>
</div>
