@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> L
@{
    ViewData["Title"] = "Benchmarking Report";
    Layout = "_Layout";

    var benchmarks = ViewBag.Benchmarks as IEnumerable<dynamic> ?? Enumerable.Empty<dynamic>();
    var ksaBenchmarks = ViewBag.KsaBenchmarks as IEnumerable<dynamic> ?? Enumerable.Empty<dynamic>();
    var maturityScore = ViewBag.MaturityScore as decimal? ?? 0m;
}

<div class="container-fluid">
    <!-- Header with Print Button -->
    <div class="row mb-4 d-print-none">
        <div class="col">
            <h2><i class="bi bi-file-earmark-bar-graph"></i> @L["ComprehensiveBenchmarkingReport"]</h2>
            <p class="text-muted">@L["GeneratedOn"]: @DateTime.UtcNow.ToString("MMMM dd, yyyy")</p>
        </div>
        <div class="col text-end">
            <a asp-action="Dashboard" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> @L["BackToDashboard"]
            </a>
            <button onclick="window.print()" class="btn btn-primary">
                <i class="bi bi-printer"></i> @L["Print"]
            </button>
            <button class="btn btn-success">
                <i class="bi bi-file-earmark-pdf"></i> @L["ExportPDF"]
            </button>
        </div>
    </div>

    <!-- Report Header (Print) -->
    <div class="row mb-4 d-none d-print-block">
        <div class="col-12 text-center">
            <h1>GRC Benchmarking Report</h1>
            <p class="text-muted">Organization Performance Analysis</p>
            <p><strong>Report Date:</strong> @DateTime.UtcNow.ToString("MMMM dd, yyyy")</p>
            <hr />
        </div>
    </div>

    <!-- Executive Summary -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-primary">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-file-text"></i> @L["ExecutiveSummary"]</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>@L["OverallPerformance"]</h5>
                            <div class="mb-3">
                                <label class="form-label small">@L["OverallMaturityScore"]</label>
                                <div class="progress" style="height: 30px;">
                                    <div class="progress-bar bg-info" style="width: @maturityScore%">
                                        <strong>@maturityScore.ToString("F0")%</strong>
                                    </div>
                                </div>
                            </div>
                            <ul class="list-unstyled">
                                <li><i class="bi bi-check-circle text-success"></i> <strong>@L["IndustryPosition"]:</strong> Top 35%</li>
                                <li><i class="bi bi-check-circle text-success"></i> <strong>@L["PeerRanking"]:</strong> 8 of 24</li>
                                <li><i class="bi bi-check-circle text-success"></i> <strong>@L["YearOverYearGrowth"]:</strong> +8%</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h5>@L["KeyFindings"]</h5>
                            <div class="alert alert-success mb-2">
                                <strong>@L["Strength"]:</strong> @L["GovernanceAndResilienceAboveIndustryAverage"]
                            </div>
                            <div class="alert alert-warning mb-2">
                                <strong>@L["Focus"]:</strong> @L["ExcellenceProgramsNeedImprovement"]
                            </div>
                            <div class="alert alert-info mb-0">
                                <strong>@L["Opportunity"]:</strong> @L["PursueAdditionalCertifications"]
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Detailed Metrics -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-bar-chart-line"></i> @L["DetailedMetrics"]</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>@L["GRCDimension"]</th>
                                    <th>@L["YourScore"]</th>
                                    <th>@L["IndustryAverage"]</th>
                                    <th>@L["PeerAverage"]</th>
                                    <th>@L["TopPerformers"]</th>
                                    <th>@L["Gap"]</th>
                                    <th>@L["Percentile"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><strong>@L["Governance"]</strong></td>
                                    <td><span class="badge bg-success">85%</span></td>
                                    <td>75%</td>
                                    <td>73%</td>
                                    <td>95%</td>
                                    <td class="text-success">+10%</td>
                                    <td>Top 25%</td>
                                </tr>
                                <tr>
                                    <td><strong>@L["RiskManagement"]</strong></td>
                                    <td><span class="badge bg-info">72%</span></td>
                                    <td>70%</td>
                                    <td>70%</td>
                                    <td>92%</td>
                                    <td class="text-success">+2%</td>
                                    <td>Top 45%</td>
                                </tr>
                                <tr>
                                    <td><strong>@L["Compliance"]</strong></td>
                                    <td><span class="badge bg-warning text-dark">68%</span></td>
                                    <td>72%</td>
                                    <td>70%</td>
                                    <td>90%</td>
                                    <td class="text-danger">-4%</td>
                                    <td>Top 55%</td>
                                </tr>
                                <tr>
                                    <td><strong>@L["Resilience"]</strong></td>
                                    <td><span class="badge bg-primary">78%</span></td>
                                    <td>68%</td>
                                    <td>70%</td>
                                    <td>88%</td>
                                    <td class="text-success">+10%</td>
                                    <td>Top 30%</td>
                                </tr>
                                <tr>
                                    <td><strong>@L["Excellence"]</strong></td>
                                    <td><span class="badge bg-danger">58%</span></td>
                                    <td>75%</td>
                                    <td>73%</td>
                                    <td>92%</td>
                                    <td class="text-danger">-17%</td>
                                    <td>Top 75%</td>
                                </tr>
                                <tr>
                                    <td><strong>@L["Sustainability"]</strong></td>
                                    <td><span class="badge bg-warning text-dark">65%</span></td>
                                    <td>70%</td>
                                    <td>73%</td>
                                    <td>90%</td>
                                    <td class="text-danger">-5%</td>
                                    <td>Top 60%</td>
                                </tr>
                                <tr class="table-primary">
                                    <td><strong>@L["Overall"]</strong></td>
                                    <td><span class="badge bg-info">@maturityScore.ToString("F0")%</span></td>
                                    <td>72%</td>
                                    <td>71%</td>
                                    <td>91%</td>
                                    <td class="text-success">+@((maturityScore - 72).ToString("F0"))%</td>
                                    <td>Top 35%</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Section -->
    <div class="row mb-4">
        <div class="col-lg-6 mb-3">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0">@L["RadarComparison"]</h6>
                </div>
                <div class="card-body">
                    <canvas id="radarChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-3">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0">@L["PerformanceGaps"]</h6>
                </div>
                <div class="card-body">
                    <canvas id="gapsChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Certifications Comparison -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-patch-check"></i> @L["CertificationsCoverage"]</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>@L["YourCertifications"]</h6>
                            <ul>
                                <li><i class="bi bi-check-circle text-success"></i> ISO 27001</li>
                                <li><i class="bi bi-check-circle text-success"></i> SOC 2 Type II</li>
                                <li><i class="bi bi-check-circle text-success"></i> GDPR Compliant</li>
                            </ul>
                            <p class="text-muted small">@L["Total"]: 3 @L["certifications"]</p>
                        </div>
                        <div class="col-md-6">
                            <h6>@L["IndustryStandard"]</h6>
                            <ul>
                                <li><i class="bi bi-circle text-muted"></i> ISO 27001 (85% have it)</li>
                                <li><i class="bi bi-circle text-muted"></i> SOC 2 (72% have it)</li>
                                <li><i class="bi bi-circle text-muted"></i> NCA ECC (68% have it)</li>
                                <li><i class="bi bi-circle text-muted"></i> PCI DSS (45% have it)</li>
                                <li><i class="bi bi-circle text-muted"></i> HIPAA (35% have it)</li>
                            </ul>
                            <p class="text-muted small">@L["TopPerformersAverage"]: 5.2 @L["certifications"]</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recommendations -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-success">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="bi bi-lightbulb"></i> @L["StrategicRecommendations"]</h4>
                </div>
                <div class="card-body">
                    <h5>@L["ShortTerm"] (0-6 @L["months"])</h5>
                    <ol>
                        <li class="mb-2">
                            <strong>@L["LaunchExcellenceProgram"]</strong>
                            <p class="text-muted small">@L["PrioritizeClosingThe17PointGapInExcellence"]</p>
                        </li>
                        <li class="mb-2">
                            <strong>@L["EnhanceComplianceProcesses"]</strong>
                            <p class="text-muted small">@L["AddressThe4PointGapInCompliance"]</p>
                        </li>
                        <li class="mb-2">
                            <strong>@L["InitiateNCAECCCertification"]</strong>
                            <p class="text-muted small">@L["68PercentOfPeersAlreadyCertified"]</p>
                        </li>
                    </ol>

                    <h5 class="mt-4">@L["MediumTerm"] (6-12 @L["months"])</h5>
                    <ol>
                        <li class="mb-2">
                            <strong>@L["ImplementContinuousMonitoring"]</strong>
                            <p class="text-muted small">@L["AutomateGRCProcessesLikeTopPerformers"]</p>
                        </li>
                        <li class="mb-2">
                            <strong>@L["DevelopSustainabilityFramework"]</strong>
                            <p class="text-muted small">@L["CloseThe5PointGapInSustainability"]</p>
                        </li>
                        <li class="mb-2">
                            <strong>@L["EnhanceRiskQuantification"]</strong>
                            <p class="text-muted small">@L["LearnFromTopPerformers20PointAdvantage"]</p>
                        </li>
                    </ol>

                    <h5 class="mt-4">@L["LongTerm"] (12+ @L["months"])</h5>
                    <ol>
                        <li class="mb-2">
                            <strong>@L["TargetTop25PercentileAcrossAllDimensions"]</strong>
                            <p class="text-muted small">@L["RequiresAverageImprovementOf12Points"]</p>
                        </li>
                        <li class="mb-2">
                            <strong>@L["PursueAdditionalCertifications"]</strong>
                            <p class="text-muted small">@L["TargetMinimum5CertificationsToMatchLeaders"]</p>
                        </li>
                        <li>
                            <strong>@L["EstablishCenterOfExcellence"]</strong>
                            <p class="text-muted small">@L["PositionAsIndustryLeaderInGRC"]</p>
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <!-- Methodology -->
    <div class="row mb-4 d-print-none">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="bi bi-info-circle"></i> @L["Methodology"]</h6>
                </div>
                <div class="card-body">
                    <p class="small">
                        @L["BenchmarkingMethodologyDescription"]
                    </p>
                    <ul class="small">
                        <li>@L["IndustryBenchmarksBasedOn1000PlusOrganizations"]</li>
                        <li>@L["PeerGroupSelectedBySizeIndustryGeography"]</li>
                        <li>@L["MaturityScoresCalculatedUsing6Dimensions"]</li>
                        <li>@L["DataUpdatedQuarterly"]</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div class="row">
        <div class="col-12 text-center text-muted small">
            <hr />
            <p>@L["ConfidentialBenchmarkingReport"] - @L["GeneratedBy"] Shahin GRC Platform</p>
            <p>@DateTime.UtcNow.ToString("MMMM dd, yyyy HH:mm") UTC</p>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Radar Chart
        const radarCtx = document.getElementById('radarChart').getContext('2d');
        new Chart(radarCtx, {
            type: 'radar',
            data: {
                labels: ['Governance', 'Risk', 'Compliance', 'Resilience', 'Excellence', 'Sustainability'],
                datasets: [{
                    label: 'Your Organization',
                    data: [85, 72, 68, 78, 58, 65],
                    borderColor: 'rgb(54, 162, 235)',
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderWidth: 2
                }, {
                    label: 'Industry Average',
                    data: [75, 70, 72, 68, 75, 70],
                    borderColor: 'rgb(255, 206, 86)',
                    backgroundColor: 'rgba(255, 206, 86, 0.2)',
                    borderWidth: 2,
                    borderDash: [5, 5]
                }, {
                    label: 'Top Performers',
                    data: [95, 92, 90, 88, 92, 90],
                    borderColor: 'rgb(75, 192, 192)',
                    backgroundColor: 'rgba(75, 192, 192, 0.1)',
                    borderWidth: 1,
                    borderDash: [10, 5]
                }]
            },
            options: {
                responsive: true,
                scales: {
                    r: {
                        min: 0,
                        max: 100,
                        ticks: { stepSize: 20 }
                    }
                }
            }
        });

        // Gaps Chart
        const gapsCtx = document.getElementById('gapsChart').getContext('2d');
        new Chart(gapsCtx, {
            type: 'bar',
            data: {
                labels: ['Governance', 'Risk', 'Compliance', 'Resilience', 'Excellence', 'Sustainability'],
                datasets: [{
                    label: 'Gap to Industry Avg',
                    data: [10, 2, -4, 10, -17, -5],
                    backgroundColor: function(context) {
                        const value = context.parsed.y;
                        return value >= 0 ? 'rgba(75, 192, 192, 0.8)' : 'rgba(255, 99, 132, 0.8)';
                    },
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                indexAxis: 'y',
                scales: {
                    x: {
                        ticks: {
                            callback: function(value) {
                                return value + '%';
                            }
                        }
                    }
                },
                plugins: {
                    legend: { display: false }
                }
            }
        });
    </script>
}

<style>
    @@media print {
        .d-print-none { display: none !important; }
        .d-print-block { display: block !important; }
        .card { page-break-inside: avoid; }
    }
</style>
