@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> L
@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Industry Benchmarking";
    Layout = "_Layout";

    var sectorCode = ViewBag.SectorCode as string;
    var sectorName = sectorCode switch
    {
        "FIN" => "Financial Services",
        "HLT" => "Healthcare",
        "MFG" => "Manufacturing",
        "EDU" => "Education",
        "GOV" => "Government",
        "RET" => "Retail",
        "TEC" => "Technology",
        _ => "All Industries"
    };
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-building"></i> @L["IndustryBenchmarking"]</h2>
            <p class="text-muted">@L["CompareGRCMaturityAgainstIndustryStandards"]</p>
        </div>
        <div class="col text-end">
            <a asp-action="Dashboard" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> @L["BackToDashboard"]
            </a>
            <a asp-action="Report" class="btn btn-primary">
                <i class="bi bi-file-earmark-bar-graph"></i> @L["GenerateReport"]
            </a>
        </div>
    </div>

    <!-- Sector Selection -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="bi bi-funnel"></i> @L["SelectIndustrySector"]</h6>
                </div>
                <div class="card-body">
                    <div class="btn-group" role="group">
                        <a asp-action="Industry" asp-route-sectorCode="" class="btn @(string.IsNullOrEmpty(sectorCode) ? "btn-primary" : "btn-outline-primary")">
                            @L["AllIndustries"]
                        </a>
                        <a asp-action="Industry" asp-route-sectorCode="FIN" class="btn @(sectorCode == "FIN" ? "btn-primary" : "btn-outline-primary")">
                            <i class="bi bi-bank"></i> @L["Financial"]
                        </a>
                        <a asp-action="Industry" asp-route-sectorCode="HLT" class="btn @(sectorCode == "HLT" ? "btn-primary" : "btn-outline-primary")">
                            <i class="bi bi-hospital"></i> @L["Healthcare"]
                        </a>
                        <a asp-action="Industry" asp-route-sectorCode="MFG" class="btn @(sectorCode == "MFG" ? "btn-primary" : "btn-outline-primary")">
                            <i class="bi bi-gear"></i> @L["Manufacturing"]
                        </a>
                        <a asp-action="Industry" asp-route-sectorCode="TEC" class="btn @(sectorCode == "TEC" ? "btn-primary" : "btn-outline-primary")">
                            <i class="bi bi-cpu"></i> @L["Technology"]
                        </a>
                        <a asp-action="Industry" asp-route-sectorCode="GOV" class="btn @(sectorCode == "GOV" ? "btn-primary" : "btn-outline-primary")">
                            <i class="bi bi-flag"></i> @L["Government"]
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Current Sector Overview -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-primary text-white shadow-sm">
                <div class="card-body">
                    <h4>@sectorName</h4>
                    <p class="mb-0">@L["BenchmarkingAgainst"] <strong>@Model.Count()</strong> @L["OrganizationsInThisSector"]</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Industry Statistics -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm border-primary">
                <div class="card-body text-center">
                    <h6 class="text-muted">@L["IndustryAverage"]</h6>
                    <h2 class="text-primary mb-0">75%</h2>
                    <small class="text-muted">@L["MaturityScore"]</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-success">
                <div class="card-body text-center">
                    <h6 class="text-muted">@L["TopPerformers"]</h6>
                    <h2 class="text-success mb-0">92%</h2>
                    <small class="text-muted">@L["Top10Percentile"]</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-info">
                <div class="card-body text-center">
                    <h6 class="text-muted">@L["YourScore"]</h6>
                    <h2 class="text-info mb-0">72%</h2>
                    <small class="text-muted">@L["CurrentRanking"]</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-warning">
                <div class="card-body text-center">
                    <h6 class="text-muted">@L["GapToLeaders"]</h6>
                    <h2 class="text-warning mb-0">20%</h2>
                    <small class="text-muted">@L["ImprovementNeeded"]</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Detailed Comparison -->
    <div class="row mb-4">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-bar-chart-line"></i> @L["GRCDimensionsComparison"]</h5>
                </div>
                <div class="card-body">
                    <canvas id="dimensionsChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="bi bi-award"></i> @L["IndustryBestPractices"]</h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-3">
                            <i class="bi bi-check-circle text-success"></i>
                            <strong>@L["RiskAutomation"]</strong>
                            <p class="small text-muted mb-0">@L["TopPerformersUseAutomatedRiskSystems"]</p>
                        </li>
                        <li class="mb-3">
                            <i class="bi bi-check-circle text-success"></i>
                            <strong>@L["ContinuousMonitoring"]</strong>
                            <p class="small text-muted mb-0">@L["RealTimeComplianceMonitoring"]</p>
                        </li>
                        <li class="mb-3">
                            <i class="bi bi-check-circle text-success"></i>
                            <strong>@L["IntegratedGRC"]</strong>
                            <p class="small text-muted mb-0">@L["UnifiedPlatformAcrossGRC"]</p>
                        </li>
                        <li>
                            <i class="bi bi-check-circle text-success"></i>
                            <strong>@L["MaturityPrograms"]</strong>
                            <p class="small text-muted mb-0">@L["StructuredImprovementRoadmaps"]</p>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Certification Prevalence -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-patch-check"></i> @L["CommonCertifications"]</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>@L["Certification"]</th>
                                    <th>@L["Prevalence"]</th>
                                    <th>@L["AverageTimeToCertify"]</th>
                                    <th>@L["YourStatus"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><i class="bi bi-shield-check"></i> ISO 27001</td>
                                    <td>
                                        <div class="progress" style="width: 150px; height: 20px;">
                                            <div class="progress-bar bg-success" style="width: 85%">85%</div>
                                        </div>
                                    </td>
                                    <td>12-18 months</td>
                                    <td><span class="badge bg-success">@L["Certified"]</span></td>
                                </tr>
                                <tr>
                                    <td><i class="bi bi-shield-lock"></i> SOC 2</td>
                                    <td>
                                        <div class="progress" style="width: 150px; height: 20px;">
                                            <div class="progress-bar bg-info" style="width: 72%">72%</div>
                                        </div>
                                    </td>
                                    <td>6-12 months</td>
                                    <td><span class="badge bg-warning text-dark">@L["InProgress"]</span></td>
                                </tr>
                                <tr>
                                    <td><i class="bi bi-flag"></i> NCA ECC</td>
                                    <td>
                                        <div class="progress" style="width: 150px; height: 20px;">
                                            <div class="progress-bar bg-primary" style="width: 68%">68%</div>
                                        </div>
                                    </td>
                                    <td>9-15 months</td>
                                    <td><span class="badge bg-secondary">@L["NotStarted"]</span></td>
                                </tr>
                                <tr>
                                    <td><i class="bi bi-credit-card"></i> PCI DSS</td>
                                    <td>
                                        <div class="progress" style="width: 150px; height: 20px;">
                                            <div class="progress-bar bg-warning" style="width: 45%">45%</div>
                                        </div>
                                    </td>
                                    <td>6-9 months</td>
                                    <td><span class="badge bg-secondary">@L["NotApplicable"]</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recommendations -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-primary">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-lightbulb"></i> @L["RecommendationsBasedOnIndustryBenchmarks"]</h5>
                </div>
                <div class="card-body">
                    <ol>
                        <li class="mb-2">
                            <strong>@L["PrioritizeExcellencePrograms"]</strong>
                            <p class="text-muted small mb-0">@L["YourExcellenceScoreIs17PointsBelowIndustryAverage"]</p>
                        </li>
                        <li class="mb-2">
                            <strong>@L["ImplementAutomatedRiskMonitoring"]</strong>
                            <p class="text-muted small mb-0">@L["75PercentOfTopPerformersUseAutomation"]</p>
                        </li>
                        <li class="mb-2">
                            <strong>@L["PursueSOC2Certification"]</strong>
                            <p class="text-muted small mb-0">@L["72PercentOfPeersAreCertified"]</p>
                        </li>
                        <li>
                            <strong>@L["EnhanceResilienceTesting"]</strong>
                            <p class="text-muted small mb-0">@L["IndustryLeadersPerformQuarterlyDrills"]</p>
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // GRC Dimensions Comparison Chart
        const ctx = document.getElementById('dimensionsChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Governance', 'Risk Management', 'Compliance', 'Resilience', 'Excellence', 'Sustainability'],
                datasets: [{
                    label: 'Your Organization',
                    data: [85, 72, 68, 78, 58, 65],
                    backgroundColor: 'rgba(54, 162, 235, 0.8)',
                    borderColor: 'rgb(54, 162, 235)',
                    borderWidth: 1
                }, {
                    label: 'Industry Average',
                    data: [75, 70, 72, 68, 75, 70],
                    backgroundColor: 'rgba(255, 206, 86, 0.8)',
                    borderColor: 'rgb(255, 206, 86)',
                    borderWidth: 1
                }, {
                    label: 'Top Performers',
                    data: [95, 92, 90, 88, 92, 90],
                    backgroundColor: 'rgba(75, 192, 192, 0.8)',
                    borderColor: 'rgb(75, 192, 192)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 100,
                        ticks: {
                            callback: function(value) {
                                return value + '%';
                            }
                        }
                    }
                },
                plugins: {
                    legend: {
                        position: 'bottom'
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return context.dataset.label + ': ' + context.parsed.y + '%';
                            }
                        }
                    }
                }
            }
        });
    </script>
}
