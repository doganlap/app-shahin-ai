@{
    ViewData["Title"] = "Remediation Manager - Shahin FIX";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="h3">
                <i class="fas fa-wrench text-danger"></i> Remediation Manager
                <small class="text-muted fs-6">Shahin FIX</small>
            </h1>
            <p class="text-muted">Track and manage remediation actions for compliance gaps</p>
        </div>
        <div class="col-md-4 text-end">
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addIssueModal">
                <i class="fas fa-plus"></i> New Issue
            </button>
        </div>
    </div>

    <!-- Stats -->
    <div class="row mb-4">
        <div class="col-md-2">
            <div class="card bg-danger text-white">
                <div class="card-body text-center py-3">
                    <h3 class="mb-0">8</h3>
                    <small>Critical</small>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-warning text-dark">
                <div class="card-body text-center py-3">
                    <h3 class="mb-0">15</h3>
                    <small>High</small>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-info text-white">
                <div class="card-body text-center py-3">
                    <h3 class="mb-0">23</h3>
                    <small>Medium</small>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-secondary text-white">
                <div class="card-body text-center py-3">
                    <h3 class="mb-0">12</h3>
                    <small>Low</small>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-success text-white">
                <div class="card-body text-center py-3">
                    <h3 class="mb-0">45</h3>
                    <small>Resolved</small>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card border-danger">
                <div class="card-body text-center py-3">
                    <h3 class="mb-0 text-danger">5</h3>
                    <small class="text-danger">Overdue</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Kanban Board View -->
    <div class="row mb-4">
        <!-- Open -->
        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-secondary text-white">
                    <i class="fas fa-inbox"></i> Open <span class="badge bg-white text-secondary float-end">12</span>
                </div>
                <div class="card-body p-2" style="max-height: 400px; overflow-y: auto;">
                    <div class="card mb-2 border-danger">
                        <div class="card-body p-2">
                            <span class="badge bg-danger mb-1">Critical</span>
                            <h6 class="mb-1">ISS-001</h6>
                            <small class="d-block text-truncate">Missing MFA for admin accounts</small>
                            <small class="text-muted">Due: Jan 10</small>
                        </div>
                    </div>
                    <div class="card mb-2 border-warning">
                        <div class="card-body p-2">
                            <span class="badge bg-warning text-dark mb-1">High</span>
                            <h6 class="mb-1">ISS-002</h6>
                            <small class="d-block text-truncate">Incomplete audit logs</small>
                            <small class="text-muted">Due: Jan 15</small>
                        </div>
                    </div>
                    <div class="card mb-2 border-info">
                        <div class="card-body p-2">
                            <span class="badge bg-info mb-1">Medium</span>
                            <h6 class="mb-1">ISS-003</h6>
                            <small class="d-block text-truncate">Security training incomplete</small>
                            <small class="text-muted">Due: Jan 20</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- In Progress -->
        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <i class="fas fa-spinner"></i> In Progress <span class="badge bg-white text-primary float-end">8</span>
                </div>
                <div class="card-body p-2" style="max-height: 400px; overflow-y: auto;">
                    <div class="card mb-2 border-danger">
                        <div class="card-body p-2">
                            <span class="badge bg-danger mb-1">Critical</span>
                            <h6 class="mb-1">ISS-004</h6>
                            <small class="d-block text-truncate">Encryption not enabled</small>
                            <small class="text-muted">Assignee: John D.</small>
                        </div>
                    </div>
                    <div class="card mb-2 border-warning">
                        <div class="card-body p-2">
                            <span class="badge bg-warning text-dark mb-1">High</span>
                            <h6 class="mb-1">ISS-005</h6>
                            <small class="d-block text-truncate">Access review process</small>
                            <small class="text-muted">Assignee: Sarah M.</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Review -->
        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-warning text-dark">
                    <i class="fas fa-search"></i> Review <span class="badge bg-white text-warning float-end">5</span>
                </div>
                <div class="card-body p-2" style="max-height: 400px; overflow-y: auto;">
                    <div class="card mb-2 border-info">
                        <div class="card-body p-2">
                            <span class="badge bg-info mb-1">Medium</span>
                            <h6 class="mb-1">ISS-006</h6>
                            <small class="d-block text-truncate">Policy update pending approval</small>
                            <small class="text-muted">Reviewer: Manager</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Closed -->
        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-success text-white">
                    <i class="fas fa-check-circle"></i> Closed <span class="badge bg-white text-success float-end">45</span>
                </div>
                <div class="card-body p-2" style="max-height: 400px; overflow-y: auto;">
                    <div class="card mb-2 border-success opacity-75">
                        <div class="card-body p-2">
                            <span class="badge bg-success mb-1">Resolved</span>
                            <h6 class="mb-1">ISS-007</h6>
                            <small class="d-block text-truncate">Firewall rules updated</small>
                            <small class="text-muted">Closed: Jan 3</small>
                        </div>
                    </div>
                    <div class="card mb-2 border-success opacity-75">
                        <div class="card-body p-2">
                            <span class="badge bg-success mb-1">Resolved</span>
                            <h6 class="mb-1">ISS-008</h6>
                            <small class="d-block text-truncate">Backup process documented</small>
                            <small class="text-muted">Closed: Jan 2</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Issues Table -->
    <div class="card shadow">
        <div class="card-header bg-white">
            <div class="row align-items-center">
                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="Search issues...">
                </div>
                <div class="col-md-2">
                    <select class="form-select">
                        <option value="">All Severity</option>
                        <option>Critical</option>
                        <option>High</option>
                        <option>Medium</option>
                        <option>Low</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <select class="form-select">
                        <option value="">All Status</option>
                        <option>Open</option>
                        <option>In Progress</option>
                        <option>Review</option>
                        <option>Closed</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <select class="form-select">
                        <option value="">All Assignees</option>
                        <option>John D.</option>
                        <option>Sarah M.</option>
                        <option>Mike R.</option>
                    </select>
                </div>
                <div class="col-md-2 text-end">
                    <button class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-download"></i> Export
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Issue ID</th>
                        <th>Title</th>
                        <th>Control</th>
                        <th>Severity</th>
                        <th>Status</th>
                        <th>Assignee</th>
                        <th>Due Date</th>
                        <th>SLA</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><a href="#" class="fw-bold">ISS-001</a></td>
                        <td>Missing MFA for admin accounts</td>
                        <td><span class="badge bg-info">ECC-2.2.2</span></td>
                        <td><span class="badge bg-danger">Critical</span></td>
                        <td><span class="badge bg-secondary">Open</span></td>
                        <td>John D.</td>
                        <td>Jan 10, 2026</td>
                        <td><span class="badge bg-success">On Track</span></td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary"><i class="fas fa-eye"></i></button>
                        </td>
                    </tr>
                    <tr class="table-danger">
                        <td><a href="#" class="fw-bold">ISS-002</a></td>
                        <td>Incomplete audit logs</td>
                        <td><span class="badge bg-info">ECC-3.1.1</span></td>
                        <td><span class="badge bg-warning text-dark">High</span></td>
                        <td><span class="badge bg-secondary">Open</span></td>
                        <td>Sarah M.</td>
                        <td>Jan 5, 2026</td>
                        <td><span class="badge bg-danger">Overdue</span></td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary"><i class="fas fa-eye"></i></button>
                        </td>
                    </tr>
                    <tr>
                        <td><a href="#" class="fw-bold">ISS-004</a></td>
                        <td>Encryption not enabled</td>
                        <td><span class="badge bg-success">PDPL-8</span></td>
                        <td><span class="badge bg-danger">Critical</span></td>
                        <td><span class="badge bg-primary">In Progress</span></td>
                        <td>John D.</td>
                        <td>Jan 12, 2026</td>
                        <td><span class="badge bg-warning text-dark">At Risk</span></td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary"><i class="fas fa-eye"></i></button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add Issue Modal -->
<div class="modal fade" id="addIssueModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-exclamation-triangle"></i> Create Issue</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row g-3">
                    <div class="col-12">
                        <label class="form-label">Title <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" placeholder="Issue title">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Related Control</label>
                        <select class="form-select">
                            <option>Select control...</option>
                            <option>ECC-2.2.2 - Access Control</option>
                            <option>ECC-3.1.1 - Logging</option>
                            <option>PDPL-8 - Data Encryption</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Severity <span class="text-danger">*</span></label>
                        <select class="form-select">
                            <option value="Critical">Critical</option>
                            <option value="High">High</option>
                            <option value="Medium" selected>Medium</option>
                            <option value="Low">Low</option>
                        </select>
                    </div>
                    <div class="col-12">
                        <label class="form-label">Description <span class="text-danger">*</span></label>
                        <textarea class="form-control" rows="3" placeholder="Describe the issue..."></textarea>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Assignee</label>
                        <select class="form-select">
                            <option>Unassigned</option>
                            <option>John D.</option>
                            <option>Sarah M.</option>
                            <option>Mike R.</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Due Date</label>
                        <input type="date" class="form-control">
                    </div>
                    <div class="col-12">
                        <label class="form-label">Remediation Plan</label>
                        <textarea class="form-control" rows="2" placeholder="Steps to resolve..."></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">
                    <i class="fas fa-save"></i> Create Issue
                </button>
            </div>
        </div>
    </div>
</div>
