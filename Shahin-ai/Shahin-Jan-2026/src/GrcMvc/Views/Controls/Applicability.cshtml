@{
    ViewData["Title"] = "Applicability Manager - Shahin APPLY";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="h3">
                <i class="fas fa-filter text-success"></i> Applicability Manager
                <small class="text-muted fs-6">Shahin APPLY</small>
            </h1>
            <p class="text-muted">Define which controls apply to your organization based on business context</p>
        </div>
        <div class="col-md-4 text-end">
            <button class="btn btn-outline-primary me-2" onclick="runScopeEngine()">
                <i class="fas fa-cogs"></i> Run Scope Engine
            </button>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addRuleModal">
                <i class="fas fa-plus"></i> Add Rule
            </button>
        </div>
    </div>

    <!-- Organization Context -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="fas fa-building"></i> Organization Context</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-2">
                    <label class="form-label small text-muted">Industry</label>
                    <p class="fw-bold mb-0">Financial Services</p>
                </div>
                <div class="col-md-2">
                    <label class="form-label small text-muted">Sector</label>
                    <p class="fw-bold mb-0">Banking</p>
                </div>
                <div class="col-md-2">
                    <label class="form-label small text-muted">Size</label>
                    <p class="fw-bold mb-0">Large (500+ employees)</p>
                </div>
                <div class="col-md-2">
                    <label class="form-label small text-muted">Data Type</label>
                    <p class="fw-bold mb-0">Personal + Financial</p>
                </div>
                <div class="col-md-2">
                    <label class="form-label small text-muted">Hosting</label>
                    <p class="fw-bold mb-0">Hybrid Cloud</p>
                </div>
                <div class="col-md-2">
                    <label class="form-label small text-muted">Regulators</label>
                    <p class="fw-bold mb-0">NCA, SAMA, SDAIA</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Scope Stats -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center py-3">
                    <h3 class="mb-0">246</h3>
                    <small>Applicable Controls</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-secondary text-white">
                <div class="card-body text-center py-3">
                    <h3 class="mb-0">42</h3>
                    <small>Not Applicable</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body text-center py-3">
                    <h3 class="mb-0">15</h3>
                    <small>Pending Review</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body text-center py-3">
                    <h3 class="mb-0">12</h3>
                    <small>Active Rules</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Applicability Rules -->
    <div class="card shadow mb-4">
        <div class="card-header bg-white">
            <h5 class="mb-0"><i class="fas fa-code-branch"></i> Applicability Rules</h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Rule</th>
                        <th>Condition</th>
                        <th>Applies To</th>
                        <th>Result</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><strong>SAMA-FIN-001</strong></td>
                        <td><code>sector == 'Banking' OR sector == 'Insurance'</code></td>
                        <td>SAMA CSF (all controls)</td>
                        <td><span class="badge bg-success">Applicable</span></td>
                        <td><span class="badge bg-primary">Active</span></td>
                        <td>
                            <button class="btn btn-sm btn-outline-secondary"><i class="fas fa-edit"></i></button>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>PDPL-DATA-001</strong></td>
                        <td><code>processesPersonalData == true</code></td>
                        <td>PDPL (all requirements)</td>
                        <td><span class="badge bg-success">Applicable</span></td>
                        <td><span class="badge bg-primary">Active</span></td>
                        <td>
                            <button class="btn btn-sm btn-outline-secondary"><i class="fas fa-edit"></i></button>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>NCA-ICS-001</strong></td>
                        <td><code>hasIndustrialSystems == true</code></td>
                        <td>NCA CSCC (ICS controls)</td>
                        <td><span class="badge bg-secondary">Not Applicable</span></td>
                        <td><span class="badge bg-primary">Active</span></td>
                        <td>
                            <button class="btn btn-sm btn-outline-secondary"><i class="fas fa-edit"></i></button>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>CLOUD-001</strong></td>
                        <td><code>hostingModel CONTAINS 'Cloud'</code></td>
                        <td>CST Cloud Regulations</td>
                        <td><span class="badge bg-success">Applicable</span></td>
                        <td><span class="badge bg-primary">Active</span></td>
                        <td>
                            <button class="btn btn-sm btn-outline-secondary"><i class="fas fa-edit"></i></button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Control Applicability List -->
    <div class="card shadow">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-list-check"></i> Control Applicability</h5>
            <div class="btn-group btn-group-sm">
                <button class="btn btn-outline-success active">Applicable</button>
                <button class="btn btn-outline-secondary">Not Applicable</button>
                <button class="btn btn-outline-warning">Pending</button>
            </div>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Control ID</th>
                        <th>Control Name</th>
                        <th>Framework</th>
                        <th>Applicability</th>
                        <th>Reason</th>
                        <th>Override</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><code>ECC-1.1.1</code></td>
                        <td>Cybersecurity Strategy</td>
                        <td><span class="badge bg-info">NCA ECC</span></td>
                        <td><span class="badge bg-success">Applicable</span></td>
                        <td>Base requirement for all organizations</td>
                        <td>
                            <select class="form-select form-select-sm" style="width: 120px;">
                                <option>Auto</option>
                                <option>Force Yes</option>
                                <option>Force No</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td><code>SAMA-1.1</code></td>
                        <td>Security Program</td>
                        <td><span class="badge bg-warning text-dark">SAMA CSF</span></td>
                        <td><span class="badge bg-success">Applicable</span></td>
                        <td>Rule: SAMA-FIN-001 (Banking sector)</td>
                        <td>
                            <select class="form-select form-select-sm" style="width: 120px;">
                                <option>Auto</option>
                                <option>Force Yes</option>
                                <option>Force No</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td><code>CSCC-ICS-01</code></td>
                        <td>Industrial Control System Security</td>
                        <td><span class="badge bg-danger">NCA CSCC</span></td>
                        <td><span class="badge bg-secondary">Not Applicable</span></td>
                        <td>Rule: NCA-ICS-001 (No ICS systems)</td>
                        <td>
                            <select class="form-select form-select-sm" style="width: 120px;">
                                <option>Auto</option>
                                <option>Force Yes</option>
                                <option>Force No</option>
                            </select>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add Rule Modal -->
<div class="modal fade" id="addRuleModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-code-branch"></i> Add Applicability Rule</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Rule ID <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" placeholder="e.g., CUSTOM-001">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Rule Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" placeholder="Descriptive name">
                    </div>
                    <div class="col-12">
                        <label class="form-label">Condition <span class="text-danger">*</span></label>
                        <textarea class="form-control font-monospace" rows="2" placeholder="sector == 'Healthcare' AND processesPersonalData == true"></textarea>
                        <small class="text-muted">Use field names from organization profile</small>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Applies To</label>
                        <select class="form-select">
                            <option>All controls in framework</option>
                            <option>Specific controls</option>
                            <option>Controls matching pattern</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Framework</label>
                        <select class="form-select">
                            <option>NCA ECC</option>
                            <option>SAMA CSF</option>
                            <option>PDPL</option>
                            <option>NCA CSCC</option>
                        </select>
                    </div>
                    <div class="col-12">
                        <label class="form-label">Result When True</label>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="result" value="applicable" checked>
                            <label class="form-check-label">Mark Applicable</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="result" value="notApplicable">
                            <label class="form-check-label">Mark Not Applicable</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-outline-primary">
                    <i class="fas fa-play"></i> Test Rule
                </button>
                <button type="button" class="btn btn-primary">
                    <i class="fas fa-save"></i> Save Rule
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    function runScopeEngine() {
        if (confirm('Run the scope engine to recalculate control applicability based on your organization profile and rules?')) {
            alert('Scope engine executed. 246 controls marked applicable, 42 not applicable.');
        }
    }
</script>
