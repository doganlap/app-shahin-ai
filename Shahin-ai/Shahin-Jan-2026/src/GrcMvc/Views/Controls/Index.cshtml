@{
    ViewData["Title"] = "Controls Library - Shahin MAP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="h3">
                <i class="fas fa-shield-alt text-primary"></i> Controls Library
                <small class="text-muted fs-6">Shahin MAP</small>
            </h1>
            <p class="text-muted">Manage your control library across all frameworks and baselines</p>
        </div>
        <div class="col-md-4 text-end">
            <button class="btn btn-outline-secondary me-2" onclick="exportControls()">
                <i class="fas fa-download"></i> Export
            </button>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addControlModal">
                <i class="fas fa-plus"></i> Add Control
            </button>
        </div>
    </div>

    <!-- Filters -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label small text-muted">Framework</label>
                    <select class="form-select" id="filterFramework" onchange="filterControls()">
                        <option value="">All Frameworks</option>
                        <option value="NCA-ECC">NCA ECC 2:2024</option>
                        <option value="SAMA-CSF">SAMA CSF</option>
                        <option value="PDPL">PDPL</option>
                        <option value="NCA-CSCC">NCA CSCC</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label small text-muted">Domain</label>
                    <select class="form-select" id="filterDomain" onchange="filterControls()">
                        <option value="">All Domains</option>
                        <option value="GOV">Governance</option>
                        <option value="DEF">Defense</option>
                        <option value="RES">Resilience</option>
                        <option value="TP">Third Party</option>
                        <option value="IC">Industrial Control</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label small text-muted">Status</label>
                    <select class="form-select" id="filterStatus" onchange="filterControls()">
                        <option value="">All Status</option>
                        <option value="NotAssessed">Not Assessed</option>
                        <option value="Compliant">Compliant</option>
                        <option value="Partial">Partially Compliant</option>
                        <option value="NonCompliant">Non-Compliant</option>
                        <option value="NotApplicable">Not Applicable</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label small text-muted">Search</label>
                    <input type="text" class="form-control" id="searchControl" placeholder="Search controls..." onkeyup="filterControls()">
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Row -->
    <div class="row mb-4">
        <div class="col-md-2">
            <div class="card bg-primary text-white">
                <div class="card-body text-center py-3">
                    <h3 class="mb-0" id="totalControls">0</h3>
                    <small>Total Controls</small>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-success text-white">
                <div class="card-body text-center py-3">
                    <h3 class="mb-0" id="compliantCount">0</h3>
                    <small>Compliant</small>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-warning text-dark">
                <div class="card-body text-center py-3">
                    <h3 class="mb-0" id="partialCount">0</h3>
                    <small>Partial</small>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-danger text-white">
                <div class="card-body text-center py-3">
                    <h3 class="mb-0" id="nonCompliantCount">0</h3>
                    <small>Non-Compliant</small>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-secondary text-white">
                <div class="card-body text-center py-3">
                    <h3 class="mb-0" id="notAssessedCount">0</h3>
                    <small>Not Assessed</small>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-info text-white">
                <div class="card-body text-center py-3">
                    <h3 class="mb-0" id="complianceRate">0%</h3>
                    <small>Compliance Rate</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Controls Table -->
    <div class="card shadow">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0" id="controlsTable">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 120px;">Control ID</th>
                            <th>Control Name</th>
                            <th style="width: 120px;">Framework</th>
                            <th style="width: 100px;">Domain</th>
                            <th style="width: 100px;">Status</th>
                            <th style="width: 100px;">Maturity</th>
                            <th style="width: 120px;">Last Assessed</th>
                            <th style="width: 100px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="controlsTableBody">
                        <tr>
                            <td colspan="8" class="text-center py-5">
                                <i class="fas fa-spinner fa-spin fa-2x text-muted"></i>
                                <p class="text-muted mt-2">Loading controls...</p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-white">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <span class="text-muted">Showing <span id="showingCount">0</span> of <span id="totalCount">0</span> controls</span>
                </div>
                <nav>
                    <ul class="pagination pagination-sm mb-0" id="pagination"></ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<!-- Add Control Modal -->
<div class="modal fade" id="addControlModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-plus"></i> Add New Control</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="addControlForm">
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Control ID <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="controlCode" required placeholder="e.g., AC-1.1">
                        </div>
                        <div class="col-md-8">
                            <label class="form-label">Control Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="controlName" required placeholder="Control name">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Framework <span class="text-danger">*</span></label>
                            <select class="form-select" name="frameworkId" required>
                                <option value="">Select Framework</option>
                                <option value="1">NCA ECC 2:2024</option>
                                <option value="2">SAMA CSF</option>
                                <option value="3">PDPL</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Domain <span class="text-danger">*</span></label>
                            <select class="form-select" name="domain" required>
                                <option value="">Select Domain</option>
                                <option value="GOV">Governance</option>
                                <option value="DEF">Defense</option>
                                <option value="RES">Resilience</option>
                                <option value="TP">Third Party</option>
                            </select>
                        </div>
                        <div class="col-12">
                            <label class="form-label">Description <span class="text-danger">*</span></label>
                            <textarea class="form-control" name="description" rows="3" required placeholder="Control description..."></textarea>
                        </div>
                        <div class="col-12">
                            <label class="form-label">Implementation Guidance</label>
                            <textarea class="form-control" name="guidance" rows="2" placeholder="How to implement this control..."></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Save Control
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    let allControls = [];
    let currentPage = 1;
    const pageSize = 20;

    document.addEventListener('DOMContentLoaded', function() {
        loadControls();
    });

    async function loadControls() {
        try {
            const response = await fetch('/api/controls?page=1&size=500');
            const result = await response.json();

            if (result.success && result.data && result.data.items) {
                allControls = result.data.items.map(c => ({
                    id: c.id,
                    controlCode: c.code || c.controlCode || c.name?.substring(0, 10),
                    controlName: c.name || c.controlName,
                    framework: c.frameworkCode || c.framework || 'N/A',
                    domain: c.category || c.domain || 'N/A',
                    status: c.complianceStatus || c.status || 'NotAssessed',
                    maturity: c.maturityLevel || c.maturity || null,
                    lastAssessed: c.lastAssessedDate || c.lastAssessed || null
                }));
            } else {
                // Fallback to empty if API returns no data
                allControls = [];
            }

            updateStats();
            renderControls();
        } catch (error) {
            console.error('Error loading controls:', error);
            // Show error in table
            document.getElementById('controlsTableBody').innerHTML =
                '<tr><td colspan="8" class="text-center py-4 text-danger">Error loading controls. Please try again.</td></tr>';
        }
    }

    function updateStats() {
        const total = allControls.length;
        const compliant = allControls.filter(c => c.status === 'Compliant').length;
        const partial = allControls.filter(c => c.status === 'Partial').length;
        const nonCompliant = allControls.filter(c => c.status === 'NonCompliant').length;
        const notAssessed = allControls.filter(c => c.status === 'NotAssessed').length;
        const assessed = total - notAssessed;
        const rate = assessed > 0 ? Math.round((compliant / assessed) * 100) : 0;

        document.getElementById('totalControls').textContent = total;
        document.getElementById('compliantCount').textContent = compliant;
        document.getElementById('partialCount').textContent = partial;
        document.getElementById('nonCompliantCount').textContent = nonCompliant;
        document.getElementById('notAssessedCount').textContent = notAssessed;
        document.getElementById('complianceRate').textContent = rate + '%';
    }

    function filterControls() {
        currentPage = 1;
        renderControls();
    }

    function renderControls() {
        const framework = document.getElementById('filterFramework').value;
        const domain = document.getElementById('filterDomain').value;
        const status = document.getElementById('filterStatus').value;
        const search = document.getElementById('searchControl').value.toLowerCase();

        let filtered = allControls.filter(c => {
            if (framework && c.framework !== framework) return false;
            if (domain && c.domain !== domain) return false;
            if (status && c.status !== status) return false;
            if (search && !c.controlCode.toLowerCase().includes(search) && !c.controlName.toLowerCase().includes(search)) return false;
            return true;
        });

        const start = (currentPage - 1) * pageSize;
        const paged = filtered.slice(start, start + pageSize);

        document.getElementById('showingCount').textContent = paged.length;
        document.getElementById('totalCount').textContent = filtered.length;

        const tbody = document.getElementById('controlsTableBody');
        if (paged.length === 0) {
            tbody.innerHTML = '<tr><td colspan="8" class="text-center py-4 text-muted">No controls found</td></tr>';
            return;
        }

        tbody.innerHTML = paged.map(c => `
            <tr>
                <td><a href="/Control/Details/${c.id}" class="fw-bold text-primary">${c.controlCode}</a></td>
                <td>${c.controlName}</td>
                <td><span class="badge bg-secondary">${c.framework}</span></td>
                <td>${c.domain}</td>
                <td>${getStatusBadge(c.status)}</td>
                <td>${c.maturity || '<span class="text-muted">-</span>'}</td>
                <td>${c.lastAssessed ? formatDate(c.lastAssessed) : '<span class="text-muted">Never</span>'}</td>
                <td>
                    <div class="btn-group btn-group-sm">
                        <a href="/Controls/Assess?id=${c.id}" class="btn btn-outline-primary" title="Assess">
                            <i class="fas fa-clipboard-check"></i>
                        </a>
                        <a href="/Control/Edit/${c.id}" class="btn btn-outline-secondary" title="Edit">
                            <i class="fas fa-edit"></i>
                        </a>
                    </div>
                </td>
            </tr>
        `).join('');

        renderPagination(filtered.length);
    }

    function getStatusBadge(status) {
        const badges = {
            'Compliant': '<span class="badge bg-success">Compliant</span>',
            'Partial': '<span class="badge bg-warning text-dark">Partial</span>',
            'NonCompliant': '<span class="badge bg-danger">Non-Compliant</span>',
            'NotAssessed': '<span class="badge bg-secondary">Not Assessed</span>',
            'NotApplicable': '<span class="badge bg-dark">N/A</span>'
        };
        return badges[status] || status;
    }

    function formatDate(dateStr) {
        return new Date(dateStr).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
    }

    function renderPagination(total) {
        const totalPages = Math.ceil(total / pageSize);
        const pagination = document.getElementById('pagination');

        if (totalPages <= 1) {
            pagination.innerHTML = '';
            return;
        }

        let html = '';
        for (let i = 1; i <= totalPages; i++) {
            html += `<li class="page-item ${i === currentPage ? 'active' : ''}">
                <a class="page-link" href="#" onclick="goToPage(${i})">${i}</a>
            </li>`;
        }
        pagination.innerHTML = html;
    }

    function goToPage(page) {
        currentPage = page;
        renderControls();
    }

    function exportControls() {
        alert('Export functionality - will generate CSV/Excel file');
    }

    document.getElementById('addControlForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        const formData = new FormData(this);
        alert('Control saved! (API integration pending)');
        bootstrap.Modal.getInstance(document.getElementById('addControlModal')).hide();
        this.reset();
    });
</script>
