@{
    ViewData["Title"] = "Test Manager - Shahin PROVE";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="h3">
                <i class="fas fa-vial text-info"></i> Test Manager
                <small class="text-muted fs-6">Shahin PROVE</small>
            </h1>
            <p class="text-muted">Define and execute control testing procedures</p>
        </div>
        <div class="col-md-4 text-end">
            <button class="btn btn-outline-success me-2" onclick="runAllTests()">
                <i class="fas fa-play"></i> Run All Tests
            </button>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addTestModal">
                <i class="fas fa-plus"></i> Add Test
            </button>
        </div>
    </div>

    <!-- Test Stats -->
    <div class="row mb-4">
        <div class="col-md-2">
            <div class="card bg-primary text-white">
                <div class="card-body text-center py-3">
                    <h3 class="mb-0">156</h3>
                    <small>Total Tests</small>
                </div>
            </div>
        </div>
        <div class="col-md-2">
