                <div class="card-body text-center py-3">
                    <h3 class="mb-0">98</h3>
                    <small>Passed</small>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-danger text-white">
                <div class="card-body text-center py-3">
                    <h3 class="mb-0">12</h3>
                    <small>Failed</small>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-warning text-dark">
                <div class="card-body text-center py-3">
                    <h3 class="mb-0">24</h3>
                    <small>Pending</small>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-secondary text-white">
                <div class="card-body text-center py-3">
                    <h3 class="mb-0">22</h3>
                    <small>Not Run</small>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-info text-white">
                <div class="card-body text-center py-3">
                    <h3 class="mb-0">89%</h3>
                    <small>Pass Rate</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Test List -->
    <div class="card shadow">
        <div class="card-header bg-white">
            <div class="row align-items-center">
                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="Search tests...">
                </div>
                <div class="col-md-3">
                    <select class="form-select">
                        <option value="">All Controls</option>
                        <option>Access Control</option>
                        <option>Governance</option>
                        <option>Data Protection</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-select">
                        <option value="">All Status</option>
                        <option value="passed">Passed</option>
                        <option value="failed">Failed</option>
                        <option value="pending">Pending</option>
                        <option value="notRun">Not Run</option>
                    </select>
                </div>
                <div class="col-md-2 text-end">
                    <span class="badge bg-primary">156 tests</span>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 100px;">Test ID</th>
                        <th>Test Name</th>
                        <th style="width: 120px;">Control</th>
                        <th style="width: 80px;">Type</th>
                        <th style="width: 80px;">Status</th>
                        <th style="width: 100px;">Last Run</th>
                        <th style="width: 120px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
