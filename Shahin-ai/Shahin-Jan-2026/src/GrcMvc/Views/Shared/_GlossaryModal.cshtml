@* Glossary Modal - Shows term definitions *@
@using Microsoft.AspNetCore.Mvc.Localization
@using GrcMvc.Resources
@inject IHtmlLocalizer<SharedResource> L

<div class="modal fade" id="glossaryModal" tabindex="-1" aria-labelledby="glossaryModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title" id="glossaryModalLabel">
                    <i class="bi bi-book me-2"></i>
                    <span id="glossaryTermTitle">@L["Shared_Glossary_Term"]</span>
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="@L["Close"]"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <strong>@L["Shared_Glossary_Definition"]:</strong>
                    <p id="glossaryTermDefinition" class="mt-2"></p>
                </div>
                <div class="mb-3">
                    <strong>@L["Shared_Glossary_Category"]:</strong>
                    <span id="glossaryTermCategory" class="badge bg-info"></span>
                </div>
                <div id="glossaryTermExamples" style="display: none;">
                    <strong>@L["Shared_Glossary_Examples"]:</strong>
                    <ul id="glossaryTermExamplesList"></ul>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@L["Close"]</button>
                <a asp-controller="Help" asp-action="Glossary" class="btn btn-info text-white">
                    @L["Shared_Glossary_ViewFull"]
                </a>
            </div>
        </div>
    </div>
</div>
