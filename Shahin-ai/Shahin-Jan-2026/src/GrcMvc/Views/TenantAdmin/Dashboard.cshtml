@model GrcMvc.Models.ViewModels.TenantAdminDashboardViewModel
@{
    ViewData["Title"] = "Tenant Administration";
    Layout = "_Layout";
    var tenantSlug = ViewBag.TenantSlug as string;
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">@Model.Tenant.OrganizationName</h1>
            <p class="text-muted mb-0">Tenant Administration</p>
        </div>
        <div>
            <a href="@Url.Action("InviteUser", new { tenantSlug })" class="btn btn-primary">
                <i class="bi bi-person-plus"></i> Invite User
            </a>
        </div>
    </div>

    <!-- Stats -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-50">Total Users</h6>
                            <h2 class="mb-0">@Model.TotalUsers</h2>
                        </div>
                        <i class="bi bi-people fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-50">Active Users</h6>
                            <h2 class="mb-0">@Model.ActiveUsers</h2>
                        </div>
                        <i class="bi bi-person-check fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-dark-50">Pending Invites</h6>
                            <h2 class="mb-0">@Model.PendingInvites</h2>
                        </div>
                        <i class="bi bi-envelope fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-50">Assessments</h6>
                            <h2 class="mb-0">@Model.TotalAssessments</h2>
                        </div>
                        <i class="bi bi-clipboard-check fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row g-4 mb-4">
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0"><i class="bi bi-lightning"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row g-2">
                        <div class="col-6">
                            <a href="@Url.Action("Users", new { tenantSlug })" class="btn btn-outline-primary w-100">
                                <i class="bi bi-people"></i> Manage Users
                            </a>
                        </div>
                        <div class="col-6">
                            <a href="@Url.Action("Roles", new { tenantSlug })" class="btn btn-outline-secondary w-100">
                                <i class="bi bi-shield"></i> View Roles
                            </a>
                        </div>
                        <div class="col-6">
                            <a href="@Url.Action("Settings", new { tenantSlug })" class="btn btn-outline-info w-100">
                                <i class="bi bi-gear"></i> Settings
                            </a>
                        </div>
                        <div class="col-6">
                            <a href="@Url.Action("AuditLogs", new { tenantSlug })" class="btn btn-outline-dark w-100">
                                <i class="bi bi-journal-text"></i> Audit Logs
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Subscription</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-5">Plan</dt>
                        <dd class="col-7">
                            <span class="badge bg-@(Model.Tenant.SubscriptionTier == "Enterprise" ? "dark" : Model.Tenant.SubscriptionTier == "Professional" ? "primary" : "secondary")">
                                @Model.Tenant.SubscriptionTier
                            </span>
                        </dd>
                        <dt class="col-5">Status</dt>
                        <dd class="col-7">
                            <span class="badge bg-@(Model.Tenant.IsActive ? "success" : "danger")">
                                @(Model.Tenant.IsActive ? "Active" : "Inactive")
                            </span>
                        </dd>
                        <dt class="col-5">Started</dt>
                        <dd class="col-7">@Model.Tenant.SubscriptionStartDate.ToString("MMM dd, yyyy")</dd>
                        @if (Model.Tenant.SubscriptionEndDate.HasValue)
                        {
                            <dt class="col-5">Expires</dt>
                            <dd class="col-7">@Model.Tenant.SubscriptionEndDate.Value.ToString("MMM dd, yyyy")</dd>
                        }
                    </dl>
                    <a href="@Url.Action("Subscription", new { tenantSlug })" class="btn btn-sm btn-outline-primary mt-2">
                        View Details
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Users & Activity -->
    <div class="row g-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-transparent d-flex justify-content-between">
                    <h5 class="mb-0"><i class="bi bi-people"></i> Recent Users</h5>
                    <a href="@Url.Action("Users", new { tenantSlug })" class="btn btn-sm btn-link">View All</a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>User</th>
                                    <th>Role</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var tu in Model.RecentUsers)
                                {
                                    <tr>
                                        <td>
                                            @tu.User?.Email
                                            <br><small class="text-muted">@tu.User?.FullName</small>
                                        </td>
                                        <td><span class="badge bg-secondary">@tu.RoleCode</span></td>
                                        <td>
                                            <span class="badge bg-@(tu.Status == "Active" ? "success" : tu.Status == "Pending" ? "warning" : "danger")">
                                                @tu.Status
                                            </span>
                                        </td>
                                    </tr>
                                }
                                @if (!Model.RecentUsers.Any())
                                {
                                    <tr>
                                        <td colspan="3" class="text-center py-4 text-muted">No users yet</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-transparent d-flex justify-content-between">
                    <h5 class="mb-0"><i class="bi bi-activity"></i> Recent Activity</h5>
                    <a href="@Url.Action("AuditLogs", new { tenantSlug })" class="btn btn-sm btn-link">View All</a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive" style="max-height: 300px; overflow-y: auto;">
                        <table class="table table-hover table-sm mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Event</th>
                                    <th>Time</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var evt in Model.RecentActivity)
                                {
                                    <tr>
                                        <td>
                                            <span class="badge bg-secondary">@evt.EventType</span>
                                            <br><small class="text-muted">@(evt.Description ?? evt.Action)</small>
                                        </td>
                                        <td><small>@evt.EventTimestamp.ToString("HH:mm MMM dd")</small></td>
                                    </tr>
                                }
                                @if (!Model.RecentActivity.Any())
                                {
                                    <tr>
                                        <td colspan="2" class="text-center py-4 text-muted">No activity yet</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
