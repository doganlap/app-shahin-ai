@model List<GrcMvc.Models.Entities.TenantUser>
@{
    ViewData["Title"] = "User Management";
    Layout = "_Layout";
    var tenantSlug = ViewBag.TenantSlug as string;
    var tenant = ViewBag.Tenant as GrcMvc.Models.Entities.Tenant;
    var statusFilter = ViewBag.StatusFilter as string;
    var searchFilter = ViewBag.SearchFilter as string;
}

<div class="container-fluid py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-1">
            <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", new { tenantSlug })">@tenant?.OrganizationName</a></li>
            <li class="breadcrumb-item active">Users</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">User Management</h1>
        <a href="@Url.Action("InviteUser", new { tenantSlug })" class="btn btn-primary">
            <i class="bi bi-person-plus"></i> Invite User
        </a>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Status</label>
                    <select name="status" class="form-select">
                        <option value="">All Statuses</option>
                        <option value="Active" selected="@(statusFilter == "Active")">Active</option>
                        <option value="Pending" selected="@(statusFilter == "Pending")">Pending</option>
                        <option value="Inactive" selected="@(statusFilter == "Inactive")">Inactive</option>
                    </select>
                </div>
                <div class="col-md-7">
                    <label class="form-label">Search</label>
                    <input type="text" name="search" class="form-control" placeholder="Email or name..." value="@searchFilter">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-outline-primary w-100">
                        <i class="bi bi-search"></i> Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>User</th>
                            <th>Role</th>
                            <th>Title</th>
                            <th>Status</th>
                            <th>Joined</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tu in Model)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("UserDetails", new { tenantSlug, userId = tu.UserId })" class="text-decoration-none">
                                        @tu.User?.Email
                                    </a>
                                    <br><small class="text-muted">@tu.User?.FullName</small>
                                </td>
                                <td><span class="badge bg-primary">@tu.RoleCode</span></td>
                                <td><small>@tu.TitleCode</small></td>
                                <td>
                                    <span class="badge bg-@(tu.Status == "Active" ? "success" : tu.Status == "Pending" ? "warning" : "danger")">
                                        @tu.Status
                                    </span>
                                </td>
                                <td>@tu.CreatedAt.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="@Url.Action("UserDetails", new { tenantSlug, userId = tu.UserId })" class="btn btn-outline-primary" title="View">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (tu.Status == "Active")
                                        {
                                            <form asp-action="DeactivateUser" asp-route-tenantSlug="@tenantSlug" asp-route-userId="@tu.UserId" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-warning" title="Deactivate">
                                                    <i class="bi bi-pause-circle"></i>
                                                </button>
                                            </form>
                                        }
                                        else if (tu.Status == "Inactive")
                                        {
                                            <form asp-action="ActivateUser" asp-route-tenantSlug="@tenantSlug" asp-route-userId="@tu.UserId" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-success" title="Activate">
                                                    <i class="bi bi-play-circle"></i>
                                                </button>
                                            </form>
                                        }
                                        else if (tu.Status == "Pending")
                                        {
                                            <form asp-action="ResendInvite" asp-route-tenantSlug="@tenantSlug" asp-route-userId="@tu.UserId" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-info" title="Resend Invite">
                                                    <i class="bi bi-envelope"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted">
                                    <i class="bi bi-people fs-1 d-block mb-2"></i>
                                    No users found
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer text-muted">
            Showing @Model.Count users
        </div>
    </div>
</div>
