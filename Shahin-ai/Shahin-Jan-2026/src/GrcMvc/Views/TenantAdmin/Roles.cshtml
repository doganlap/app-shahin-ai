@{
    ViewData["Title"] = "Roles & Permissions";
    Layout = "_Layout";
    var tenantSlug = ViewBag.TenantSlug as string;
    var tenant = ViewBag.Tenant as GrcMvc.Models.Entities.Tenant;
    var roles = ViewBag.Roles as List<GrcMvc.Models.Entities.Catalogs.RoleCatalog>;
    var roleAssignments = ViewBag.RoleAssignments as dynamic;
}

<div class="container-fluid py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-1">
            <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", new { tenantSlug })">@tenant?.OrganizationName</a></li>
            <li class="breadcrumb-item active">Roles</li>
        </ol>
    </nav>
    <h1 class="h3 mb-4">Roles & Permissions</h1>

    <div class="row g-4">
        @if (roles != null)
        {
            @foreach (var role in roles)
            {
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="bi bi-shield-check text-primary"></i> @role.RoleName
                            </h5>
                            <span class="badge bg-secondary">@role.RoleCode</span>
                        </div>
                        <div class="card-body">
                            <p class="text-muted small">@role.Description</p>

                            <h6 class="mt-3">Users with this role:</h6>
                            <div class="d-flex flex-wrap gap-1">
                                @{
                                    var assignment = (roleAssignments as IEnumerable<dynamic>)?.FirstOrDefault(r => r.RoleCode == role.RoleCode);
                                    if (assignment != null && assignment.Users != null)
                                    {
                                        foreach (var tu in assignment.Users)
                                        {
                                            <a href="@Url.Action("UserDetails", new { tenantSlug, userId = tu.UserId })"
                                               class="badge bg-light text-dark text-decoration-none">
                                                @tu.User?.Email
                                            </a>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted small">No users assigned</span>
                                    }
                                }
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <small class="text-muted">
                                @{
                                    var count = (roleAssignments as IEnumerable<dynamic>)?.FirstOrDefault(r => r.RoleCode == role.RoleCode)?.Count ?? 0;
                                }
                                @count user(s) assigned
                            </small>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <div class="card mt-4">
        <div class="card-header bg-transparent">
            <h5 class="mb-0"><i class="bi bi-info-circle"></i> Role Descriptions</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Role</th>
                            <th>Code</th>
                            <th>Description</th>
                            <th>Level</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (roles != null)
                        {
                            @foreach (var role in roles.OrderBy(r => r.DisplayOrder))
                            {
                                <tr>
                                    <td><strong>@role.RoleName</strong></td>
                                    <td><code>@role.RoleCode</code></td>
                                    <td>@role.Description</td>
                                    <td>
                                        <span class="badge bg-secondary">
                                            Order @role.DisplayOrder
                                        </span>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
