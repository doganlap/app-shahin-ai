@model GrcMvc.Models.Entities.Tenant
@{
    ViewData["Title"] = "Tenant Settings";
    Layout = "_Layout";
    var tenantSlug = ViewBag.TenantSlug as string;
}

<div class="container-fluid py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-1">
            <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", new { tenantSlug })">@Model.OrganizationName</a></li>
            <li class="breadcrumb-item active">Settings</li>
        </ol>
    </nav>
    <h1 class="h3 mb-4">Tenant Settings</h1>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0"><i class="bi bi-building"></i> Organization Details</h5>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateSettings" asp-route-tenantSlug="@tenantSlug" method="post">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label class="form-label">Organization Name</label>
                            <input type="text" name="OrganizationName" class="form-control" value="@Model.OrganizationName" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Admin Email</label>
                            <input type="email" name="AdminEmail" class="form-control" value="@Model.AdminEmail" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Tenant Slug</label>
                            <input type="text" class="form-control" value="@Model.TenantSlug" readonly disabled>
                            <small class="text-muted">Cannot be changed</small>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Save Changes
                        </button>
                    </form>
                </div>
            </div>

            <div class="card">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0"><i class="bi bi-shield-check"></i> Security Settings</h5>
                </div>
                <div class="card-body">
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="mfaRequired" disabled checked>
                        <label class="form-check-label" for="mfaRequired">
                            Require MFA for all users
                        </label>
                        <small class="text-muted d-block">Contact support to enable this feature</small>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="ssoEnabled" disabled>
                        <label class="form-check-label" for="ssoEnabled">
                            Enable SSO (Single Sign-On)
                        </label>
                        <small class="text-muted d-block">Available on Enterprise plan</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Tenant Info</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-6">Status</dt>
                        <dd class="col-6">
                            <span class="badge bg-@(Model.IsActive ? "success" : "danger")">
                                @(Model.IsActive ? "Active" : "Inactive")
                            </span>
                        </dd>

                        <dt class="col-6">Created</dt>
                        <dd class="col-6">@Model.CreatedAt.ToString("MMM dd, yyyy")</dd>

                        <dt class="col-6">Activated</dt>
                        <dd class="col-6">@(Model.ActivatedAt?.ToString("MMM dd, yyyy") ?? "Not yet")</dd>
                    </dl>
                </div>
            </div>

            <div class="card">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0"><i class="bi bi-credit-card"></i> Subscription</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-6">Plan</dt>
                        <dd class="col-6">
                            <span class="badge bg-primary">@Model.SubscriptionTier</span>
                        </dd>

                        <dt class="col-6">Started</dt>
                        <dd class="col-6">@Model.SubscriptionStartDate.ToString("MMM dd, yyyy")</dd>

                        @if (Model.SubscriptionEndDate.HasValue)
                        {
                            <dt class="col-6">Expires</dt>
                            <dd class="col-6">@Model.SubscriptionEndDate.Value.ToString("MMM dd, yyyy")</dd>
                        }
                    </dl>
                    <a href="@Url.Action("Subscription", new { tenantSlug })" class="btn btn-sm btn-outline-primary mt-2">
                        Manage Subscription
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
