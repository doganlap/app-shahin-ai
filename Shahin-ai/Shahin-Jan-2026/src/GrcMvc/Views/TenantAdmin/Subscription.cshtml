@model GrcMvc.Models.Entities.Tenant
@{
    ViewData["Title"] = "Subscription";
    Layout = "_Layout";
    var tenantSlug = ViewBag.TenantSlug as string;
}

<div class="container-fluid py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-1">
            <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", new { tenantSlug })">@Model.OrganizationName</a></li>
            <li class="breadcrumb-item active">Subscription</li>
        </ol>
    </nav>
    <h1 class="h3 mb-4">Subscription</h1>

    <div class="row g-4">
        <!-- Current Plan -->
        <div class="col-md-4">
            <div class="card h-100 border-primary">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-star-fill"></i> Current Plan</h5>
                </div>
                <div class="card-body text-center">
                    <h2 class="display-5 fw-bold text-primary">@Model.SubscriptionTier</h2>
                    <p class="text-muted">@(Model.BypassPayment ? "Courtesy Account" : "Active Subscription")</p>

                    <hr>

                    <dl class="text-start">
                        <dt>Status</dt>
                        <dd>
                            <span class="badge bg-@(Model.IsActive ? "success" : "danger") fs-6">
                                @(Model.IsActive ? "Active" : "Inactive")
                            </span>
                        </dd>

                        <dt>Started</dt>
                        <dd>@Model.SubscriptionStartDate.ToString("MMMM dd, yyyy")</dd>

                        @if (Model.SubscriptionEndDate.HasValue)
                        {
                            <dt>Expires</dt>
                            <dd>
                                @Model.SubscriptionEndDate.Value.ToString("MMMM dd, yyyy")
                                @if (Model.SubscriptionEndDate.Value < DateTime.UtcNow.AddDays(30))
                                {
                                    <span class="badge bg-warning">Expiring Soon</span>
                                }
                            </dd>
                        }
                        else
                        {
                            <dt>Expires</dt>
                            <dd><span class="badge bg-info">Never</span></dd>
                        }
                    </dl>
                </div>
            </div>
        </div>

        <!-- Plan Features -->
        <div class="col-md-8">
            <div class="card h-100">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0"><i class="bi bi-check-circle"></i> Plan Features</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-primary">Included Features</h6>
                            <ul class="list-unstyled">
                                @if (Model.SubscriptionTier == "MVP")
                                {
                                    <li><i class="bi bi-check-circle-fill text-success"></i> Up to 5 users</li>
                                    <li><i class="bi bi-check-circle-fill text-success"></i> Basic assessments</li>
                                    <li><i class="bi bi-check-circle-fill text-success"></i> Evidence management</li>
                                    <li><i class="bi bi-check-circle-fill text-success"></i> Standard reports</li>
                                    <li><i class="bi bi-x-circle-fill text-muted"></i> Advanced workflows</li>
                                    <li><i class="bi bi-x-circle-fill text-muted"></i> API access</li>
                                }
                                else if (Model.SubscriptionTier == "Professional")
                                {
                                    <li><i class="bi bi-check-circle-fill text-success"></i> Up to 25 users</li>
                                    <li><i class="bi bi-check-circle-fill text-success"></i> All assessments</li>
                                    <li><i class="bi bi-check-circle-fill text-success"></i> Evidence management</li>
                                    <li><i class="bi bi-check-circle-fill text-success"></i> Advanced reports</li>
                                    <li><i class="bi bi-check-circle-fill text-success"></i> Advanced workflows</li>
                                    <li><i class="bi bi-x-circle-fill text-muted"></i> API access</li>
                                }
                                else
                                {
                                    <li><i class="bi bi-check-circle-fill text-success"></i> Unlimited users</li>
                                    <li><i class="bi bi-check-circle-fill text-success"></i> All assessments</li>
                                    <li><i class="bi bi-check-circle-fill text-success"></i> Evidence management</li>
                                    <li><i class="bi bi-check-circle-fill text-success"></i> Custom reports</li>
                                    <li><i class="bi bi-check-circle-fill text-success"></i> Advanced workflows</li>
                                    <li><i class="bi bi-check-circle-fill text-success"></i> Full API access</li>
                                    <li><i class="bi bi-check-circle-fill text-success"></i> SSO integration</li>
                                    <li><i class="bi bi-check-circle-fill text-success"></i> Priority support</li>
                                }
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-primary">Usage</h6>
                            @{
                                var userCount = ViewBag.UserCount ?? 0;
                                var userLimit = ViewBag.UserLimit ?? 10;
                                var userPercent = userLimit > 0 ? Math.Min(100, (int)((double)userCount / userLimit * 100)) : 0;

                                var assessmentCount = ViewBag.AssessmentCount ?? 0;
                                var assessmentLimit = ViewBag.AssessmentLimit ?? 20;
                                var assessmentPercent = assessmentLimit > 0 ? Math.Min(100, (int)((double)assessmentCount / assessmentLimit * 100)) : 0;

                                var storageUsed = ViewBag.StorageUsedGb ?? 0.0;
                                var storageLimit = ViewBag.StorageLimitGb ?? 10;
                                var storagePercent = storageLimit > 0 ? Math.Min(100, (int)((double)storageUsed / storageLimit * 100)) : 0;
                            }
                            <div class="mb-3">
                                <label class="form-label">Users</label>
                                <div class="progress" style="height: 20px;">
                                    <div class="progress-bar @(userPercent >= 90 ? "bg-danger" : userPercent >= 70 ? "bg-warning" : "")" role="progressbar" style="width: @(userPercent)%;">@userCount / @userLimit</div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Assessments</label>
                                <div class="progress" style="height: 20px;">
                                    <div class="progress-bar bg-success @(assessmentPercent >= 90 ? "bg-danger" : assessmentPercent >= 70 ? "bg-warning" : "")" role="progressbar" style="width: @(assessmentPercent)%;">@assessmentCount / @assessmentLimit</div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Storage</label>
                                <div class="progress" style="height: 20px;">
                                    <div class="progress-bar bg-info @(storagePercent >= 90 ? "bg-danger" : storagePercent >= 70 ? "bg-warning" : "")" role="progressbar" style="width: @(storagePercent)%;">@storageUsed GB / @storageLimit GB</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Upgrade Options -->
    <div class="card mt-4">
        <div class="card-header bg-transparent">
            <h5 class="mb-0"><i class="bi bi-arrow-up-circle"></i> Upgrade Your Plan</h5>
        </div>
        <div class="card-body">
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100 @(Model.SubscriptionTier == "MVP" ? "border-primary" : "")">
                        <div class="card-header text-center">
                            <h5>MVP</h5>
                            <h3 class="mb-0">Free</h3>
                        </div>
                        <div class="card-body">
                            <ul class="list-unstyled small">
                                <li><i class="bi bi-check"></i> 5 users</li>
                                <li><i class="bi bi-check"></i> Basic features</li>
                            </ul>
                        </div>
                        <div class="card-footer text-center">
                            @if (Model.SubscriptionTier == "MVP")
                            {
                                <button class="btn btn-secondary" disabled>Current Plan</button>
                            }
                            else
                            {
                                <button class="btn btn-outline-secondary" disabled>Downgrade</button>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 @(Model.SubscriptionTier == "Professional" ? "border-primary" : "")">
                        <div class="card-header text-center bg-primary text-white">
                            <h5>Professional</h5>
                            <h3 class="mb-0">$499/mo</h3>
                        </div>
                        <div class="card-body">
                            <ul class="list-unstyled small">
                                <li><i class="bi bi-check"></i> 25 users</li>
                                <li><i class="bi bi-check"></i> Advanced workflows</li>
                                <li><i class="bi bi-check"></i> Priority support</li>
                            </ul>
                        </div>
                        <div class="card-footer text-center">
                            @if (Model.SubscriptionTier == "Professional")
                            {
                                <button class="btn btn-secondary" disabled>Current Plan</button>
                            }
                            else
                            {
                                <form asp-action="RequestUpgrade" asp-route-tenantSlug="@ViewBag.TenantSlug" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="targetTier" value="Professional" />
                                    <button type="submit" class="btn btn-primary">Upgrade</button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 @(Model.SubscriptionTier == "Enterprise" ? "border-primary" : "")">
                        <div class="card-header text-center bg-dark text-white">
                            <h5>Enterprise</h5>
                            <h3 class="mb-0">Custom</h3>
                        </div>
                        <div class="card-body">
                            <ul class="list-unstyled small">
                                <li><i class="bi bi-check"></i> Unlimited users</li>
                                <li><i class="bi bi-check"></i> SSO & API</li>
                                <li><i class="bi bi-check"></i> Dedicated support</li>
                            </ul>
                        </div>
                        <div class="card-footer text-center">
                            @if (Model.SubscriptionTier == "Enterprise")
                            {
                                <button class="btn btn-secondary" disabled>Current Plan</button>
                            }
                            else
                            {
                                <form asp-action="RequestUpgrade" asp-route-tenantSlug="@ViewBag.TenantSlug" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="targetTier" value="Enterprise" />
                                    <button type="submit" class="btn btn-dark">Contact Sales</button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
