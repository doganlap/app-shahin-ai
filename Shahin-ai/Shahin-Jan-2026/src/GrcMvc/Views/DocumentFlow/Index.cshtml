@model GrcMvc.Controllers.DocumentFlowDashboard
@{
    ViewData["Title"] = "Document Flow";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1"><i class="fas fa-file-upload text-success me-2"></i>Document Flow</h1>
            <p class="text-muted">Upload, review, and approve evidence documents</p>
        </div>
        <a href="@Url.Action("Upload")" class="btn btn-success">
            <i class="fas fa-upload me-2"></i>Upload Document
        </a>
    </div>

    <!-- Stats -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm text-center border-start border-warning border-4">
                <div class="card-body">
                    <div class="h2 mb-0 text-warning">@Model.PendingReview</div>
                    <small class="text-muted">Pending Review</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm text-center border-start border-success border-4">
                <div class="card-body">
                    <div class="h2 mb-0 text-success">@Model.Approved</div>
                    <small class="text-muted">Approved</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm text-center border-start border-danger border-4">
                <div class="card-body">
                    <div class="h2 mb-0 text-danger">@Model.Rejected</div>
                    <small class="text-muted">Rejected</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Documents Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-transparent">
            <i class="fas fa-list me-2"></i>Recent Documents
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Title</th>
                            <th>Process</th>
                            <th>Period</th>
                            <th>Type</th>
                            <th>Status</th>
                            <th>Uploaded</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var doc in Model.RecentDocuments)
                        {
                            <tr>
                                <td>@doc.Title</td>
                                <td>@doc.Process</td>
                                <td>@doc.Period</td>
                                <td><span class="badge bg-secondary">@doc.EvidenceType</span></td>
                                <td>
                                    @switch (doc.Status)
                                    {
                                        case "Approved":
                                            <span class="badge bg-success">Approved</span>
                                            break;
                                        case "Rejected":
                                            <span class="badge bg-danger">Rejected</span>
                                            break;
                                        default:
                                            <span class="badge bg-warning text-dark">@doc.Status</span>
                                            break;
                                    }
                                </td>
                                <td>@doc.CapturedAt.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @if (doc.Status == "Collected")
                                    {
                                        <a href="@Url.Action("Review", new { id = doc.Id })" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-search"></i> Review
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">â€”</span>
                                    }
                                </td>
                            </tr>
                        }
                        @if (!Model.RecentDocuments.Any())
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted py-4">
                                    <i class="fas fa-inbox fa-2x mb-2 d-block"></i>
                                    No documents yet. <a href="@Url.Action("Upload")">Upload your first document</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
