@model GrcMvc.Models.Entities.AutoTaggedEvidence
@{
    ViewData["Title"] = "Review Document";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h2 mb-1"><i class="fas fa-search text-primary me-2"></i>Review Document</h1>
                    <p class="text-muted">Approve or reject evidence document</p>
                </div>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back
                </a>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-transparent">
                            <i class="fas fa-file-alt me-2"></i>Document Details
                        </div>
                        <div class="card-body">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="150">Title</th>
                                    <td><strong>@Model.Title</strong></td>
                                </tr>
                                <tr>
                                    <th>Process</th>
                                    <td>@Model.Process</td>
                                </tr>
                                <tr>
                                    <th>System</th>
                                    <td>@Model.System</td>
                                </tr>
                                <tr>
                                    <th>Period</th>
                                    <td>@Model.Period (@Model.PeriodStart.ToString("MMM dd") - @Model.PeriodEnd.ToString("MMM dd, yyyy"))</td>
                                </tr>
                                <tr>
                                    <th>Evidence Type</th>
                                    <td><span class="badge bg-info">@Model.EvidenceType</span></td>
                                </tr>
                                <tr>
                                    <th>Source</th>
                                    <td>@Model.Source</td>
                                </tr>
                                <tr>
                                    <th>Uploaded</th>
                                    <td>@Model.CapturedAt.ToString("MMM dd, yyyy HH:mm")</td>
                                </tr>
                                <tr>
                                    <th>Uploaded By</th>
                                    <td>@Model.CapturedBy</td>
                                </tr>
                                <tr>
                                    <th>File Hash</th>
                                    <td><code class="small">@Model.FileHash</code></td>
                                </tr>
                                <tr>
                                    <th>Status</th>
                                    <td><span class="badge bg-warning text-dark">@Model.Status</span></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-transparent">
                            <i class="fas fa-gavel me-2"></i>Review Actions
                        </div>
                        <div class="card-body">
                            <form asp-action="Approve" asp-route-id="@Model.Id" method="post" class="mb-3">
                                <div class="mb-3">
                                    <label class="form-label">Approval Notes (Optional)</label>
                                    <textarea name="notes" class="form-control" rows="2" placeholder="Any notes..."></textarea>
                                </div>
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="fas fa-check me-2"></i>Approve
                                </button>
                            </form>

                            <hr>

                            <form asp-action="Reject" asp-route-id="@Model.Id" method="post">
                                <div class="mb-3">
                                    <label class="form-label"><span class="text-danger">*</span> Rejection Reason</label>
                                    <textarea name="reason" class="form-control" rows="2" required placeholder="Reason for rejection..."></textarea>
                                </div>
                                <button type="submit" class="btn btn-danger w-100">
                                    <i class="fas fa-times me-2"></i>Reject
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
