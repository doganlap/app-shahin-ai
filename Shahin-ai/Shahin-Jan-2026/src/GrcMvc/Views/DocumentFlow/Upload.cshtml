@{
    ViewData["Title"] = "Upload Document";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h2 mb-1"><i class="fas fa-upload text-success me-2"></i>Upload Document</h1>
                    <p class="text-muted">Upload evidence for compliance verification</p>
                </div>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back
                </a>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Upload" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label"><span class="text-danger">*</span> Document Title</label>
                            <input type="text" name="Title" class="form-control" required placeholder="e.g., Access Review Report Q4 2025">
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Process Area</label>
                                <select name="Process" class="form-select">
                                    <option value="IAM">Identity & Access Management</option>
                                    <option value="LOG">Logging & Monitoring</option>
                                    <option value="VUL">Vulnerability Management</option>
                                    <option value="CHG">Change Management</option>
                                    <option value="INC">Incident Response</option>
                                    <option value="BCP">Business Continuity</option>
                                    <option value="TPR">Third-Party Risk</option>
                                    <option value="GOV">Governance</option>
                                    <option value="General">General</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">System</label>
                                <input type="text" name="System" class="form-control" placeholder="e.g., Active Directory, SAP">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Period</label>
                                <input type="text" name="Period" class="form-control" placeholder="e.g., 2025-Q4">
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Period Start</label>
                                <input type="date" name="PeriodStart" class="form-control">
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Period End</label>
                                <input type="date" name="PeriodEnd" class="form-control">
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Evidence Type</label>
                            <select name="EvidenceType" class="form-select">
                                <option value="Document">Document</option>
                                <option value="Screenshot">Screenshot</option>
                                <option value="Report">Report</option>
                                <option value="Config">Configuration</option>
                                <option value="Log">Log File</option>
                                <option value="Policy">Policy</option>
                                <option value="Procedure">Procedure</option>
                            </select>
                        </div>

                        <div class="mb-4">
                            <label class="form-label"><span class="text-danger">*</span> File</label>
                            <input type="file" name="File" class="form-control" required>
                            <small class="text-muted">Supported: PDF, DOC, DOCX, XLS, XLSX, PNG, JPG, CSV</small>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-upload me-2"></i>Upload Document
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
