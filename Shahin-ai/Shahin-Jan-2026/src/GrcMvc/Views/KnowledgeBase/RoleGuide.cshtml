@model GrcMvc.Controllers.RoleGuideViewModel
@{
    ViewData["Title"] = $"Role Guide: {Model.RoleName}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/KnowledgeBase">Knowledge Base</a></li>
                    <li class="breadcrumb-item"><a href="/RoleProfile/Roles">Role Guides</a></li>
                    <li class="breadcrumb-item active">@Model.RoleName</li>
                </ol>
            </nav>
            <h1 class="h2 mb-2">
                <i class="fas fa-user-tag text-primary me-2"></i>
                @Model.RoleName
            </h1>
            <h3 class="text-muted mb-3" dir="rtl">@Model.RoleNameAr</h3>
            <p class="lead">@Model.Description</p>
        </div>
    </div>

    <div class="row">
        <!-- Responsibilities -->
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-tasks me-2"></i>Key Responsibilities</h5>
                </div>
                <div class="card-body">
                    @if (Model.Responsibilities.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var responsibility in Model.Responsibilities)
                            {
                                <li class="list-group-item">
                                    <i class="fas fa-check text-success me-2"></i>
                                    @responsibility
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">Responsibilities are defined based on your organization's setup.</p>
                    }
                </div>
            </div>
        </div>

        <!-- Permissions -->
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-key me-2"></i>Permissions</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        @foreach (var permission in Model.Permissions)
                        {
                            <li class="list-group-item">
                                <code>@permission</code>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Workflow Participation -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-project-diagram me-2"></i>Workflow Participation</h5>
                </div>
                <div class="card-body">
                    @if (Model.WorkflowParticipation.Any())
                    {
                        <div class="row">
                            @foreach (var workflow in Model.WorkflowParticipation)
                            {
                                <div class="col-md-4 mb-2">
                                    <a href="/Workflow" class="btn btn-outline-info btn-block w-100">
                                        <i class="fas fa-sitemap me-2"></i>@workflow
                                    </a>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">This role participates in various compliance and assessment workflows.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Related Guides -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-book me-2"></i>Related Guides</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var guide in Model.RelatedGuides)
                        {
                            <div class="col-md-4 mb-2">
                                <a href="@guide.Url" class="card border h-100 text-decoration-none">
                                    <div class="card-body">
                                        <i class="fas fa-file-alt text-primary me-2"></i>
                                        @guide.Title
                                    </div>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
