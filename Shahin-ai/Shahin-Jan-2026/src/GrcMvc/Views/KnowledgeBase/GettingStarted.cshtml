@model GrcMvc.Controllers.GettingStartedViewModel
@{
    ViewData["Title"] = "Getting Started";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/KnowledgeBase">Knowledge Base</a></li>
                    <li class="breadcrumb-item active">Getting Started</li>
                </ol>
            </nav>
            <h1 class="h2 mb-2">
                <i class="fas fa-rocket text-primary me-2"></i>
                Getting Started Guide
            </h1>
            <p class="text-muted">Welcome to Shahin GRC! Follow these steps to get started.</p>
        </div>
    </div>

    <!-- Progress Steps -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-list-ol me-2"></i>Onboarding Steps</h5>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        @foreach (var step in Model.Steps)
                        {
                            <div class="timeline-item mb-4">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <span class="badge rounded-pill bg-primary fs-5 px-3 py-2">@step.Order</span>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h5 class="mb-1">@step.Title</h5>
                                        <p class="text-muted mb-0">@step.Description</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Start Video -->
    <div class="row mb-5">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center py-5">
                    <i class="fas fa-play-circle fa-4x text-primary mb-3"></i>
                    <h4>Quick Start Video</h4>
                    <p class="text-muted">Watch a 5-minute overview of the platform</p>
                    <button class="btn btn-outline-primary" disabled>
                        <i class="fas fa-play me-2"></i>Coming Soon
                    </button>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center py-5">
                    <i class="fas fa-download fa-4x text-success mb-3"></i>
                    <h4>Quick Reference Guide</h4>
                    <p class="text-muted">Download the PDF quick reference guide</p>
                    <button class="btn btn-outline-success" disabled>
                        <i class="fas fa-download me-2"></i>Coming Soon
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- FAQs -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-question-circle me-2"></i>Frequently Asked Questions</h5>
                </div>
                <div class="card-body">
                    <div class="accordion" id="faqAccordion">
                        @for (int i = 0; i < Model.FAQs.Count; i++)
                        {
                            var faq = Model.FAQs[i];
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="faq-heading-@i">
                                    <button class="accordion-button @(i > 0 ? "collapsed" : "")" type="button" 
                                            data-bs-toggle="collapse" data-bs-target="#faq-collapse-@i">
                                        @faq.Question
                                    </button>
                                </h2>
                                <div id="faq-collapse-@i" class="accordion-collapse collapse @(i == 0 ? "show" : "")" 
                                     data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        @faq.Answer
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
