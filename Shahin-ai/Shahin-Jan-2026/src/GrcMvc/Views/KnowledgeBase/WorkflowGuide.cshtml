@model GrcMvc.Controllers.WorkflowGuideViewModel
@{
    ViewData["Title"] = $"Workflow Guide: {Model.WorkflowName}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/KnowledgeBase">Knowledge Base</a></li>
                    <li class="breadcrumb-item"><a href="/Workflow">Workflows</a></li>
                    <li class="breadcrumb-item active">@Model.WorkflowName</li>
                </ol>
            </nav>
            <h1 class="h2 mb-2">
                <i class="fas fa-project-diagram text-primary me-2"></i>
                @Model.WorkflowName
            </h1>
            <p class="lead">@Model.Description</p>
            <div class="d-flex gap-3">
                <span class="badge bg-primary fs-6">
                    <i class="fas fa-folder me-1"></i>@Model.Category
                </span>
                @if (Model.EstimatedDuration > 0)
                {
                    <span class="badge bg-info fs-6">
                        <i class="fas fa-clock me-1"></i>Est. @Model.EstimatedDuration hours
                    </span>
                }
            </div>
        </div>
    </div>

    <!-- Workflow Steps -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-list-ol me-2"></i>Workflow Steps</h5>
                </div>
                <div class="card-body">
                    @if (Model.Steps.Any())
                    {
                        <div class="timeline-vertical">
                            @foreach (var step in Model.Steps.OrderBy(s => s.Order))
                            {
                                <div class="timeline-item mb-4 pb-4 border-bottom">
                                    <div class="d-flex">
                                        <div class="flex-shrink-0">
                                            <span class="badge rounded-circle bg-primary p-3 fs-5">@step.Order</span>
                                        </div>
                                        <div class="flex-grow-1 ms-4">
                                            <h5 class="mb-1">@step.Name</h5>
                                            @if (!string.IsNullOrEmpty(step.Description))
                                            {
                                                <p class="text-muted mb-2">@step.Description</p>
                                            }
                                            @if (!string.IsNullOrEmpty(step.AssigneeRole))
                                            {
                                                <span class="badge bg-light text-dark">
                                                    <i class="fas fa-user me-1"></i>@step.AssigneeRole
                                                </span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Workflow steps are defined in the workflow configuration.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Participants -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-users me-2"></i>Participants</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Role</th>
                                    <th>Responsibility</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var participant in Model.Participants)
                                {
                                    <tr>
                                        <td>
                                            <i class="fas fa-user-tag text-primary me-2"></i>
                                            <strong>@participant.Role</strong>
                                        </td>
                                        <td>@participant.Responsibility</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
