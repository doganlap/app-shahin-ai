@model IEnumerable<GrcMvc.Models.DTOs.ControlDto>
@{
    ViewData["Title"] = "Controls for Risk";
    Layout = "_Layout";
    var risk = ViewBag.Risk as GrcMvc.Models.DTOs.RiskDto;
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="bi bi-shield-lock"></i> Controls for Risk</h2>
            @if (risk != null)
            {
                <h5 class="text-muted">
                    <i class="bi bi-exclamation-triangle"></i> @risk.Name (@risk.Category)
                </h5>
            }
        </div>
        <div class="col text-end">
            @if (risk != null)
            {
                <a asp-controller="Risk" asp-action="Details" asp-route-id="@risk.Id" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Risk
                </a>
                <a asp-action="Create" asp-route-riskId="@risk.Id" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add Control
                </a>
            }
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-list"></i> All Controls
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-shield-x display-1 text-muted"></i>
                    <h4 class="mt-3 text-muted">No controls found for this risk.</h4>
                    <p>Add controls to mitigate this risk.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover" id="riskControlsTable">
                        <thead>
                            <tr>
                                <th>Control ID</th>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Effectiveness</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id">@item.ControlId</a>
                                    </td>
                                    <td>@item.Name</td>
                                    <td>@item.Type</td>
                                    <td>
                                        <div class="progress" style="height: 20px;">
                                            <div class="progress-bar @GetEffectivenessClass(item.Effectiveness)"
                                                 role="progressbar"
                                                 style="width: @(item.Effectiveness)%;"
                                                 aria-valuenow="@item.Effectiveness"
                                                 aria-valuemin="0"
                                                 aria-valuemax="100">
                                                @item.Effectiveness%
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(item.Status)">
                                            @item.Status
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id"
                                               class="btn btn-outline-primary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.Id"
                                               class="btn btn-outline-info" title="Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    private string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "active" or "effective" => "bg-success",
            "partially effective" => "bg-warning",
            "ineffective" or "inactive" => "bg-danger",
            "retired" => "bg-secondary",
            _ => "bg-info"
        };
    }

    private string GetEffectivenessClass(int score)
    {
        return score switch
        {
            >= 80 => "bg-success",
            >= 50 => "bg-warning",
            _ => "bg-danger"
        };
    }
}
