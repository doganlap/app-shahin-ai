@model GrcMvc.Models.DTOs.CreateControlDto
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> L
@{
    ViewData["Title"] = L["Control_Create_Title"].Value;
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="bi bi-plus-circle"></i> @L["Control_Create_Title"]</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> @L["BackToList"]
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @if (ViewBag.RiskName != null)
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> @L["Control_CreatingForRisk"]: <strong>@ViewBag.RiskName</strong>
                    </div>
                }

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label fw-bold">@L["Control_Name"]</label>
                            <input asp-for="Name" class="form-control" placeholder="@L["Control_Name_Placeholder"]" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label asp-for="ControlId" class="control-label fw-bold">@L["Control_ID"]</label>
                            <input asp-for="ControlId" class="form-control" placeholder="@L["Control_ID_Placeholder"]" />
                            <span asp-validation-for="ControlId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label asp-for="Status" class="control-label fw-bold">@L["Status"]</label>
                            <select asp-for="Status" class="form-select">
                                <option value="Active">@L["Control_Status_Active"]</option>
                                <option value="Inactive">@L["Control_Status_Inactive"]</option>
                                <option value="Draft">@L["Control_Status_Draft"]</option>
                                <option value="Retired">@L["Control_Status_Retired"]</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="Category" class="control-label fw-bold">@L["Control_Category"]</label>
                            <select asp-for="Category" class="form-select">
                                <option value="">@L["SelectCategory"]</option>
                                <option value="Preventive">@L["Control_Category_Preventive"]</option>
                                <option value="Detective">@L["Control_Category_Detective"]</option>
                                <option value="Corrective">@L["Control_Category_Corrective"]</option>
                                <option value="Directive">@L["Control_Category_Directive"]</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="Type" class="control-label fw-bold">@L["Control_Type"]</label>
                            <select asp-for="Type" class="form-select">
                                <option value="">@L["SelectType"]</option>
                                <option value="Technical">@L["Control_Type_Technical"]</option>
                                <option value="Administrative">@L["Control_Type_Administrative"]</option>
                                <option value="Physical">@L["Control_Type_Physical"]</option>
                            </select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="Frequency" class="control-label fw-bold">@L["Control_Frequency"]</label>
                            <select asp-for="Frequency" class="form-select">
                                <option value="">@L["SelectFrequency"]</option>
                                <option value="Continuous">@L["Control_Frequency_Continuous"]</option>
                                <option value="Daily">@L["Control_Frequency_Daily"]</option>
                                <option value="Weekly">@L["Control_Frequency_Weekly"]</option>
                                <option value="Monthly">@L["Control_Frequency_Monthly"]</option>
                                <option value="Quarterly">@L["Control_Frequency_Quarterly"]</option>
                                <option value="Annually">@L["Control_Frequency_Annually"]</option>
                                <option value="AdHoc">@L["Control_Frequency_AdHoc"]</option>
                            </select>
                            <span asp-validation-for="Frequency" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label fw-bold">@L["Control_Description"]</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="Owner" class="control-label fw-bold">@L["Control_Owner"]</label>
                            <input asp-for="Owner" class="form-control" />
                            <span asp-validation-for="Owner" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="EffectivenessScore" class="control-label fw-bold">@L["Control_EffectivenessScore"]</label>
                            <input asp-for="EffectivenessScore" class="form-control" type="number" min="0" max="100" />
                            <span asp-validation-for="EffectivenessScore" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="RiskId" class="control-label fw-bold">@L["Control_RelatedRisk"]</label>
                            <select asp-for="RiskId" class="form-select" asp-items="@(new SelectList(ViewBag.Risks, "Id", "Name", Model.RiskId))">
                                <option value="">@L["None"]</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> @L["CreateControl"]
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">@L["Cancel"]</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
