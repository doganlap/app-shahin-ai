@{
    ViewData["Title"] = "Assess Control";
    var controlId = ViewBag.ControlId as Guid?;
    var controlName = ViewBag.ControlName as string;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Control">Controls</a></li>
                    @if (controlId.HasValue)
                    {
                        <li class="breadcrumb-item"><a href="/Control/Details/@controlId">@controlName</a></li>
                    }
                    <li class="breadcrumb-item active">Assess</li>
                </ol>
            </nav>
            <h2><i class="bi bi-clipboard-check me-2"></i>Control Assessment</h2>
        </div>
    </div>

    @if (controlId.HasValue)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            Assessing control: <strong>@controlName</strong>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-list-check me-2"></i>Assessment Form</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Assess">
                        @if (controlId.HasValue)
                        {
                            <input type="hidden" name="ControlId" value="@controlId" />
                        }

                        <div class="mb-3">
                            <label class="form-label fw-bold">Implementation Status</label>
                            <select name="ImplementationStatus" class="form-select" required>
                                <option value="">-- Select Status --</option>
                                <option value="NotImplemented">Not Implemented</option>
                                <option value="PartiallyImplemented">Partially Implemented</option>
                                <option value="FullyImplemented">Fully Implemented</option>
                                <option value="NotApplicable">Not Applicable</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Effectiveness Rating</label>
                            <select name="EffectivenessRating" class="form-select" required>
                                <option value="">-- Select Rating --</option>
                                <option value="1">1 - Ineffective</option>
                                <option value="2">2 - Needs Improvement</option>
                                <option value="3">3 - Partially Effective</option>
                                <option value="4">4 - Largely Effective</option>
                                <option value="5">5 - Fully Effective</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Assessment Date</label>
                            <input type="date" name="AssessmentDate" class="form-control" value="@DateTime.UtcNow.ToString("yyyy-MM-dd")" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Assessor Notes</label>
                            <textarea name="Notes" class="form-control" rows="4" placeholder="Enter assessment observations and findings..."></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Evidence Reference</label>
                            <input type="text" name="EvidenceReference" class="form-control" placeholder="Link to supporting evidence..." />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Gap Identified</label>
                            <div class="form-check">
                                <input type="checkbox" name="HasGap" class="form-check-input" id="hasGap" />
                                <label class="form-check-label" for="hasGap">Yes, a gap was identified</label>
                            </div>
                        </div>

                        <div class="mb-3" id="gapDetails" style="display: none;">
                            <label class="form-label fw-bold">Gap Description</label>
                            <textarea name="GapDescription" class="form-control" rows="3" placeholder="Describe the identified gap..."></textarea>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-1"></i>Submit Assessment
                            </button>
                            <a href="/Control" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="bi bi-info-circle me-2"></i>Assessment Guidelines</h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2"><i class="bi bi-check text-success me-2"></i>Review control documentation</li>
                        <li class="mb-2"><i class="bi bi-check text-success me-2"></i>Verify evidence of operation</li>
                        <li class="mb-2"><i class="bi bi-check text-success me-2"></i>Test control effectiveness</li>
                        <li class="mb-2"><i class="bi bi-check text-success me-2"></i>Document any gaps found</li>
                        <li><i class="bi bi-check text-success me-2"></i>Recommend remediation if needed</li>
                    </ul>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="bi bi-bar-chart me-2"></i>Rating Scale</h6>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-2">
                        <span class="badge bg-danger me-2">1</span>
                        <small>Ineffective - Major gaps</small>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <span class="badge bg-warning me-2">2</span>
                        <small>Needs Improvement</small>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <span class="badge bg-info me-2">3</span>
                        <small>Partially Effective</small>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <span class="badge bg-primary me-2">4</span>
                        <small>Largely Effective</small>
                    </div>
                    <div class="d-flex align-items-center">
                        <span class="badge bg-success me-2">5</span>
                        <small>Fully Effective</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('hasGap').addEventListener('change', function() {
            document.getElementById('gapDetails').style.display = this.checked ? 'block' : 'none';
        });
    </script>
}
