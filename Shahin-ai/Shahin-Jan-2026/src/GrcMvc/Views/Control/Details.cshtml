@model GrcMvc.Models.DTOs.ControlDto
@{
    ViewData["Title"] = "Control Details";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="bi bi-shield-check"></i> Control Details</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">General Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="fw-bold">Name</label>
                            <p>@Model.Name</p>
                        </div>
                        <div class="col-md-6">
                            <label class="fw-bold">Control ID</label>
                            <p>@Model.ControlId</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label class="fw-bold">Category</label>
                            <p>@Model.Category</p>
                        </div>
                        <div class="col-md-4">
                            <label class="fw-bold">Type</label>
                            <p>@Model.Type</p>
                        </div>
                        <div class="col-md-4">
                            <label class="fw-bold">Status</label>
                            <p>
                                <span class="badge @GetStatusBadgeClass(Model.Status)">
                                    @Model.Status
                                </span>
                            </p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-12">
                            <label class="fw-bold">Description</label>
                            <p>@Model.Description</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Effectiveness & Review</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="fw-bold">Effectiveness</label>
                            <div class="progress" style="height: 25px;">
                                <div class="progress-bar @GetEffectivenessClass(Model.Effectiveness)"
                                     role="progressbar"
                                     style="width: @(Model.Effectiveness)%;"
                                     aria-valuenow="@Model.Effectiveness"
                                     aria-valuemin="0"
                                     aria-valuemax="100">
                                    @Model.Effectiveness%
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="fw-bold">Frequency</label>
                            <p>@Model.Frequency</p>
                        </div>
                    </div>

                    <hr />

                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="fw-bold text-muted">Review Schedule</h6>
                            <dl class="row">
                                <dt class="col-sm-6">Last Review</dt>
                                <dd class="col-sm-6">@(Model.LastReviewDate?.ToShortDateString() ?? "-")</dd>

                                <dt class="col-sm-6">Next Review</dt>
                                <dd class="col-sm-6">@(Model.NextReviewDate?.ToShortDateString() ?? "-")</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <h6 class="fw-bold text-muted">Testing Schedule</h6>
                            <dl class="row">
                                <dt class="col-sm-6">Last Test</dt>
                                <dd class="col-sm-6">@(Model.LastTestDate?.ToShortDateString() ?? "-")</dd>

                                <dt class="col-sm-6">Next Test</dt>
                                <dd class="col-sm-6">@(Model.NextTestDate?.ToShortDateString() ?? "-")</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Ownership & Relations</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="fw-bold">Owner</label>
                        <p>@Model.Owner</p>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">Related Risk</label>
                        <p>
                            @if (Model.RiskId.HasValue)
                            {
                                <a asp-controller="Risk" asp-action="Details" asp-route-id="@Model.RiskId">View Risk</a>
                            }
                            else
                            {
                                <span class="text-muted">None</span>
                            }
                        </p>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">Implementation Date</label>
                        <p>@(Model.ImplementationDate?.ToShortDateString() ?? "-")</p>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Assessments</h5>
                        <a asp-controller="Assessment" asp-action="ByControl" asp-route-controlId="@Model.Id" class="btn btn-sm btn-outline-primary">View All</a>
                    </div>
                </div>
                <div class="card-body">
                    <p class="text-muted small">View assessments and tests associated with this control.</p>
                    <div class="d-grid">
                         <a asp-controller="Assessment" asp-action="Create" asp-route-controlId="@Model.Id" class="btn btn-outline-success btn-sm">
                            <i class="bi bi-plus-circle"></i> New Assessment
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "active" or "effective" => "bg-success",
            "partially effective" => "bg-warning",
            "ineffective" or "inactive" => "bg-danger",
            "retired" => "bg-secondary",
            _ => "bg-info"
        };
    }

    private string GetEffectivenessClass(int score)
    {
        return score switch
        {
            >= 80 => "bg-success",
            >= 50 => "bg-warning",
            _ => "bg-danger"
        };
    }
}
