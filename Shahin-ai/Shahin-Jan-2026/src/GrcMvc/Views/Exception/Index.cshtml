@model List<GrcMvc.Models.Entities.ControlException>
@{
    ViewData["Title"] = "Exception Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1"><i class="fas fa-exclamation-triangle text-warning me-2"></i>Exception Management</h1>
            <p class="text-muted">Control exceptions and compensating controls</p>
        </div>
        <a href="@Url.Action("Create")" class="btn btn-warning"><i class="fas fa-plus me-2"></i>Request Exception</a>
    </div>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm text-center border-start border-success border-4">
                <div class="card-body">
                    <div class="h2 mb-0 text-success">@ViewBag.OpenCount</div>
                    <small class="text-muted">Active Exceptions</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm text-center border-start border-warning border-4">
                <div class="card-body">
                    <div class="h2 mb-0 text-warning">@ViewBag.PendingCount</div>
                    <small class="text-muted">Pending Approval</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm text-center border-start border-danger border-4">
                <div class="card-body">
                    <div class="h2 mb-0 text-danger">@ViewBag.ExpiredCount</div>
                    <small class="text-muted">Expired</small>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr><th>Control</th><th>Reason</th><th>Status</th><th>Expires</th><th>Actions</th></tr>
                    </thead>
                    <tbody>
                        @foreach (var ex in Model)
                        {
                            <tr>
                                <td><code>@ex.ControlId.ToString().Substring(0, 8)...</code></td>
                                <td>@ex.Reason</td>
                                <td>
                                    @switch (ex.Status)
                                    {
                                        case "Approved":
                                            <span class="badge bg-success">Approved</span>
                                            break;
                                        case "Pending":
                                            <span class="badge bg-warning text-dark">Pending</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@ex.Status</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    @if (ex.ExpiryDate <= DateTime.UtcNow)
                                    {
                                        <span class="text-danger">Expired</span>
                                    }
                                    else
                                    {
                                        @ex.ExpiryDate.ToString("MMM dd, yyyy")
                                    }
                                </td>
                                <td>
                                    @if (ex.Status == "Pending")
                                    {
                                        <form asp-action="Approve" asp-route-id="@ex.Id" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-success"><i class="fas fa-check"></i></button>
                                        </form>
                                    }
                                    @if (ex.Status == "Approved")
                                    {
                                        <button type="button" class="btn btn-sm btn-outline-warning" data-bs-toggle="modal" data-bs-target="#extendModal-@ex.Id">
                                            <i class="fas fa-clock"></i> Extend
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr><td colspan="5" class="text-center text-muted py-3">No exceptions</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
