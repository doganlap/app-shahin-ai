@model GrcMvc.Models.DTOs.TeamsManagementDto
@{
    ViewData["Title"] = "Teams Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">
                <i class="bi bi-people text-primary me-2"></i>
                Teams Management
            </h2>
            <p class="text-muted mb-0">Configure teams for workflow routing and task assignment</p>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-outline-secondary me-2">
                <i class="bi bi-arrow-left me-1"></i> Back
            </a>
            <a asp-action="CreateTeam" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i> Create Team
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Teams.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            No teams configured yet. <a asp-action="CreateTeam">Create your first team</a> or
            <a asp-action="ProvisionDefaults" asp-controller="OrgSetup">auto-provision default teams</a>.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var team in Model.Teams)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 @(team.IsDefaultFallback ? "border-primary" : "")">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-0">@team.Name</h5>
                                <small class="text-muted">@team.TeamCode</small>
                            </div>
                            @if (team.IsDefaultFallback)
                            {
                                <span class="badge bg-primary">Default</span>
                            }
                        </div>
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(team.NameAr))
                            {
                                <p class="text-muted small mb-2" dir="rtl">@team.NameAr</p>
                            }
                            <p class="card-text">@team.Purpose</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-secondary">@team.TeamType</span>
                                <span class="text-muted small">
                                    <i class="bi bi-person me-1"></i>@team.MemberCount members
                                </span>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="btn-group w-100">
                                <a asp-action="TeamMembers" asp-route-teamId="@team.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-people me-1"></i> Members
                                </a>
                                <a asp-action="EditTeam" asp-route-id="@team.Id" class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-pencil me-1"></i> Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
