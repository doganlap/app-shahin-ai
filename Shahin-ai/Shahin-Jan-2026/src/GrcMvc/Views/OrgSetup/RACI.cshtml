@model GrcMvc.Models.DTOs.RACIManagementDto
@{
    ViewData["Title"] = "RACI Matrix";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">
                <i class="bi bi-grid-3x3-gap text-info me-2"></i>
                RACI Matrix
            </h2>
            <p class="text-muted mb-0">Responsibility assignments for control families and workflows</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back
        </a>
    </div>

    <!-- RACI Legend -->
    <div class="alert alert-light border mb-4">
        <strong>RACI Legend:</strong>
        <span class="badge bg-danger me-2">R = Responsible</span>
        <span class="badge bg-warning text-dark me-2">A = Accountable</span>
        <span class="badge bg-info me-2">C = Consulted</span>
        <span class="badge bg-secondary">I = Informed</span>
    </div>

    @if (!Model.Assignments.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            No RACI assignments configured yet.
            <a asp-action="ProvisionDefaults" asp-controller="OrgSetup">Auto-provision default RACI assignments</a>.
        </div>
    }
    else
    {
        <!-- Group by Scope Type -->
        @foreach (var scopeGroup in Model.Assignments.GroupBy(a => a.ScopeType))
        {
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-folder me-2"></i>
                        @scopeGroup.Key Assignments
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Scope ID</th>
                                    <th>Team</th>
                                    <th>RACI</th>
                                    <th>Role</th>
                                    <th>Priority</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var assignment in scopeGroup.OrderBy(a => a.ScopeId).ThenBy(a => a.Priority))
                                {
                                    <tr>
                                        <td>
                                            <strong>@assignment.ScopeId</strong>
                                        </td>
                                        <td>@assignment.TeamName</td>
                                        <td>
                                            @switch (assignment.RACI)
                                            {
                                                case "R":
                                                    <span class="badge bg-danger">Responsible</span>
                                                    break;
                                                case "A":
                                                    <span class="badge bg-warning text-dark">Accountable</span>
                                                    break;
                                                case "C":
                                                    <span class="badge bg-info">Consulted</span>
                                                    break;
                                                case "I":
                                                    <span class="badge bg-secondary">Informed</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-light text-dark">@assignment.RACI</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-outline-secondary border">@assignment.RoleCode</span>
                                        </td>
                                        <td>@assignment.Priority</td>
                                        <td>
                                            @if (assignment.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactive</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    }
</div>
