@using GrcMvc.Models.DTOs
@model TeamMembersManagementDto
@{
    ViewData["Title"] = $"Team Members - {Model.TeamName}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">
                <i class="bi bi-person-badge text-primary me-2"></i>
                @Model.TeamName - Members
            </h2>
            <p class="text-muted mb-0">Manage team members and their roles</p>
        </div>
        <a asp-action="Teams" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back to Teams
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Add Member Form -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-person-plus me-2"></i>Add Member</h5>
                </div>
                <div class="card-body">
                    <form asp-action="AddTeamMember" asp-route-teamId="@Model.TeamId" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label class="form-label">Select User <span class="text-danger">*</span></label>
                            <select name="UserId" class="form-select" required>
                                <option value="">-- Select User --</option>
                                @foreach (var user in Model.AvailableUsers)
                                {
                                    <option value="@user.Id">@user.Email @(!string.IsNullOrEmpty(user.Name) ? $"({user.Name})" : "")</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Role <span class="text-danger">*</span></label>
                            <select name="RoleCode" class="form-select" required>
                                <option value="CONTROL_OWNER">Control Owner</option>
                                <option value="EVIDENCE_CUSTODIAN">Evidence Custodian</option>
                                <option value="APPROVER">Approver</option>
                                <option value="ASSESSOR">Assessor/Tester</option>
                                <option value="REMEDIATION_OWNER">Remediation Owner</option>
                                <option value="VIEWER">Viewer/Auditor</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" name="IsPrimaryForRole" value="true" id="isPrimary">
                                <label class="form-check-label" for="isPrimary">Primary for this role</label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" name="CanApprove" value="true" id="canApprove">
                                <label class="form-check-label" for="canApprove">Can approve on behalf of team</label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" name="CanDelegate" value="true" id="canDelegate">
                                <label class="form-check-label" for="canDelegate">Can delegate tasks</label>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-person-plus me-1"></i> Add Member
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Members List -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-people me-2"></i>Current Members (@Model.Members.Count)</h5>
                </div>
                <div class="card-body p-0">
                    @if (!Model.Members.Any())
                    {
                        <div class="p-4 text-center text-muted">
                            <i class="bi bi-people fs-1 d-block mb-2"></i>
                            No members in this team yet.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>User</th>
                                        <th>Role</th>
                                        <th>Permissions</th>
                                        <th>Joined</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var member in Model.Members)
                                    {
                                        <tr>
                                            <td>
                                                <div>
                                                    <strong>@member.Email</strong>
                                                    @if (member.IsPrimaryForRole)
                                                    {
                                                        <span class="badge bg-primary ms-1">Primary</span>
                                                    }
                                                </div>
                                                <small class="text-muted">@member.UserName</small>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@member.RoleCode</span>
                                            </td>
                                            <td>
                                                @if (member.CanApprove)
                                                {
                                                    <span class="badge bg-success me-1">Approve</span>
                                                }
                                                @if (member.CanDelegate)
                                                {
                                                    <span class="badge bg-info">Delegate</span>
                                                }
                                            </td>
                                            <td>
                                                <small>@member.JoinedDate.ToString("yyyy-MM-dd")</small>
                                            </td>
                                            <td>
                                                <form asp-action="RemoveTeamMember" asp-route-teamId="@Model.TeamId" asp-route-memberId="@member.Id" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Remove this member?')">
                                                        <i class="bi bi-x-lg"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
