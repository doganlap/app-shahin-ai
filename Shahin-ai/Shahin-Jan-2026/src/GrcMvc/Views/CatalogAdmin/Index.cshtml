@{
    ViewData["Title"] = "Catalog Administration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1"><i class="fas fa-database text-primary me-2"></i>Catalog Administration</h1>
            <p class="text-muted">Manage regulators, frameworks, controls, and templates</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="rounded-circle bg-primary bg-opacity-10 p-4 d-inline-block mb-3">
                        <i class="fas fa-landmark fa-2x text-primary"></i>
                    </div>
                    <h5>Regulators</h5>
                    <div class="display-6 text-primary">@ViewBag.RegulatorCount</div>
                    <a asp-action="Regulators" class="btn btn-outline-primary mt-3">Manage</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="rounded-circle bg-info bg-opacity-10 p-4 d-inline-block mb-3">
                        <i class="fas fa-book fa-2x text-info"></i>
                    </div>
                    <h5>Frameworks</h5>
                    <div class="display-6 text-info">@ViewBag.FrameworkCount</div>
                    <a asp-action="Frameworks" class="btn btn-outline-info mt-3">Manage</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="rounded-circle bg-success bg-opacity-10 p-4 d-inline-block mb-3">
                        <i class="fas fa-shield-alt fa-2x text-success"></i>
                    </div>
                    <h5>Controls</h5>
                    <div class="display-6 text-success">@ViewBag.ControlCount</div>
                    <a asp-action="Controls" class="btn btn-outline-success mt-3">Manage</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="rounded-circle bg-warning bg-opacity-10 p-4 d-inline-block mb-3">
                        <i class="fas fa-layer-group fa-2x text-warning"></i>
                    </div>
                    <h5>Baselines</h5>
                    <div class="display-6 text-warning">@ViewBag.BaselineCount</div>
                    <a asp-action="Baselines" class="btn btn-outline-warning mt-3">Manage</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="rounded-circle bg-danger bg-opacity-10 p-4 d-inline-block mb-3">
                        <i class="fas fa-cubes fa-2x text-danger"></i>
                    </div>
                    <h5>Packages</h5>
                    <div class="display-6 text-danger">@ViewBag.PackageCount</div>
                    <a asp-action="Packages" class="btn btn-outline-danger mt-3">Manage</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="rounded-circle bg-secondary bg-opacity-10 p-4 d-inline-block mb-3">
                        <i class="fas fa-file-alt fa-2x text-secondary"></i>
                    </div>
                    <h5>Evidence Types</h5>
                    <div class="display-6 text-secondary">@ViewBag.EvidenceTypeCount</div>
                    <a asp-action="EvidenceTypes" class="btn btn-outline-secondary mt-3">Manage</a>
                </div>
            </div>
        </div>
    </div>
</div>
