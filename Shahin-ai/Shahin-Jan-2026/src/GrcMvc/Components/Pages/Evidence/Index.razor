@page "/evidence"
@using GrcMvc.Models.DTOs
@using GrcMvc.Services
@using GrcMvc.Application.Policy;
@inject IHttpContextAccessor HttpContextAccessor

@{
    var requestCulture = HttpContextAccessor.HttpContext?.Features.Get<IRequestCultureFeature>();
    var currentCulture = requestCulture?.RequestCulture?.UICulture?.Name ?? "ar";
    var dir = currentCulture == "ar" ? "rtl" : "ltr";
}

<PageTitle>@(currentCulture == "ar" ? "الأدلة" : "Evidence")</PageTitle>

<div dir="@dir" class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3">Evidence Library</h1>
        </div>
        <div class="col-auto">
            <a href="/evidence/upload" class="btn btn-primary">
                <i class="bi bi-cloud-upload"></i> Upload Evidence
            </a>
        </div>
    </div>

    <PolicyViolationDialog ShowDialog="@showPolicyViolation"
                           Violation="@policyViolation"
                           OnClose="@(() => showPolicyViolation = false)" />

    @if (errorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @errorMessage
            <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)"></button>
        </div>
    }

    @if (evidence == null || evidence.Count == 0)
    {
        <div class="alert alert-info">No evidence files found</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Linked To</th>
                        <th>Uploaded By</th>
                        <th>Uploaded Date</th>
                        <th>Size</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in evidence)
                    {
                        <tr>
                            <td><i class="bi bi-file-earmark"></i> @item.Name</td>
                            <td><span class="badge bg-info">@item.Type</span></td>
                            <td>@item.LinkedItemId</td>
                            <td>@item.UploadedBy</td>
                            <td>@item.UploadedDate.ToString("MMM dd, yyyy")</td>
                            <td>@item.FileSize</td>
                            <td>
                                <a href="/evidence/@item.Id/detail" class="btn btn-sm btn-outline-secondary">View</a>
                                <button class="btn btn-sm btn-outline-danger">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<EvidenceListItemDto>? evidence;
    private bool showPolicyViolation = false;
    private GrcMvc.Application.Policy.PolicyViolationInfo? policyViolation;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadEvidence();
    }

    private async Task LoadEvidence()
    {
        try
        {
            var response = await Http.GetAsync("/api/evidence");
            if (response.IsSuccessStatusCode)
            {
                var json = await response.Content.ReadAsStringAsync();
                var apiResponse = System.Text.Json.JsonSerializer.Deserialize<GrcMvc.Models.ApiResponse<EvidenceListItemDto[]>>(json, new System.Text.Json.JsonSerializerOptions { PropertyNameCaseInsensitive = true });
                if (apiResponse?.Success == true && apiResponse.Data != null)
                {
                    evidence = new List<EvidenceListItemDto>(apiResponse.Data);
                }
                else
                {
                    evidence = new List<EvidenceListItemDto>();
                }
            }
            else
            {
                // Check for policy violation in error response
                var violation = await PolicyViolationParser.ParseFromHttpResponseAsync(response);
                if (violation != null)
                {
                    policyViolation = violation;
                    showPolicyViolation = true;
                }
                else
                {
                    errorMessage = "Failed to load evidence. Please try again.";
                }
                evidence = new List<EvidenceListItemDto>();
            }
        }
        catch (HttpRequestException ex)
        {
            var violation = PolicyViolationParser.ParseFromException(ex);
            if (violation != null)
            {
                policyViolation = violation;
                showPolicyViolation = true;
            }
            else
            {
                errorMessage = $"Error loading evidence: {ex.Message}";
            }
            evidence = new List<EvidenceListItemDto>();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading evidence: {ex.Message}";
            evidence = new List<EvidenceListItemDto>();
        }
    }
}

