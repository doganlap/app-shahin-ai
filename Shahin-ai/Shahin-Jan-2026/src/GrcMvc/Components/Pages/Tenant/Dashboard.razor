@page "/tenant/dashboard"
@page "/t/{tenantSlug}/dashboard"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "TenantAdmin")]
@using GrcMvc.Data
@using GrcMvc.Models.Entities
@using GrcMvc.Services.Interfaces
@using Microsoft.EntityFrameworkCore
@inject ITenantContextService TenantContext
@inject IDbContextFactory<GrcDbContext> ContextFactory
@inject IHttpContextAccessor HttpContextAccessor

@{
    var requestCulture = HttpContextAccessor.HttpContext?.Features.Get<IRequestCultureFeature>();
    var currentCulture = requestCulture?.RequestCulture?.UICulture?.Name ?? "ar";
    var isRtl = currentCulture == "ar";
    var dir = isRtl ? "rtl" : "ltr";
}

<PageTitle>Tenant Admin Dashboard</PageTitle>

<TenantAwareView>
    <div dir="@dir" class="container-fluid mt-4">
        <div class="row mb-4">
            <div class="col-12">
                <h1 class="display-6"><i class="bi bi-graph-up me-2"></i>Tenant Administration</h1>
                <p class="text-muted">Manage your organization's GRC operations</p>
            </div>
        </div>
        
        <!-- Tenant-level metrics -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <MetricCard Title="Total Users" 
                           Value="@totalUsers.ToString()" 
                           Color="primary"
                           Icon="bi-people" />
            </div>
            <div class="col-md-3 mb-3">
                <MetricCard Title="Active Workflows" 
                           Value="@activeWorkflows.ToString()" 
                           Color="info"
                           Icon="bi-diagram-3" />
            </div>
            <div class="col-md-3 mb-3">
                <MetricCard Title="Pending Approvals" 
                           Value="@pendingApprovals.ToString()" 
                           Color="warning"
                           Icon="bi-clock-history" />
            </div>
            <div class="col-md-3 mb-3">
                <MetricCard Title="Compliance Score" 
                           Value="@($"{complianceScore:F1}%")" 
                           Color="success"
                           Icon="bi-check-circle" />
            </div>
        </div>
        
        <!-- Quick Actions -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Quick Actions</h5>
                    </div>
                    <div class="card-body">
                        <a href="/tenant/users" class="btn btn-primary me-2">
                            <i class="bi bi-people me-2"></i>Manage Users
                        </a>
                        <a href="/tenant/settings" class="btn btn-secondary me-2">
                            <i class="bi bi-gear me-2"></i>Tenant Settings
                        </a>
                        <a href="/admin/roles" class="btn btn-outline-primary me-2">
                            <i class="bi bi-shield-check me-2"></i>Manage Roles
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</TenantAwareView>

@code {
    private int totalUsers = 0;
    private int activeWorkflows = 0;
    private int pendingApprovals = 0;
    private double complianceScore = 0;

    protected override async Task OnInitializedAsync()
    {
        var tenantId = TenantContext.GetCurrentTenantId();
        if (tenantId == Guid.Empty) return;

        try
        {
            using var context = ContextFactory.CreateDbContext();
            
            // Query tenant-specific database
            totalUsers = await context.TenantUsers.CountAsync(tu => !tu.IsDeleted);
            activeWorkflows = await context.WorkflowInstances.CountAsync(w => w.Status == "Active");
            pendingApprovals = await context.WorkflowTasks.CountAsync(t => t.Status == "Pending");
            
            // Calculate compliance score
            var totalAssessments = await context.Assessments.CountAsync();
            var completedAssessments = await context.Assessments.CountAsync(a => a.Status == "Completed");
            complianceScore = totalAssessments > 0 ? (completedAssessments * 100.0 / totalAssessments) : 0;
        }
        catch (Exception ex)
        {
            // Log error but don't crash the page
            Console.WriteLine($"Error loading tenant metrics: {ex.Message}");
        }
    }
}
