@page "/inbox/{TaskId:guid}/detail"
@using GrcMvc.Models.DTOs
@using System.Text.Json
@inject IHttpContextAccessor HttpContextAccessor

@{
    var requestCulture = HttpContextAccessor.HttpContext?.Features.Get<IRequestCultureFeature>();
    var currentCulture = requestCulture?.RequestCulture?.UICulture?.Name ?? "ar";
    var dir = currentCulture == "ar" ? "rtl" : "ltr";
}

<PageTitle>@(currentCulture == "ar" ? "تفاصيل المهمة" : "Task Details")</PageTitle>

<div dir="@dir" class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-8">
            <a href="/inbox" class="btn btn-outline-secondary btn-sm mb-3">
                <i class="bi bi-arrow-left"></i> Back to Inbox
            </a>

            @if (task == null)
            {
                <div class="alert alert-warning">Task not found</div>
            }
            else
            {
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h4 class="mb-1">@task.Title</h4>
                                <small class="text-muted">Task ID: @task.Id</small>
                            </div>
                            <span class="badge bg-@GetStatusColor(task.Status)">@task.Status</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <p class="text-muted">@task.Description</p>

                        <hr />

                        <div class="row mb-4">
                            <div class="col-md-3">
                                <strong>Priority:</strong>
                                <span class="badge bg-@GetPriorityColor(task.Priority)"
                                    style="margin-left: 8px;">@task.Priority</span>
                            </div>
                            <div class="col-md-3">
                                <strong>Assigned To:</strong>
                                <span style="margin-left: 8px;">@task.AssignedToName</span>
                            </div>
                            <div class="col-md-3">
                                <strong>Assigned By:</strong>
                                <span style="margin-left: 8px;">@task.AssignedByName</span>
                            </div>
                            <div class="col-md-3">
                                <strong>Due:</strong>
                                @if (task.DueDate.HasValue)
                                {
                                    <span style="margin-left: 8px;">@task.DueDate.Value.ToString("MMM dd, yyyy")</span>
                                    @if (task.IsOverdue)
                                    {
                                        <span class="badge bg-danger">OVERDUE</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted" style="margin-left: 8px;">No due date</span>
                                }
                            </div>
                        </div>

                        <div class="alert alert-light">
                            <strong>Created:</strong> @task.CreatedAt.ToString("MMM dd, yyyy hh:mm tt")
                            @if (task.ModifiedAt.HasValue)
                            {
                                <br />
                                <strong>Last Updated:</strong>
 
                                @task.ModifiedAt.Value.ToString("MMM dd, yyyy hh:mm tt")
                            }
                        </div>

                        @if (task.Status == "Pending" || task.Status == "In Progress")
                        {
                            <div class="mt-3">
                                <button class="btn btn-success" @onclick="CompleteTask" disabled="@isProcessing">
                                    @if (isProcessing && lastAction == "complete")
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                        <span>Completing...</span>
                                    }
                                    else
                                    {
                                        <span><i class="bi bi-check-lg"></i> Mark Complete</span>
                                    }
                                </button>
                                <button class="btn btn-outline-secondary" @onclick="SkipTask" disabled="@isProcessing">
                                    <i class="bi bi-skip-forward"></i> Skip for Later
                                </button>
                            </div>
                        }
                    </div>
                </div>

                <div class="card mt-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Comments (@(task.Comments?.Count ?? 0))</h5>
                    </div>
                    <div class="card-body">
                        @if (task.Comments != null && task.Comments.Count > 0)
                        {
                            @foreach (var comment in task.Comments)
                            {
                                <div class="card mb-2">
                                    <div class="card-body">
                                        <h6 class="card-subtitle mb-2">
                                            <strong>@comment.Author</strong>
                                            <small class="text-muted">@comment.CreatedAt.ToString("MMM dd, yyyy HH:mm")</small>
                                        </h6>
                                        <p class="card-text">@comment.Content</p>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted">No comments yet</p>
                        }

                        <hr />

                        <div class="mt-3">
                            <textarea class="form-control mb-2" placeholder="Add a comment..." rows="3"
                            @bind="newComment"></textarea>
                            <button class="btn btn-sm btn-primary" @onclick="PostComment" disabled="@isPosting">
                                @if (isPosting)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                    <span>Posting...</span>
                                }
                                else
                                {
                                    <span>Post Comment</span>
                                }
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Guid TaskId { get; set; }

    private InboxTaskDetailDto? task;
    private string newComment = string.Empty;
    private bool isProcessing = false;
    private bool isPosting = false;
    private string lastAction = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadTask();
    }

    private async Task LoadTask()
    {
        try
        {
            var response = await Http.GetAsync($"/api/tasks/{TaskId}");
            if (response.IsSuccessStatusCode)
            {
                var json = await response.Content.ReadAsStringAsync();
                var apiResponse = System.Text.Json.JsonSerializer.Deserialize<GrcMvc.Models.ApiResponse<InboxTaskDetailDto>>(json, new System.Text.Json.JsonSerializerOptions { PropertyNameCaseInsensitive = true });
                if (apiResponse?.Success == true && apiResponse.Data != null)
                {
                    task = apiResponse.Data;
                }
            }
        }
        catch (Exception)
        {
            // Fall back to null - task not found
        }
    }

    private async Task CompleteTask()
    {
        lastAction = "complete";
        isProcessing = true;

        try
        {
            await Task.Delay(1000);
            if (task != null)
            {
                task.Status = "Completed";
            }
        }
        finally
        {
            isProcessing = false;
        }
    }

    private async Task SkipTask()
    {
        lastAction = "skip";
        isProcessing = true;

        try
        {
            await Task.Delay(1000);
            if (task != null)
            {
                task.Status = "Skipped";
            }
        }
        finally
        {
            isProcessing = false;
        }
    }

    private async Task PostComment()
    {
        if (string.IsNullOrWhiteSpace(newComment) || task == null)
            return;

        isPosting = true;

        try
        {
            await Task.Delay(800);

            var comment = new TaskCommentDto
            {
                Id = Guid.NewGuid(),
                Content = newComment,
                Author = "Current User",
                CreatedAt = DateTime.UtcNow
            };

            if (task.Comments == null)
                task.Comments = new List<TaskCommentDto>();

            task.Comments.Add(comment);
            newComment = string.Empty;
        }
        finally
        {
            isPosting = false;
        }
    }

    private string GetStatusColor(string status) => status switch
    {
        "Completed" => "success",
        "Skipped" => "warning",
        "In Progress" => "info",
        "Pending" => "secondary",
        _ => "secondary"
    };

    private string GetPriorityColor(string priority) => priority switch
    {
        "Critical" => "danger",
        "High" => "warning",
        "Medium" => "info",
        "Low" => "secondary",
        _ => "secondary"
    };
}

