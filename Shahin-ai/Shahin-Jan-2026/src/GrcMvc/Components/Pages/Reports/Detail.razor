@page "/reports/{Id}"
@using GrcMvc.Models.DTOs
@using System.Net.Http.Json
@using Microsoft.AspNetCore.Localization
@inject HttpClient Http
@inject NavigationManager NavigationManager
@inject ILogger<Reports.Detail> Logger
@inject IHttpContextAccessor HttpContextAccessor

@{
    var requestCulture = HttpContextAccessor.HttpContext?.Features.Get<IRequestCultureFeature>();
    var currentCulture = requestCulture?.RequestCulture?.UICulture?.Name ?? "ar";
    var isRtl = currentCulture == "ar";
    var dir = isRtl ? "rtl" : "ltr";
}

<PageTitle>@(isRtl ? "تفاصيل التقرير" : "Report Details")</PageTitle>

<div dir="@dir">

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-6">@(report?.Title ?? "Report Details")</h1>
            <p class="text-muted">Report Number: @(report?.ReportNumber ?? "Loading...")</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="/reports" class="btn btn-outline-secondary me-2">Back to List</a>
            @if (report != null && !string.IsNullOrEmpty(report.FileUrl))
            {
                <a href="/api/reports/@Id/download" class="btn btn-primary" target="_blank">Download</a>
            }
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Loading report details...</p>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            @errorMessage
        </div>
    }
    else if (report != null)
    {
        <div class="row">
            <div class="col-md-8">
                <!-- Report Metadata -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Report Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Type:</strong> <span class="badge bg-primary">@report.Type</span></p>
                                <p><strong>Status:</strong> 
                                    @if (report.Status == "Generated")
                                    {
                                        <span class="badge bg-success">@report.Status</span>
                                    }
                                    else if (report.Status == "Draft")
                                    {
                                        <span class="badge bg-warning">@report.Status</span>
                                    }
                                    else if (report.Status == "Delivered")
                                    {
                                        <span class="badge bg-info">@report.Status</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@report.Status</span>
                                    }
                                </p>
                                <p><strong>Scope:</strong> @report.Scope</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Period:</strong> @report.ReportPeriodStart.ToString("MMM dd, yyyy") - @report.ReportPeriodEnd.ToString("MMM dd, yyyy")</p>
                                <p><strong>Generated:</strong> @report.GeneratedDate.ToString("MMM dd, yyyy hh:mm tt")</p>
                                <p><strong>Generated By:</strong> @report.GeneratedBy</p>
                                <p><strong>Pages:</strong> @report.PageCount</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Executive Summary -->
                @if (!string.IsNullOrEmpty(report.ExecutiveSummary))
                {
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Executive Summary</h5>
                        </div>
                        <div class="card-body">
                            <p>@report.ExecutiveSummary</p>
                        </div>
                    </div>
                }

                <!-- Key Findings -->
                @if (!string.IsNullOrEmpty(report.KeyFindings))
                {
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Key Findings</h5>
                        </div>
                        <div class="card-body">
                            <p>@report.KeyFindings</p>
                            <div class="mt-3">
                                <p><strong>Total Findings:</strong> @report.TotalFindingsCount</p>
                                <p><strong>Critical Findings:</strong> <span class="badge bg-danger">@report.CriticalFindingsCount</span></p>
                            </div>
                        </div>
                    </div>
                }

                <!-- Recommendations -->
                @if (!string.IsNullOrEmpty(report.Recommendations))
                {
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Recommendations</h5>
                        </div>
                        <div class="card-body">
                            <p>@report.Recommendations</p>
                        </div>
                    </div>
                }
            </div>

            <div class="col-md-4">
                <!-- Actions -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Actions</h5>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(report.FileUrl))
                        {
                            <a href="/api/reports/@Id/download?format=pdf" class="btn btn-primary w-100 mb-2" target="_blank">
                                <i class="bi bi-file-pdf me-2"></i>Download PDF
                            </a>
                            <a href="/api/reports/@Id/download?format=excel" class="btn btn-success w-100 mb-2" target="_blank">
                                <i class="bi bi-file-excel me-2"></i>Download Excel
                            </a>
                        }
                        <a href="/reports/@Id/edit" class="btn btn-outline-primary w-100 mb-2">
                            <i class="bi bi-pencil me-2"></i>Edit Report
                        </a>
                    </div>
                </div>

                <!-- Delivery Information -->
                @if (!string.IsNullOrEmpty(report.DeliveredTo))
                {
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Delivery Information</h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Delivered To:</strong> @report.DeliveredTo</p>
                            @if (report.DeliveryDate.HasValue)
                            {
                                <p><strong>Delivery Date:</strong> @report.DeliveryDate.Value.ToString("MMM dd, yyyy")</p>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>
</div>

@code {
    [Parameter]
    public string Id { get; set; } = string.Empty;

    private ReportDetailDto? report;
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadReportAsync();
    }

    private async Task LoadReportAsync()
    {
        try
        {
            isLoading = true;
            errorMessage = null;

            report = await Http.GetFromJsonAsync<ReportDetailDto>($"/api/report/{Id}");

            if (report == null)
            {
                errorMessage = "Report not found.";
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading report {ReportId}", Id);
            errorMessage = "Failed to load report details. Please try again.";
        }
        finally
        {
            isLoading = false;
        }
    }
}
