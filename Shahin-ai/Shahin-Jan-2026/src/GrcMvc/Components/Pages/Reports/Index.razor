<div dir="@dir">

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-6">GRC Reports</h1>
            <p class="text-muted">Generate and manage compliance and audit reports</p>
        </div>
        <div class="col-md-4 text-end">
            <button class="btn btn-primary" @onclick="ShowGenerateReportModal">
                <span class="me-2">ðŸ“Š</span>Generate New Report
            </button>
        </div>
    </div>

    <!-- Quick Report Templates -->
    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Risk Summary Report</h5>
                    <p class="card-text small">Generate comprehensive risk register report with scoring and mitigation
                        status</p>
                    <button class="btn btn-sm btn-outline-primary" @onclick="@(() => QuickGenerate("Risk"))">Generate</button>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Audit Findings Report</h5>
                    <p class="card-text small">Detailed audit findings with severity levels and remediation tracking</p>
                    <button class="btn btn-sm btn-outline-primary" @onclick="@(() => QuickGenerate("Audit"))">Generate</button>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Control Effectiveness Report</h5>
                    <p class="card-text small">Assessment of control effectiveness with test results and recommendations
                    </p>
                    <button class="btn btn-sm btn-outline-primary" @onclick="@(() => QuickGenerate("Control"))">Generate</button>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Compliance Status Report</h5>
                    <p class="card-text small">Current status of all compliance requirements and policy adherence</p>
                    <button class="btn btn-sm btn-outline-primary" @onclick="@(() => QuickGenerate("Compliance"))">Generate</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Recently Generated Reports -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Recently Generated Reports</h5>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Report Number</th>
                                <th>Title</th>
                                <th>Type</th>
                                <th>Status</th>
                                <th>Period</th>
                                <th>Generated By</th>
                                <th>Generated Date</th>
                                <th>Pages</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var report in reports)
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-secondary">@report.ReportNumber</span>
                                    </td>
                                    <td>
                                        <strong>@report.Title</strong>
                                    </td>
                                    <td>@report.Type</td>
                                    <td>
                                        @if (report.Status == "Generated")
                                        {
                                            <span class="badge bg-success">@report.Status</span>
                                        }
                                        else if (report.Status == "Draft")
                                        {
                                            <span class="badge bg-warning">@report.Status</span>
                                        }
                                        else if (report.Status == "Delivered")
                                        {
                                            <span class="badge bg-info">@report.Status</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@report.Status</span>
                                        }
                                    </td>
                                    <td>
                                        @report.GeneratedDate.ToString("MMM yyyy")
                                    </td>
                                    <td>@report.GeneratedBy</td>
                                    <td>@report.GeneratedDate.ToString("MMM dd, yyyy hh:mm tt")</td>
                                    <td>
                                        <span class="badge bg-light text-dark">@report.PageCount</span>
                                    </td>
                                    <td>
                                        <a href="/reports/@report.Id" class="btn btn-sm btn-outline-primary">View</a>
                                        <a href="/api/reports/@report.Id/download" class="btn btn-sm btn-outline-secondary" target="_blank">Download</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

@code {
    private List<ReportListItemDto> reports = new();
    private bool isLoading = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadReportsAsync();
    }

    private async Task LoadReportsAsync()
    {
        try
        {
            isLoading = true;
            errorMessage = null;

            var response = await Http.GetFromJsonAsync<ApiResponse<List<ReportListItemDto>>>("/api/report");

            if (response?.data != null)
            {
                reports = response.data;
            }
            else
            {
                // Fallback to empty list if API fails
                reports = new List<ReportListItemDto>();
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading reports");
            errorMessage = "Failed to load reports. Please try again.";
            reports = new List<ReportListItemDto>();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task QuickGenerate(string type)
    {
        try
        {
            isLoading = true;
            var dto = new QuickGenerateReportDto
            {
                StartDate = DateTime.UtcNow.AddMonths(-1),
                EndDate = DateTime.UtcNow
            };

            var response = await Http.PostAsJsonAsync($"/api/report/generate/{type}", dto);

            if (response.IsSuccessStatusCode)
            {
                await LoadReportsAsync();
            }
            else
            {
                errorMessage = $"Failed to generate {type} report";
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error generating report");
            errorMessage = "Failed to generate report";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ShowGenerateReportModal()
    {
        // Navigate to create page
        NavigationManager.NavigateTo("/reports/create");
    }

    // Helper classes for API responses
    private class ApiResponse<T>
    {
        public T? data { get; set; }
        public int totalCount { get; set; }
        public int page { get; set; }
        public int pageSize { get; set; }
        public int totalPages { get; set; }
    }

    private class QuickGenerateReportDto
    {
        public DateTime StartDate { get; set; }
        public DateTime EndDate { get; set; }
    }
}

@inject NavigationManager NavigationManager

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @errorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}