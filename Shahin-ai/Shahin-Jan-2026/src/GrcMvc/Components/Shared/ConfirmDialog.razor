@using GrcMvc.Models.DTOs
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer

@if (IsOpen)
{
    <div class="modal d-block bg-dark bg-opacity-50" tabindex="-1" role="dialog" style="display: block;">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header bg-light">
                    <h5 class="modal-title">@(string.IsNullOrEmpty(Title) ? Localizer["ConfirmAction"] : Title)</h5>
                    <button type="button" class="btn-close" @onclick="OnCancel"></button>
                </div>
                <div class="modal-body">
                    @(string.IsNullOrEmpty(Message) ? Localizer["AreYouSure"] : Message)
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="OnCancel">@(string.IsNullOrEmpty(CancelText) ? Localizer["Cancel"] : CancelText)</button>
                    <button type="button" class="btn @(IsDeleteAction ? "btn-danger" : "btn-primary")"
                        @onclick="OnConfirm" disabled="@IsProcessing">
                        @if (IsProcessing)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"
                                aria-hidden="true"></span>
                        }
                        @(string.IsNullOrEmpty(ConfirmText) ? Localizer["Confirm"] : ConfirmText)
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public string Title { get; set; } = "";

    [Parameter]
    public string Message { get; set; } = "";

    [Parameter]
    public string ConfirmText { get; set; } = "";

    [Parameter]
    public string CancelText { get; set; } = "";

    [Parameter]
    public bool IsDeleteAction { get; set; } = false;

    [Parameter]
    public bool IsProcessing { get; set; } = false;

    [Parameter]
    public EventCallback OnConfirm { get; set; }

    [Parameter]
    public EventCallback OnCancel { get; set; }

    public bool IsOpen { get; set; } = false;

    public async Task Show()
    {
        IsOpen = true;
        await Task.CompletedTask;
    }

    public async Task Hide()
    {
        IsOpen = false;
        await Task.CompletedTask;
    }
}
